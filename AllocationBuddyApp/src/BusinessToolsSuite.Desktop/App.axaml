<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BusinessToolsSuite.Desktop.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <!-- Modern Color Palette for Allocation Buddy -->
        <SolidColorBrush x:Key="PrimaryBrush">#667eea</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverBrush">#5568d3</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBrush">#764ba2</SolidColorBrush>
        <SolidColorBrush x:Key="SuccessBrush">#10b981</SolidColorBrush>
        <SolidColorBrush x:Key="WarningBrush">#f59e0b</SolidColorBrush>
        <SolidColorBrush x:Key="DangerBrush">#ef4444</SolidColorBrush>
        <SolidColorBrush x:Key="SurfaceBrush">#f8fafc</SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundBrush">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBrush">#e2e8f0</SolidColorBrush>
        <SolidColorBrush x:Key="TextPrimaryBrush">#1e293b</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondaryBrush">#64748b</SolidColorBrush>
        <SolidColorBrush x:Key="CardBrush">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="CardHoverBrush">#f1f5f9</SolidColorBrush>
        <SolidColorBrush x:Key="HighlightBrush">#fef3c7</SolidColorBrush>
    </Application.Resources>
</Application>
