<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusinessToolsSuite.Features.AllocationBuddy.ViewModels"
             x:Class="BusinessToolsSuite.Features.AllocationBuddy.Views.AllocationBuddyRPGView"
             x:DataType="vm:AllocationBuddyRPGViewModel">

  <Grid RowDefinitions="Auto,Auto,*,Auto" Background="{DynamicResource SurfaceBrush}">
    <!-- Modern Header / Toolbar -->
    <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20,16">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
          <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center"/>
          <TextBlock Text="Allocation Buddy" Foreground="White" FontWeight="SemiBold" FontSize="20" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
          <Button Command="{Binding ImportCommand}"
                  Background="{DynamicResource BackgroundBrush}"
                  Foreground="{DynamicResource PrimaryBrush}"
                  Padding="16,8"
                  CornerRadius="6"
                  FontWeight="SemiBold">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBlock Text="ðŸ“¥" FontSize="16"/>
              <TextBlock Text="Import" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>
          <Button Command="{Binding RefreshCommand}"
                  Background="Transparent"
                  BorderBrush="White"
                  BorderThickness="1.5"
                  Foreground="White"
                  Padding="16,8"
                  CornerRadius="6"
                  FontWeight="SemiBold">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBlock Text="ðŸ”„" FontSize="16"/>
              <TextBlock Text="Refresh" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>
          <Button Content="ðŸ“¤ Export"
                  Background="Transparent"
                  BorderBrush="White"
                  BorderThickness="1.5"
                  Foreground="White"
                  Padding="16,8"
                  CornerRadius="6"
                  FontWeight="SemiBold"/>
        </StackPanel>

        <Border Grid.Column="2"
                Background="White"
                CornerRadius="8"
                Padding="16,8">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="ðŸ“¦" FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Text="Total Entries:" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalEntries}" Foreground="{DynamicResource PrimaryBrush}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>
    </Border>

    <!-- Modern Filters Bar -->
    <Border Grid.Row="1" Padding="20,16" Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
      <Grid ColumnDefinitions="*,Auto,Auto,Auto">
        <TextBox Grid.Column="0"
                 Width="500"
                 Watermark="ðŸ” Search by item number, description, or location..."
                 Text="{Binding SearchText}"
                 Padding="12,10"
                 CornerRadius="8"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Background="{DynamicResource SurfaceBrush}"/>

        <ComboBox Grid.Column="1"
                  Width="160"
                  SelectedIndex="0"
                  Margin="12,0,0,0"
                  Padding="12,10"
                  CornerRadius="8">
          <ComboBoxItem>All Stores</ComboBoxItem>
        </ComboBox>

        <Button Grid.Column="2"
                Content="âœ– Clear"
                Command="{Binding ClearCommand}"
                Margin="12,0,0,0"
                Padding="12,10"
                CornerRadius="8"
                Background="{DynamicResource SurfaceBrush}"/>

        <Border Grid.Column="3"
                Background="{DynamicResource SuccessBrush}"
                CornerRadius="8"
                Padding="16,10"
                Margin="12,0,0,0">
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="ðŸ“" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Text="Locations:" Foreground="White" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding LocationsCount}" Foreground="White" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>
    </Border>

    <!-- Main Content: Locations Grid + Item Pool -->
    <ScrollViewer Grid.Row="2">
      <Grid Margin="20">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="380" />
        </Grid.ColumnDefinitions>

        <!-- Location Cards in WrapPanel -->
        <ItemsControl Grid.Column="0" ItemsSource="{Binding LocationAllocations}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>

          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Background="{DynamicResource CardBrush}"
                      BorderBrush="{DynamicResource BorderBrush}"
                      BorderThickness="1"
                      CornerRadius="12"
                      Padding="16"
                      Width="340"
                      Margin="0,0,16,16">
                <StackPanel>
                  <Grid Opacity="{Binding IsActive, Converter={StaticResource BoolToOpacityConverter}}">
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                      <TextBlock Text="ðŸ“" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                      <TextBlock Text="{Binding Location}" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource PrimaryBrush}" VerticalAlignment="Center"/>
                      <Border Background="{DynamicResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="8,4"
                              Margin="8,0,0,0">
                        <TextBlock Text="{Binding Items.Count, StringFormat='{}{0} items'}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                      </Border>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Command="{Binding DataContext.DeactivateStoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Content="Deactivate"
                            Background="{DynamicResource DangerBrush}"
                            Foreground="White"
                            Padding="10,6"
                            CornerRadius="6"
                            FontSize="12"/>
                  </Grid>

                  <ItemsControl ItemsSource="{Binding Items}" Margin="0,12,0,0">
                    <ItemsControl.ItemTemplate>
                      <DataTemplate>
                        <Border Background="{Binding IsUpdated, Converter={StaticResource BoolToHighlightBrushConverter}}"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,0,0,8"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1">
                          <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*" />
                              <ColumnDefinition Width="90" />
                              <ColumnDefinition Width="40" />
                              <ColumnDefinition Width="60" />
                              <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding Description}"
                                       TextTrimming="CharacterEllipsis"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       FontSize="13"/>

                            <Border Grid.Column="1"
                                    Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Margin="8,0,0,0">
                              <TextBlock Text="{Binding ItemNumber}"
                                         VerticalAlignment="Center"
                                         FontSize="12"
                                         FontFamily="Consolas"
                                         Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Border>

                            <Button Grid.Column="2"
                                    Content="âˆ’"
                                    Command="{Binding DataContext.RemoveOneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Width="36"
                                    Height="36"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="8,0,0,0"
                                    CornerRadius="6"
                                    Background="{DynamicResource SurfaceBrush}"
                                    FontSize="18"
                                    FontWeight="Bold"/>

                            <Border Grid.Column="3"
                                    Background="{DynamicResource PrimaryBrush}"
                                    CornerRadius="6"
                                    Padding="0"
                                    HorizontalAlignment="Center"
                                    Margin="4,0">
                              <TextBlock Text="{Binding Quantity}"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Center"
                                         FontWeight="Bold"
                                         FontSize="16"
                                         Foreground="White"
                                         Width="50"
                                         TextAlignment="Center"/>
                            </Border>

                            <Button Grid.Column="4"
                                    Content="+"
                                    Command="{Binding DataContext.AddOneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Width="36"
                                    Height="36"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="4,0,0,0"
                                    CornerRadius="6"
                                    Background="{DynamicResource SuccessBrush}"
                                    Foreground="White"
                                    FontSize="18"
                                    FontWeight="Bold"/>
                          </Grid>
                        </Border>
                      </DataTemplate>
                    </ItemsControl.ItemTemplate>
                  </ItemsControl>
                </StackPanel>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Item Pool Sidebar -->
        <Border Grid.Column="1"
                Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="16"
                Margin="0,0,0,0">
          <StackPanel>
            <!-- Import/Drop Area -->
            <Border x:Name="DropArea"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="2"
                    Padding="16"
                    CornerRadius="10"
                    Margin="0,0,0,16">
              <StackPanel>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="12">
                  <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center"/>
                  <TextBlock Text="Drop files here"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             FontSize="14"/>
                  <Button Command="{Binding ImportCommand}"
                          Background="{DynamicResource PrimaryBrush}"
                          Foreground="White"
                          Padding="14,8"
                          CornerRadius="6"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center">
                    <TextBlock Text="Choose File"/>
                  </Button>
                </StackPanel>

                <ItemsControl ItemsSource="{Binding FileImportResults}" Margin="0,12,0,0">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Border Padding="8"
                              Margin="0,4,0,0"
                              Background="{DynamicResource CardBrush}"
                              CornerRadius="6"
                              BorderBrush="{DynamicResource BorderBrush}"
                              BorderThickness="1">
                        <StackPanel Spacing="4">
                          <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" FontSize="13"/>
                          <TextBlock Text="{Binding Count, StringFormat='Entries: {0}'}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                      </Border>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </StackPanel>
            </Border>

            <!-- Pool Header -->
            <Grid Margin="0,0,0,12">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>
              <StackPanel>
                <TextBlock Text="Item Pool" FontWeight="Bold" FontSize="18" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="{Binding ItemPool.Count, StringFormat='{}{0} items available'}"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,4,0,0"/>
              </StackPanel>
            </Grid>

            <!-- Item Pool List -->
            <ScrollViewer MaxHeight="600">
              <ItemsControl ItemsSource="{Binding ItemPool}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Border Padding="10"
                            Margin="0,0,0,8"
                            Background="{DynamicResource SurfaceBrush}"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1">
                      <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="*" />
                          <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                          <TextBlock Text="{Binding Description}"
                                     TextTrimming="CharacterEllipsis"
                                     FontWeight="SemiBold"
                                     FontSize="13"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                          <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                            <TextBlock Text="{Binding ItemNumber}"
                                       FontSize="12"
                                       FontFamily="Consolas"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <Border Background="{DynamicResource PrimaryBrush}"
                                    CornerRadius="4"
                                    Padding="6,2">
                              <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                         FontSize="11"
                                         FontWeight="SemiBold"
                                         Foreground="White"/>
                            </Border>
                          </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="â†’"
                                Command="{Binding DataContext.SelectAndMoveFromPoolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Width="36"
                                Height="36"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                CornerRadius="6"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="White"
                                FontSize="18"
                                FontWeight="Bold"
                                ToolTip.Tip="Move to location..."/>
                      </Grid>
                    </Border>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </ScrollViewer>
          </StackPanel>
        </Border>

      </Grid>
    </ScrollViewer>

    <!-- Modern Status Bar -->
    <Border Grid.Row="3"
            Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,1,0,0"
            Padding="20,12">
      <TextBlock Text="{Binding FooterMessage}"
                 Foreground="{DynamicResource TextSecondaryBrush}"
                 FontSize="13"/>
    </Border>
  </Grid>
</UserControl>
