<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusinessToolsSuite.Features.AllocationBuddy.ViewModels"
             x:Class="BusinessToolsSuite.Features.AllocationBuddy.Views.SelectLocationDialog"
             Width="400" Height="200">
  <StackPanel Margin="12">
    <TextBlock Text="Select a target location to move the item to:"/>
    <ComboBox ItemsSource="{Binding Locations}" SelectedItem="{Binding SelectedLocation}"/>

    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0" VerticalAlignment="Center">
      <TextBlock Text="Quantity:" VerticalAlignment="Center"/>
      <NumericUpDown Minimum="1" Maximum="9999" Width="90" Value="{Binding SelectedQuantity}" />
    </StackPanel>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button x:Name="CancelBtn" Content="Cancel" Click="Cancel_Click"/>
      <Button x:Name="OkBtn" Content="OK" Click="Ok_Click"/>
    </StackPanel>
  </StackPanel>
</UserControl>