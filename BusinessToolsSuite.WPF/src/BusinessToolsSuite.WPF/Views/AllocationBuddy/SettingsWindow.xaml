<Window x:Class="BusinessToolsSuite.WPF.Views.AllocationBuddy.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BusinessToolsSuite.WPF.ViewModels"
        mc:Ignorable="d"
        Title="AllocationBuddy Settings"
        Height="750"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        d:DataContext="{d:DesignInstance Type=vm:AllocationBuddySettingsViewModel}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="AllocationBuddy Settings"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- File Paths Section -->
                <Border Background="White" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="File Paths" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Label Content="Default Import Path:" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding DefaultImportPath}" Margin="0,5,0,0" Padding="8"/>

                        <Label Content="Default Export Path:" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding DefaultExportPath}" Margin="0,5,0,0" Padding="8"/>

                        <Label Content="Dictionary File Path:" Margin="0,10,0,0"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding DictionaryFilePath}" Margin="0,0,5,0" Padding="8"/>
                            <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseDictionaryFileCommand}" Padding="12,8" MinWidth="80"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Dictionary Management Section -->
                <Border Background="White" Padding="15" CornerRadius="5" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Dictionary Management" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <TextBlock Text="Add custom items to improve import accuracy"
                                   FontSize="12"
                                   Foreground="#666"
                                   Margin="0,0,0,10"/>

                        <!-- Add New Item Form -->
                        <Grid Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Item Number:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="5,0" Padding="8"/>

                            <Label Grid.Row="0" Grid.Column="2" Content="Description:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding NewItemDescription, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,5,5,0" Padding="8"/>

                            <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2"
                                    Content="Add Item"
                                    Command="{Binding AddDictionaryItemCommand}"
                                    Padding="15,8"
                                    MinWidth="100"
                                    Background="#007ACC"
                                    Foreground="White"
                                    BorderThickness="0"
                                    VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Dictionary Items List -->
                        <Label Content="Custom Dictionary Items:" Margin="0,10,0,5"/>
                        <Border BorderBrush="#DDD" BorderThickness="1" MaxHeight="200">
                            <DataGrid ItemsSource="{Binding CustomDictionaryItems}"
                                      SelectedItem="{Binding SelectedDictionaryItem}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      Background="White">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Item Number" Binding="{Binding Number}" Width="120" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" IsReadOnly="True"/>
                                    <DataGridTemplateColumn Header="Actions" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remove"
                                                        Command="{Binding DataContext.RemoveDictionaryItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FF6B6B"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Margin="2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Behavior Section -->
                <Border Background="White" Padding="15" CornerRadius="5" Margin="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Label Content="Auto-Save Interval (minutes, 0 = disabled):" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding AutoSaveIntervalMinutes}" Margin="0,5,0,0" Padding="8"/>

                        <CheckBox Content="Show confirmation dialogs for destructive actions"
                                  IsChecked="{Binding ShowConfirmationDialogs}"
                                  Margin="0,15,0,0"/>

                        <CheckBox Content="Automatically load last session on startup"
                                  IsChecked="{Binding AutoLoadLastSession}"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Appearance Section -->
                <Border Background="White" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Label Content="Theme:" Margin="0,5,0,0"/>
                        <ComboBox SelectedValue="{Binding Theme}" Margin="0,5,0,0" Padding="8">
                            <ComboBoxItem Content="System" IsSelected="True"/>
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Margin="0,15,0,0"
                   FontStyle="Italic"
                   Foreground="#666"/>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Reset to Defaults"
                    Command="{Binding ResetToDefaultsCommand}"
                    Padding="15,8"
                    MinWidth="120"
                    Background="#FF6B6B"
                    Foreground="White"
                    BorderThickness="0"/>

            <Button Grid.Column="2"
                    Content="Save"
                    Command="{Binding SaveSettingsCommand}"
                    Padding="15,8"
                    MinWidth="100"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>

            <Button Grid.Column="3"
                    Content="Cancel"
                    IsCancel="True"
                    Padding="15,8"
                    MinWidth="100"/>
        </Grid>
    </Grid>
</Window>
