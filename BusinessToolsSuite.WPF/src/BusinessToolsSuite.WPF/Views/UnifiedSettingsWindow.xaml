<Window x:Class="BusinessToolsSuite.WPF.Views.UnifiedSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BusinessToolsSuite.WPF.ViewModels"
        xmlns:local="clr-namespace:BusinessToolsSuite.WPF.Views"
        mc:Ignorable="d"
        Title="Business Tools Suite - Settings"
        Height="800"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        d:DataContext="{d:DesignInstance Type=vm:UnifiedSettingsViewModel}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Business Tools Suite Settings"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- TabControl for different app settings -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">

            <!-- Dictionary Management Tab -->
            <TabItem Header="Dictionary Management" FontSize="14" Padding="15,8">
                <ContentControl Content="{Binding DictionaryManagement}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <local:DictionaryManagementView DataContext="{Binding}"/>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </TabItem>

            <!-- AllocationBuddy Tab -->
            <TabItem Header="AllocationBuddy" FontSize="14" Padding="15,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <StackPanel DataContext="{Binding AllocationBuddySettings}">

                        <!-- File Paths Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="File Paths" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Default Import Path:" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding DefaultImportPath}" Margin="0,5,0,0" Padding="8"/>

                                <Label Content="Default Export Path:" Margin="0,10,0,0"/>
                                <TextBox Text="{Binding DefaultExportPath}" Margin="0,5,0,0" Padding="8"/>

                                <Label Content="Dictionary File Path:" Margin="0,10,0,0"/>
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding DictionaryFilePath}" Margin="0,0,5,0" Padding="8"/>
                                    <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseDictionaryFileCommand}" Padding="12,8" MinWidth="80"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Behavior Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Auto-Save Interval (minutes, 0 = disabled):" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding AutoSaveIntervalMinutes}" Margin="0,5,0,0" Padding="8"/>

                                <CheckBox Content="Show confirmation dialogs for destructive actions"
                                          IsChecked="{Binding ShowConfirmationDialogs}"
                                          Margin="0,15,0,0"/>

                                <CheckBox Content="Automatically load last session on startup"
                                          IsChecked="{Binding AutoLoadLastSession}"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Appearance Section -->
                        <Border Background="White" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Theme:" Margin="0,5,0,0"/>
                                <ComboBox SelectedValue="{Binding Theme}" Margin="0,5,0,0" Padding="8">
                                    <ComboBoxItem Content="System" IsSelected="True"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Dark"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- EssentialsBuddy Tab -->
            <TabItem Header="EssentialsBuddy" FontSize="14" Padding="15,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <StackPanel DataContext="{Binding EssentialsBuddySettings}">

                        <!-- Stock Thresholds Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Stock Level Thresholds" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Low Stock Threshold:" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding LowStockThreshold}" Margin="0,5,0,0" Padding="8"/>
                                <TextBlock Text="Items with stock below this level will be marked as low stock"
                                           Foreground="#666" FontSize="11" Margin="0,3,0,0"/>

                                <Label Content="Out of Stock Threshold:" Margin="0,15,0,0"/>
                                <TextBox Text="{Binding OutOfStockThreshold}" Margin="0,5,0,0" Padding="8"/>
                                <TextBlock Text="Items at or below this level will be marked as out of stock"
                                           Foreground="#666" FontSize="11" Margin="0,3,0,0"/>

                                <Label Content="Overstock Threshold:" Margin="0,15,0,0"/>
                                <TextBox Text="{Binding OverstockThreshold}" Margin="0,5,0,0" Padding="8"/>
                                <TextBlock Text="Items with stock above this level will be marked as overstocked"
                                           Foreground="#666" FontSize="11" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- File Paths Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="File Paths" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Default Import Path:" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding DefaultImportPath}" Margin="0,5,0,0" Padding="8"/>

                                <Label Content="Default Export Path:" Margin="0,10,0,0"/>
                                <TextBox Text="{Binding DefaultExportPath}" Margin="0,5,0,0" Padding="8"/>
                            </StackPanel>
                        </Border>

                        <!-- Behavior Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Auto-Refresh Interval (minutes, 0 = disabled):" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding AutoRefreshIntervalMinutes}" Margin="0,5,0,0" Padding="8"/>

                                <CheckBox Content="Show notifications for low stock items"
                                          IsChecked="{Binding ShowLowStockNotifications}"
                                          Margin="0,15,0,0"/>

                                <CheckBox Content="Automatically load last session on startup"
                                          IsChecked="{Binding AutoLoadLastSession}"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Appearance Section -->
                        <Border Background="White" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Theme:" Margin="0,5,0,0"/>
                                <ComboBox SelectedValue="{Binding Theme}" Margin="0,5,0,0" Padding="8">
                                    <ComboBoxItem Content="System" IsSelected="True"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Dark"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ExpireWise Tab -->
            <TabItem Header="ExpireWise" FontSize="14" Padding="15,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <StackPanel DataContext="{Binding ExpireWiseSettings}">

                        <!-- Alert Thresholds Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Alert Thresholds" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Warning Threshold (days before expiration):" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding WarningThresholdDays}" Margin="0,5,0,0" Padding="8"/>
                                <TextBlock Text="Items expiring within this many days will show a warning"
                                           Foreground="#666" FontSize="11" Margin="0,3,0,0"/>

                                <Label Content="Critical Threshold (days before expiration):" Margin="0,15,0,0"/>
                                <TextBox Text="{Binding CriticalThresholdDays}" Margin="0,5,0,0" Padding="8"/>
                                <TextBlock Text="Items expiring within this many days will show as critical"
                                           Foreground="#666" FontSize="11" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- File Paths Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="File Paths" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Default Import Path:" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding DefaultImportPath}" Margin="0,5,0,0" Padding="8"/>

                                <Label Content="Default Export Path:" Margin="0,10,0,0"/>
                                <TextBox Text="{Binding DefaultExportPath}" Margin="0,5,0,0" Padding="8"/>
                            </StackPanel>
                        </Border>

                        <!-- Behavior Section -->
                        <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Auto-Refresh Interval (minutes, 0 = disabled):" Margin="0,5,0,0"/>
                                <TextBox Text="{Binding AutoRefreshIntervalMinutes}" Margin="0,5,0,0" Padding="8"/>

                                <CheckBox Content="Show notifications for items about to expire"
                                          IsChecked="{Binding ShowExpirationNotifications}"
                                          Margin="0,15,0,0"/>

                                <CheckBox Content="Automatically load last session on startup"
                                          IsChecked="{Binding AutoLoadLastSession}"
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Appearance Section -->
                        <Border Background="White" Padding="15" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                <Label Content="Theme:" Margin="0,5,0,0"/>
                                <ComboBox SelectedValue="{Binding Theme}" Margin="0,5,0,0" Padding="8">
                                    <ComboBoxItem Content="System" IsSelected="True"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Dark"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Status Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Margin="0,15,0,0"
                   FontStyle="Italic"
                   Foreground="#666"/>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Reset All to Defaults"
                    Command="{Binding ResetAllToDefaultsCommand}"
                    Padding="15,8"
                    MinWidth="150"
                    Background="#FF6B6B"
                    Foreground="White"
                    BorderThickness="0"/>

            <Button Grid.Column="2"
                    Content="Save All"
                    Command="{Binding SaveAllSettingsCommand}"
                    Padding="15,8"
                    MinWidth="100"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>

            <Button Grid.Column="3"
                    Content="Close"
                    IsCancel="True"
                    Padding="15,8"
                    MinWidth="100"/>
        </Grid>
    </Grid>
</Window>
