<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:BusinessToolsSuite.Desktop.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="BusinessToolsSuite.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        Width="1200" Height="800"
        MinWidth="900" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.KeyBindings>
        <KeyBinding Gesture="Alt+1" Command="{Binding LauncherViewModel.LaunchExpireWiseCommand}"/>
        <KeyBinding Gesture="Alt+2" Command="{Binding LauncherViewModel.LaunchAllocationBuddyCommand}"/>
        <KeyBinding Gesture="Alt+3" Command="{Binding LauncherViewModel.LaunchEssentialsBuddyCommand}"/>
    </Window.KeyBindings>

    <Grid>
        <!-- Modern Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#667eea" Offset="0.0"/>
                <GradientStop Color="#764ba2" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with improved spacing -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,100,0,0">
            <TextBlock Text="âš™ï¸" FontSize="56" HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <TextBlock Text="Business Tools Suite"
                       FontSize="52"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Professional Business Management Tools"
                       FontSize="20"
                       Foreground="#E8E8E8"
                       HorizontalAlignment="Center"
                       FontWeight="Light"
                       Margin="0,0,0,8"/>
            <Border Background="#40FFFFFF"
                    CornerRadius="20"
                    Padding="16,8"
                    HorizontalAlignment="Center">
                <TextBlock Text="Select an application to begin â†’"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>
        </StackPanel>

        <!-- Module Cards with enhanced design -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="32"
                    Margin="0,40,0,0">

            <!-- ExpireWise Card -->
            <Button Command="{Binding LauncherViewModel.LaunchExpireWiseCommand}"
                    Background="White"
                    CornerRadius="20"
                    Padding="0"
                    BorderThickness="0"
                    Width="300"
                    Height="360">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#FAFAFA"/>
                        <Setter Property="RenderTransform" Value="scale(1.05)"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="RenderTransform" Value="scale(0.98)"/>
                    </Style>
                </Button.Styles>

                <StackPanel Spacing="20" Margin="32">
                    <Border Background="#FEF3C7"
                            CornerRadius="16"
                            Width="80"
                            Height="80"
                            HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¦"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="ExpireWise"
                               FontSize="26"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#1e293b"/>
                    <TextBlock Text="Track product expiration dates and manage inventory lifecycle with automated alerts"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="#64748b"
                               FontSize="14"
                               LineHeight="22"/>
                    <Border Background="#FEF3C7"
                            CornerRadius="8"
                            Padding="12,6"
                            HorizontalAlignment="Center">
                        <TextBlock Text="Alt + 1"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#92400e"/>
                    </Border>
                </StackPanel>
            </Button>

            <!-- Allocation Buddy Card -->
            <Button Command="{Binding LauncherViewModel.LaunchAllocationBuddyCommand}"
                    Background="White"
                    CornerRadius="20"
                    Padding="0"
                    BorderThickness="0"
                    Width="300"
                    Height="360">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#FAFAFA"/>
                        <Setter Property="RenderTransform" Value="scale(1.05)"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="RenderTransform" Value="scale(0.98)"/>
                    </Style>
                </Button.Styles>

                <StackPanel Spacing="20" Margin="32">
                    <Border Background="#DDD6FE"
                            CornerRadius="16"
                            Width="80"
                            Height="80"
                            HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“Š"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Allocation Buddy"
                               FontSize="26"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#1e293b"/>
                    <TextBlock Text="Manage store allocations with smart categorization and real-time inventory distribution"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="#64748b"
                               FontSize="14"
                               LineHeight="22"/>
                    <Border Background="#DDD6FE"
                            CornerRadius="8"
                            Padding="12,6"
                            HorizontalAlignment="Center">
                        <TextBlock Text="Alt + 2"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#5b21b6"/>
                    </Border>
                </StackPanel>
            </Button>

            <!-- Essentials Buddy Card -->
            <Button Command="{Binding LauncherViewModel.LaunchEssentialsBuddyCommand}"
                    Background="White"
                    CornerRadius="20"
                    Padding="0"
                    BorderThickness="0"
                    Width="300"
                    Height="360">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#FAFAFA"/>
                        <Setter Property="RenderTransform" Value="scale(1.05)"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="RenderTransform" Value="scale(0.98)"/>
                    </Style>
                </Button.Styles>

                <StackPanel Spacing="20" Margin="32">
                    <Border Background="#D1FAE5"
                            CornerRadius="16"
                            Width="80"
                            Height="80"
                            HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‹"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Essentials Buddy"
                               FontSize="26"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#1e293b"/>
                    <TextBlock Text="Monitor Business Central bin contents and track essential inventory with comprehensive reporting"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="#64748b"
                               FontSize="14"
                               LineHeight="22"/>
                    <Border Background="#D1FAE5"
                            CornerRadius="8"
                            Padding="12,6"
                            HorizontalAlignment="Center">
                        <TextBlock Text="Alt + 3"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#065f46"/>
                    </Border>
                </StackPanel>
            </Button>

        </StackPanel>

        <!-- Footer with improved design -->
        <Grid Grid.Row="2" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left spacer -->
            <Border Grid.Column="0"/>

            <!-- Center text -->
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        Spacing="8">
                <TextBlock Text="v1.0.0"
                           Foreground="#E8E8E8"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"/>
                <TextBlock Text="All tools run 100% offline â€¢ Built with .NET 8 &amp; Avalonia"
                           Foreground="#D0D0D0"
                           FontSize="12"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Right side - Theme toggle -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="8"
                        Margin="0,0,48,0">
                <Button Command="{Binding LauncherViewModel.ToggleThemeCommand}"
                        Background="#30FFFFFF"
                        BorderThickness="0"
                        CornerRadius="10"
                        Padding="16,10"
                        Foreground="White">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#40FFFFFF"/>
                        </Style>
                    </Button.Styles>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ðŸŒ™" IsVisible="{Binding !LauncherViewModel.IsDarkMode}" FontSize="16"/>
                        <TextBlock Text="â˜€ï¸" IsVisible="{Binding LauncherViewModel.IsDarkMode}" FontSize="16"/>
                        <TextBlock Text="Theme" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
