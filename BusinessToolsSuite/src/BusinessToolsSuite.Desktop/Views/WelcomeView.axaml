<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusinessToolsSuite.Desktop.ViewModels"
             x:Class="BusinessToolsSuite.Desktop.Views.WelcomeView"
             x:DataType="vm:WelcomeViewModel">

  <Grid Background="#00112244">
    <Border Width="760" Height="420" Background="White" CornerRadius="12" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="24">
      <StackPanel Spacing="16">
        <TextBlock Text="Welcome to Business Tools Suite" FontSize="26" FontWeight="Bold" />
        <TextBlock Text="Start by importing allocation files to immediately populate Allocation Buddy, or skip to explore other tools." TextWrapping="Wrap"/>

        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
          <Button Command="{Binding PickFilesCommand}" Width="160" Height="40">Import files</Button>
          <Button Command="{Binding SkipCommand}" Width="120" Height="40">Skip</Button>
        </StackPanel>

        <TextBlock Text="You can drag files onto the Allocation Buddy view later, or open the module via the launcher." Foreground="#666666" FontSize="12"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
          <TextBlock Text="SUPPORTED:" FontSize="11" Foreground="#999999"/>
          <TextBlock Text=" .xlsx, .csv" FontSize="11" Foreground="#999999"/>
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>

</UserControl>
