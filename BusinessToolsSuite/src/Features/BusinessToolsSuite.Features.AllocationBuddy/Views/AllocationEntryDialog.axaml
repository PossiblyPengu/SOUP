<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BusinessToolsSuite.Features.AllocationBuddy.ViewModels"
        xmlns:entities="using:BusinessToolsSuite.Core.Entities.AllocationBuddy"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="650"
        x:Class="BusinessToolsSuite.Features.AllocationBuddy.Views.AllocationEntryDialog"
        x:DataType="vm:AllocationEntryDialogViewModel"
        Title="{Binding DialogTitle}"
        Width="600" Height="650"
        MinWidth="500" MinHeight="600"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Design.DataContext>
        <vm:AllocationEntryDialogViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" Margin="20">

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">

                <!-- Item Number -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Item Number *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ItemNumber}"
                             Watermark="Enter item number"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Description *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Description}"
                             Watermark="Enter description"/>
                </StackPanel>

                <!-- Store ID -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Store ID *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding StoreId}"
                             Watermark="Enter store ID"/>
                </StackPanel>

                <!-- Store Name -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Store Name" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding StoreName}"
                             Watermark="Enter store name (optional)"/>
                </StackPanel>

                <!-- Quantity -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Quantity *" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding Quantity}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="1"
                                   FormatString="N0"/>
                </StackPanel>

                <!-- Store Rank -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Store Rank *" FontWeight="SemiBold"/>
                    <ComboBox SelectedItem="{Binding Rank}"
                              HorizontalAlignment="Stretch">
                        <entities:StoreRank>A</entities:StoreRank>
                        <entities:StoreRank>B</entities:StoreRank>
                        <entities:StoreRank>C</entities:StoreRank>
                        <entities:StoreRank>D</entities:StoreRank>
                    </ComboBox>
                </StackPanel>

                <!-- Category -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Category" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Category}"
                             Watermark="Enter category (optional)"/>
                </StackPanel>

                <!-- Unit Price -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Unit Price" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding UnitPrice}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="0.01"
                                   FormatString="C2"/>
                </StackPanel>

                <!-- Allocation Date -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Allocation Date" FontWeight="SemiBold"/>
                    <CalendarDatePicker SelectedDate="{Binding AllocationDate}"
                                        HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Notes -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Notes" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Notes}"
                             Watermark="Enter notes (optional)"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,16,0,0"
                Margin="-20,16,-20,-20">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12"
                        Margin="20,0">
                <Button Content="Cancel"
                        Width="100"
                        Padding="12,8"
                        Click="Cancel_Click"/>
                <Button Content="Save"
                        Width="100"
                        Padding="12,8"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="White"
                        Click="Save_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
