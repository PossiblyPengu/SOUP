<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BusinessToolsSuite.Features.EssentialsBuddy.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="700"
        x:Class="BusinessToolsSuite.Features.EssentialsBuddy.Views.InventoryItemDialog"
        x:DataType="vm:InventoryItemDialogViewModel"
        Title="{Binding DialogTitle}"
        Width="600" Height="700"
        MinWidth="500" MinHeight="650"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Design.DataContext>
        <vm:InventoryItemDialogViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" Margin="20">

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">

                <!-- Item Number -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Item Number *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ItemNumber}"
                             Watermark="Enter item number"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Description *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Description}"
                             Watermark="Enter description"/>
                </StackPanel>

                <!-- Bin Code -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Bin Code" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding BinCode}"
                             Watermark="Enter bin code (optional)"/>
                </StackPanel>

                <!-- Quantity On Hand -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Quantity On Hand *" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding QuantityOnHand}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="1"
                                   FormatString="N0"/>
                </StackPanel>

                <!-- Minimum Threshold -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Minimum Threshold" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding MinimumThreshold}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="1"
                                   FormatString="N0"
                                   AllowSpin="True"
                                   ShowButtonSpinner="True"/>
                </StackPanel>

                <!-- Maximum Threshold -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Maximum Threshold" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding MaximumThreshold}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="1"
                                   FormatString="N0"
                                   AllowSpin="True"
                                   ShowButtonSpinner="True"/>
                </StackPanel>

                <!-- Unit Cost -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Unit Cost" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding UnitCost}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="0.01"
                                   FormatString="C2"
                                   AllowSpin="True"
                                   ShowButtonSpinner="True"/>
                </StackPanel>

                <!-- Unit Price -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Unit Price" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding UnitPrice}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="0.01"
                                   FormatString="C2"
                                   AllowSpin="True"
                                   ShowButtonSpinner="True"/>
                </StackPanel>

                <!-- Category -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Category" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Category}"
                             Watermark="Enter category (optional)"/>
                </StackPanel>

                <!-- Last Updated -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Last Updated" FontWeight="SemiBold"/>
                    <CalendarDatePicker SelectedDate="{Binding LastUpdated}"
                                        HorizontalAlignment="Stretch"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,16,0,0"
                Margin="-20,16,-20,-20">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12"
                        Margin="20,0">
                <Button Content="Cancel"
                        Width="100"
                        Padding="12,8"
                        Click="Cancel_Click"/>
                <Button Content="Save"
                        Width="100"
                        Padding="12,8"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="White"
                        Click="Save_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
