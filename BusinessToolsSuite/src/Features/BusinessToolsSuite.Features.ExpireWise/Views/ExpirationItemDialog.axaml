<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BusinessToolsSuite.Features.ExpireWise.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="550"
        x:Class="BusinessToolsSuite.Features.ExpireWise.Views.ExpirationItemDialog"
        x:DataType="vm:ExpirationItemDialogViewModel"
        Title="{Binding DialogTitle}"
        Width="600" Height="550"
        MinWidth="500" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Design.DataContext>
        <vm:ExpirationItemDialogViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto" Margin="20">

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">

                <!-- Item Number -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Item Number *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding ItemNumber}"
                             Watermark="Enter item number"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Description *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Description}"
                             Watermark="Enter description"/>
                </StackPanel>

                <!-- Location -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Location" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Location}"
                             Watermark="Enter location (optional)"/>
                </StackPanel>

                <!-- Units -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Units *" FontWeight="SemiBold"/>
                    <NumericUpDown Value="{Binding Units}"
                                   Minimum="0"
                                   Maximum="999999"
                                   Increment="1"
                                   FormatString="N0"/>
                </StackPanel>

                <!-- Expiry Date -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Expiry Date *" FontWeight="SemiBold"/>
                    <CalendarDatePicker SelectedDate="{Binding ExpiryDate}"
                                        HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Category -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Category" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Category}"
                             Watermark="Enter category (optional)"/>
                </StackPanel>

                <!-- Notes -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Notes" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Notes}"
                             Watermark="Enter notes (optional)"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="0,16,0,0"
                Margin="-20,16,-20,-20">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12"
                        Margin="20,0">
                <Button Content="Cancel"
                        Width="100"
                        Padding="12,8"
                        Click="Cancel_Click"/>
                <Button Content="Save"
                        Width="100"
                        Padding="12,8"
                        Background="{DynamicResource PrimaryBrush}"
                        Foreground="White"
                        Click="Save_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
