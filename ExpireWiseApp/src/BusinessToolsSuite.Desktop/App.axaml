<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BusinessToolsSuite.Desktop.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <!-- Modern Color Palette for ExpireWise -->
        <SolidColorBrush x:Key="PrimaryBrush">#f59e0b</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverBrush">#d97706</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBrush">#fbbf24</SolidColorBrush>
        <SolidColorBrush x:Key="SuccessBrush">#10b981</SolidColorBrush>
        <SolidColorBrush x:Key="WarningBrush">#f59e0b</SolidColorBrush>
        <SolidColorBrush x:Key="DangerBrush">#ef4444</SolidColorBrush>
        <SolidColorBrush x:Key="InfoBrush">#3b82f6</SolidColorBrush>
        <SolidColorBrush x:Key="SurfaceBrush">#fffbeb</SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundBrush">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBrush">#fde68a</SolidColorBrush>
        <SolidColorBrush x:Key="TextPrimaryBrush">#1e293b</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondaryBrush">#64748b</SolidColorBrush>
    </Application.Resources>
</Application>
