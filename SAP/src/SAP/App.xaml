<Application x:Class="SAP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SAP"
             xmlns:converters="clr-namespace:SAP.Converters">
    <Application.Resources>
        <!-- Theme resources will be loaded by ThemeService -->
        <ResourceDictionary>
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibility"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <converters:BoolToSortArrowConverter x:Key="BoolToSortArrowConverter"/>
            <converters:BoolToSuccessColorConverter x:Key="BoolToSuccessColorConverter"/>
            <converters:BoolToAccentColorConverter x:Key="BoolToAccentColorConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <!-- Chart Converters -->
            <converters:PercentageToHeightConverter x:Key="PercentageToHeightConverter"/>
            <converters:PercentageToWidthConverter x:Key="PercentageToWidthConverter"/>
            <converters:StringToColorConverter x:Key="StringToColorConverter"/>
            <converters:CriticalToHeightConverter x:Key="CriticalToHeightConverter"/>
            <!-- Sorting Converters -->
            <converters:SortToggleConverter x:Key="SortToggleConverter"/>
            <!-- Resource Converters -->
            <converters:ResourceKeyConverter x:Key="ResourceKeyConverter"/>
            <!-- Nav Item Converters -->
            <converters:NavItemIdToVisibilityConverter x:Key="NavItemIdToVisibility"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
