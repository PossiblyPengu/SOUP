<Window x:Class="SAP.Features.NotesTracker.Views.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Note"
        Height="380"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">

    <Border Background="{DynamicResource SurfaceBrush}"
            CornerRadius="{DynamicResource CornerRadiusMedium}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="4" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="16,12"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <DockPanel>
                    <Button DockPanel.Dock="Right"
                            Content="âœ•"
                            Click="Cancel_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            FontSize="14"
                            Width="32"
                            Height="32"
                            Padding="0"/>
                    <TextBlock Text="Add New Note"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </DockPanel>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Vendor -->
                <StackPanel>
                    <TextBlock Text="Vendor Name"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="VendorBox"
                             Style="{DynamicResource ModernTextBox}"
                             TextChanged="Input_TextChanged"/>
                </StackPanel>

                <!-- Transfers -->
                <StackPanel Grid.Row="1" Margin="0,16,0,0">
                    <TextBlock Text="Transfer Numbers"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="TransfersBox"
                             Style="{DynamicResource ModernTextBox}"/>
                </StackPanel>

                <!-- WH Shipments + Color -->
                <Grid Grid.Row="2" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="WH Shipment Numbers"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="WhsBox"
                                 Style="{DynamicResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="16,0,0,0">
                        <TextBlock Text="Color"
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,6"/>
                        <Button Click="PickColorBtn_Click"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Padding="0"
                                Width="80"
                                Height="40">
                            <Border x:Name="ColorPreview"
                                    Width="60"
                                    Height="24"
                                    Background="#B56576"
                                    CornerRadius="4"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Live Preview -->
                <StackPanel Grid.Row="3" Margin="0,20,0,0">
                    <TextBlock Text="Preview"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <Border Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="{DynamicResource CornerRadiusSmall}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="{Binding Background, ElementName=ColorPreview}"
                                    CornerRadius="8,0,0,8"/>
                            <StackPanel Grid.Column="1" Margin="12,10">
                                <TextBlock Text="{Binding Text, ElementName=VendorBox, TargetNullValue='Vendor Name'}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding Text, ElementName=TransfersBox}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Text, ElementName=WhsBox}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Cancel"
                            Click="Cancel_Click"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="20,10"
                            Margin="0,0,12,0"
                            IsCancel="True"/>
                    <Button x:Name="OkButton"
                            Content="Add Note"
                            Click="Add_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="20,10"
                            IsDefault="True"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
