<Window x:Class="SAP.Features.NotesTracker.Views.NotesColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick Color"
        Height="380"
        Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="{DynamicResource SurfaceBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="4" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20,14"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Choose Color"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Click="Cancel_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            FontSize="16"
                            Width="32"
                            Height="32"
                            Padding="0"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20">
                <!-- App Colors -->
                <TextBlock Text="App Colors"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,0,0,10"/>
                
                <WrapPanel Margin="0,0,0,20">
                    <Button Background="#667eea" Tag="#667eea" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#8b5cf6" Tag="#8b5cf6" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#10b981" Tag="#10b981" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#f59e0b" Tag="#f59e0b" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#ef4444" Tag="#ef4444" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#3b82f6" Tag="#3b82f6" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                </WrapPanel>

                <!-- Extended Colors -->
                <TextBlock Text="Extended Palette"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,0,0,10"/>
                
                <WrapPanel Margin="0,0,0,20">
                    <Button Background="#B56576" Tag="#B56576" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#6AA84F" Tag="#6AA84F" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#FFD966" Tag="#FFD966" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#6FA8DC" Tag="#6FA8DC" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#C27BA0" Tag="#C27BA0" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#FF7F50" Tag="#FF7F50" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#9ACD32" Tag="#9ACD32" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#40E0D0" Tag="#40E0D0" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#ec4899" Tag="#ec4899" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="#14b8a6" Tag="#14b8a6" Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                </WrapPanel>

                <!-- Custom Color -->
                <TextBlock Text="Custom Color (Hex)"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border x:Name="CustomColorPreview"
                            Width="40"
                            Height="40"
                            CornerRadius="6"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            Background="#8b5cf6"/>

                    <TextBox x:Name="HexBox"
                             Grid.Column="1"
                             Text="#8b5cf6"
                             TextChanged="HexBox_TextChanged"
                             Background="{DynamicResource SurfaceHoverBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             Padding="10,8"
                             FontSize="13"
                             FontFamily="Consolas"
                             Margin="10,0,0,0"/>
                </Grid>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Cancel"
                            Click="Cancel_Click"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="0,10"
                            IsCancel="True"/>
                    
                    <Button Grid.Column="2"
                            Content="Apply"
                            Click="Apply_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="0,10"
                            IsDefault="True"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
