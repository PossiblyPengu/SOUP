<UserControl x:Class="SAP.Features.NotesTracker.Views.NotesTrackerView"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:SAP.Features.NotesTracker.Models"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Inline TextBox Style -->
        <Style x:Key="InlineTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceActiveBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource SurfaceBrush}"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Notes Tracker"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#8b5cf6"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="#a78bfa"
                               FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,1"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bulk Actions -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Start Selected" Command="{Binding BulkStartAsyncCommand}" 
                            Style="{DynamicResource SuccessButtonStyle}"
                            Padding="12,6" FontSize="12" Margin="0,0,6,0"/>
                    <Button Content="Stop Selected" Command="{Binding BulkStopAsyncCommand}"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="12,6" FontSize="12" Margin="0,0,6,0"/>
                    <Menu>
                        <MenuItem Header="Set Status" FontSize="12">
                            <MenuItem Header="Not Ready" Command="{Binding BulkSetStatusAsyncCommand}" CommandParameter="{x:Static models:NoteItem+NoteStatus.NotReady}"/>
                            <MenuItem Header="In Progress" Command="{Binding BulkSetStatusAsyncCommand}" CommandParameter="{x:Static models:NoteItem+NoteStatus.InProgress}"/>
                            <MenuItem Header="Done" Command="{Binding BulkSetStatusAsyncCommand}" CommandParameter="{x:Static models:NoteItem+NoteStatus.Done}"/>
                        </MenuItem>
                    </Menu>
                    <Button Content="Delete Selected" Command="{Binding DeleteSelectedAsyncCommand}"
                            Style="{DynamicResource DangerButtonStyle}"
                            Padding="12,6" FontSize="12"/>
                </StackPanel>

                <!-- Add Note Section -->
                <Border Grid.Column="1" x:Name="AddToolbarPanel" Background="{DynamicResource SurfaceHoverBrush}" 
                        BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="1" 
                        CornerRadius="6" Padding="10" Margin="20,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" x:Name="AddVendorBox" Style="{DynamicResource ModernTextBox}" 
                                 Text="{Binding NewNoteVendorName, UpdateSourceTrigger=PropertyChanged}" 
                                 Tag="Vendor" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" 
                                 PreviewKeyDown="AddField_PreviewKeyDown"/>
                        <TextBox Grid.Column="2" x:Name="AddTransfersBox" Style="{DynamicResource ModernTextBox}" 
                                 Text="{Binding NewNoteTransferNumbers, UpdateSourceTrigger=PropertyChanged}" 
                                 Tag="Transfers" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" 
                                 PreviewKeyDown="AddField_PreviewKeyDown"/>
                        <TextBox Grid.Column="4" x:Name="AddWhsBox" Style="{DynamicResource ModernTextBox}" 
                                 Text="{Binding NewNoteWhsShipmentNumbers, UpdateSourceTrigger=PropertyChanged}" 
                                 Tag="WHs" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" 
                                 PreviewKeyDown="AddField_PreviewKeyDown"/>
                        <Border Grid.Column="6" x:Name="ToolbarColorPreview" Width="28" Height="28" 
                                CornerRadius="4" Background="#B56576" Cursor="Hand" 
                                MouseLeftButtonDown="AddNoteToolbarPickColor_Click" ToolTip="Pick color"/>
                        <Button Grid.Column="8" x:Name="ToolbarAddBtn" Content="‚ûï Add" Click="AddNoteInline_Click" 
                                Style="{DynamicResource SuccessButtonStyle}"
                                Padding="14,6" FontSize="12"/>
                    </Grid>
                </Border>
                
                <ToggleButton x:Name="ToggleToolbarBtn" Visibility="Collapsed" Click="ToggleToolbarBtn_Click"/>
                <Button x:Name="OpenAddDialogBtn" Visibility="Collapsed" Click="OpenAddDialog_Click"/>
            </Grid>
        </Border>

        <!-- Notes List -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="16">
            <StackPanel>
                <!-- (Add note moved to toolbar) -->

                <!-- Existing Notes -->
                <ListBox x:Name="NotesListBox"
                         ItemsSource="{Binding Items}"
                         SelectionMode="Extended"
                         SelectionChanged="NotesListBox_SelectionChanged"
                         AllowDrop="True"
                         PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                         PreviewMouseMove="ListBox_PreviewMouseMove"
                         Drop="ListBox_Drop"
                         DragOver="ListBox_DragOver"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Expander Loaded="GroupExpander_Loaded"
                                              Expanded="GroupExpander_Expanded"
                                              Collapsed="GroupExpander_Collapsed"
                                              Margin="0,0,0,16"
                                              IsExpanded="True">
                                        <Expander.Header>
                                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <Border Background="#2e1065"
                                                        CornerRadius="3"
                                                        Padding="6,2"
                                                        Margin="10,0,0,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ItemCount}"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"
                                                               Foreground="#a78bfa"/>
                                                </Border>
                                            </StackPanel>
                                        </Expander.Header>
                                        <ItemsPresenter/>
                                    </Expander>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <StackPanel Margin="0,8,0,0"/>
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0,0,0,8"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{DynamicResource SurfaceBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Margin="{TemplateBinding Margin}">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                            <Setter Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                <!-- Color Header -->
                                <Border Background="{Binding ColorHex}"
                                        CornerRadius="8,8,0,0"
                                        Height="6"
                                        MouseLeftButtonDown="NoteColorBar_Click"
                                        Cursor="Hand"/>

                                <!-- View Mode Content -->
                                <StackPanel x:Name="ViewMode" Grid.Row="1" Margin="16,12,16,12">
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <!-- Not Ready Badge -->
                                            <Border Background="{DynamicResource TextTertiaryBrush}" CornerRadius="6" Padding="6,2" Margin="0,0,6,0" Visibility="Collapsed">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.NotReady}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="Not Ready" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>

                                            <!-- In Progress Badge -->
                                            <Border Background="{DynamicResource AccentBrush}" CornerRadius="6" Padding="6,2" Margin="0,0,6,0" Visibility="Collapsed">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.InProgress}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="In Progress" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>

                                            <!-- Done Badge -->
                                            <Border Background="{DynamicResource SuccessBrush}" CornerRadius="6" Padding="6,2" Visibility="Collapsed">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.Done}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="Done" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding VendorName}"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   MouseLeftButtonDown="NoteText_DoubleClick"/>
                                    </DockPanel>

                                    <TextBlock Text="{Binding TransferNumbers}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="13"
                                               TextWrapping="Wrap"
                                               Margin="0,6,0,0"
                                               MouseLeftButtonDown="NoteText_DoubleClick"/>

                                    <TextBlock Text="{Binding WhsShipmentNumbers}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="13"
                                               TextWrapping="Wrap"
                                               Margin="0,4,0,0"
                                               MouseLeftButtonDown="NoteText_DoubleClick"/>

                                    <Border Background="{DynamicResource BackgroundBrush}"
                                            CornerRadius="6"
                                            Padding="8,4"
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="‚è±" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding TimeInProgressDisplay}"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontFamily="Consolas"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Edit Mode Content -->
                                <StackPanel x:Name="EditMode" Grid.Row="1" Margin="16,12" Visibility="Collapsed">
                                    <TextBox Text="{Binding VendorName, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{DynamicResource InlineTextBox}"/>
                                    <TextBox Text="{Binding TransferNumbers, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{DynamicResource InlineTextBox}"/>
                                    <TextBox Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{DynamicResource InlineTextBox}"/>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <Border Grid.Row="2"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="0,1,0,0"
                                        Padding="8">
                                    <Grid>
                                        <!-- View Mode Actions -->
                                        <Grid x:Name="ViewActions">
                                                    <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Content="‚ñ∂"
                                                        Grid.Column="0"
                                                        Command="{Binding DataContext.StartAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{DynamicResource GhostButtonStyle}"
                                                        ToolTip="Start"
                                                        Padding="6,6"
                                                        FontSize="11"
                                                        HorizontalAlignment="Left"
                                                        Margin="0,0,6,0"/>

                                                    <Button Grid.Column="1"
                                                        Content="‚èπ"
                                                        Command="{Binding DataContext.StopAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{DynamicResource GhostButtonStyle}"
                                                        ToolTip="Stop"
                                                        Padding="6,6"
                                                        FontSize="11"
                                                        HorizontalAlignment="Left"
                                                        Margin="0,0,8,0"/>

                                                    <!-- Segmented status buttons -->
                                                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,8,0">
                                                    <Button Click="StatusButton_Click" Tag="{x:Static models:NoteItem+NoteStatus.NotReady}" Style="{DynamicResource GhostButtonStyle}" ToolTip="Not Ready" Padding="6,6" FontSize="11" Margin="0,0,4,0">‚è∫</Button>
                                                    <Button Click="StatusButton_Click" Tag="{x:Static models:NoteItem+NoteStatus.InProgress}" Style="{DynamicResource GhostButtonStyle}" ToolTip="In Progress" Padding="6,6" FontSize="11" Margin="0,0,4,0">‚è≥</Button>
                                                    <Button Click="StatusButton_Click" Tag="{x:Static models:NoteItem+NoteStatus.Done}" Style="{DynamicResource GhostButtonStyle}" ToolTip="Done" Padding="6,6" FontSize="11">‚úî</Button>
                                                    </StackPanel>

                                                    <Button Grid.Column="3"
                                                        Content="üé®"
                                                        Click="PickColor_Click"
                                                        Style="{DynamicResource GhostButtonStyle}"
                                                        ToolTip="Color"
                                                        Padding="6,6"
                                                        FontSize="11"
                                                        HorizontalAlignment="Right"
                                                        Margin="2,0"/>

                                                    <Button Grid.Column="4"
                                                        Content="‚úè"
                                                        Click="EditNote_Click"
                                                        Style="{DynamicResource GhostButtonStyle}"
                                                        ToolTip="Edit"
                                                        Padding="6,6"
                                                        FontSize="11"
                                                        HorizontalAlignment="Right"
                                                        Margin="2,0,0,0"/>
                                        </Grid>

                                        <!-- Edit Mode Actions -->
                                        <Grid x:Name="EditActions" Visibility="Collapsed">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Content="Save"
                                                    Click="SaveNote_Click"
                                                    Style="{DynamicResource PrimaryButtonStyle}"
                                                    Padding="8,6"
                                                    FontSize="12"
                                                    HorizontalAlignment="Stretch"
                                                    Margin="0,0,4,0"/>

                                            <Button Grid.Column="1"
                                                    Content="Cancel"
                                                    Click="CancelEdit_Click"
                                                    Style="{DynamicResource SecondaryButtonStyle}"
                                                    Padding="8,6"
                                                    FontSize="12"
                                                    HorizontalAlignment="Stretch"
                                                    Margin="4,0,0,0"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="13"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Loading..." Foreground="{DynamicResource TextTertiaryBrush}" FontSize="12" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" Margin="0,0,12,0"/>
                    <Border Background="{DynamicResource SurfaceBrush}" Padding="8,6" CornerRadius="6" Visibility="{Binding UndoAvailable, Converter={StaticResource BoolToVis}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding UndoMessage}" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button Content="Undo" Command="{Binding UndoStatusChangeAsyncCommand}" Style="{DynamicResource SecondaryButtonStyle}" Padding="8,4"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
