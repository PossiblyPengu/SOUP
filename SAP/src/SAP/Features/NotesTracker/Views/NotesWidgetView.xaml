<UserControl x:Class="SAP.Features.NotesTracker.Views.NotesWidgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SAP.Features.NotesTracker.Models">
    <Grid>
        <!-- Notes List -->
        <ScrollViewer Padding="12,8">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource SurfaceBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="0,0,0,8">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Set Status">
                                        <MenuItem Header="Not Ready" Click="SetStatus_NotReady"/>
                                        <MenuItem Header="On Deck" Click="SetStatus_OnDeck"/>
                                        <MenuItem Header="In Progress" Click="SetStatus_InProgress"/>
                                        <MenuItem Header="Done" Click="SetStatus_Done"/>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Delete" Click="DeleteNote_Click"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Color Bar -->
                                <Border Background="{Binding ColorHex}"
                                        CornerRadius="8,8,0,0"/>

                                <!-- Content -->
                                <StackPanel Grid.Row="1" Margin="10,8">
                                    <Grid Margin="0,0,0,6">
                                        <TextBlock Text="{Binding VendorName}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <Border HorizontalAlignment="Right"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="StatusToggle_Click">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FF4444"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.OnDeck}">
                                                            <Setter Property="Background" Value="#FFD700"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.InProgress}">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.Done}">
                                                            <Setter Property="Background" Value="{DynamicResource TextTertiaryBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="9" FontWeight="SemiBold" Foreground="White">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Not Ready"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.OnDeck}">
                                                                <Setter Property="Text" Value="On Deck"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.InProgress}">
                                                                <Setter Property="Text" Value="In Progress"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:NoteItem+NoteStatus.Done}">
                                                                <Setter Property="Text" Value="Done"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </Grid>

                                    <TextBlock Text="{Binding TransferNumbers}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text="{Binding WhsShipmentNumbers}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text="{Binding TimeInProgressDisplay}"
                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                               FontSize="10"
                                               FontFamily="Consolas"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
