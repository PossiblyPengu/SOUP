<UserControl x:Class="SAP.Features.OrderLog.Views.OrderLogWidgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SAP.Features.OrderLog.Models">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource SurfaceBrush}" Padding="14,10">
            <TextBlock Text="Order Log"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AccentBrush}"/>
        </Border>

        <!-- Add Note Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1"
                Padding="10">
            <StackPanel>
                <!-- Vendor row -->
                <TextBox x:Name="VendorBox"
                         Background="{DynamicResource SurfaceHoverBrush}"
                         Foreground="{DynamicResource TextPrimaryBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="14"
                         Tag="Vendor"
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         PreviewKeyDown="TextBox_KeyDown"/>

                <!-- Transfers/WHs row -->
                <Grid Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="TransfersBox"
                             Background="{DynamicResource SurfaceHoverBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             Padding="10,6"
                             FontSize="13"
                             Tag="Transfers"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             PreviewKeyDown="TextBox_KeyDown"/>

                    <TextBox Grid.Column="2"
                             x:Name="WhsBox"
                             Background="{DynamicResource SurfaceHoverBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             Padding="10,6"
                             FontSize="13"
                             Tag="WHs"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             PreviewKeyDown="TextBox_KeyDown"/>
                </Grid>

                <!-- Color + Add button row -->
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border x:Name="ColorPreview"
                            Width="32"
                            Height="32"
                            CornerRadius="6"
                            Background="{DynamicResource SecondaryBrush}"
                            Cursor="Hand"
                            MouseLeftButtonDown="ColorPreview_Click"
                            ToolTip="Pick color"/>

                    <Button Grid.Column="2"
                            Content="Add Order"
                            Click="AddNote_Click"
                            Height="32"
                            Padding="16,0"
                            FontSize="13"
                            Style="{DynamicResource SuccessButtonStyle}"
                            ToolTip="Add order (Enter)"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Notes List -->
        <ScrollViewer Grid.Row="2" Padding="10">
            <StackPanel>
                <!-- Active Notes -->
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,0,0,10">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Set Status">
                                            <MenuItem Header="Not Ready" Click="SetStatus_NotReady"/>
                                            <MenuItem Header="On Deck" Click="SetStatus_OnDeck"/>
                                            <MenuItem Header="In Progress" Click="SetStatus_InProgress"/>
                                            <MenuItem Header="Done" Click="SetStatus_Done"/>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Change Color..." Click="ChangeColor_Click"/>
                                        <Separator/>
                                        <MenuItem Header="Archive" Click="ArchiveNote_Click"/>
                                        <MenuItem Header="Delete" Click="DeleteNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Color Bar -->
                                    <Border Background="{Binding ColorHex}"
                                            CornerRadius="8,8,0,0"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorBar_Click"/>

                                    <!-- Content -->
                                    <StackPanel Grid.Row="1" Margin="12,10">
                                        <Grid>
                                            <TextBlock Text="{Binding VendorName}"
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <Border HorizontalAlignment="Right"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Cursor="Hand"
                                                    MouseLeftButtonDown="StatusToggle_Click">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.OnDeck}">
                                                                <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.InProgress}">
                                                                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.Done}">
                                                                <Setter Property="Background" Value="{DynamicResource TextTertiaryBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextOnPrimaryBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Not Ready"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.OnDeck}">
                                                                    <Setter Property="Text" Value="On Deck"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.InProgress}">
                                                                    <Setter Property="Text" Value="In Progress"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.Done}">
                                                                    <Setter Property="Text" Value="Done"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <TextBlock Text="{Binding TransferNumbers}"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   FontSize="13"
                                                   Margin="0,6,0,0"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Text="{Binding WhsShipmentNumbers}"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   FontSize="13"
                                                   Margin="0,3,0,0"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Text="{Binding TimeInProgressDisplay}"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   FontSize="12"
                                                   FontFamily="Consolas"
                                                   Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            
                <!-- Archived Notes Section -->
                <StackPanel Visibility="{Binding ShowArchived, Converter={StaticResource BoolToVis}}"
                            Margin="0,20,0,0">
                    <TextBlock Text="ðŸ“¦ Archived"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding ArchivedItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"
                                        Opacity="0.7">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                                            <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Color Bar -->
                                        <Border Background="{Binding ColorHex}"
                                                CornerRadius="8,8,0,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Row="1" Margin="12,8">
                                            <TextBlock Text="{Binding VendorName}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Text="{Binding TransferNumbers}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontSize="12"
                                                       Margin="0,4,0,0"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="14,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ToggleArchivedCommand}"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Toggle archived">
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="ðŸ“¦"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowArchived}" Value="True">
                                            <Setter Property="Text" Value="ðŸ“¦âœ“"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>
                    <Button Command="{Binding ExportToCsvCommand}"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Export to CSV">
                        <TextBlock Text="ðŸ“¤"/>
                    </Button>
                    <Button Click="OpenFullView_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Open full view">
                        <TextBlock Text="â†—"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
