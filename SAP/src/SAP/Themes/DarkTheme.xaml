<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================= -->
    <!-- CORNER RADIUS VALUES          -->
    <!-- ============================= -->
    <CornerRadius x:Key="WindowCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="TitleBarCornerRadius">12,12,0,0</CornerRadius>
    <CornerRadius x:Key="SidebarCornerRadius">0,0,0,12</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">16</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="XSmallCornerRadius">6</CornerRadius>
    <CornerRadius x:Key="NavItemCornerRadius">14</CornerRadius>
    <CornerRadius x:Key="IconCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="AppLogoCornerRadius">16</CornerRadius>
    <CornerRadius x:Key="SplashIconCornerRadius">32</CornerRadius>
    <CornerRadius x:Key="BadgeCornerRadius">10</CornerRadius>

    <!-- ============================= -->
    <!-- MODERN THEMED ICONS           -->
    <!-- ============================= -->
    <sys:String x:Key="AppLogoIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">‚ö°</sys:String>
    <sys:String x:Key="ExpireWiseIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üì¶</sys:String>
    <sys:String x:Key="ExpireWiseSplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üì¶</sys:String>
    <sys:String x:Key="AllocationBuddyIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üìä</sys:String>
    <sys:String x:Key="AllocationBuddySplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üìä</sys:String>
    <sys:String x:Key="EssentialsBuddyIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üìã</sys:String>
    <sys:String x:Key="EssentialsBuddySplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üìã</sys:String>
    <sys:String x:Key="SwiftLabelIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üè∑Ô∏è</sys:String>
    <sys:String x:Key="SwiftLabelSplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üè∑Ô∏è</sys:String>
    <sys:String x:Key="OrderLogIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üóíÔ∏è</sys:String>
    <sys:String x:Key="OrderLogSplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">üìì</sys:String>

    <!-- ============================= -->
    <!-- DARK THEME COLORS             -->
    <!-- ============================= -->
    
    <!-- Neutral/Surface Colors -->
    <Color x:Key="BackgroundColor">#0f0f23</Color>
    <Color x:Key="SurfaceColor">#18181b</Color>
    <Color x:Key="SurfaceHoverColor">#27272a</Color>
    <Color x:Key="SurfaceActiveColor">#3f3f46</Color>
    <Color x:Key="BorderColor">#27272a</Color>
    <Color x:Key="BorderDarkColor">#3f3f46</Color>
    <Color x:Key="BorderLightColor">#18181b</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#f4f4f5</Color>
    <Color x:Key="TextSecondaryColor">#a1a1aa</Color>
    <Color x:Key="TextTertiaryColor">#71717a</Color>
    <Color x:Key="TextDisabledColor">#52525b</Color>
    <Color x:Key="TextOnPrimaryColor">#ffffff</Color>
    <Color x:Key="TextLinkColor">#818cf8</Color>
    
    <!-- Sidebar Colors -->
    <Color x:Key="SidebarBackgroundColor">#09090b</Color>
    <Color x:Key="SidebarHoverColor">#18181b</Color>
    <Color x:Key="SidebarActiveColor">#1e1b4b</Color>
    
    <!-- Module Light Background Colors (for cards, badges) -->
    <Color x:Key="ExpireWiseLightColor">#422006</Color>
    <Color x:Key="AllocationBuddyLightColor">#2e1065</Color>
    <Color x:Key="EssentialsBuddyLightColor">#022c22</Color>
    <Color x:Key="SwiftLabelLightColor">#450a0a</Color>
    
    <!-- Stock Level Colors (Traffic Light: Red/Yellow/Green) -->
    <Color x:Key="OutOfStockColor">#450a0a</Color>
    <Color x:Key="OutOfStockTextColor">#fca5a5</Color>
    <Color x:Key="LowStockColor">#422006</Color>
    <Color x:Key="LowStockTextColor">#fde047</Color>
    <Color x:Key="SufficientColor">#14532d</Color>
    <Color x:Key="SufficientTextColor">#86efac</Color>
    <Color x:Key="InStockColor">#022c22</Color>
    <Color x:Key="InStockTextColor">#34d399</Color>
    
    <!-- Essentials Buddy Special Colors -->
    <Color x:Key="NonEssentialIn990Color">#422006</Color>
    <Color x:Key="NonEssentialIn990TextColor">#fbbf24</Color>

    <!-- ============================= -->
    <!-- DARK THEME BRUSHES            -->
    <!-- ============================= -->
    
    <!-- Surface Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="SurfaceActiveBrush" Color="{StaticResource SurfaceActiveColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDarkColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    
    <!-- Title Bar (matches sidebar top) -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#09090b"/>
    <SolidColorBrush x:Key="TitleBarTextBrush" Color="{StaticResource TextPrimaryColor}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="TextLinkBrush" Color="{StaticResource TextLinkColor}"/>
    
    <!-- Sidebar Brushes -->
    <LinearGradientBrush x:Key="SidebarBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#09090b" Offset="0"/>
        <GradientStop Color="#0f0f1a" Offset="0.5"/>
        <GradientStop Color="#1a1625" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}"/>
    <SolidColorBrush x:Key="SidebarActiveBrush" Color="{StaticResource SidebarActiveColor}"/>
    
    <!-- Module Light Background Brushes -->
    <SolidColorBrush x:Key="ExpireWiseLightBrush" Color="{StaticResource ExpireWiseLightColor}"/>
    <SolidColorBrush x:Key="AllocationBuddyLightBrush" Color="{StaticResource AllocationBuddyLightColor}"/>
    <SolidColorBrush x:Key="EssentialsBuddyLightBrush" Color="{StaticResource EssentialsBuddyLightColor}"/>
    <SolidColorBrush x:Key="SwiftLabelLightBrush" Color="{StaticResource SwiftLabelLightColor}"/>
    
    <!-- Stock Level Brushes -->
    <SolidColorBrush x:Key="OutOfStockBrush" Color="{StaticResource OutOfStockColor}"/>
    <SolidColorBrush x:Key="OutOfStockTextBrush" Color="{StaticResource OutOfStockTextColor}"/>
    <SolidColorBrush x:Key="OutOfStockAccentBrush" Color="#ef4444"/>
    <SolidColorBrush x:Key="LowStockBrush" Color="{StaticResource LowStockColor}"/>
    <SolidColorBrush x:Key="LowStockTextBrush" Color="{StaticResource LowStockTextColor}"/>
    <SolidColorBrush x:Key="LowStockAccentBrush" Color="#f59e0b"/>
    <SolidColorBrush x:Key="SufficientBrush" Color="{StaticResource SufficientColor}"/>
    <SolidColorBrush x:Key="SufficientTextBrush" Color="{StaticResource SufficientTextColor}"/>
    <SolidColorBrush x:Key="SufficientAccentBrush" Color="#22c55e"/>
    <SolidColorBrush x:Key="InStockBrush" Color="{StaticResource InStockColor}"/>
    <SolidColorBrush x:Key="InStockTextBrush" Color="{StaticResource InStockTextColor}"/>
    
    <!-- Essentials Buddy Special Brushes -->
    <SolidColorBrush x:Key="NonEssentialIn990Brush" Color="{StaticResource NonEssentialIn990Color}"/>
    <SolidColorBrush x:Key="NonEssentialIn990TextBrush" Color="{StaticResource NonEssentialIn990TextColor}"/>
    <SolidColorBrush x:Key="NonEssentialIn990AccentBrush" Color="#ec4899"/>
    
    <!-- Launcher Background Gradient -->
    <LinearGradientBrush x:Key="LauncherBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0f0f23" Offset="0"/>
        <GradientStop Color="#1a1a2e" Offset="0.5"/>
        <GradientStop Color="#1e1b4b" Offset="1"/>
    </LinearGradientBrush>

    <!-- Card/Input Background -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#18181b"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#27272a"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#3f3f46"/>

    <!-- Modern 3D Border Colors - Raised (subtle for modern look) -->
    <SolidColorBrush x:Key="RaisedBorderLightBrush" Color="#3f3f46"/>
    <SolidColorBrush x:Key="RaisedBorderHighlightBrush" Color="#3f3f46"/>
    <SolidColorBrush x:Key="RaisedBorderDarkBrush" Color="#27272a"/>
    <SolidColorBrush x:Key="RaisedBorderShadowBrush" Color="#27272a"/>

    <!-- Modern 3D Border Colors - Sunken (subtle for modern look) -->
    <SolidColorBrush x:Key="SunkenBorderDarkBrush" Color="#27272a"/>
    <SolidColorBrush x:Key="SunkenBorderShadowBrush" Color="#27272a"/>
    <SolidColorBrush x:Key="SunkenBorderHighlightBrush" Color="#3f3f46"/>
    <SolidColorBrush x:Key="SunkenBorderLightBrush" Color="#3f3f46"/>

    <!-- Splash Screen Text (high contrast against gradient) -->
    <SolidColorBrush x:Key="SplashTitleBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="SplashSubtitleBrush" Color="#a1a1aa"/>

    <!-- Module Splash Gradients (blend with sidebar) -->
    <LinearGradientBrush x:Key="ExpireWiseSplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0f0f1a" Offset="0"/>
        <GradientStop Color="#1a1510" Offset="0.3"/>
        <GradientStop Color="#4a2c10" Offset="0.7"/>
        <GradientStop Color="#92400e" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AllocationBuddySplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0f0f1a" Offset="0"/>
        <GradientStop Color="#1a1a35" Offset="0.3"/>
        <GradientStop Color="#1e1b5a" Offset="0.7"/>
        <GradientStop Color="#3730a3" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="EssentialsBuddySplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0f0f1a" Offset="0"/>
        <GradientStop Color="#0f1a1a" Offset="0.3"/>
        <GradientStop Color="#064e3b" Offset="0.7"/>
        <GradientStop Color="#047857" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SwiftLabelSplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0f0f1a" Offset="0"/>
        <GradientStop Color="#1a0f1a" Offset="0.3"/>
        <GradientStop Color="#4a1d4a" Offset="0.7"/>
        <GradientStop Color="#86198f" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="OrderLogSplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0f0f1a" Offset="0"/>
        <GradientStop Color="#0f1a1f" Offset="0.3"/>
        <GradientStop Color="#134e5e" Offset="0.7"/>
        <GradientStop Color="#0d9488" Offset="1"/>
    </LinearGradientBrush>

    <!-- Module Icon Gradients (Modern Dark Theme) -->
    <!-- ExpireWise: Warm amber/orange gradient -->
    <LinearGradientBrush x:Key="ExpireWiseIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#f59e0b" Offset="0"/>
        <GradientStop Color="#fbbf24" Offset="0.5"/>
        <GradientStop Color="#f97316" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="ExpireWiseIconShadowColor">#f59e0b</Color>

    <!-- AllocationBuddy: Cool blue/indigo gradient -->
    <LinearGradientBrush x:Key="AllocationBuddyIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6366f1" Offset="0"/>
        <GradientStop Color="#818cf8" Offset="0.5"/>
        <GradientStop Color="#4f46e5" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="AllocationBuddyIconShadowColor">#6366f1</Color>

    <!-- EssentialsBuddy: Fresh emerald/teal gradient -->
    <LinearGradientBrush x:Key="EssentialsBuddyIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#10b981" Offset="0"/>
        <GradientStop Color="#34d399" Offset="0.5"/>
        <GradientStop Color="#059669" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="EssentialsBuddyIconShadowColor">#10b981</Color>

    <!-- SwiftLabel: Vibrant pink/rose gradient -->
    <LinearGradientBrush x:Key="SwiftLabelIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#ec4899" Offset="0"/>
        <GradientStop Color="#f472b6" Offset="0.5"/>
        <GradientStop Color="#db2777" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="SwiftLabelIconShadowColor">#ec4899</Color>

    <!-- OrderLog: Cool cyan/teal gradient -->
    <LinearGradientBrush x:Key="OrderLogIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#14b8a6" Offset="0"/>
        <GradientStop Color="#2dd4bf" Offset="0.5"/>
        <GradientStop Color="#0d9488" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="OrderLogIconShadowColor">#14b8a6</Color>

    <!-- App Logo Gradient (Purple to Pink with depth) -->
    <LinearGradientBrush x:Key="AppLogoGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7c3aed" Offset="0"/>
        <GradientStop Color="#a855f7" Offset="0.3"/>
        <GradientStop Color="#ec4899" Offset="0.7"/>
        <GradientStop Color="#f472b6" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="AppLogoShadowColor">#7c3aed</Color>

    <!-- Launch Button Gradients -->
    <LinearGradientBrush x:Key="LaunchButtonGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#8b5cf6" Offset="0"/>
        <GradientStop Color="#6366f1" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="LaunchButtonHoverGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#a78bfa" Offset="0"/>
        <GradientStop Color="#818cf8" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="LaunchButtonPressedGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7c3aed" Offset="0"/>
        <GradientStop Color="#4f46e5" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="LaunchButtonShadowColor">#8b5cf6</Color>

    <!-- Status Indicator -->
    <SolidColorBrush x:Key="StatusOnlineBrush" Color="#22c55e"/>

    <!-- Title Bar Colors -->
    <SolidColorBrush x:Key="SectionTitleBarBrush" Color="#6366f1"/>
    <SolidColorBrush x:Key="SectionTitleTextBrush" Color="#FFFFFF"/>

</ResourceDictionary>
