    <!-- ============================= -->
    <!-- LIGHT THEME COLORS            -->
    <!-- ============================= -->
    
    <!-- Neutral/Surface Colors -->
    <Color x:Key="BackgroundColor">#f8fafc</Color>
    <Color x:Key="SurfaceColor">#ffffff</Color>
    <Color x:Key="SurfaceHoverColor">#f1f5f9</Color>
    <Color x:Key="SurfaceActiveColor">#e2e8f0</Color>
    <Color x:Key="BorderColor">#e2e8f0</Color>
    <Color x:Key="BorderDarkColor">#cbd5e1</Color>
    <Color x:Key="BorderLightColor">#f1f5f9</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#0f172a</Color>
    <Color x:Key="TextSecondaryColor">#475569</Color>
    <Color x:Key="TextTertiaryColor">#94a3b8</Color>
    <Color x:Key="TextDisabledColor">#cbd5e1</Color>
    <Color x:Key="TextOnPrimaryColor">#ffffff</Color>
    <Color x:Key="TextLinkColor">#6366f1</Color>
    
    <!-- Sidebar Colors -->
    <Color x:Key="SidebarBackgroundColor">#f1f5f9</Color>
    <Color x:Key="SidebarHoverColor">#e2e8f0</Color>
    <Color x:Key="SidebarActiveColor">#ddd6fe</Color>
    
    <!-- Module Light Background Colors (for cards, badges) -->
    <Color x:Key="ExpireWiseLightColor">#fef3c7</Color>
    <Color x:Key="AllocationBuddyLightColor">#ede9fe</Color>
    <Color x:Key="EssentialsBuddyLightColor">#d1fae5</Color>
    <Color x:Key="SwiftLabelLightColor">#fee2e2</Color>
    
    <!-- Stock Level Colors -->
    <Color x:Key="OutOfStockColor">#fee2e2</Color>
    <Color x:Key="OutOfStockTextColor">#dc2626</Color>
    <Color x:Key="LowStockColor">#fef3c7</Color>
    <Color x:Key="LowStockTextColor">#d97706</Color>
    <Color x:Key="OverstockedColor">#dbeafe</Color>
    <Color x:Key="OverstockedTextColor">#2563eb</Color>
    <Color x:Key="InStockColor">#d1fae5</Color>
    <Color x:Key="InStockTextColor">#059669</Color>
    
    <!-- Essentials Buddy Special Colors -->
    <Color x:Key="NonEssentialIn990Color">#fef3c7</Color>
    <Color x:Key="NonEssentialIn990TextColor">#d97706</Color>

    <!-- ============================= -->
    <!-- LIGHT THEME BRUSHES           -->
    <!-- ============================= -->
    
    <!-- Surface Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="SurfaceActiveBrush" Color="{StaticResource SurfaceActiveColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDarkColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    
    <!-- Title Bar (matches sidebar top) -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="TitleBarTextBrush" Color="{StaticResource TextPrimaryColor}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="TextLinkBrush" Color="{StaticResource TextLinkColor}"/>
    
    <!-- Sidebar Brushes -->
    <LinearGradientBrush x:Key="SidebarBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#ffffff" Offset="0"/>
        <GradientStop Color="#f1f5f9" Offset="0.4"/>
        <GradientStop Color="#e2e8f0" Offset="0.8"/>
        <GradientStop Color="#cbd5e1" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}"/>
    <SolidColorBrush x:Key="SidebarActiveBrush" Color="{StaticResource SidebarActiveColor}"/>
    
    <!-- Module Light Background Brushes -->
    <SolidColorBrush x:Key="ExpireWiseLightBrush" Color="{StaticResource ExpireWiseLightColor}"/>
    <SolidColorBrush x:Key="AllocationBuddyLightBrush" Color="{StaticResource AllocationBuddyLightColor}"/>
    <SolidColorBrush x:Key="EssentialsBuddyLightBrush" Color="{StaticResource EssentialsBuddyLightColor}"/>
    <SolidColorBrush x:Key="SwiftLabelLightBrush" Color="{StaticResource SwiftLabelLightColor}"/>
    
    <!-- Stock Level Brushes -->
    <SolidColorBrush x:Key="OutOfStockBrush" Color="{StaticResource OutOfStockColor}"/>
    <SolidColorBrush x:Key="OutOfStockTextBrush" Color="{StaticResource OutOfStockTextColor}"/>
    <SolidColorBrush x:Key="LowStockBrush" Color="{StaticResource LowStockColor}"/>
    <SolidColorBrush x:Key="LowStockTextBrush" Color="{StaticResource LowStockTextColor}"/>
    <SolidColorBrush x:Key="OverstockedBrush" Color="{StaticResource OverstockedColor}"/>
    <SolidColorBrush x:Key="OverstockedTextBrush" Color="{StaticResource OverstockedTextColor}"/>
    <SolidColorBrush x:Key="InStockBrush" Color="{StaticResource InStockColor}"/>
    <SolidColorBrush x:Key="InStockTextBrush" Color="{StaticResource InStockTextColor}"/>
    
    <!-- Essentials Buddy Special Brushes -->
    <SolidColorBrush x:Key="NonEssentialIn990Brush" Color="{StaticResource NonEssentialIn990Color}"/>
    <SolidColorBrush x:Key="NonEssentialIn990TextBrush" Color="{StaticResource NonEssentialIn990TextColor}"/>
    
    <!-- Launcher Background Gradient -->
    <LinearGradientBrush x:Key="LauncherBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#f8fafc" Offset="0"/>
        <GradientStop Color="#f1f5f9" Offset="0.5"/>
        <GradientStop Color="#ede9fe" Offset="1"/>
    </LinearGradientBrush>

    <!-- Card/Input Background -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#f8fafc"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#e2e8f0"/>

    <!-- Modern 3D Border Colors - Raised (subtle for modern look) -->
    <SolidColorBrush x:Key="RaisedBorderLightBrush" Color="#e2e8f0"/>
    <SolidColorBrush x:Key="RaisedBorderHighlightBrush" Color="#e2e8f0"/>
    <SolidColorBrush x:Key="RaisedBorderDarkBrush" Color="#cbd5e1"/>
    <SolidColorBrush x:Key="RaisedBorderShadowBrush" Color="#cbd5e1"/>

    <!-- Modern 3D Border Colors - Sunken (subtle for modern look) -->
    <SolidColorBrush x:Key="SunkenBorderDarkBrush" Color="#cbd5e1"/>
    <SolidColorBrush x:Key="SunkenBorderShadowBrush" Color="#cbd5e1"/>
    <SolidColorBrush x:Key="SunkenBorderHighlightBrush" Color="#e2e8f0"/>
    <SolidColorBrush x:Key="SunkenBorderLightBrush" Color="#e2e8f0"/>

    <!-- Splash Screen Text (high contrast against gradient) -->
    <SolidColorBrush x:Key="SplashTitleBrush" Color="#0f172a"/>
    <SolidColorBrush x:Key="SplashSubtitleBrush" Color="#475569"/>

    <!-- Module Splash Gradients (blend with sidebar) -->
    <LinearGradientBrush x:Key="ExpireWiseSplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#fafafa" Offset="0"/>
        <GradientStop Color="#f5f3ff" Offset="0.25"/>
        <GradientStop Color="#ede9fe" Offset="0.5"/>
        <GradientStop Color="#ddd6fe" Offset="0.75"/>
        <GradientStop Color="#c4b5fd" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AllocationBuddySplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#fafafa" Offset="0"/>
        <GradientStop Color="#eef2ff" Offset="0.25"/>
        <GradientStop Color="#e0e7ff" Offset="0.5"/>
        <GradientStop Color="#c7d2fe" Offset="0.75"/>
        <GradientStop Color="#a5b4fc" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="EssentialsBuddySplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#fafafa" Offset="0"/>
        <GradientStop Color="#ecfdf5" Offset="0.25"/>
        <GradientStop Color="#d1fae5" Offset="0.5"/>
        <GradientStop Color="#a7f3d0" Offset="0.75"/>
        <GradientStop Color="#6ee7b7" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SwiftLabelSplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#fafafa" Offset="0"/>
        <GradientStop Color="#fdf2f8" Offset="0.25"/>
        <GradientStop Color="#fce7f3" Offset="0.5"/>
        <GradientStop Color="#fbcfe8" Offset="0.75"/>
        <GradientStop Color="#f9a8d4" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NotesSplashGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#fafafa" Offset="0"/>
        <GradientStop Color="#f0fdfa" Offset="0.25"/>
        <GradientStop Color="#ccfbf1" Offset="0.5"/>
        <GradientStop Color="#99f6e4" Offset="0.75"/>
        <GradientStop Color="#5eead4" Offset="1"/>
    </LinearGradientBrush>

    <!-- Module Icon Gradients (Modern Light Theme) -->
    <!-- ExpireWise: Warm amber/orange gradient -->
    <LinearGradientBrush x:Key="ExpireWiseIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#f59e0b" Offset="0"/>
        <GradientStop Color="#fbbf24" Offset="0.5"/>
        <GradientStop Color="#f97316" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="ExpireWiseIconShadowColor">#d97706</Color>

    <!-- AllocationBuddy: Cool blue/indigo gradient -->
    <LinearGradientBrush x:Key="AllocationBuddyIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6366f1" Offset="0"/>
        <GradientStop Color="#818cf8" Offset="0.5"/>
        <GradientStop Color="#4f46e5" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="AllocationBuddyIconShadowColor">#4f46e5</Color>

    <!-- EssentialsBuddy: Fresh emerald/teal gradient -->
    <LinearGradientBrush x:Key="EssentialsBuddyIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#10b981" Offset="0"/>
        <GradientStop Color="#34d399" Offset="0.5"/>
        <GradientStop Color="#059669" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="EssentialsBuddyIconShadowColor">#047857</Color>

    <!-- SwiftLabel: Vibrant pink/rose gradient -->
    <LinearGradientBrush x:Key="SwiftLabelIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#ec4899" Offset="0"/>
        <GradientStop Color="#f472b6" Offset="0.5"/>
        <GradientStop Color="#db2777" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="SwiftLabelIconShadowColor">#be185d</Color>

    <!-- Notes: Cool cyan/teal gradient -->
    <LinearGradientBrush x:Key="NotesIconGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#14b8a6" Offset="0"/>
        <GradientStop Color="#2dd4bf" Offset="0.5"/>
        <GradientStop Color="#0d9488" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="NotesIconShadowColor">#0f766e</Color>

    <!-- App Logo Gradient (Purple to Pink with depth) -->
    <LinearGradientBrush x:Key="AppLogoGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7c3aed" Offset="0"/>
        <GradientStop Color="#a855f7" Offset="0.3"/>
        <GradientStop Color="#ec4899" Offset="0.7"/>
        <GradientStop Color="#f472b6" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="AppLogoShadowColor">#6d28d9</Color>

    <!-- Launch Button Gradients -->
    <LinearGradientBrush x:Key="LaunchButtonGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#8b5cf6" Offset="0"/>
        <GradientStop Color="#6366f1" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="LaunchButtonHoverGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#a78bfa" Offset="0"/>
        <GradientStop Color="#818cf8" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="LaunchButtonPressedGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#7c3aed" Offset="0"/>
        <GradientStop Color="#4f46e5" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="LaunchButtonShadowColor">#8b5cf6</Color>

    <!-- Status Indicator -->
    <SolidColorBrush x:Key="StatusOnlineBrush" Color="#22c55e"/>

    <!-- Title Bar Colors (for compatibility) -->
    <SolidColorBrush x:Key="Win98TitleBarBrush" Color="#6366f1"/>
    <SolidColorBrush x:Key="Win98TitleTextBrush" Color="#FFFFFF"/>

</ResourceDictionary>
