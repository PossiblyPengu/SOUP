                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Margin" Value="0,0,2,0"/>
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource SurfaceBrush}"/>
                            <Setter TargetName="BottomBorder" Property="BorderThickness" Value="0,0,1,0"/>
