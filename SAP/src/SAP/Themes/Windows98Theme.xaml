    <!-- AppNavButtonStyle - Authentic Windows 98 navigation buttons with proper 3D borders -->
    <Style x:Key="AppNavButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="2,1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <!-- Outer border: white top-left, dark gray bottom-right (raised effect) -->
                    <Border x:Name="OuterBorder" BorderBrush="#FFFFFF" BorderThickness="1,1,0,0" Background="{TemplateBinding Background}">
                        <Border x:Name="InnerBorder" BorderBrush="#808080" BorderThickness="0,0,1,1">
                            <Border x:Name="HighlightBorder" BorderBrush="#DFDFDF" BorderThickness="1,1,0,0">
                                <Border x:Name="ShadowBorder" BorderBrush="#404040" BorderThickness="0,0,1,1" Padding="{TemplateBinding Padding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!-- Icon -->
                                        <Border Grid.Column="0" Width="32" Height="32" Background="#C0C0C0" 
                                                BorderBrush="#808080" BorderThickness="1" Margin="0,0,8,0">
                                            <ContentPresenter Content="{TemplateBinding Tag}" 
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <!-- Text content -->
                                        <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterBorder" Property="Background" Value="#ECE9D8"/>
                        </Trigger>
                        <!-- Pressed/checked: invert to sunken 3D effect -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#808080"/>
                            <Setter TargetName="InnerBorder" Property="BorderBrush" Value="#FFFFFF"/>
                            <Setter TargetName="HighlightBorder" Property="BorderBrush" Value="#404040"/>
                            <Setter TargetName="ShadowBorder" Property="BorderBrush" Value="#DFDFDF"/>
                            <Setter TargetName="OuterBorder" Property="Background" Value="#000080"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LaunchButtonStyle - Authentic Windows 98 button with 3D beveled edges -->
    <Style x:Key="LaunchButtonStyle" TargetType="Button">
        <Setter Property="Content" Value="Launch App"/>
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <!-- Classic Win98 raised button: outer white/dark gray, inner light/dark -->
                    <Border x:Name="OuterBorder" BorderBrush="#FFFFFF" BorderThickness="1,1,0,0" Background="#D4D0C8">
                        <Border x:Name="InnerBorder" BorderBrush="#404040" BorderThickness="0,0,1,1">
                            <Border x:Name="HighlightBorder" BorderBrush="#DFDFDF" BorderThickness="1,1,0,0">
                                <Border x:Name="ShadowBorder" BorderBrush="#808080" BorderThickness="0,0,1,1" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter x:Name="Content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterBorder" Property="Background" Value="#ECE9D8"/>
                        </Trigger>
                        <!-- Pressed: swap borders for sunken effect -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#404040"/>
                            <Setter TargetName="InnerBorder" Property="BorderBrush" Value="#FFFFFF"/>
                            <Setter TargetName="HighlightBorder" Property="BorderBrush" Value="#808080"/>
                            <Setter TargetName="ShadowBorder" Property="BorderBrush" Value="#DFDFDF"/>
                            <Setter TargetName="OuterBorder" Property="Background" Value="#D4D0C8"/>
                            <Setter TargetName="Content" Property="Margin" Value="1,1,0,0"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#808080"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- PopOutButtonStyle - Small Windows 98 button -->
    <Style x:Key="PopOutButtonStyle" TargetType="Button">
        <Setter Property="Content" Value="↗"/>
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="OuterBorder" BorderBrush="#FFFFFF" BorderThickness="1,1,0,0" Background="#D4D0C8">
                        <Border x:Name="InnerBorder" BorderBrush="#404040" BorderThickness="0,0,1,1">
                            <Border x:Name="HighlightBorder" BorderBrush="#DFDFDF" BorderThickness="1,1,0,0">
                                <Border x:Name="ShadowBorder" BorderBrush="#808080" BorderThickness="0,0,1,1">
                                    <ContentPresenter x:Name="Content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterBorder" Property="Background" Value="#ECE9D8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#404040"/>
                            <Setter TargetName="InnerBorder" Property="BorderBrush" Value="#FFFFFF"/>
                            <Setter TargetName="HighlightBorder" Property="BorderBrush" Value="#808080"/>
                            <Setter TargetName="ShadowBorder" Property="BorderBrush" Value="#DFDFDF"/>
                            <Setter TargetName="Content" Property="Margin" Value="1,1,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- QuickActionStyle - Windows 98 menu-style button -->
    <Style x:Key="QuickActionStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="OuterBorder" BorderBrush="#FFFFFF" BorderThickness="1,1,0,0" 
                            Background="{TemplateBinding Background}">
                        <Border x:Name="InnerBorder" BorderBrush="#404040" BorderThickness="0,0,1,1">
                            <Border x:Name="HighlightBorder" BorderBrush="#DFDFDF" BorderThickness="1,1,0,0">
                                <Border x:Name="ShadowBorder" BorderBrush="#808080" BorderThickness="0,0,1,1" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter x:Name="Content" 
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </Border>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterBorder" Property="Background" Value="#000080"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#404040"/>
                            <Setter TargetName="InnerBorder" Property="BorderBrush" Value="#FFFFFF"/>
                            <Setter TargetName="HighlightBorder" Property="BorderBrush" Value="#808080"/>
                            <Setter TargetName="ShadowBorder" Property="BorderBrush" Value="#DFDFDF"/>
                            <Setter TargetName="Content" Property="Margin" Value="1,1,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================= -->
    <!-- WINDOWS 98 PANEL STYLES       -->
    <!-- ============================= -->

    <!-- Win98 Sunken Panel Style (for content areas) -->
    <Style x:Key="Win98SunkenPanelStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#808080"/>
    </Style>

    <!-- Win98 Group Box Style -->
    <Style x:Key="Win98GroupBoxStyle" TargetType="GroupBox">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- Etched border effect -->
                        <Border Grid.Row="1" BorderBrush="#FFFFFF" BorderThickness="0,0,1,1" Margin="0,8,0,0">
                            <Border BorderBrush="#808080" BorderThickness="1,1,0,0" Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                        </Border>
                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="{TemplateBinding Header}" Background="#D4D0C8" 
                                   Padding="4,0" Margin="8,0,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Win98 Status Bar Style -->
    <Style x:Key="Win98StatusBarStyle" TargetType="Border">
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="BorderBrush" Value="#FFFFFF"/>
        <Setter Property="Padding" Value="2"/>
    </Style>

    <!-- Win98 Status Bar Panel (sunken) -->
    <Style x:Key="Win98StatusPanelStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1,1,0,0"/>
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Margin" Value="1"/>
    </Style>

    <!-- Win98 Menu Bar Style -->
    <Style x:Key="Win98MenuBarStyle" TargetType="Menu">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Win98 TreeView Item Style (for file explorer look) -->
    <Style x:Key="Win98TreeViewItemStyle" TargetType="TreeViewItem">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Padding" Value="2"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#000080"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Win98 Toolbar Separator -->
    <Style x:Key="Win98ToolbarSeparatorStyle" TargetType="Separator">
        <Setter Property="Width" Value="2"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="1" Background="#808080"/>
                        <Border Width="1" Background="#FFFFFF"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Win98 Progress Bar Style -->
    <Style x:Key="Win98ProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="16"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="#000080"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border BorderBrush="#808080" BorderThickness="1,1,0,0">
                        <Border BorderBrush="#FFFFFF" BorderThickness="0,0,1,1">
                            <Grid Background="#FFFFFF">
                                <Rectangle x:Name="PART_Track"/>
                                <Rectangle x:Name="PART_Indicator" HorizontalAlignment="Left" Fill="#000080"/>
                            </Grid>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Win98 Tab Control Style -->
    <Style x:Key="Win98TabControlStyle" TargetType="TabControl">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- ============================= -->
    <!-- WIN98 BORDER STYLES           -->
    <!-- ============================= -->

    <!-- Win98 Raised Panel (for cards, headers, buttons) - Control Template -->
    <ControlTemplate x:Key="Win98RaisedPanelTemplate" TargetType="Border">
        <!-- 4-layer 3D raised border -->
        <Border BorderBrush="#FFFFFF" BorderThickness="1,1,0,0">
            <Border BorderBrush="#DFDFDF" BorderThickness="1,1,0,0">
                <Border BorderBrush="#404040" BorderThickness="0,0,1,1">
                    <Border BorderBrush="#808080" BorderThickness="0,0,1,1" 
                            Background="#D4D0C8" Padding="4">
                        <ContentPresenter/>
                    </Border>
                </Border>
            </Border>
        </Border>
    </ControlTemplate>

    <!-- Win98 Sunken Panel (for lists, text areas) - Control Template -->
    <ControlTemplate x:Key="Win98SunkenPanelTemplate" TargetType="Border">
        <!-- 4-layer 3D sunken border -->
        <Border BorderBrush="#808080" BorderThickness="1,1,0,0">
            <Border BorderBrush="#404040" BorderThickness="1,1,0,0">
                <Border BorderBrush="#DFDFDF" BorderThickness="0,0,1,1">
                    <Border BorderBrush="#FFFFFF" BorderThickness="0,0,1,1" 
                            Background="#FFFFFF" Padding="2">
                        <ContentPresenter/>
                    </Border>
                </Border>
            </Border>
        </Border>
    </ControlTemplate>

    <!-- Win98 Etched Border (for group separators) -->
    <ControlTemplate x:Key="Win98EtchedBorderTemplate" TargetType="Border">
        <Border BorderBrush="#808080" BorderThickness="1,1,0,0">
            <Border BorderBrush="#FFFFFF" BorderThickness="0,0,1,1" Padding="8">
                <ContentPresenter/>
            </Border>
        </Border>
    </ControlTemplate>

    <!-- Win98 Window Style Border (thick 3D) -->
    <Style x:Key="Win98WindowBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Win98 List Header Style -->
    <Style x:Key="Win98ListHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- Win98 Title Bar Blue -->
    <SolidColorBrush x:Key="Win98TitleBarBrush" Color="#000080"/>
    <SolidColorBrush x:Key="Win98TitleBarInactiveBrush" Color="#808080"/>
    <SolidColorBrush x:Key="Win98TitleTextBrush" Color="#FFFFFF"/>

    <!-- Override panel styles for Win98 mode -->
    <!-- Content Card Style - Win98 Raised Panel Look -->
    <Style x:Key="ContentCardStyle" TargetType="Border">
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Content Panel Style - Win98 Look with proper borders -->
    <Style x:Key="ContentPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- Win98 Inset List Style (for ListViews) -->
    <Style x:Key="Win98InsetListStyle" TargetType="Border">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#808080"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Win98 Header Bar Style (blue title bars on panels) -->
    <Style x:Key="Win98HeaderBarStyle" TargetType="Border">
        <Setter Property="Background" Value="#000080"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>

    <!-- Win98 Section Header Text -->
    <Style x:Key="Win98SectionHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <!-- ============================= -->
    <!-- WIN98 SPLASH SCREEN STYLE     -->
    <!-- Makes splash panels look like -->
    <!-- authentic Win98 program dialogs -->
    <!-- ============================= -->
    
    <!-- Override Splash Icon to use Win98 raised panel -->
    <Style x:Key="SplashIconContainerStyle" TargetType="Border">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Background" Value="#D4D0C8"/>
        <!-- 4-layer 3D raised border -->
        <Setter Property="BorderBrush" Value="#FFFFFF"/>
        <Setter Property="BorderThickness" Value="2,2,0,0"/>
    </Style>

    <!-- Win98 Splash Panel Container - wraps the entire splash content -->
    <Style x:Key="SplashPanelContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Margin" Value="40"/>
        <Setter Property="MaxWidth" Value="450"/>
        <Setter Property="MaxHeight" Value="400"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Win98 Feature Badge Style - flat gray with sunken border -->
    <Style x:Key="SplashFeatureBadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="#D4D0C8"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

</ResourceDictionary>

