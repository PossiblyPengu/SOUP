<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================= -->
    <!-- WINDOWS 98 THEME - AUTHENTIC  -->
    <!-- Easter Egg Retro Theme!       -->
    <!-- ============================= -->

    <!-- ============================= -->
    <!-- CORNER RADIUS VALUES (ALL 0!) -->
    <!-- ============================= -->
    <CornerRadius x:Key="WindowCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="TitleBarCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="SidebarCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="XSmallCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="NavItemCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="IconCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="AppLogoCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="SplashIconCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="BadgeCornerRadius">0</CornerRadius>

    <!-- ============================= -->
    <!-- WIN98 THEMED ICONS            -->
    <!-- Classic Windows 98 style      -->
    <!-- Using basic Unicode symbols   -->
    <!-- ============================= -->
    <sys:String x:Key="AppLogoIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x2726;</sys:String>
    <sys:String x:Key="ExpireWiseIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x231A;</sys:String>
    <sys:String x:Key="ExpireWiseSplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x231B;</sys:String>
    <sys:String x:Key="AllocationBuddyIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x25A6;</sys:String>
    <sys:String x:Key="AllocationBuddySplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x25A3;</sys:String>
    <sys:String x:Key="EssentialsBuddyIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x2713;</sys:String>
    <sys:String x:Key="EssentialsBuddySplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x2611;</sys:String>
    <sys:String x:Key="SwiftLabelIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x25C6;</sys:String>
    <sys:String x:Key="SwiftLabelSplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x25C8;</sys:String>
    <sys:String x:Key="NotesIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x2261;</sys:String>
    <sys:String x:Key="NotesSplashIcon" xmlns:sys="clr-namespace:System;assembly=mscorlib">&#x2630;</sys:String>

    <!-- Classic Windows 98 Color Palette -->
    <Color x:Key="BackgroundColor">#D4D0C8</Color>          <!-- Win98 warm gray surface -->
    <Color x:Key="SurfaceColor">#D4D0C8</Color>             <!-- Win98 warm gray -->
    <Color x:Key="SurfaceHoverColor">#ECE9D8</Color>        <!-- Lighter warm gray -->
    <Color x:Key="SurfaceActiveColor">#ACA899</Color>       <!-- Pressed state -->
    <Color x:Key="BorderColor">#808080</Color>              <!-- Dark border -->
    <Color x:Key="BorderDarkColor">#404040</Color>          <!-- Darker border (3D shadow) -->
    <Color x:Key="BorderLightColor">#FFFFFF</Color>         <!-- Light border (3D highlight) -->
    <Color x:Key="SelectionColor">#000080</Color>           <!-- Classic Win98 selection blue -->

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#000000</Color>
    <Color x:Key="TextSecondaryColor">#000000</Color>
    <Color x:Key="TextTertiaryColor">#808080</Color>
    <Color x:Key="TextDisabledColor">#808080</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextLinkColor">#0000FF</Color>

    <!-- Sidebar Colors (Windows 98 Navy) -->
    <Color x:Key="SidebarBackgroundColor">#0A246A</Color>
    <Color x:Key="SidebarHoverColor">#1E3F7A</Color>
    <Color x:Key="SidebarActiveColor">#0A246A</Color>

    <!-- Module Light Background Colors -->
    <Color x:Key="ExpireWiseLightColor">#FFFFC0</Color>
    <Color x:Key="AllocationBuddyLightColor">#C0C0FF</Color>
    <Color x:Key="EssentialsBuddyLightColor">#C0FFC0</Color>
    <Color x:Key="SwiftLabelLightColor">#FFC0C0</Color>

    <!-- Stock Level Colors -->
    <Color x:Key="OutOfStockColor">#FF0000</Color>
    <Color x:Key="OutOfStockTextColor">#FFFFFF</Color>
    <Color x:Key="LowStockColor">#FFFF00</Color>
    <Color x:Key="LowStockTextColor">#000000</Color>
    <Color x:Key="OverstockedColor">#0000FF</Color>
    <Color x:Key="OverstockedTextColor">#FFFFFF</Color>
    <Color x:Key="InStockColor">#00FF00</Color>
    <Color x:Key="InStockTextColor">#000000</Color>

    <!-- Essentials Buddy Special Colors -->
    <Color x:Key="NonEssentialIn990Color">#FFFF00</Color>
    <Color x:Key="NonEssentialIn990TextColor">#000000</Color>

    <!-- ============================= -->
    <!-- WINDOWS 98 THEME BRUSHES      -->
    <!-- ============================= -->

    <!-- Surface Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="SurfaceActiveBrush" Color="{StaticResource SurfaceActiveColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDarkColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>

    <!-- Title Bar (Windows 98 Blue Gradient - Classic!) -->
    <LinearGradientBrush x:Key="TitleBarBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#0A246A" Offset="0"/>
        <GradientStop Color="#A6CAF0" Offset="1"/>
    </LinearGradientBrush>

    <!-- Title Bar Text (White for visibility on blue) -->
    <SolidColorBrush x:Key="TitleBarTextBrush" Color="#FFFFFF"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="TextLinkBrush" Color="{StaticResource TextLinkColor}"/>

    <!-- Sidebar Brushes -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#D4D0C8"/>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#000080"/>
    <SolidColorBrush x:Key="SidebarActiveBrush" Color="#000080"/>

    <!-- Module Light Background Brushes -->
    <SolidColorBrush x:Key="ExpireWiseLightBrush" Color="{StaticResource ExpireWiseLightColor}"/>
    <SolidColorBrush x:Key="AllocationBuddyLightBrush" Color="{StaticResource AllocationBuddyLightColor}"/>
    <SolidColorBrush x:Key="EssentialsBuddyLightBrush" Color="{StaticResource EssentialsBuddyLightColor}"/>
    <SolidColorBrush x:Key="SwiftLabelLightBrush" Color="{StaticResource SwiftLabelLightColor}"/>

    <!-- Stock Level Brushes -->
    <SolidColorBrush x:Key="OutOfStockBrush" Color="{StaticResource OutOfStockColor}"/>
    <SolidColorBrush x:Key="OutOfStockTextBrush" Color="{StaticResource OutOfStockTextColor}"/>
    <SolidColorBrush x:Key="LowStockBrush" Color="{StaticResource LowStockColor}"/>
    <SolidColorBrush x:Key="LowStockTextBrush" Color="{StaticResource LowStockTextColor}"/>
    <SolidColorBrush x:Key="OverstockedBrush" Color="{StaticResource OverstockedColor}"/>
    <SolidColorBrush x:Key="OverstockedTextBrush" Color="{StaticResource OverstockedTextColor}"/>
    <SolidColorBrush x:Key="InStockBrush" Color="{StaticResource InStockColor}"/>
    <SolidColorBrush x:Key="InStockTextBrush" Color="{StaticResource InStockTextColor}"/>

    <!-- Essentials Buddy Special Brushes -->
    <SolidColorBrush x:Key="NonEssentialIn990Brush" Color="{StaticResource NonEssentialIn990Color}"/>
    <SolidColorBrush x:Key="NonEssentialIn990TextBrush" Color="{StaticResource NonEssentialIn990TextColor}"/>

    <!-- Launcher Background (Win98 Gray Surface) -->
    <SolidColorBrush x:Key="LauncherBackgroundBrush" Color="#D4D0C8"/>

    <!-- Card/Input Background -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#D4D0C8"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#808080"/>

    <!-- Win98 3D Border Colors - Raised (for buttons, panels) -->
    <SolidColorBrush x:Key="RaisedBorderLightBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="RaisedBorderHighlightBrush" Color="#DFDFDF"/>
    <SolidColorBrush x:Key="RaisedBorderDarkBrush" Color="#404040"/>
    <SolidColorBrush x:Key="RaisedBorderShadowBrush" Color="#808080"/>

    <!-- Win98 3D Border Colors - Sunken (for text fields, lists) -->
    <SolidColorBrush x:Key="SunkenBorderDarkBrush" Color="#808080"/>
    <SolidColorBrush x:Key="SunkenBorderShadowBrush" Color="#404040"/>
    <SolidColorBrush x:Key="SunkenBorderHighlightBrush" Color="#DFDFDF"/>
    <SolidColorBrush x:Key="SunkenBorderLightBrush" Color="#FFFFFF"/>

    <!-- Splash Screen Text -->
    <SolidColorBrush x:Key="SplashTitleBrush" Color="#000080"/>
    <SolidColorBrush x:Key="SplashSubtitleBrush" Color="#000000"/>

    <!-- Module Splash Gradients (Win98 gray style with sunken panel) -->
    <SolidColorBrush x:Key="ExpireWiseSplashGradient" Color="#D4D0C8"/>
    <SolidColorBrush x:Key="AllocationBuddySplashGradient" Color="#D4D0C8"/>
    <SolidColorBrush x:Key="EssentialsBuddySplashGradient" Color="#D4D0C8"/>
    <SolidColorBrush x:Key="SwiftLabelSplashGradient" Color="#D4D0C8"/>
    <SolidColorBrush x:Key="NotesSplashGradient" Color="#D4D0C8"/>

    <!-- Module Icon Gradients (Win98 16-color VGA palette - FLAT!) -->
    <!-- Windows 98 icons used solid colors, not gradients -->
    <!-- Shadow colors are transparent - Win98 had no soft shadows! -->
    
    <!-- ExpireWise: Yellow (Win98 standard yellow) -->
    <SolidColorBrush x:Key="ExpireWiseIconGradient" Color="#FFFF00"/>
    <Color x:Key="ExpireWiseIconShadowColor">Transparent</Color>

    <!-- AllocationBuddy: Blue (Win98 standard blue) -->
    <SolidColorBrush x:Key="AllocationBuddyIconGradient" Color="#0000FF"/>
    <Color x:Key="AllocationBuddyIconShadowColor">Transparent</Color>

    <!-- EssentialsBuddy: Green (Win98 standard green) -->
    <SolidColorBrush x:Key="EssentialsBuddyIconGradient" Color="#00FF00"/>
    <Color x:Key="EssentialsBuddyIconShadowColor">Transparent</Color>

    <!-- SwiftLabel: Magenta (Win98 standard magenta) -->
    <SolidColorBrush x:Key="SwiftLabelIconGradient" Color="#FF00FF"/>
    <Color x:Key="SwiftLabelIconShadowColor">Transparent</Color>

    <!-- Notes: Cyan (Win98 standard cyan) -->
    <SolidColorBrush x:Key="NotesIconGradient" Color="#00FFFF"/>
    <Color x:Key="NotesIconShadowColor">Transparent</Color>

    <!-- App Logo: Win98 Gray button color (flat, no fancy gradient) -->
    <SolidColorBrush x:Key="AppLogoGradient" Color="#C0C0C0"/>
    <Color x:Key="AppLogoShadowColor">Transparent</Color>

    <!-- Launch Button -->
    <SolidColorBrush x:Key="LaunchButtonGradient" Color="#D4D0C8"/>
    <SolidColorBrush x:Key="LaunchButtonHoverGradient" Color="#ECE9D8"/>
    <SolidColorBrush x:Key="LaunchButtonPressedGradient" Color="#ACA899"/>
    <Color x:Key="LaunchButtonShadowColor">#404040</Color>

    <!-- Status Indicator -->
    <SolidColorBrush x:Key="StatusOnlineBrush" Color="#00FF00"/>


    <!-- ============================= -->
    <!-- WIN98 CONTROL STYLES          -->
    <!-- ============================= -->

    <!-- Windows 98 Font: Tahoma 8pt (the authentic Win98 system font) -->
    <FontFamily x:Key="Win98Font">Tahoma, Microsoft Sans Serif, Segoe UI</FontFamily>
    <sys:Double x:Key="Win98FontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">11</sys:Double>

    <!-- Global Font Size -->
    <Style TargetType="Control">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
    </Style>

    <!-- TextBlock: Base style -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Label: Base style -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Button: Classic raised 3D bevel with square corners -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinWidth" Value="75"/>
        <Setter Property="MinHeight" Value="23"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="OuterBorder" Background="{TemplateBinding Background}" BorderThickness="0" SnapsToDevicePixels="True">
                        <Grid>
                            <!-- 3D raised effect -->
                            <Border x:Name="TopLeft" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="2,2,0,0"/>
                            <Border x:Name="BottomRight" BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="0,0,2,2"/>
                            <Border x:Name="InnerBorder" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,1" Margin="2,2,0,0"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="TopLeft" Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>
                            <Setter TargetName="BottomRight" Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
                            <Setter TargetName="InnerBorder" Property="BorderBrush" Value="{StaticResource SurfaceActiveBrush}"/>
                            <Setter TargetName="OuterBorder" Property="Background" Value="{StaticResource SurfaceActiveBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                        </Trigger>
                        <Trigger Property="IsDefault" Value="True">
                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>
                            <Setter TargetName="OuterBorder" Property="BorderThickness" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox: Classic sunken 3D effect -->
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <Grid>
                            <!-- Sunken 3D effect (opposite of button) -->
                            <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1,1,0,0"/>
                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,1"/>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,1,0,0" Margin="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="3,2"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CheckBox: Classic square box with check mark -->
    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Grid Width="13" Height="13" Margin="0,0,4,0">
                            <!-- Sunken box -->
                            <Border Background="#FFFFFF">
                                <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1,1,0,0"/>
                            </Border>
                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,1"/>
                            <Path x:Name="CheckMark" Data="M2,6 L5,9 L10,2" Stroke="{StaticResource TextPrimaryBrush}"
                                  StrokeThickness="2" Margin="1" Visibility="Collapsed"/>
                        </Grid>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- RadioButton: Classic circle with dot -->
    <Style TargetType="RadioButton">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Grid Width="12" Height="12" Margin="0,0,4,0">
                            <Ellipse Fill="#FFFFFF" Stroke="{StaticResource BorderDarkBrush}" StrokeThickness="1"/>
                            <Ellipse x:Name="Dot" Width="6" Height="6" Fill="{StaticResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                        </Grid>
                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBox: Classic dropdown with arrow -->
    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid SnapsToDevicePixels="True">
                        <!-- Sunken border like TextBox -->
                        <Border Background="{TemplateBinding Background}">
                            <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1,1,0,0"/>
                        </Border>
                        <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,1"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="17"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="3,2" VerticalAlignment="Center"/>
                            <!-- Classic dropdown button -->
                            <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}">
                                <Grid>
                                    <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1,1,0,0"/>
                                    <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="0,0,1,1"/>
                                    <Path Data="M0,0 L4,4 L8,0 Z" Fill="{StaticResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center" Width="8" Height="4"/>
                                </Grid>
                            </Border>
                            <ToggleButton Grid.ColumnSpan="2" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent" BorderThickness="0" Focusable="False"/>
                        </Grid>
                        <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom"
                               AllowsTransparency="True" Focusable="False" PopupAnimation="None">
                            <Border Background="{StaticResource InputBackgroundBrush}" BorderBrush="{StaticResource BorderDarkBrush}"
                                    BorderThickness="1" MaxHeight="200">
                                <ScrollViewer>
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem with classic selection -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="Bd" Background="Transparent" Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectionBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox: Classic sunken border -->
    <Style TargetType="ListBox">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <Grid>
                            <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1,1,0,0"/>
                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,1"/>
                            <ScrollViewer Margin="2">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBoxItem with classic selection -->
    <Style TargetType="ListBoxItem">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="Bd" Background="Transparent" Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectionBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListView with classic selection -->
    <Style TargetType="ListView">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <Border Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <Grid>
                            <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1,1,0,0"/>
                            <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,1"/>
                            <ScrollViewer Margin="2">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border x:Name="Bd" Background="Transparent" Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource SelectionBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TabControl: Classic raised tabs -->
    <Style TargetType="TabControl">
        <Setter Property="FontFamily" Value="{StaticResource Win98Font}"/>
        <Setter Property="FontSize" Value="{StaticResource Win98FontSize}"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TabPanel Grid.Row="0" IsItemsHost="True" Background="Transparent" Margin="2,2,2,0"/>
                        <!-- Content area with 3D raised border -->
                        <Border Grid.Row="1" Background="{TemplateBinding Background}" Margin="0,-1,0,0">
                            <Grid>
                                <Border BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1,1,0,0"/>
                                <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="0,0,1,1"/>
                                <ContentPresenter ContentSource="SelectedContent" Margin="4"/>
