<UserControl x:Class="SAP.Views.AllocationBuddy.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="440" Height="200">

    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <Border Background="{DynamicResource WarningBrush}" 
                        CornerRadius="20" Width="40" Height="40"
                        VerticalAlignment="Center" Margin="0,0,12,0">
                    <TextBlock Text="âš " FontSize="20" 
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Confirm Action" 
                           FontSize="18" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message -->
            <TextBlock x:Name="MessageText" Grid.Row="1"
                       Text="Are you sure you want to proceed?" 
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       VerticalAlignment="Center"/>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Cancel" 
                        Click="Cancel_Click" 
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Confirm" 
                        Click="Ok_Click" 
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,10"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>





