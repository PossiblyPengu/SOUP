<UserControl x:Class="SAP.Views.DictionaryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SAP.ViewModels"
             xmlns:converters="clr-namespace:SAP.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:DictionaryManagementViewModel}">

    <UserControl.Resources>
        <converters:ListToCommaStringConverter x:Key="ListToCommaStringConverter"/>
        
        <!-- Item Template for Items ListView -->
        <DataTemplate x:Key="ItemTemplate">
            <Border BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="0,0,0,1" Padding="8,6" Background="{DynamicResource SurfaceBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Number}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding Description}" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="10,0"/>
                    <TextBlock Grid.Column="2" Text="{Binding Skus, Converter={StaticResource ListToCommaStringConverter}}" 
                               Foreground="{DynamicResource TextTertiaryBrush}" FontSize="11" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                </Grid>
            </Border>
        </DataTemplate>
        
        <!-- Item Template for Stores ListView -->
        <DataTemplate x:Key="StoreTemplate">
            <Border BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="0,0,0,1" Padding="8,6" Background="{DynamicResource SurfaceBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Code}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Margin="10,0"/>
                    <Border Grid.Column="2" Background="#022c22" CornerRadius="3" Padding="6,2" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Rank}" Foreground="#34d399" FontWeight="SemiBold" FontSize="11"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="8,10,8,10">
            
            <!-- Header Card -->
            <Border BorderBrush="{DynamicResource RaisedBorderLightBrush}" BorderThickness="1,1,0,0" Margin="0,0,0,15">
                <Border BorderBrush="{DynamicResource RaisedBorderHighlightBrush}" BorderThickness="1,1,0,0">
                    <Border BorderBrush="{DynamicResource RaisedBorderDarkBrush}" BorderThickness="0,0,1,1">
                        <Border BorderBrush="{DynamicResource RaisedBorderShadowBrush}" BorderThickness="0,0,1,1"
                                Background="{DynamicResource SurfaceBrush}" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Dictionary Management" FontSize="18" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource SplashTitleBrush}" Margin="0,0,0,8"/>
                                    <TextBlock Text="Manage item and store dictionaries used for import accuracy across AllocationBuddy, ExpireWise, and EssentialsBuddy."
                                               FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="{DynamicResource SplashTitleBrush}" FontWeight="Medium" Margin="0,4,0,0"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1" Content="ðŸ’¾ Save All Changes" Command="{Binding SaveDictionaryCommand}"
                                        Style="{DynamicResource LaunchButtonStyle}"
                                        Padding="20,12" FontSize="13" FontWeight="SemiBold" Cursor="Hand" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Border>
                </Border>
            </Border>

            <!-- Items and Stores Side-by-Side -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Items Section -->
                <Border Grid.Column="0" BorderBrush="{DynamicResource RaisedBorderLightBrush}" BorderThickness="1,1,0,0">
                    <Border BorderBrush="{DynamicResource RaisedBorderHighlightBrush}" BorderThickness="1,1,0,0">
                        <Border BorderBrush="{DynamicResource RaisedBorderDarkBrush}" BorderThickness="0,0,1,1">
                            <Border BorderBrush="{DynamicResource RaisedBorderShadowBrush}" BorderThickness="0,0,1,1"
                                    Background="{DynamicResource SurfaceBrush}" Padding="0">
                                <StackPanel>
                                    <!-- Items Header -->
                                    <Border Background="{DynamicResource PrimaryBrush}" Padding="8,4">
                                        <TextBlock Text="Items" FontSize="13" FontWeight="Bold" Foreground="White"/>
                                    </Border>
                        
                                    <StackPanel Margin="8">
                                        <!-- Search - Sunken Text Box -->
                                        <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0" Margin="0,0,0,8">
                                            <Border BorderBrush="{DynamicResource SunkenBorderShadowBrush}" BorderThickness="1,1,0,0">
                                                <Border BorderBrush="{DynamicResource SunkenBorderHighlightBrush}" BorderThickness="0,0,1,1">
                                                    <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1">
                                                        <TextBox Text="{Binding ItemSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                                 Padding="6,4" FontSize="12" Background="{DynamicResource InputBackgroundBrush}" 
                                                                 Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                                                    </Border>
                                                </Border>
                                            </Border>
                                        </Border>

                                        <!-- Add/Edit Form - Etched Group Box -->
                                        <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0" Margin="0,0,0,8">
                                            <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1"
                                                    Background="{DynamicResource SurfaceBrush}" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="Add/Edit Item" FontSize="11" FontWeight="Bold" 
                                                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                    
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="8"/>
                                                            <ColumnDefinition Width="2*"/>
                                                        </Grid.ColumnDefinitions>
                                        
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Item Number" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                                                            <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0">
                                                                <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1">
                                                                    <TextBox Text="{Binding NewItemNumber, UpdateSourceTrigger=PropertyChanged}" 
                                                                             Padding="4,3" FontSize="11" Background="{DynamicResource InputBackgroundBrush}" 
                                                                             Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                                                                </Border>
                                                            </Border>
                                                        </StackPanel>
                                        
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Text="Description" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                                                            <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0">
                                                                <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1">
                                                                    <TextBox Text="{Binding NewItemDescription, UpdateSourceTrigger=PropertyChanged}" 
                                                                             Padding="4,3" FontSize="11" Background="{DynamicResource InputBackgroundBrush}" 
                                                                             Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                                                                </Border>
                                                            </Border>
                                                        </StackPanel>
                                                    </Grid>
                                    
                                                    <TextBlock Text="SKUs (comma-separated)" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,8,0,2"/>
                                                    <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0">
                                                        <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1">
                                                            <TextBox Text="{Binding NewItemSkus, UpdateSourceTrigger=PropertyChanged}" 
                                                                     Padding="4,3" FontSize="11" Background="{DynamicResource InputBackgroundBrush}" 
                                                                     Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                                                        </Border>
                                                    </Border>
                                    
                                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                        <Button Content="Add New" Command="{Binding AddItemCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,0,4,0"/>
                                                        <Button Content="Update" Command="{Binding UpdateItemCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,0,4,0"/>
                                                        <Button Content="Delete" Command="{Binding DeleteItemCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,0,4,0"/>
                                                        <Button Content="Clear" Command="{Binding ClearItemFormCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand"/>
                                                    </StackPanel>
                                                    <Button Content="ðŸ“¥ Import Excel" Command="{Binding ImportItemsFromExcelCommand}"
                                                            Style="{DynamicResource LaunchButtonStyle}"
                                                            Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,8,0,0" HorizontalAlignment="Left"
                                                            ToolTip="Import items from Excel file (Number, Description, SKUs columns)"/>
                                                </StackPanel>
                                            </Border>
                                        </Border>

                                        <!-- Items List Header -->
                                        <Border Background="{DynamicResource SurfaceHoverBrush}" Padding="6,4" 
                                                BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,1,0">
                                            <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Number" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Grid.Column="1" Text="Description" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}" Margin="10,0"/>
                                    <TextBlock Grid.Column="2" Text="SKUs" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </Grid>
                            </Border>
                            
                                        <!-- Items List - Sunken Panel -->
                                        <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0">
                                            <Border BorderBrush="{DynamicResource SunkenBorderShadowBrush}" BorderThickness="1,1,0,0">
                                                <Border BorderBrush="{DynamicResource SunkenBorderHighlightBrush}" BorderThickness="0,0,1,1">
                                                    <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1"
                                                            Background="{DynamicResource InputBackgroundBrush}">
                                <ListView ItemsSource="{Binding FilteredItems}"
                                          SelectedItem="{Binding SelectedItem}"
                                          ItemTemplate="{StaticResource ItemTemplate}"
                                          Height="200"
                                          BorderThickness="0"
                                                            Background="{DynamicResource InputBackgroundBrush}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding EditItemCommand}"/>
                                    </ListView.InputBindings>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border x:Name="Bd" 
                                                                Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SidebarActiveBrush}"/>
                                                                <Setter TargetName="Bd" Property="TextBlock.Foreground" Value="#FFFFFF"/>
                                                            </Trigger>
                                                            <MultiTrigger>
                                                                <MultiTrigger.Conditions>
                                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                                    <Condition Property="IsSelected" Value="False"/>
                                                                </MultiTrigger.Conditions>
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                            </MultiTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                                                    </Border>
                                                </Border>
                                            </Border>
                                        </Border>

                                        <!-- Pagination - Raised Panel -->
                                        <Border BorderBrush="{DynamicResource RaisedBorderLightBrush}" BorderThickness="1,1,0,0" Margin="0,8,0,0">
                                            <Border BorderBrush="{DynamicResource RaisedBorderDarkBrush}" BorderThickness="0,0,1,1"
                                                    Background="{DynamicResource SurfaceBrush}" Padding="6,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                            <Button Content="â®" Command="{Binding FirstPageCommand}" 
                                                                    Style="{DynamicResource LaunchButtonStyle}"
                                                                    Padding="6,3" FontSize="10" Cursor="Hand" Margin="0,0,2,0"/>
                                                            <Button Content="â—€" Command="{Binding PreviousPageCommand}" 
                                                                    Style="{DynamicResource LaunchButtonStyle}"
                                                                    Padding="8,3" FontSize="10" Cursor="Hand"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}">
                                        <Run Text="Page "/>
                                        <Run Text="{Binding CurrentPage, Mode=OneWay}" FontWeight="Bold"/>
                                        <Run Text=" of "/>
                                        <Run Text="{Binding TotalPages, Mode=OneWay}" FontWeight="Bold"/>
                                        <Run Text=" ("/>
                                        <Run Text="{Binding TotalItemCount, Mode=OneWay}"/>
                                        <Run Text=" items)"/>
                                    </TextBlock>
                                    
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                            <Button Content="â–¶" Command="{Binding NextPageCommand}" 
                                                                    Style="{DynamicResource LaunchButtonStyle}"
                                                                    Padding="8,3" FontSize="10" Cursor="Hand" Margin="0,0,2,0"/>
                                                            <Button Content="â­" Command="{Binding LastPageCommand}" 
                                                                    Style="{DynamicResource LaunchButtonStyle}"
                                                                    Padding="6,3" FontSize="10" Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                                            </Border>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Border>
                    </Border>
                </Border>

                <!-- Stores Section -->
                <Border Grid.Column="2" BorderBrush="{DynamicResource RaisedBorderLightBrush}" BorderThickness="1,1,0,0">
                    <Border BorderBrush="{DynamicResource RaisedBorderHighlightBrush}" BorderThickness="1,1,0,0">
                        <Border BorderBrush="{DynamicResource RaisedBorderDarkBrush}" BorderThickness="0,0,1,1">
                            <Border BorderBrush="{DynamicResource RaisedBorderShadowBrush}" BorderThickness="0,0,1,1"
                                    Background="{DynamicResource SurfaceBrush}" Padding="0">
                                <StackPanel>
                                    <!-- Stores Header -->
                                    <Border Background="#10b981" Padding="8,4">
                                        <TextBlock Text="Stores" FontSize="13" FontWeight="Bold" Foreground="#FFFFFF"/>
                                    </Border>
                        
                                    <StackPanel Margin="8">
                                        <!-- Search - Sunken Text Box -->
                                        <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0" Margin="0,0,0,8">
                                            <Border BorderBrush="{DynamicResource SunkenBorderShadowBrush}" BorderThickness="1,1,0,0">
                                                <Border BorderBrush="{DynamicResource SunkenBorderHighlightBrush}" BorderThickness="0,0,1,1">
                                                    <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1">
                                                        <TextBox Text="{Binding StoreSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                                 Padding="6,4" FontSize="12" Background="{DynamicResource InputBackgroundBrush}" 
                                                                 Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                                                    </Border>
                                                </Border>
                                            </Border>
                                        </Border>

                                        <!-- Add/Edit Form - Etched Group Box -->
                                        <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0" Margin="0,0,0,8">
                                            <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1"
                                                    Background="{DynamicResource SurfaceBrush}" Padding="8">
                                                <StackPanel>
                                                    <TextBlock Text="Add/Edit Store" FontSize="11" FontWeight="Bold" 
                                                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Store ID" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                                                            <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0">
                                                                <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1">
                                                                    <TextBox Text="{Binding NewStoreId, UpdateSourceTrigger=PropertyChanged}" 
                                                                             Padding="4,3" FontSize="11" Background="{DynamicResource InputBackgroundBrush}" 
                                                                             Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                                                                </Border>
                                                            </Border>
                                                        </StackPanel>
                                        
                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Text="Store Name" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                                                            <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0">
                                                                <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1">
                                                                    <TextBox Text="{Binding NewStoreName, UpdateSourceTrigger=PropertyChanged}" 
                                                                             Padding="4,3" FontSize="11" Background="{DynamicResource InputBackgroundBrush}" 
                                                                             Foreground="{DynamicResource TextPrimaryBrush}" BorderThickness="0"/>
                                                                </Border>
                                                            </Border>
                                                        </StackPanel>
                                        
                                                        <StackPanel Grid.Column="4">
                                                            <TextBlock Text="Rank" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,2"/>
                                                            <ComboBox ItemsSource="{Binding StoreRanks}" 
                                                                      SelectedItem="{Binding NewStoreRank}" 
                                                                      Padding="4,2" FontSize="10"/>
                                                        </StackPanel>
                                    </Grid>
                                    
                                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                        <Button Content="Add New" Command="{Binding AddStoreCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,0,4,0"/>
                                                        <Button Content="Update" Command="{Binding UpdateStoreCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,0,4,0"/>
                                                        <Button Content="Delete" Command="{Binding DeleteStoreCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,0,4,0"/>
                                                        <Button Content="Clear" Command="{Binding ClearStoreFormCommand}"
                                                                Style="{DynamicResource LaunchButtonStyle}"
                                                                Padding="12,6" FontSize="11" Cursor="Hand"/>
                                                    </StackPanel>
                                                    <Button Content="ðŸ“¥ Import Excel" Command="{Binding ImportStoresFromExcelCommand}"
                                                            Style="{DynamicResource LaunchButtonStyle}"
                                                            Padding="12,6" FontSize="11" Cursor="Hand" Margin="0,8,0,0" HorizontalAlignment="Left"
                                                            ToolTip="Import stores from Excel file (Code, Name, Rank columns)"/>
                                                </StackPanel>
                                            </Border>
                                        </Border>

                                        <!-- Stores List Header -->
                                        <Border Background="{DynamicResource SurfaceHoverBrush}" Padding="6,4" 
                                                BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,1,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <TextBlock Grid.Column="1" Text="Name" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}" Margin="10,0"/>
                                                <TextBlock Grid.Column="2" Text="Rank" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                                        <!-- Stores List - Sunken Panel -->
                                        <Border BorderBrush="{DynamicResource SunkenBorderDarkBrush}" BorderThickness="1,1,0,0">
                                            <Border BorderBrush="{DynamicResource SunkenBorderShadowBrush}" BorderThickness="1,1,0,0">
                                                <Border BorderBrush="{DynamicResource SunkenBorderHighlightBrush}" BorderThickness="0,0,1,1">
                                                    <Border BorderBrush="{DynamicResource SunkenBorderLightBrush}" BorderThickness="0,0,1,1"
                                                            Background="{DynamicResource InputBackgroundBrush}">
                                <ListView ItemsSource="{Binding FilteredStores}"
                                          SelectedItem="{Binding SelectedStore}"
                                          ItemTemplate="{StaticResource StoreTemplate}"
                                          Height="200"
                                          BorderThickness="0"
                                                            Background="{DynamicResource InputBackgroundBrush}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border x:Name="Bd" 
                                                                Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SidebarActiveBrush}"/>
                                                                <Setter TargetName="Bd" Property="TextBlock.Foreground" Value="#FFFFFF"/>
                                                            </Trigger>
                                                            <MultiTrigger>
                                                                <MultiTrigger.Conditions>
                                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                                    <Condition Property="IsSelected" Value="False"/>
                                                                </MultiTrigger.Conditions>
                                                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                            </MultiTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                                                    </Border>
                                                </Border>
                                            </Border>
                                        </Border>

                                        <!-- Store Count -->
                                        <TextBlock Text="{Binding FilteredStores.Count, StringFormat='Total: {0} stores'}"
                                                   FontSize="10" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,8,0,0" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Border>
                    </Border>
                </Border>
            </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>





