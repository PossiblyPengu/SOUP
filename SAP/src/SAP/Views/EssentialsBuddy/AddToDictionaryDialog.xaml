<Window x:Class="SAP.Views.EssentialsBuddy.AddToDictionaryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Items to Dictionary"
        Width="800" Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="400">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Unmatched Items Found" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock TextWrapping="Wrap" Foreground="#666">
                The following items were not found in the dictionary. 
                You can add descriptions and mark items as essential before adding them.
            </TextBlock>
        </StackPanel>

        <!-- Items Grid -->
        <DataGrid Grid.Row="1" 
                  x:Name="ItemsGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1"
                  BorderBrush="#E0E0E0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Number" Binding="{Binding ItemNumber}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridCheckBoxColumn Header="Essential" Binding="{Binding IsEssential, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="Qty" Binding="{Binding QuantityOnHand}" Width="60" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Summary -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBlock x:Name="SummaryText" Foreground="#666"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="SelectAllEssentialsButton" Content="Mark All Essential" 
                    Padding="16,8" Margin="0,0,8,0" Click="SelectAllEssentials_Click"/>
            <Button x:Name="ClearAllEssentialsButton" Content="Clear All Essential" 
                    Padding="16,8" Margin="0,0,8,0" Click="ClearAllEssentials_Click"/>
            <Button x:Name="CancelButton" Content="Skip" 
                    Padding="16,8" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="AddButton" Content="Add to Dictionary" 
                    Padding="16,8" Background="#667eea" Foreground="White" Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
