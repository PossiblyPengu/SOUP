<UserControl x:Class="SAP.Views.EssentialsBuddy.EssentialsBuddyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SAP.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:EssentialsBuddyViewModel}">

    <UserControl.Resources>
        <!-- Stock level colors -->
        <SolidColorBrush x:Key="OutOfStockBrush" Color="#FFEBEE"/>
        <SolidColorBrush x:Key="LowStockBrush" Color="#FFF3E0"/>
        <SolidColorBrush x:Key="OverstockedBrush" Color="#E3F2FD"/>
        <SolidColorBrush x:Key="NonEssentialIn990Brush" Color="#FCE4EC"/>
        
        <SolidColorBrush x:Key="OutOfStockTextBrush" Color="#C62828"/>
        <SolidColorBrush x:Key="LowStockTextBrush" Color="#EF6C00"/>
        <SolidColorBrush x:Key="OverstockedTextBrush" Color="#1565C0"/>
        <SolidColorBrush x:Key="NonEssentialIn990TextBrush" Color="#AD1457"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <!-- Full Screen Welcome Screen (shown when no data) -->
        <Grid Visibility="{Binding HasNoData, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#11998e" Offset="0"/>
                    <GradientStop Color="#38ef7d" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600">
                <!-- Icon -->
                <Border Background="White" Width="120" Height="120" CornerRadius="60" 
                        HorizontalAlignment="Center" Margin="0,0,0,32">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="ðŸ“‹" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Title -->
                <TextBlock Text="Essentials Buddy" FontSize="42" FontWeight="Bold"
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <!-- Subtitle -->
                <TextBlock Text="Track and manage your essential inventory items" FontSize="18"
                           Foreground="#CCFFFFFF" HorizontalAlignment="Center" Margin="0,0,0,48"/>
                
                <!-- Import Button -->
                <Button Command="{Binding ImportFromExcelCommand}" 
                        HorizontalAlignment="Center" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#11998e"/>
                            <Setter Property="Padding" Value="40,18"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="30" Padding="{TemplateBinding Padding}">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                                            </Border.Effect>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“¥" FontSize="22" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Import Inventory File" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Features -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,48,0,0">
                    <Border Background="#20FFFFFF" CornerRadius="8" Padding="16,12" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â­" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Essential Tracking" Foreground="White" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#20FFFFFF" CornerRadius="8" Padding="16,12" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ¨" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Color-Coded Status" Foreground="White" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#20FFFFFF" CornerRadius="8" Padding="16,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Misplaced Alerts" Foreground="White" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Info -->
                <TextBlock Text="Import Excel (.xlsx) files â€¢ Only 9-90* bin items will be shown" 
                           FontSize="13" Foreground="#99FFFFFF" HorizontalAlignment="Center" Margin="0,24,0,0"/>
                <TextBlock Text="All 208 essential items will be included automatically" 
                           FontSize="13" Foreground="#99FFFFFF" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content (shown when has data) -->
        <Grid Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Style="{StaticResource ModernToolbar}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side - Primary actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding EditItemCommand}" Style="{StaticResource SecondaryButton}" Margin="0,0,6,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœï¸" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Edit"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DeleteItemCommand}" Style="{StaticResource DangerButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Delete"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Center - Export menu and actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Export Menu -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Style="{StaticResource {x:Type MenuItem}}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“¤" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Export" VerticalAlignment="Center"/>
                                    <TextBlock Text=" â–¾" FontSize="10" VerticalAlignment="Center"/>
                                </StackPanel>
                            </MenuItem.Header>
                            <MenuItem Header="ðŸ“Š Export to Excel" Command="{Binding ExportToExcelCommand}"/>
                            <MenuItem Header="ðŸ“„ Export to CSV" Command="{Binding ExportToCsvCommand}"/>
                        </MenuItem>
                    </Menu>

                    <Button Command="{Binding LoadItemsCommand}" Style="{StaticResource SecondaryButton}" Margin="16,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ClearDataCommand}" Style="{StaticResource DangerButton}" Margin="6,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Right side - Settings -->
                <Button Grid.Column="2" Command="{Binding OpenSettingsCommand}" Style="{StaticResource SecondaryButton}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš™ï¸" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Search and Filter Bar -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="ðŸ” Search by item number, description, bin code, or category..."
                                                             Foreground="{StaticResource TextTertiaryBrush}" Margin="12,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Status Filter -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                    <Label Content="Status:" Style="{StaticResource ModernLabel}" VerticalAlignment="Center" Margin="0"/>
                    <ComboBox ItemsSource="{Binding StatusFilters}" SelectedItem="{Binding StatusFilter}"
                              Style="{StaticResource ModernComboBox}" Width="150" VerticalAlignment="Center"/>
                    
                    <!-- Essentials Only Toggle -->
                    <CheckBox Content="Essentials Only" 
                              IsChecked="{Binding EssentialsOnly}"
                              VerticalAlignment="Center" 
                              Margin="16,0,0,0"
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>

                <!-- Item Count Badge -->
                <Border Grid.Column="2" Background="{StaticResource PrimaryBrush}" CornerRadius="12"
                        Padding="12,6" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding FilteredItems.Count, StringFormat='ðŸ“Š {0} items'}"
                               Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                </Border>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredItems}" SelectedItem="{Binding SelectedItem}"
                  Style="{StaticResource ModernDataGrid}"
                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                  CellStyle="{StaticResource ModernDataGridCell}"
                  CanUserReorderColumns="True" CanUserResizeColumns="True"
                  CanUserSortColumns="True">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRow}">
                    <Style.Triggers>
                        <!-- Non-essential item in 9-90 bin (highest priority - pink) -->
                        <DataTrigger Binding="{Binding IsNonEssentialIn990Bin}" Value="True">
                            <Setter Property="Background" Value="{StaticResource NonEssentialIn990Brush}"/>
                            <Setter Property="Foreground" Value="{StaticResource NonEssentialIn990TextBrush}"/>
                            <Setter Property="ToolTip" Value="âš ï¸ Non-essential item in 9-90 bin"/>
                        </DataTrigger>
                        <!-- Out of Stock (red) -->
                        <DataTrigger Binding="{Binding Status}" Value="OutOfStock">
                            <Setter Property="Background" Value="{StaticResource OutOfStockBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource OutOfStockTextBrush}"/>
                        </DataTrigger>
                        <!-- Low Stock (orange) -->
                        <DataTrigger Binding="{Binding Status}" Value="Low">
                            <Setter Property="Background" Value="{StaticResource LowStockBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource LowStockTextBrush}"/>
                        </DataTrigger>
                        <!-- Overstocked (blue) -->
                        <DataTrigger Binding="{Binding Status}" Value="Overstocked">
                            <Setter Property="Background" Value="{StaticResource OverstockedBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource OverstockedTextBrush}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="â˜…" Width="40" IsReadOnly="True" SortMemberPath="IsEssential">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="â­" FontSize="14" HorizontalAlignment="Center"
                                       Visibility="{Binding IsEssential, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       ToolTip="Essential Item"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="âš " Width="40" IsReadOnly="True" SortMemberPath="IsNonEssentialIn990Bin">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="âš ï¸" FontSize="14" HorizontalAlignment="Center"
                                       Visibility="{Binding IsNonEssentialIn990Bin, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       ToolTip="Non-essential item in 9-90 bin - should not be here!"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Item Number" Binding="{Binding ItemNumber}" Width="150" IsReadOnly="True" SortMemberPath="ItemNumber"/>
                <DataGridTextColumn Header="Description" Binding="{Binding DisplayDescription}" Width="*" IsReadOnly="True" SortMemberPath="DisplayDescription"/>
                <DataGridTextColumn Header="Bin Code" Binding="{Binding BinCode}" Width="120" IsReadOnly="True" SortMemberPath="BinCode"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding QuantityOnHand}" Width="100" IsReadOnly="True" SortMemberPath="QuantityOnHand"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120" IsReadOnly="True" SortMemberPath="Status"/>
                <DataGridTemplateColumn Header="Dict" Width="50" IsReadOnly="True" SortMemberPath="DictionaryMatched">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="âœ“" FontSize="14" Foreground="Green" HorizontalAlignment="Center"
                                       Visibility="{Binding DictionaryMatched, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       ToolTip="Matched in Dictionary"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Style="{StaticResource ModernStatusBar}">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
            </StatusBarItem>

            <StatusBarItem Grid.Column="1" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â³" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Loading..." VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        </Grid>
    </Grid>
</UserControl>
