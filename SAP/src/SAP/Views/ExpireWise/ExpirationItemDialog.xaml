<UserControl x:Class="SAP.Views.ExpireWise.ExpirationItemDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SAP.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="580" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance Type=vm:ExpirationItemDialogViewModel}">

    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“…" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Expiration Item" 
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Track item expiration dates and details"
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Form Fields -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Item Number -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Item Number" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding ItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Description" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Two Column Layout -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Location -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Location" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Units -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Units" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Units, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Two Column Layout -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Expiry Date -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Expiry Date" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <DatePicker SelectedDate="{Binding ExpiryDate}"
                                        Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>

                        <!-- Category -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Category" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Notes -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Notes" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalContentAlignment="Top"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1" Content="Cancel" 
                            Click="Cancel_Click" 
                            Style="{StaticResource SecondaryButton}"
                            Padding="24,10" Margin="0,0,12,0"/>
                    <Button Grid.Column="2" Content="ðŸ’¾ Save" 
                            Click="Save_Click" 
                            Style="{StaticResource PrimaryButton}"
                            Padding="24,10"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
