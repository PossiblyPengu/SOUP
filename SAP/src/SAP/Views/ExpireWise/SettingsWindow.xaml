<Window x:Class="SAP.Views.ExpireWise.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SAP.ViewModels"
        mc:Ignorable="d"
        Title="ExpireWise Settings"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        d:DataContext="{d:DesignInstance Type=vm:ExpireWiseSettingsViewModel}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="ExpireWise Settings"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextPrimaryBrush}"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                <!-- Alert Thresholds Section -->
                <Border Background="{DynamicResource SurfaceBrush}" Padding="15" CornerRadius="5" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Alert Thresholds" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                        <Label Content="Warning Threshold (days before expiration):" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding WarningThresholdDays}" Margin="0,5,0,0" Padding="8" 
                                 Background="{DynamicResource SurfaceHoverBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource SurfaceActiveBrush}"/>
                        <TextBlock Text="Items expiring within this many days will show a warning"
                                   Foreground="{DynamicResource TextTertiaryBrush}" FontSize="11" Margin="0,3,0,0"/>

                        <Label Content="Critical Threshold (days before expiration):" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,15,0,0"/>
                        <TextBox Text="{Binding CriticalThresholdDays}" Margin="0,5,0,0" Padding="8"
                                 Background="{DynamicResource SurfaceHoverBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource SurfaceActiveBrush}"/>
                        <TextBlock Text="Items expiring within this many days will show as critical"
                                   Foreground="{DynamicResource TextTertiaryBrush}" FontSize="11" Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- File Paths Section -->
                <Border Background="{DynamicResource SurfaceBrush}" Padding="15" CornerRadius="5" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="File Paths" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                        <Label Content="Default Import Path:" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding DefaultImportPath}" Margin="0,5,0,0" Padding="8"
                                 Background="{DynamicResource SurfaceHoverBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource SurfaceActiveBrush}"/>

                        <Label Content="Default Export Path:" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding DefaultExportPath}" Margin="0,5,0,0" Padding="8"
                                 Background="{DynamicResource SurfaceHoverBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource SurfaceActiveBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Behavior Section -->
                <Border Background="{DynamicResource SurfaceBrush}" Padding="15" CornerRadius="5" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                        <Label Content="Auto-Refresh Interval (minutes, 0 = disabled):" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding AutoRefreshIntervalMinutes}" Margin="0,5,0,0" Padding="8"
                                 Background="{DynamicResource SurfaceHoverBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource SurfaceActiveBrush}"/>

                        <CheckBox Content="Show notifications for items about to expire"
                                  IsChecked="{Binding ShowExpirationNotifications}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,15,0,0"/>

                        <CheckBox Content="Automatically load last session on startup"
                                  IsChecked="{Binding AutoLoadLastSession}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Appearance Section -->
                <Border Background="{DynamicResource SurfaceBrush}" Padding="15" CornerRadius="5" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Appearance" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                        <Label Content="Theme:" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                        <ComboBox SelectedValue="{Binding Theme}" Margin="0,5,0,0" Padding="8"
                                  Background="{DynamicResource SurfaceHoverBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource SurfaceActiveBrush}">
                            <ComboBoxItem Content="System" IsSelected="True"/>
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                </StackPanel>
            </ScrollViewer>
            <!-- Top shadow -->
            <Border VerticalAlignment="Top" Height="12" IsHitTestVisible="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#10000000" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <!-- Status Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Margin="0,15,0,0"
                   FontStyle="Italic"
                   Foreground="{DynamicResource TextSecondaryBrush}"/>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Reset to Defaults"
                    Command="{Binding ResetToDefaultsCommand}"
                    Padding="15,8"
                    MinWidth="120"
                    Background="#FF6B6B"
                    Foreground="White"
                    BorderThickness="0"/>

            <Button Grid.Column="2"
                    Content="Save"
                    Command="{Binding SaveSettingsCommand}"
                    Padding="15,8"
                    MinWidth="100"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>

            <Button Grid.Column="3"
                    Content="Cancel"
                    IsCancel="True"
                    Padding="15,8"
                    MinWidth="100"/>
        </Grid>
    </Grid>
</Window>






