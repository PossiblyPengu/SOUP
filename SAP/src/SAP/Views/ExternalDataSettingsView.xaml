<UserControl x:Class="SAP.Views.ExternalDataSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SAP.ViewModels">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="ConfigTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
        
        <Style x:Key="ConfigPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel MaxWidth="600">
            <!-- Header -->
            <TextBlock Text="External Data Connections"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Configure connections to sync item and store dictionaries from MySQL and Business Central"
                       FontSize="12"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,24"/>

            <!-- MySQL Configuration -->
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="ðŸ—„ï¸ MySQL Database" Style="{StaticResource SectionHeader}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Server" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.MySqlServer, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="Port" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.MySqlPort, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Database" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Config.MySqlDatabase, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ConfigTextBox}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Username" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.MySqlUser, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Password" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.MySqlPassword, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid Margin="0,4,0,0">
                        <Button Content="Test Connection"
                                Command="{Binding TestMySqlConnectionCommand}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="16,8"/>
                        
                        <TextBlock Text="{Binding MySqlTestResult}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MySqlTestSuccess}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Business Central Configuration -->
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="â˜ï¸ Business Central" Style="{StaticResource SectionHeader}"/>
                    
                    <TextBlock Text="Tenant ID" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Config.BcTenantId, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ConfigTextBox}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Client ID" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.BcClientId, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Client Secret" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.BcClientSecret, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="Environment" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.BcEnvironment, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Company ID (optional)" Style="{StaticResource FieldLabel}"/>
                            <TextBox Text="{Binding Config.BcCompanyId, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ConfigTextBox}"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="Base URL (leave blank for default)" Style="{StaticResource FieldLabel}"/>
                    <TextBox Text="{Binding Config.BcBaseUrl, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ConfigTextBox}"/>
                    
                    <Grid Margin="0,4,0,0">
                        <Button Content="Test Connection"
                                Command="{Binding TestBcConnectionCommand}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="16,8"/>
                        
                        <TextBlock Text="{Binding BcTestResult}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BcTestSuccess}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Sync Actions -->
            <Border Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="ðŸ”„ Sync Dictionaries" Style="{StaticResource SectionHeader}"/>
                    
                    <TextBlock Text="{Binding LastSyncDisplay}"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,16"/>
                    
                    <!-- Progress -->
                    <StackPanel Visibility="{Binding IsSyncing, Converter={StaticResource BoolToVis}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{Binding SyncStatus}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"/>
                        <ProgressBar Value="{Binding SyncProgress}"
                                     Height="4"
                                     Background="{DynamicResource SurfaceHoverBrush}"
                                     Foreground="{DynamicResource AccentBrush}"/>
                    </StackPanel>
                    
                    <!-- Sync Status (when not syncing) -->
                    <TextBlock Text="{Binding SyncStatus}"
                               FontSize="12"
                               Margin="0,0,0,16">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSyncing}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <WrapPanel>
                        <Button Content="Sync from MySQL"
                                Command="{Binding SyncFromMySqlCommand}"
                                IsEnabled="{Binding Config.IsMySqlConfigured}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,8"/>
                        
                        <Button Content="Sync from BC"
                                Command="{Binding SyncFromBcCommand}"
                                IsEnabled="{Binding Config.IsBusinessCentralConfigured}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,8"/>
                        
                        <Button Content="Sync from Both"
                                Command="{Binding SyncFromBothCommand}"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Padding="16,10"
                                Margin="0,0,8,8"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <Button Content="Save Configuration"
                    Command="{Binding SaveConfigCommand}"
                    Style="{DynamicResource SuccessButtonStyle}"
                    HorizontalAlignment="Left"
                    Padding="24,12"
                    FontSize="14"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
