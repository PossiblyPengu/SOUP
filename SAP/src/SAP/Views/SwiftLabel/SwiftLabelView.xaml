<UserControl x:Class="SAP.Views.SwiftLabel.SwiftLabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SAP.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SwiftLabelViewModel}"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#667eea"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5a6fd6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4f5fc2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="32,24" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ·ï¸" FontSize="36" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="Swift Label" FontSize="32" FontWeight="Bold" VerticalAlignment="Center" Foreground="#1e293b"/>
                </StackPanel>
                <TextBlock Text="Generate transfer labels for your shipments quickly and easily"
                           FontSize="14" Foreground="#64748b" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32">
            <Grid HorizontalAlignment="Center" MaxWidth="500">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Store Selection -->
                <StackPanel Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="Store" FontSize="14" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Stores}"
                              SelectedItem="{Binding SelectedStore}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Width="450">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Code}" FontWeight="Bold"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Name}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="Select the destination store for the transfer"
                               FontSize="12" Foreground="#9CA3AF" Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Transfer Number -->
                <StackPanel Grid.Row="1" Margin="0,0,0,24">
                    <TextBlock Text="Transfer Number" FontSize="14" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding TransferNumber, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Width="450"/>
                    <TextBlock Text="Enter the transfer order number (e.g., TO-12345)"
                               FontSize="12" Foreground="#9CA3AF" Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Total Boxes -->
                <StackPanel Grid.Row="2" Margin="0,0,0,32">
                    <TextBlock Text="Total Number of Boxes" FontSize="14" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <Grid Width="450">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="-" Width="50" Height="50"
                                FontSize="24" FontWeight="Bold"
                                Background="#F3F4F6" BorderThickness="0" Cursor="Hand"
                                Click="DecrementBoxes_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border" Background="#F3F4F6" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#E5E7EB"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="12,0" BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBox Text="{Binding TotalBoxes, UpdateSourceTrigger=PropertyChanged}"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     FontSize="28"
                                     FontWeight="Bold"
                                     BorderThickness="0"
                                     Background="Transparent"/>
                        </Border>

                        <Button Grid.Column="2" Content="+" Width="50" Height="50"
                                FontSize="24" FontWeight="Bold"
                                Background="#F3F4F6" BorderThickness="0" Cursor="Hand"
                                Click="IncrementBoxes_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border" Background="#F3F4F6" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#E5E7EB"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    <TextBlock Text="Number of box labels to generate (each label shows Box X of Y)"
                               FontSize="12" Foreground="#9CA3AF" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Preview Card -->
                <Border Grid.Row="3" Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,32"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="LABEL PREVIEW" FontSize="11" FontWeight="Bold" Foreground="#9CA3AF" 
                                   HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        
                        <Border BorderBrush="#1e293b" BorderThickness="2" CornerRadius="4" Padding="20" Background="#FAFAFA">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding StorePreviewText}" 
                                           FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1e293b"/>
                                <TextBlock Text="{Binding TransferPreviewText}" 
                                           FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="#374151"/>
                                <TextBlock Text="{Binding BoxPreviewText}" 
                                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,12,0,0" Foreground="#1e293b"/>
                                <TextBlock Text="{Binding DatePreviewText}" 
                                           FontSize="11" HorizontalAlignment="Center" Margin="0,8,0,0" Foreground="#6B7280"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Generate Button -->
                <Button Grid.Row="4" Content="ðŸ·ï¸  Generate Labels"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding GenerateLabelsCommand}"
                        HorizontalAlignment="Center"
                        Width="300"/>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="White" Padding="16,12" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="13" Foreground="#64748b"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <ProgressBar IsIndeterminate="{Binding IsGenerating}"
                             Visibility="{Binding IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Height="4" VerticalAlignment="Bottom" Margin="0,8,0,0"
                             Background="#E5E7EB" Foreground="#667eea"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
