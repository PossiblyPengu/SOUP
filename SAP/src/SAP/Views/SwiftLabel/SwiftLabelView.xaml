<UserControl x:Class="SAP.Views.SwiftLabel.SwiftLabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SAP.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SwiftLabelViewModel}"
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- Main Background - Dark -->
    <Border Background="{DynamicResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="32,28">
                <Grid>
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Width="56" Height="56" CornerRadius="16" Margin="0,0,16,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#ec4899" Offset="0"/>
                                        <GradientStop Color="#f472b6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#ec4899"/>
                                </Border.Effect>
                                <TextBlock Text="ðŸ·ï¸" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Swift Label" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock Text="Generate professional transfer labels instantly" 
                                           FontSize="14" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32,0,32,32">
                <Grid HorizontalAlignment="Center" MaxWidth="900">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="340"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*" MinWidth="340"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Column - Input Form -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="28">
                        <StackPanel>
                            <TextBlock Text="LABEL DETAILS" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextTertiaryBrush}" 
                                       Margin="0,0,0,20"/>
                            
                            <!-- Store Selection -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Destination Store" Style="{StaticResource InputLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding Stores}"
                                          SelectedItem="{Binding SelectedStore}"
                                          Style="{StaticResource ModernComboStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="#2e1065" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding Code}" FontWeight="Bold" FontSize="12" Foreground="#a78bfa"/>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="Select the destination store for this transfer" Style="{StaticResource HintTextStyle}"/>
                            </StackPanel>

                            <!-- Transfer Number -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Transfer Order Number" Style="{StaticResource InputLabelStyle}"/>
                                <TextBox Text="{Binding TransferNumber, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernInputStyle}"/>
                                <TextBlock Text="Enter the transfer order reference (e.g., TO-12345)" Style="{StaticResource HintTextStyle}"/>
                            </StackPanel>

                            <!-- Box Count -->
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Number of Boxes" Style="{StaticResource InputLabelStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Content="âˆ’" Style="{StaticResource StepperButton}"
                                            Click="DecrementBoxes_Click"/>

                                    <Border Grid.Column="1" Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="12" Margin="12,0" 
                                            BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="1.5">
                                        <TextBox Text="{Binding TotalBoxes, UpdateSourceTrigger=PropertyChanged}"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="32"
                                                 FontWeight="Bold"
                                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 CaretBrush="#8b5cf6"/>
                                    </Border>

                                    <Button Grid.Column="2" Content="+" Style="{StaticResource StepperButton}"
                                            Click="IncrementBoxes_Click"/>
                                </Grid>
                                
                                <!-- Quick Count Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                                    <TextBlock Text="Quick:" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Button Content="1" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="1"/>
                                    <Button Content="2" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="2"/>
                                    <Button Content="5" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="5"/>
                                    <Button Content="10" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="10"/>
                                    <Button Content="15" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="15"/>
                                    <Button Content="20" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="20"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Right Column - Preview -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}" Padding="28">
                        <StackPanel>
                            <TextBlock Text="LABEL PREVIEW" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextTertiaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            
                            <!-- Preview Label -->
                            <Border BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="2.5" CornerRadius="8" 
                                    Background="{DynamicResource BackgroundBrush}" Padding="24" Margin="0,0,0,20">
                                <StackPanel HorizontalAlignment="Center">
                                    <!-- Store Badge -->
                                    <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" Padding="16,8" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding StorePreviewText}" 
                                                   FontSize="16" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </Border>
                                    
                                    <!-- Divider -->
                                    <Border Height="1" Background="{DynamicResource SurfaceActiveBrush}" Margin="0,16"/>
                                    
                                    <!-- Transfer Number -->
                                    <TextBlock Text="{Binding TransferPreviewText}" 
                                               FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    
                                    <!-- Box Number - Large -->
                                    <TextBlock Text="{Binding BoxPreviewText}" 
                                               FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" 
                                               Margin="0,16,0,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    
                                    <!-- Date -->
                                    <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="6" Padding="12,6" 
                                            HorizontalAlignment="Center" Margin="0,16,0,0">
                                        <TextBlock Text="{Binding DatePreviewText}" 
                                                   FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                            
                            <!-- Preview Info -->
                            <Border Background="#2e1065" CornerRadius="10" Padding="16" Margin="0,0,0,20">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ“„" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock FontSize="13" Foreground="#c4b5fd">
                                            <Run Text="{Binding TotalBoxes, Mode=OneWay}"/>
                                            <Run Text=" labels will be generated"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="(2 per page, Word document format)" 
                                               FontSize="11" Foreground="#a78bfa" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Generate Button -->
                            <Button Content="ðŸ·ï¸  Generate Labels"
                                    Style="{StaticResource GenerateButtonStyle}"
                                    Command="{Binding GenerateLabelsCommand}"
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2" Padding="24,16">
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="16,12" BorderBrush="{DynamicResource SurfaceHoverBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Status Indicator -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Margin="0,0,10,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#10B981"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                                <Setter Property="Fill" Value="#F59E0B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding StatusMessage}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Progress Indicator -->
                        <ProgressBar Grid.Column="2" 
                                     IsIndeterminate="{Binding IsGenerating}"
                                     Visibility="{Binding IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Width="100" Height="4"
                                     Background="{DynamicResource SurfaceActiveBrush}" Foreground="#8B5CF6"/>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Border>
</UserControl>





