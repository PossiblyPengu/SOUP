<UserControl x:Class="SOUP.Features.ExpireWise.Views.QuickAddDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             mc:Ignorable="d"
             MinWidth="680" MinHeight="580"
             d:DesignHeight="580" d:DesignWidth="680"
             d:DataContext="{d:DesignInstance Type=vm:ExpireWiseViewModel}">

    <UserControl.Resources>
        <!-- ExpireWise Accent Colors -->
        <Color x:Key="ExpireWiseAccentColor">#f59e0b</Color>
        <Color x:Key="ExpireWiseAccentLightColor">#fbbf24</Color>
        <Color x:Key="ExpireWiseAccentDarkColor">#d97706</Color>
        <SolidColorBrush x:Key="ExpireWiseAccentBrush" Color="{StaticResource ExpireWiseAccentColor}"/>
        <SolidColorBrush x:Key="ExpireWiseAccentLightBrush" Color="{StaticResource ExpireWiseAccentLightColor}"/>
        <SolidColorBrush x:Key="ExpireWiseAccentDarkBrush" Color="{StaticResource ExpireWiseAccentDarkColor}"/>

        <!-- Form Label Style -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Animations -->
        <Storyboard x:Key="ScaleInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.95" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.95" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="16"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="8" Opacity="0.3" Color="#000000"/>
        </Border.Effect>
        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard Storyboard="{StaticResource ScaleInAnimation}"/>
            </EventTrigger>
        </Border.Triggers>

        <Grid Margin="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="24"/>     <!-- Spacing -->
                <RowDefinition Height="*"/>      <!-- Content -->
                <RowDefinition Height="20"/>     <!-- Spacing -->
                <RowDefinition Height="Auto"/>   <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="36" Height="36" CornerRadius="10"
                                Background="{StaticResource ExpireWiseAccentBrush}"
                                Margin="0,0,12,0" VerticalAlignment="Center">
                            <TextBlock Text="âš¡" FontSize="20" Foreground="White"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Quick Add Item" FontSize="20" FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <TextBlock Text="Add items to your inventory quickly with SKU lookup"
                                      FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Close Button -->
                <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                        Style="{StaticResource IconButton}"
                        Width="32" Height="32"
                        Content="âœ•" FontSize="14"
                        Foreground="{DynamicResource TextSecondaryBrush}"
                        Click="Close_Click"
                        ToolTip="Close (Escape)"/>
            </Grid>

            <!-- Main Content: Split Layout -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="340"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT SIDE: Input Form -->
                <Border Grid.Column="0"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12" Padding="20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>  <!-- SKU Input -->
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>  <!-- Store & Qty -->
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>  <!-- Expiry -->
                            <RowDefinition Height="*"/>     <!-- Spacer -->
                            <RowDefinition Height="Auto"/>  <!-- Item Preview -->
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>  <!-- Add Button -->
                        </Grid.RowDefinitions>

                        <!-- SKU Input -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="SKU / Item Number" Style="{StaticResource FormLabel}"/>
                            <Border Background="{DynamicResource BackgroundBrush}"
                                    CornerRadius="8" Padding="14,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Style.Triggers>
                                            <!-- Valid state - green border -->
                                            <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                                <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                                            </DataTrigger>
                                            <!-- Invalid state - red border -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                                    <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                                    <Condition Binding="{Binding QuickAddSku, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="BorderBrush" Value="{DynamicResource DangerBrush}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="SkuInput" Grid.Column="0"
                                            Text="{Binding QuickAddSku, UpdateSourceTrigger=PropertyChanged}"
                                            Background="Transparent" BorderThickness="0"
                                            Foreground="{DynamicResource TextPrimaryBrush}"
                                            FontSize="14" VerticalAlignment="Center"
                                            CaretBrush="{DynamicResource TextPrimaryBrush}"
                                            ToolTip="Type a SKU and press Enter">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                                    <VisualBrush.Visual>
                                                                        <TextBlock Text="Enter SKU or item number..."
                                                                                  Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                                    </VisualBrush.Visual>
                                                                </VisualBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <!-- Status Icon -->
                                    <Border Grid.Column="1" Width="24" Height="24" CornerRadius="12"
                                            Margin="8,0,0,0" VerticalAlignment="Center"
                                            RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Border.RenderTransform>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <!-- Loading -->
                                                    <DataTrigger Binding="{Binding QuickAddIsValidating}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                    </DataTrigger>
                                                    <!-- Found -->
                                                    <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                   From="0.7" To="1" Duration="0:0:0.3">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                   From="0.7" To="1" Duration="0:0:0.3">
                                                                        <DoubleAnimation.EasingFunction>
                                                                            <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                                        </DoubleAnimation.EasingFunction>
                                                                    </DoubleAnimation>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                    <!-- Not Found -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                                            <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                                            <Condition Binding="{Binding QuickAddSku, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  FontSize="12" Foreground="White" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value=""/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding QuickAddIsValidating}" Value="True">
                                                            <Setter Property="Text" Value="â³"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                                            <Setter Property="Text" Value="âœ“"/>
                                                        </DataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                                                <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Text" Value="âœ—"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Store & Quantity Row -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="110"/>
                            </Grid.ColumnDefinitions>

                            <!-- Store -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Store Location" Style="{StaticResource FormLabel}"/>
                                <ComboBox ItemsSource="{Binding AvailableStores}"
                                         SelectedItem="{Binding QuickAddStore}"
                                         DisplayMemberPath="Name"
                                         Style="{StaticResource ModernComboBox}"
                                         ToolTip="Select store location"/>
                            </StackPanel>

                            <!-- Quantity -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Quantity" Style="{StaticResource FormLabel}"/>
                                <Border Background="{DynamicResource BackgroundBrush}"
                                        CornerRadius="8" Padding="12,10"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                Text="{Binding QuickAddUnits, UpdateSourceTrigger=PropertyChanged}"
                                                Background="Transparent" BorderThickness="0"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                FontSize="14" VerticalAlignment="Center"
                                                TextAlignment="Right"
                                                CaretBrush="{DynamicResource TextPrimaryBrush}"
                                                PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                                        <TextBlock Grid.Column="1" Text="qty" FontSize="11"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  VerticalAlignment="Center" Margin="6,0,0,0"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Expiry Date -->
                        <StackPanel Grid.Row="4">
                            <TextBlock Text="Expiration Date" Style="{StaticResource FormLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                         ItemsSource="{Binding QuickAddMonths}"
                                         SelectedValue="{Binding QuickAddMonth}"
                                         SelectedValuePath="Value"
                                         DisplayMemberPath="Name"
                                         Style="{StaticResource ModernComboBox}"
                                         ToolTip="Expiration month"/>

                                <ComboBox Grid.Column="2"
                                         ItemsSource="{Binding QuickAddYears}"
                                         SelectedItem="{Binding QuickAddYear}"
                                         Style="{StaticResource ModernComboBox}"
                                         ToolTip="Expiration year"/>
                            </Grid>
                        </StackPanel>

                        <!-- Item Preview Card -->
                        <Border Grid.Row="6"
                                Background="{DynamicResource BackgroundBrush}"
                                BorderBrush="{DynamicResource SuccessBrush}"
                                BorderThickness="2"
                                CornerRadius="8" Padding="14,12"
                                Visibility="{Binding QuickAddItemPreview, Converter={StaticResource StringToVisibilityConverter}}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="Visibility" Value="Visible">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                       From="0.9" To="1" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                       From="0.9" To="1" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Width="32" Height="32" CornerRadius="16"
                                        Background="{DynamicResource SuccessBrush}"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="âœ“" FontSize="16" Foreground="White"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Item Found" FontSize="10"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              FontWeight="Medium"/>
                                    <TextBlock FontSize="13" Margin="0,2,0,0"
                                              TextTrimming="CharacterEllipsis">
                                        <Run Text="{Binding QuickAddItemPreview}"
                                            Foreground="{StaticResource ExpireWiseAccentLightBrush}"
                                            FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Add to Queue Button -->
                        <Button Grid.Row="8"
                                Command="{Binding AddToQueueCommand}"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Stretch"
                                Padding="0,12"
                                ToolTip="Add this item to the queue (or press Enter)">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="âž•" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Add to Queue" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- RIGHT SIDE: Preview & Queue -->
                <Border Grid.Column="2"
                        Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12" Padding="20"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Queue Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Width="28" Height="28" CornerRadius="14"
                                        Background="{StaticResource ExpireWiseAccentBrush}"
                                        Margin="0,0,10,0"
                                        Visibility="{Binding HasQueuedItems, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="{Binding QuickAddQueue.Count}" FontSize="12"
                                              Foreground="White" FontWeight="Bold"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock FontSize="14" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextPrimaryBrush}">
                                    <Run Text="Queue"/>
                                    <Run Text="(" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <Run Text="{Binding QuickAddQueue.Count, FallbackValue=0}"
                                         Foreground="{StaticResource ExpireWiseAccentBrush}"/>
                                    <Run Text="items)" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </StackPanel>
                            <Button Content="Clear All"
                                    Command="{Binding ClearQueueCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Padding="12,6" FontSize="11"
                                    HorizontalAlignment="Right"
                                    ToolTip="Remove all items from queue"
                                    Visibility="{Binding HasQueuedItems, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>

                        <!-- Queue List or Empty State -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                     Visibility="{Binding HasQueuedItems, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl ItemsSource="{Binding QuickAddQueue}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource BackgroundBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1" CornerRadius="8"
                                                Padding="12,10" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="ðŸ“¦" FontSize="16"
                                                          VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock FontSize="12" FontWeight="SemiBold"
                                                              Foreground="{DynamicResource TextPrimaryBrush}">
                                                        <Run Text="#"/>
                                                        <Run Text="{Binding ItemNumber}"/>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding Description}" FontSize="11"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                                              TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                                    <TextBlock FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}"
                                                              Margin="0,4,0,0">
                                                        <Run Text="{Binding Quantity}"/>
                                                        <Run Text="units â€¢"/>
                                                        <Run Text="{Binding Location}"/>
                                                        <Run Text="â€¢ Exp:"/>
                                                        <Run Text="{Binding ExpiryDate, StringFormat='MMM yyyy'}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <Button Grid.Column="2" Content="âœ•"
                                                        Command="{Binding DataContext.RemoveFromQueueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource IconButton}"
                                                        Width="28" Height="28" FontSize="12"
                                                        Foreground="{DynamicResource DangerBrush}"
                                                        ToolTip="Remove from queue"
                                                        VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Empty State -->
                        <Border Grid.Row="1"
                                CornerRadius="12"
                                Background="{DynamicResource BackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Visibility="{Binding HasQueuedItems, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border Width="64" Height="64" CornerRadius="32"
                                        Background="{DynamicResource SurfaceHoverBrush}"
                                        Margin="0,0,0,16"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸ“‹" FontSize="32"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="No items in queue" FontSize="14" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Enter a SKU to add items" FontSize="11"
                                          Foreground="{DynamicResource TextTertiaryBrush}"
                                          HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer Buttons -->
            <Grid Grid.Row="4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock VerticalAlignment="Center" FontSize="11"
                              Foreground="{DynamicResource TextTertiaryBrush}">
                        <Run Text="ðŸ’¡ Tip: Press"/>
                        <Run Text="Enter" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <Run Text="to add items quickly"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Click="Cancel_Click"
                            Style="{StaticResource SecondaryButton}"
                            Padding="24,10" Margin="0,0,12,0"
                            ToolTip="Close without saving (Escape)"/>
                    <Button Command="{Binding ConfirmQueueCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="24,10"
                            IsEnabled="{Binding HasQueuedItems}"
                            ToolTip="Save all queued items to database (Ctrl+Enter)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ“" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock FontSize="13" FontWeight="SemiBold">
                                <Run Text="Add All"/>
                                <Run Text="(" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <Run Text="{Binding QuickAddQueue.Count, FallbackValue=0}"/>
                                <Run Text=")" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
