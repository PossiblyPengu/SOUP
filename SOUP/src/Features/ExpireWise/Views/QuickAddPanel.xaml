<UserControl x:Class="SOUP.Features.ExpireWise.Views.QuickAddPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ExpireWiseViewModel}"
             d:DesignHeight="200" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- ExpireWise Accent Colors -->
        <Color x:Key="ExpireWiseAccentColor">#f59e0b</Color>
        <Color x:Key="ExpireWiseAccentLightColor">#fbbf24</Color>
        <Color x:Key="ExpireWiseAccentDarkColor">#d97706</Color>
        <SolidColorBrush x:Key="ExpireWiseAccentBrush" Color="{StaticResource ExpireWiseAccentColor}"/>
        <SolidColorBrush x:Key="ExpireWiseAccentLightBrush" Color="{StaticResource ExpireWiseAccentLightColor}"/>
        <SolidColorBrush x:Key="ExpireWiseAccentDarkBrush" Color="{StaticResource ExpireWiseAccentDarkColor}"/>

        <!-- Animations -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="ScaleInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0.95" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0.95" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>

    <!-- Quick Add Content -->
    <Grid Margin="20,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- Queue Section -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: SKU Input -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="SKU/Item #:" FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,0,16,0"
                           ToolTip="Enter the SKU or item number to look up in the dictionary"/>

                <Border Grid.Row="0" Grid.Column="1" Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="8" Padding="14,10">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Style.Triggers>
                                <!-- Valid state - green border -->
                                <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                    <Setter Property="BorderBrush" Value="{DynamicResource SuccessBrush}"/>
                                </DataTrigger>
                                <!-- Invalid state - red border -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                        <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                        <Condition Binding="{Binding QuickAddSku, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="{DynamicResource DangerBrush}"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SkuInput" Grid.Column="0"
                                 Text="{Binding QuickAddSku, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 FontSize="14" VerticalAlignment="Center"
                                 CaretBrush="{DynamicResource TextPrimaryBrush}"
                                 ToolTip="Type a SKU and press Enter to add to queue">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Enter SKU or item number..."
                                                                       Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Status Icon with Animation -->
                        <Border Grid.Column="1" Width="24" Height="24" CornerRadius="12"
                                Margin="8,0,0,0" VerticalAlignment="Center"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <!-- Loading -->
                                        <DataTrigger Binding="{Binding QuickAddIsValidating}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                        <!-- Found -->
                                        <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0.7" To="1" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0.7" To="1" Duration="0:0:0.3">
                                                            <DoubleAnimation.EasingFunction>
                                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                        <!-- Not Found -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                                <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                                <Condition Binding="{Binding QuickAddSku, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="12" Foreground="White" FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value=""/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding QuickAddIsValidating}" Value="True">
                                                <Setter Property="Text" Value="â³"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                                <Setter Property="Text" Value="âœ“"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                                    <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Text" Value="âœ—"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </Grid>
                </Border>

                <!-- Row 1: Store and Quantity -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Store:" FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,14,16,0"
                           ToolTip="Select the store location for this item"/>

                <Grid Grid.Row="1" Grid.Column="1" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding AvailableStores}"
                              SelectedItem="{Binding QuickAddStore}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBoxStyle}"
                              ToolTip="Store location"/>

                    <Border Grid.Column="2" Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="8" Padding="14,10"
                            ToolTip="Number of units to add">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Qty:" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding QuickAddUnits, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     FontSize="14" VerticalAlignment="Center"
                                     CaretBrush="{DynamicResource TextPrimaryBrush}"
                                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                                     HorizontalAlignment="Stretch" TextAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="units" FontSize="12"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Row 2: Expiry Date -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Expires:" FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,14,16,0"
                           ToolTip="Select the expiration month and year"/>

                <Grid Grid.Row="2" Grid.Column="1" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding QuickAddMonths}"
                              SelectedValue="{Binding QuickAddMonth}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBoxStyle}"
                              ToolTip="Expiration month"/>

                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding QuickAddYears}"
                              SelectedItem="{Binding QuickAddYear}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              ToolTip="Expiration year"/>
                </Grid>

                <!-- Row 3: Item Preview & Button -->
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                        Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource SuccessBrush}"
                        BorderThickness="2"
                        CornerRadius="8" Padding="14,12" Margin="0,18,0,0"
                        Visibility="{Binding QuickAddItemPreview, Converter={StaticResource StringToVisibilityConverter}}"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="Visibility" Value="Visible">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0.9" To="1" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0.9" To="1" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="32" Height="32" CornerRadius="16"
                                    Background="{DynamicResource SuccessBrush}"
                                    Margin="0,0,12,0" VerticalAlignment="Center">
                                <TextBlock Text="âœ“" FontSize="16" Foreground="White"
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Item Found" FontSize="11"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          FontWeight="Medium"/>
                                <TextBlock FontSize="14" Margin="0,2,0,0">
                                    <Run Text="{Binding QuickAddItemPreview}"
                                         Foreground="{StaticResource ExpireWiseAccentLightBrush}"
                                         FontWeight="SemiBold"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <Button Command="{Binding AddToQueueCommand}"
                                HorizontalAlignment="Right"
                                Style="{StaticResource PrimaryButton}"
                                Padding="24,10"
                                ToolTip="Add this item to the queue (or press Enter)">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âž•" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Add to Queue" FontSize="13" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Row 4: Queue Section -->
                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,16,0,0"
                        Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{StaticResource ExpireWiseAccentBrush}"
                        BorderThickness="2"
                        CornerRadius="8" Padding="16"
                        Visibility="{Binding HasQueuedItems, Converter={StaticResource BoolToVisibilityConverter}}"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="Visibility" Value="Visible">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0" To="1" Duration="0:0:0.3">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Width="28" Height="28" CornerRadius="14"
                                        Background="{StaticResource ExpireWiseAccentBrush}"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="{Binding QuickAddQueue.Count}" FontSize="12"
                                              Foreground="White" FontWeight="Bold"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Queued Items" FontSize="14" FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Clear All" Command="{Binding ClearQueueCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="12,6" FontSize="11" Margin="0,0,8,0"
                                        ToolTip="Remove all items from queue"/>
                                <Button Command="{Binding ConfirmQueueCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Padding="16,6"
                                        ToolTip="Save all queued items to database">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœ“" FontSize="12" Margin="0,0,6,0"/>
                                        <TextBlock Text="Confirm All" FontSize="11" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding QuickAddQueue}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1" CornerRadius="6"
                                            Padding="12,8" Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="ðŸ“¦" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}">
                                                    <Run Text="{Binding ItemNumber}"/>
                                                    <Run Text="-" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                    <Run Text="{Binding Description}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}">
                                                    <Run Text="{Binding Quantity}"/>
                                                    <Run Text="units â€¢"/>
                                                    <Run Text="{Binding Location}"/>
                                                    <Run Text="â€¢ Expires:"/>
                                                    <Run Text="{Binding ExpiryDate, StringFormat='MMM yyyy'}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="2" Content="âœ•" ToolTip="Remove from queue"
                                                    Command="{Binding DataContext.RemoveFromQueueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    Width="24" Height="24" FontSize="12"
                                                    Foreground="{DynamicResource DangerBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
    </Grid>
</UserControl>
