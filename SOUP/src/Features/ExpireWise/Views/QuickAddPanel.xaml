<UserControl x:Class="SOUP.Features.ExpireWise.Views.QuickAddPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ExpireWiseViewModel}"
             d:DesignHeight="200" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- ExpireWise Accent Colors -->
        <Color x:Key="ExpireWiseAccentColor">#f59e0b</Color>
        <Color x:Key="ExpireWiseAccentLightColor">#fbbf24</Color>
        <Color x:Key="ExpireWiseAccentDarkColor">#d97706</Color>
        <SolidColorBrush x:Key="ExpireWiseAccentBrush" Color="{StaticResource ExpireWiseAccentColor}"/>
        <SolidColorBrush x:Key="ExpireWiseAccentLightBrush" Color="{StaticResource ExpireWiseAccentLightColor}"/>
        <SolidColorBrush x:Key="ExpireWiseAccentDarkBrush" Color="{StaticResource ExpireWiseAccentDarkColor}"/>
    </UserControl.Resources>

    <!-- Quick Add Content (now inside slide-out overlay) -->
    <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- Queue Section -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: SKU Input -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="SKU/Item #:" FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,0,12,0" Width="100"/>

                <Border Grid.Row="0" Grid.Column="1" Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="8" Padding="12,8" Margin="0,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="SkuInput" Grid.Column="0"
                                 Text="{Binding QuickAddSku, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 FontSize="14" VerticalAlignment="Center"
                                 CaretBrush="{DynamicResource TextPrimaryBrush}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Enter SKU or item number..."
                                                                       Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Status Icon -->
                        <Border Grid.Column="1" Width="24" Height="24" CornerRadius="12"
                                Margin="8,0,0,0" VerticalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <!-- Loading -->
                                        <DataTrigger Binding="{Binding QuickAddIsValidating}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </DataTrigger>
                                        <!-- Found -->
                                        <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                        </DataTrigger>
                                        <!-- Not Found -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                                <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                                <Condition Binding="{Binding QuickAddSku, Converter={StaticResource StringToVisibilityConverter}}" Value="Visible"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="12" Foreground="White">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value=""/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding QuickAddIsValidating}" Value="True">
                                                <Setter Property="Text" Value="â³"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding QuickAddIsValid}" Value="True">
                                                <Setter Property="Text" Value="âœ“"/>
                                            </DataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding QuickAddIsValidating}" Value="False"/>
                                                    <Condition Binding="{Binding QuickAddIsValid}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Text" Value="âœ—"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </Grid>
                </Border>

                <!-- Row 1: Store, Quantity -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Store:" FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,12,12,0" Width="100"/>

                <Grid Grid.Row="1" Grid.Column="1" Margin="0,12,12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding AvailableStores}"
                              SelectedItem="{Binding QuickAddStore}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBoxStyle}"/>

                    <TextBlock Grid.Column="1" Text="Qty:" FontSize="13"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="16,0,8,0"/>

                    <Border Grid.Column="2" Background="{DynamicResource BackgroundBrush}"
                            CornerRadius="8" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding QuickAddUnits, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     FontSize="14" VerticalAlignment="Center"
                                     CaretBrush="{DynamicResource TextPrimaryBrush}"
                                     PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                            <TextBlock Grid.Column="1" Text="units" FontSize="12"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       VerticalAlignment="Center" Margin="4,0,0,0"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Row 2: Expiry Date -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Expires:" FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,12,12,0" Width="100"/>

                <Grid Grid.Row="2" Grid.Column="1" Margin="0,12,12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding QuickAddMonths}"
                              SelectedValue="{Binding QuickAddMonth}"
                              SelectedValuePath="Value"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBoxStyle}"/>

                    <TextBlock Grid.Column="1" Text="ðŸ“…" FontSize="14"
                               VerticalAlignment="Center" Margin="8,0"/>

                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding QuickAddYears}"
                              SelectedItem="{Binding QuickAddYear}"
                              Style="{StaticResource ModernComboBoxStyle}"/>
                </Grid>

                <!-- Row 3: Item Preview & Buttons -->
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                        Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="8" Padding="12" Margin="0,16,12,0"
                        Visibility="{Binding QuickAddItemPreview, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ“" FontSize="14" Foreground="{DynamicResource SuccessBrush}"
                                   Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock FontSize="13" VerticalAlignment="Center">
                            <Run Text="Item:" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <Run Text="{Binding QuickAddItemPreview}"
                                 Foreground="{StaticResource ExpireWiseAccentLightBrush}"
                                 FontWeight="SemiBold"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"
                            Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button Command="{Binding AddToQueueCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="20,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Add to Queue" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Row 4: Queue Section -->
                <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,16,0,0"
                        Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="8" Padding="16"
                        Visibility="{Binding HasQueuedItems, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Queued Items" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Clear All" Command="{Binding ClearQueueCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="12,6" FontSize="11" Margin="0,0,8,0"/>
                                <Button Command="{Binding ConfirmQueueCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Padding="16,6">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="âœ“" FontSize="12" Margin="0,0,6,0"/>
                                        <TextBlock Text="Confirm All" FontSize="11" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding QuickAddQueue}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1" CornerRadius="6"
                                            Padding="12,8" Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="ðŸ“¦" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock FontSize="12" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}">
                                                    <Run Text="{Binding ItemNumber}"/>
                                                    <Run Text="-" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                    <Run Text="{Binding Description}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}">
                                                    <Run Text="{Binding Quantity}"/>
                                                    <Run Text="units â€¢"/>
                                                    <Run Text="{Binding Location}"/>
                                                    <Run Text="â€¢ Expires:"/>
                                                    <Run Text="{Binding ExpiryDate, StringFormat='MMM yyyy'}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="2" Content="âœ•" ToolTip="Remove from queue"
                                                    Command="{Binding DataContext.RemoveFromQueueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    Width="24" Height="24" FontSize="12"
                                                    Foreground="{DynamicResource DangerBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
    </Grid>
</UserControl>
