<Window x:Class="SOUP.Features.OrderLog.Views.OrderColorPickerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:constants="clr-namespace:SOUP.Features.OrderLog.Constants"
        Title="Pick Color"
        Height="580"
        Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Color Swatch Button Style -->
        <Style x:Key="ColorSwatchStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="Transparent"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Slider Style for RGB -->
        <Style x:Key="ColorSliderStyle" TargetType="Slider">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Height="4" CornerRadius="2" Background="{DynamicResource SurfaceHoverBrush}" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="16" Height="16" Fill="{DynamicResource AccentBrush}" Cursor="Hand">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.3"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20,14"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Choose Color"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Click="Cancel_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            FontSize="16"
                            Width="32"
                            Height="32"
                            Padding="0"/>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20">
                <!-- App Colors -->
                <TextBlock Text="App Colors"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,0,0,10"/>
                
                <WrapPanel Margin="0,0,0,20">
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.PaletteIndigo}}"
                        Tag="{x:Static constants:OrderLogColors.PaletteIndigo}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.PaletteViolet}}"
                        Tag="{x:Static constants:OrderLogColors.PaletteViolet}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.PaletteEmerald}}"
                        Tag="{x:Static constants:OrderLogColors.PaletteEmerald}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.PaletteAmber}}"
                        Tag="{x:Static constants:OrderLogColors.PaletteAmber}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.PaletteDanger}}"
                        Tag="{x:Static constants:OrderLogColors.PaletteDanger}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.PaletteBlue}}"
                        Tag="{x:Static constants:OrderLogColors.PaletteBlue}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                </WrapPanel>

                <!-- Extended Colors -->
                <TextBlock Text="Extended Palette"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,0,0,10"/>
                
                <WrapPanel Margin="0,0,0,20">
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.DefaultOrder}}"
                        Tag="{x:Static constants:OrderLogColors.DefaultOrder}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtMoss}}"
                        Tag="{x:Static constants:OrderLogColors.ExtMoss}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtGold}}"
                        Tag="{x:Static constants:OrderLogColors.ExtGold}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtSky}}"
                        Tag="{x:Static constants:OrderLogColors.ExtSky}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtRose}}"
                        Tag="{x:Static constants:OrderLogColors.ExtRose}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtCoral}}"
                        Tag="{x:Static constants:OrderLogColors.ExtCoral}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtLime}}"
                        Tag="{x:Static constants:OrderLogColors.ExtLime}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtTurquoise}}"
                        Tag="{x:Static constants:OrderLogColors.ExtTurquoise}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtPink}}"
                        Tag="{x:Static constants:OrderLogColors.ExtPink}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                    <Button Background="{Binding Source={x:Static constants:OrderLogColors.ExtTeal}}"
                        Tag="{x:Static constants:OrderLogColors.ExtTeal}"
                        Click="Color_Click" Style="{DynamicResource ColorSwatchStyle}"/>
                </WrapPanel>

                <!-- Custom Color -->
                <TextBlock Text="Custom Color (Hex)"
                           FontSize="12"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           Margin="0,0,0,10"/>
                
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border x:Name="CustomColorPreview"
                            Width="48"
                            Height="48"
                            CornerRadius="6"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            Background="{Binding Source={x:Static constants:OrderLogColors.PaletteViolet}}"
                            VerticalAlignment="Top"/>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                            <TextBlock Text="Hex:" VerticalAlignment="Center" Foreground="{DynamicResource TextTertiaryBrush}" Width="40"/>
                            <TextBox x:Name="HexBox"
                                 Text="{x:Static constants:OrderLogColors.PaletteViolet}"
                                 TextChanged="HexBox_TextChanged"
                                 Background="{DynamicResource SurfaceHoverBrush}"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 FontSize="13"
                                 FontFamily="Consolas"
                                 Width="120"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="R" Width="20" VerticalAlignment="Center" FontWeight="Medium"
                                           Foreground="#FF6B6B"/>
                                <Slider x:Name="RSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"
                                        Width="200" Style="{StaticResource ColorSliderStyle}"/>
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="4"
                                        Padding="8,4" Margin="8,0,0,0" MinWidth="40">
                                    <TextBlock x:Name="RValue" TextAlignment="Center" FontFamily="Consolas"
                                               FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock Text="G" Width="20" VerticalAlignment="Center" FontWeight="Medium"
                                           Foreground="#4ECDC4"/>
                                <Slider x:Name="GSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"
                                        Width="200" Style="{StaticResource ColorSliderStyle}"/>
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="4"
                                        Padding="8,4" Margin="8,0,0,0" MinWidth="40">
                                    <TextBlock x:Name="GValue" TextAlignment="Center" FontFamily="Consolas"
                                               FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock Text="B" Width="20" VerticalAlignment="Center" FontWeight="Medium"
                                           Foreground="#5B9BD5"/>
                                <Slider x:Name="BSlider" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"
                                        Width="200" Style="{StaticResource ColorSliderStyle}"/>
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="4"
                                        Padding="8,4" Margin="8,0,0,0" MinWidth="40">
                                    <TextBlock x:Name="BValue" TextAlignment="Center" FontFamily="Consolas"
                                               FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Cancel"
                            Click="Cancel_Click"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="0,10"
                            IsCancel="True"/>
                    
                    <Button Grid.Column="2"
                            Content="Apply"
                            Click="Apply_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="0,10"
                            IsDefault="True"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
