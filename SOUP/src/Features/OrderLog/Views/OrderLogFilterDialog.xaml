<Window x:Class="SOUP.Features.OrderLog.Views.OrderLogFilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models"
        Title="Filter Orders"
        Height="500"
        Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20,14"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Filter Orders"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>

                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Click="Cancel_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            FontSize="16"
                            Width="32"
                            Height="32"
                            Padding="0"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Status Filter -->
                    <TextBlock Text="Status"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <Border Background="{DynamicResource SurfaceHoverBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="14,10"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <CheckBox x:Name="StatusNotReadyCheckBox"
                                      Content="ðŸ”´ Not Ready"
                                      FontSize="13"
                                      Margin="0,4"/>
                            <CheckBox x:Name="StatusOnDeckCheckBox"
                                      Content="ðŸŸ¡ On Deck"
                                      FontSize="13"
                                      Margin="0,4"/>
                            <CheckBox x:Name="StatusInProgressCheckBox"
                                      Content="ðŸŸ¢ In Progress"
                                      FontSize="13"
                                      Margin="0,4"/>
                            <CheckBox x:Name="StatusDoneCheckBox"
                                      Content="âšª Done"
                                      FontSize="13"
                                      Margin="0,4"/>
                        </StackPanel>
                    </Border>

                    <!-- Date Range Filter -->
                    <TextBlock Text="Date Range"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <Border Background="{DynamicResource SurfaceHoverBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="14,10"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="From:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <DatePicker x:Name="StartDatePicker"
                                            Grid.Column="1"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            Padding="8,6"
                                            FontSize="13"/>
                            </Grid>
                            <Grid Margin="0,8,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="To:" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <DatePicker x:Name="EndDatePicker"
                                            Grid.Column="1"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            Padding="8,6"
                                            FontSize="13"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Note Type Filter -->
                    <TextBlock Text="Item Type"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <Border Background="{DynamicResource SurfaceHoverBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="14,10"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <RadioButton x:Name="TypeAllRadio"
                                         Content="All Items"
                                         GroupName="NoteType"
                                         IsChecked="True"
                                         FontSize="13"
                                         Margin="0,4"/>
                            <RadioButton x:Name="TypeOrdersOnlyRadio"
                                         Content="ðŸ“‹ Orders Only"
                                         GroupName="NoteType"
                                         FontSize="13"
                                         Margin="0,4"/>
                            <RadioButton x:Name="TypeNotesOnlyRadio"
                                         Content="ðŸ“ Sticky Notes Only"
                                         GroupName="NoteType"
                                         FontSize="13"
                                         Margin="0,4"/>
                        </StackPanel>
                    </Border>

                    <!-- Note Category Filter (only for Sticky Notes) -->
                    <Border x:Name="NoteCategorySection"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Note Category"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,0,0,12"/>

                            <Border Background="{DynamicResource SurfaceHoverBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="14,10"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <RadioButton x:Name="CategoryAllRadio"
                                                 Content="All Categories"
                                                 GroupName="NoteCategory"
                                                 IsChecked="True"
                                                 FontSize="13"
                                                 Margin="0,4"/>
                                    <RadioButton x:Name="CategoryGeneralRadio"
                                                 Content="ðŸ“ General"
                                                 GroupName="NoteCategory"
                                                 FontSize="13"
                                                 Margin="0,4"/>
                                    <RadioButton x:Name="CategoryTodoRadio"
                                                 Content="âœ… To-Do"
                                                 GroupName="NoteCategory"
                                                 FontSize="13"
                                                 Margin="0,4"/>
                                    <RadioButton x:Name="CategoryReminderRadio"
                                                 Content="â° Reminder"
                                                 GroupName="NoteCategory"
                                                 FontSize="13"
                                                 Margin="0,4"/>
                                    <RadioButton x:Name="CategoryLogRadio"
                                                 Content="ðŸ““ Log"
                                                 GroupName="NoteCategory"
                                                 FontSize="13"
                                                 Margin="0,4"/>
                                    <RadioButton x:Name="CategoryIdeaRadio"
                                                 Content="ðŸ’¡ Idea"
                                                 GroupName="NoteCategory"
                                                 FontSize="13"
                                                 Margin="0,4"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Buttons -->
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="Clear All"
                                Click="ClearAll_Click"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Padding="0,10"/>

                        <Button Grid.Column="2"
                                Content="Cancel"
                                Click="Cancel_Click"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Padding="0,10"
                                IsCancel="True"/>

                        <Button Grid.Column="4"
                                Content="Apply"
                                Click="Apply_Click"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Padding="0,10"
                                IsDefault="True"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
