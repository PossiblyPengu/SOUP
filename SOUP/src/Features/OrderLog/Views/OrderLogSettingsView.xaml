<UserControl x:Class="SOUP.Features.OrderLog.Views.OrderLogSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SOUP.Features.OrderLog.Views"
             xmlns:vm="clr-namespace:SOUP.Features.OrderLog.ViewModels"
             xmlns:converters="clr-namespace:SOUP.Features.OrderLog.Converters"
             MinHeight="400" MinWidth="400">

    <UserControl.Resources>
        <converters:HexToBrushConverter x:Key="HexToBrush"/>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,20,0,12"/>
        </Style>
        
        <!-- Setting Label Style -->
        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Setting Description Style -->
        <Style x:Key="SettingDescription" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
        
        <!-- Modern Toggle Style -->
        <Style x:Key="ModernToggle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border Background="Transparent" Width="44" Height="24">
                            <Grid>
                                <Border x:Name="Track" CornerRadius="12"
                                        Background="{DynamicResource SurfaceHoverBrush}"/>
                                <Border x:Name="Thumb" Width="18" Height="18" CornerRadius="9"
                                        Background="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Left"
                                        Margin="3,0,0,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Thumb" Property="Background" Value="{DynamicResource TextOnPrimaryBrush}"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="23,0,0,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Track" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Height="4" CornerRadius="2" Background="{DynamicResource SurfaceHoverBrush}" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="18" Height="18" Fill="{DynamicResource AccentBrush}" Cursor="Hand">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.3"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="Auto" MaxWidth="420"/>
        </Grid.ColumnDefinitions>
        
        <!-- Settings Panel -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="24">
            <StackPanel>
                
                <!-- Header -->
                <TextBlock Text="Order Log Settings" FontSize="20" FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                <TextBlock Text="Configure the appearance and behavior of Order Log widget" 
                           FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                
                <!-- Statistics Row -->
                <UniformGrid Columns="3" Margin="0,16,0,0">
                    <Border Style="{StaticResource StatCard}" Margin="0,0,6,0">
                        <StackPanel>
                            <TextBlock Text="{Binding Items.Count}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="Active Orders" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCard}" Margin="3,0,3,0">
                        <StackPanel>
                            <TextBlock Text="{Binding ArchivedItems.Count}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock Text="Archived" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource StatCard}" Margin="6,0,0,0">
                        <StackPanel>
                            <TextBlock Text="{Binding DisplayItems.Count}" FontSize="24" FontWeight="Bold" 
                                       Foreground="{DynamicResource SuccessBrush}"/>
                            <TextBlock Text="Groups" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
                <!-- Appearance Section -->
                <TextBlock Text="APPEARANCE" Style="{StaticResource SectionHeader}"/>
                
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Card Font Size" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Adjust the text size on order cards" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Slider Minimum="10" Maximum="20" Width="120" Style="{StaticResource ModernSlider}"
                                    Value="{Binding CardFontSize, Mode=TwoWay}" 
                                    TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" 
                                    Padding="10,4" Margin="12,0,0,0" MinWidth="36">
                                <TextBlock Text="{Binding CardFontSize, StringFormat='{}{0:0}'}" 
                                           FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Behavior Section -->
                <TextBlock Text="BEHAVIOR" Style="{StaticResource SectionHeader}"/>
                
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Show Now Playing" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Display the Spotify Now Playing panel at the bottom" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" Style="{StaticResource ModernToggle}" VerticalAlignment="Center"
                                  IsChecked="{Binding ShowNowPlaying, Mode=TwoWay}"/>
                    </Grid>
                </Border>
                
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Show Archived Tab" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Display the archived orders tab in the widget" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" Style="{StaticResource ModernToggle}" VerticalAlignment="Center"
                                  IsChecked="{Binding ShowArchived, Mode=TwoWay}"/>
                    </Grid>
                </Border>
                
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Undo Timeout" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Seconds the undo action is available after changes" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Slider Minimum="2" Maximum="15" Width="100" Style="{StaticResource ModernSlider}"
                                    Value="{Binding UndoTimeoutSeconds, Mode=TwoWay}" 
                                    TickFrequency="1" IsSnapToTickEnabled="True"/>
                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" 
                                    Padding="10,4" Margin="12,0,0,0" MinWidth="36">
                                <TextBlock Text="{Binding UndoTimeoutSeconds, StringFormat='{}{0}s'}" 
                                           FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Notes Only Mode" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Hide order functionality, use widget for sticky notes only" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" Style="{StaticResource ModernToggle}" VerticalAlignment="Center"
                                  IsChecked="{Binding NotesOnlyMode, Mode=TwoWay}"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Sort Status Descending" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="When enabled, status groups are sorted in reverse order (In Progress â†’ On Deck â†’ Not Ready)." Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <CheckBox Grid.Column="1" Style="{StaticResource ModernToggle}" VerticalAlignment="Center"
                                  IsChecked="{Binding SortStatusDescending, Mode=TwoWay}"/>
                    </Grid>
                </Border>
                
                <!-- Default Colors Section -->
                <TextBlock Text="DEFAULT COLORS" Style="{StaticResource SectionHeader}"/>
                
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Default Order Color" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Color used for new order cards" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="32" Height="32" CornerRadius="6" 
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                Background="{Binding DefaultOrderColor, Converter={StaticResource HexToBrush}}"
                                Cursor="Hand" MouseLeftButtonDown="PickOrderColor_Click" ToolTip="Click to change"/>
                    </Grid>
                </Border>
                
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Default Sticky Note Color" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Color used for new sticky notes" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="32" Height="32" CornerRadius="6" 
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                Background="{Binding DefaultNoteColor, Converter={StaticResource HexToBrush}}"
                                Cursor="Hand" MouseLeftButtonDown="PickNoteColor_Click" ToolTip="Click to change"/>
                    </Grid>
                </Border>
                
                <!-- Data Management Section -->
                <TextBlock Text="DATA MANAGEMENT" Style="{StaticResource SectionHeader}"/>
                
                <Button Click="ClearArchived_Click" Style="{StaticResource ActionButton}" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ—‘ï¸" FontSize="16" Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Clear All Archived" FontWeight="SemiBold" FontSize="13" Foreground="{DynamicResource DangerBrush}"/>
                            <TextBlock Text="Permanently delete all archived orders" FontSize="11" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
                
                <!-- Status -->
                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" 
                        Padding="12" Margin="0,20,0,0"
                        Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Widget Preview -->
        <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Margin="0,16,16,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Preview Header -->
                <Border Grid.Row="0" Background="{DynamicResource SurfaceHoverBrush}" 
                        CornerRadius="12,12,0,0" Padding="16,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ‘ï¸" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Live Preview" FontSize="13" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <!-- Widget Content (dummy preview to avoid loading full widget) -->
                <Border Grid.Row="1" Padding="8">
                    <Grid MinHeight="280" Background="{DynamicResource SurfaceBrush}">
                        <StackPanel Margin="12">
                            <TextBlock Text="Order Log Preview" FontSize="13" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Vertical" Margin="0,0,0,4">
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="#1234 â€” Latte" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="Not Ready" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="#1235 â€” Cappuccino" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="In Progress" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="#1236 â€” Croissant" Foreground="{DynamicResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                        <TextBlock Text="On Deck" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="(Live preview disabled in settings)" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
