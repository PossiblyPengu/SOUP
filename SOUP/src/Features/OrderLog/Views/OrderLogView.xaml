<UserControl x:Class="SOUP.Features.OrderLog.Views.OrderLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models"
             xmlns:converters="clr-namespace:SOUP.Features.OrderLog.Converters"
             xmlns:vm="clr-namespace:SOUP.Features.OrderLog.ViewModels">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToCardBrushConverter x:Key="StatusToCardBrushConverter"/>
        <converters:ShowForOrdersConverter x:Key="ShowForOrdersConverter"/>
        <converters:ShowForNotesConverter x:Key="ShowForNotesConverter"/>
        <converters:LinkedGroupToVisibilityConverter x:Key="LinkedGroupToVisibilityConverter"/>

        <!-- Template for a single OrderItem card -->
        <DataTemplate x:Key="OrderItemTemplate" DataType="{x:Type models:OrderItem}">
            <Border BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Width="320"
                            Margin="0,0,16,16"
                            Background="{Binding Status, Converter={StaticResource StatusToCardBrushConverter}}"
                                AllowDrop="True"
                                PreviewMouseLeftButtonDown="Item_PreviewMouseLeftButtonDown"
                                MouseMove="Item_MouseMove"
                                DragOver="Item_DragOver"
                                DragLeave="Item_DragLeave"
                                Drop="Item_Drop">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                <Setter Property="Background" Value="{DynamicResource OrderLogCardNoteBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.ContextMenu>
                    <ContextMenu>
                        <!-- Set Status - only for orders -->
                        <MenuItem Header="Set Status"
                                  Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                            <MenuItem Header="Not Ready" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}"/>
                            <MenuItem Header="On Deck" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}"/>
                            <MenuItem Header="In Progress" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}"/>
                            <MenuItem Header="Done" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.Done}"/>
                        </MenuItem>
                        <MenuItem Header="Move Up" Click="MoveUp_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <MenuItem Header="Move Down" Click="MoveDown_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <MenuItem Header="Link with..." Click="LinkWith_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <MenuItem Header="Unlink" Click="Unlink_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <!-- Change Color - only for sticky notes -->
                        <MenuItem Header="Change Color..." Click="ChangeColor_Click"
                                  Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Color Bar - Status color for Orders, Custom color for Notes -->
                    <Border CornerRadius="8,8,0,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="ColorBar_Click"
                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <!-- Sticky notes use custom color -->
                                    <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                        <Setter Property="Background" Value="{Binding ColorHex}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" Margin="16,12">
                        <!-- Linked indicator -->
                        <TextBlock Text="ðŸ”—" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="{DynamicResource TextSecondaryBrush}"
                                   Visibility="{Binding LinkedGroupId, Converter={StaticResource LinkedGroupToVisibilityConverter}}"/>
                        <Grid>
                            <!-- Editable VendorName for Orders (hidden for sticky notes) -->
                            <Grid Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                                <TextBlock Text="Vendor name..." 
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextDisabledBrush}"
                                           FontStyle="Italic"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           Margin="0,0,80,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding VendorName}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Text="{Binding VendorName, UpdateSourceTrigger=LostFocus}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="15" 
                                         FontWeight="SemiBold" 
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         Padding="0"
                                         Margin="0,0,80,0"
                                         GotFocus="EditableField_GotFocus"
                                         LostFocus="EditableField_LostFocus"/>
                            </Grid>
                            
                            <!-- Title for Sticky Notes (editable with placeholder) -->
                            <Grid Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}">
                                <TextBlock Text="Note title..." 
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextDisabledBrush}"
                                           FontStyle="Italic"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           Margin="0,0,80,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NoteTitle}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding NoteTitle}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Text="{Binding NoteTitle, UpdateSourceTrigger=LostFocus}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="15" 
                                         FontWeight="SemiBold" 
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         Padding="0"
                                         Margin="0,0,80,0"
                                         GotFocus="EditableField_GotFocus"
                                         LostFocus="EditableField_LostFocus"/>
                            </Grid>
                            
                            <!-- Status ComboBox (hidden for sticky notes) -->
                            <ComboBox HorizontalAlignment="Right"
                                      SelectedValue="{Binding Status, Mode=TwoWay}"
                                      SelectionChanged="StatusComboBox_SelectionChanged"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Padding="8,6"
                                      MinHeight="28"
                                      MinWidth="100"
                                      Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Not Ready" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}" Foreground="{DynamicResource DangerBrush}"/>
                                <ComboBoxItem Content="On Deck" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}" Foreground="{DynamicResource WarningBrush}"/>
                                <ComboBoxItem Content="In Progress" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}" Foreground="{DynamicResource SuccessBrush}"/>
                                <ComboBoxItem Content="Done" Tag="{x:Static models:OrderItem+OrderStatus.Done}" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </ComboBox>
                        </Grid>

                        <!-- ORDER FIELDS (hidden for sticky notes) -->
                        <StackPanel Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                            
                            <!-- Editable Transfer Numbers -->
                            <Grid Margin="0,6,0,0">
                                <TextBlock Text="Transfer #s..." 
                                           FontSize="13"
                                           Foreground="{DynamicResource TextDisabledBrush}"
                                           FontStyle="Italic"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Text="{Binding TransferNumbers, UpdateSourceTrigger=LostFocus}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         FontSize="13"
                                         Padding="0"
                                         GotFocus="EditableField_GotFocus"
                                         LostFocus="EditableField_LostFocus"/>
                            </Grid>

                            <!-- Editable WHS Shipment Numbers -->
                            <Grid Margin="0,4,0,0">
                                <TextBlock Text="WHS #s..." 
                                           FontSize="13"
                                           Foreground="{DynamicResource TextDisabledBrush}"
                                           FontStyle="Italic"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=LostFocus}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                         FontSize="13"
                                         Padding="0"
                                         GotFocus="EditableField_GotFocus"
                                         LostFocus="EditableField_LostFocus"/>
                            </Grid>

                            <TextBlock Text="{Binding TimeInProgressDisplay}"
                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                       FontSize="12"
                                       FontFamily="Consolas"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                        
                        <!-- STICKY NOTE CONTENT (visible only for sticky notes, with placeholder) -->
                        <StackPanel Margin="0,6,0,0"
                                    Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}">
                            
                            <!-- Note content -->
                            <Grid>
                                <TextBlock Text="Write your note here..."
                                           FontSize="13"
                                           Foreground="{DynamicResource TextDisabledBrush}"
                                           FontStyle="Italic"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Top">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NoteContent}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding NoteContent}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                            <RichTextBox x:Name="NoteContentBox"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         FontSize="13"
                                                         Padding="0"
                                                         AcceptsReturn="True"
                                                         VerticalScrollBarVisibility="Auto"
                                                         PreviewKeyDown="NoteContent_PreviewKeyDown"
                                                         Loaded="NoteContent_Loaded"
                                                         LostFocus="NoteContent_LostFocus"
                                                         GotFocus="EditableField_GotFocus"/>
                            </Grid>

                            <!-- Text Formatting Toolbar -->
                            <Border Background="{DynamicResource SurfaceBrush}"
                                    CornerRadius="4"
                                    Padding="4,2"
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="B" ToolTip="Bold (**text**)"
                                            Click="FormatBold_Click" Tag="{Binding}"
                                            FontWeight="Bold" FontSize="11" Padding="6,2" Margin="1"
                                            Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="I" ToolTip="Italic (*text*)"
                                            Click="FormatItalic_Click" Tag="{Binding}"
                                            FontStyle="Italic" FontSize="11" Padding="6,2" Margin="1"
                                            Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="U" ToolTip="Underline (__text__)"
                                            Click="FormatUnderline_Click" Tag="{Binding}"
                                            FontSize="11" Padding="6,2" Margin="1"
                                            Style="{DynamicResource GhostButtonStyle}">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="U" TextDecorations="Underline"/>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                    <Rectangle Width="1" Fill="{DynamicResource BorderBrush}" Margin="4,2"/>
                                    <Button Content="â€¢" ToolTip="Insert bullet point"
                                            Click="InsertBullet_Click" Tag="{Binding}"
                                            FontSize="14" Padding="6,2" Margin="1"
                                            Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="â˜" ToolTip="Insert checkbox"
                                            Click="InsertCheckbox_Click" Tag="{Binding}"
                                            FontSize="12" Padding="6,2" Margin="1"
                                            Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="ðŸ•" ToolTip="Insert timestamp"
                                            Click="InsertTimestamp_Click" Tag="{Binding}"
                                            FontSize="11" Padding="6,2" Margin="1"
                                            Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="â€•" ToolTip="Insert divider"
                                            Click="InsertDivider_Click" Tag="{Binding}"
                                            FontSize="11" Padding="6,2" Margin="1"
                                            Style="{DynamicResource GhostButtonStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Actions -->
                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="12,8">
                        <Button Content="Delete"
                                Click="DeleteNote_Click"
                                Style="{DynamicResource GhostButtonStyle}"
                                Padding="10,6"
                                FontSize="12"
                                HorizontalAlignment="Right"
                                Foreground="{DynamicResource DangerBrush}"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for a grouped card (shows first member with a small list of members) -->
        <DataTemplate x:Key="OrderItemGroupTemplate" DataType="{x:Type vm:OrderItemGroup}">
            <Grid>
                <ContentControl Content="{Binding First}" ContentTemplate="{StaticResource OrderItemTemplate}" />
                <StackPanel Orientation="Vertical" Margin="8,0,0,0" VerticalAlignment="Top">
                    <ItemsControl ItemsSource="{Binding Members}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="â€¢ " Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding VendorName}" FontSize="12" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding TransferNumbers}" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </DataTemplate>
        
        <!-- Style for phantom placeholder text -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Sidebar Navigation RadioButton Style -->
        <Style x:Key="SidebarNavButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bg" Background="Transparent" CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#3b1d5e"/>
                                <Setter Property="Foreground" Value="#a855f7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Sidebar Action Button Style -->
        <Style x:Key="SidebarActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- App Header -->
                <Border Grid.Row="0" Padding="20,24,20,20" BorderBrush="{DynamicResource SurfaceHoverBrush}" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <Border Width="56" Height="56" CornerRadius="16" HorizontalAlignment="Left" Margin="0,0,0,16">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#a855f7" Offset="0"/>
                                    <GradientStop Color="#7c3aed" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="ðŸ“‹" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Order Log" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Order &amp; Notes Tracking" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Navigation -->
                <StackPanel Grid.Row="1" Margin="12,16,12,0">
                    <TextBlock Text="VIEWS" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource TextDisabledBrush}" 
                               Margin="14,0,0,10" />
                    
                    <RadioButton x:Name="ActiveTabRadio" GroupName="NavTabs" IsChecked="True" 
                                 Style="{StaticResource SidebarNavButton}"
                                 Checked="ActiveTab_Checked">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Active Orders" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton x:Name="ArchivedTabRadio" GroupName="NavTabs" 
                                 Style="{StaticResource SidebarNavButton}"
                                 Checked="ArchivedTab_Checked">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¦" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Archived" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <Border Height="1" Background="{DynamicResource SurfaceHoverBrush}" Margin="0,16,0,16"/>
                    
                    <TextBlock Text="ACTIONS" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource TextDisabledBrush}" 
                               Margin="14,0,0,10"/>
                    
                    <Button x:Name="AddOrderButton" Click="AddBlankOrder_Click" Style="{StaticResource SidebarActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" FontSize="16" Margin="0,0,12,0" Foreground="{DynamicResource SuccessBrush}"/>
                            <TextBlock Text="Add Order" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="AddNoteButton" Click="AddBlankNote_Click" Style="{StaticResource SidebarActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,12,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock Text="Add Note" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ExportToCsvCommand}" Style="{StaticResource SidebarActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¤" FontSize="16" Margin="0,0,12,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock Text="Export CSV" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Bottom Section - Status -->
                <StackPanel Grid.Row="2" Margin="12,0,12,16">
                    <Border Height="1" Background="{DynamicResource SurfaceHoverBrush}" Margin="0,0,0,12"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               FontSize="11"
                               Margin="14,0,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Notes List -->
            <ScrollViewer Grid.Row="0" Padding="20,20">
                <Grid>
                    <!-- Active Notes Panel -->
                    <StackPanel x:Name="ActiveItemsPanel">
                        <ItemsControl ItemsSource="{Binding DisplayItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource OrderItemGroupTemplate}"/>
                                        <!-- Group badge -->
                                        <Border Background="{DynamicResource SurfaceBrush}"
                                                CornerRadius="10"
                                                Padding="4,2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="0,6,8,0"
                                                Visibility="{Binding IsGroup, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="{Binding Count}" FontSize="11" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                </StackPanel>
            
                <!-- Archived Notes Panel (separate tab) -->
                <StackPanel x:Name="ArchivedItemsPanel" Visibility="Collapsed">
                    <ItemsControl ItemsSource="{Binding ArchivedItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                    Width="320"
                                        Margin="0,0,16,16"
                                    Background="{Binding Status, Converter={StaticResource StatusToCardBrushConverter}}"
                                    AllowDrop="True"
                                    PreviewMouseLeftButtonDown="Item_PreviewMouseLeftButtonDown"
                                    MouseMove="Item_MouseMove"
                                    DragOver="Item_DragOver"
                                    Drop="Item_Drop">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                    <Setter Property="Background" Value="{DynamicResource OrderLogCardNoteBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                                            <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Color Bar -->
                                        <Border Background="{Binding ColorHex}"
                                                CornerRadius="8,8,0,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Row="1" Margin="16,12">
                                            <!-- Vendor Name (for orders) or Note Title (for sticky notes) -->
                                            <TextBlock FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding VendorName}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Text" Value="{Binding NoteTitle}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Order fields (hidden for sticky notes) -->
                                            <StackPanel Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                                                
                                                <TextBlock Text="{Binding TransferNumbers}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="13"
                                                           Margin="0,6,0,0"/>

                                                <TextBlock Text="{Binding WhsShipmentNumbers}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="13"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                            
                                            <!-- Sticky note content -->
                                            <TextBlock Text="{Binding NoteContent}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontSize="13"
                                                       Margin="0,6,0,0"
                                                       TextWrapping="Wrap"
                                                       Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Empty state for archived -->
                    <TextBlock Text="No archived items"
                               FontSize="14"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ArchivedItems.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Undo Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10"
                Visibility="{Binding UndoAvailable, Converter={StaticResource BoolToVis}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding UndoMessage}"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <Button Content="Undo"
                        Command="{Binding UndoStatusChangeAsyncCommand}"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Padding="10,4"
                        FontSize="11"/>
            </StackPanel>
        </Border>
        </Grid>
    </Grid>
</UserControl>
