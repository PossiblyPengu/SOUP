<UserControl x:Class="SOUP.Features.OrderLog.Views.OrderLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models"
             xmlns:converters="clr-namespace:SOUP.Features.OrderLog.Converters"
             xmlns:vm="clr-namespace:SOUP.Features.OrderLog.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:SOUP.Features.OrderLog.Behaviors">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToCardBrushConverter x:Key="StatusToCardBrushConverter"/>
        <converters:ShowForOrdersConverter x:Key="ShowForOrdersConverter"/>
        <converters:ShowForNotesConverter x:Key="ShowForNotesConverter"/>
        <converters:LinkedGroupToVisibilityConverter x:Key="LinkedGroupToVisibilityConverter"/>
        <converters:HexToBrushConverter x:Key="HexToBrushConverter"/>

        <!-- Card sizing and shared style resources (keep in sync with widget) -->
        <sys:Double x:Key="CardWidth">320</sys:Double>
        <CornerRadius x:Key="CardCornerRadius">10</CornerRadius>
        <sys:Double x:Key="CardColorBarHeight">8</sys:Double>
        <Thickness x:Key="CardMargin">0,0,16,16</Thickness>
        <Thickness x:Key="CardPadding">16,12,16,12</Thickness>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}" />
            <Setter Property="Width" Value="{StaticResource CardWidth}" />
            <Setter Property="Margin" Value="{StaticResource CardMargin}" />
            <Setter Property="Background" Value="{Binding Status, Converter={StaticResource StatusToCardBrushConverter}}" />
            <Setter Property="Padding" Value="{StaticResource CardPadding}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                    <Setter Property="Background" Value="{DynamicResource OrderLogCardNoteBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Unified drag-handle style (copied from widget) -->
        <Style x:Key="DragHandleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="SizeAll" />
            <Setter Property="Panel.ZIndex" Value="250" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.9" IsHitTestVisible="False">
                                <Rectangle Width="16" Height="2" Fill="{DynamicResource TextTertiaryBrush}" RadiusX="1" RadiusY="1" Margin="0,2"/>
                                <Rectangle Width="16" Height="2" Fill="{DynamicResource TextTertiaryBrush}" RadiusX="1" RadiusY="1" Margin="0,2"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template for a single OrderItem card (unified with widget) -->
        <DataTemplate x:Key="OrderItemTemplate" DataType="{x:Type models:OrderItem}">
            <Border Style="{StaticResource CardBorderStyle}">
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Set Status" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                            <MenuItem Header="Not Ready" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}"/>
                            <MenuItem Header="On Deck" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}"/>
                            <MenuItem Header="In Progress" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}"/>
                            <MenuItem Header="Done" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.Done}"/>
                        </MenuItem>
                        <MenuItem Header="Move Up" Click="MoveUp_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <MenuItem Header="Move Down" Click="MoveDown_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <MenuItem Header="Change Color..." Click="ChangeColor_Click" CommandParameter="{Binding}" Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}"/>
                        <MenuItem Header="Link with..." Click="LinkWith_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <MenuItem Header="Unlink" Click="Unlink_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                        <Separator/>
                        <MenuItem Header="Archive" Click="ArchiveNote_Click"/>
                        <MenuItem Header="Delete" Click="DeleteNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Cursor="Hand" MouseLeftButtonDown="ColorBar_Click" Height="{StaticResource CardColorBarHeight}" Margin="-16,-12,-16,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                        <Setter Property="Background" Value="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}" Padding="14,10" Margin="-16,0,-16,0" MinHeight="36" Panel.ZIndex="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <Grid Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                                    <TextBlock Text="Vendor name..." FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource TextDisabledBrush}" FontStyle="Italic" IsHitTestVisible="False" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding VendorName}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Text="{Binding VendorName, UpdateSourceTrigger=LostFocus}" Background="Transparent" BorderThickness="0" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Padding="0"/>
                                </Grid>

                                <Grid Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}">
                                    <TextBlock Text="Note title..." FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource TextDisabledBrush}" FontStyle="Italic" IsHitTestVisible="False" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NoteTitle}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding NoteTitle}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Text="{Binding NoteTitle, UpdateSourceTrigger=LostFocus}" Background="Transparent" BorderThickness="0" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Padding="0"/>
                                </Grid>
                            </StackPanel>

                            <ComboBox Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,8,0" SelectedValue="{Binding Status, Mode=TwoWay}" SelectedValuePath="Tag" SelectionChanged="StatusComboBox_SelectionChanged" FontSize="11" FontWeight="SemiBold" Padding="8,6" MinHeight="28" MinWidth="120" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}" Foreground="{DynamicResource TextPrimaryBrush}" Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Not Ready" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}" Foreground="{DynamicResource DangerBrush}"/>
                                <ComboBoxItem Content="On Deck" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}" Foreground="{DynamicResource WarningBrush}"/>
                                <ComboBoxItem Content="In Progress" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}" Foreground="{DynamicResource SuccessBrush}"/>
                                <ComboBoxItem Content="Done" Tag="{x:Static models:OrderItem+OrderStatus.Done}" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" Margin="16,14">
                        <TextBlock Text="ðŸ”—" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="{DynamicResource TextSecondaryBrush}" Visibility="{Binding LinkedGroupId, Converter={StaticResource LinkedGroupToVisibilityConverter}}"/>

                        <StackPanel Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                            <Grid Margin="0,6,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Transfer #s..." FontSize="13" Foreground="{DynamicResource TextDisabledBrush}" FontStyle="Italic" IsHitTestVisible="False" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBox Grid.Column="0" Text="{Binding TransferNumbers, UpdateSourceTrigger=LostFocus}" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Padding="0" GotFocus="EditableField_GotFocus" LostFocus="EditableField_LostFocus"/>

                                <Button Grid.Column="1" Tag="DragHandle" Style="{StaticResource DragHandleButtonStyle}" ToolTip="Drag to reorder" Margin="6,0,0,0" HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid Margin="0,3,0,0">
                                <TextBlock Text="WHS #s..." FontSize="13" Foreground="{DynamicResource TextDisabledBrush}" FontStyle="Italic" IsHitTestVisible="False" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=LostFocus}" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13" Padding="0" GotFocus="EditableField_GotFocus" LostFocus="EditableField_LostFocus"/>
                            </Grid>

                            <TextBlock Text="{Binding TimeInProgressDisplay}" Foreground="{DynamicResource TextTertiaryBrush}" FontSize="12" FontFamily="Consolas" Margin="0,6,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,6,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Grid>
                                <TextBlock Text="Write your note here..." FontSize="13" Foreground="{DynamicResource TextDisabledBrush}" FontStyle="Italic" IsHitTestVisible="False" VerticalAlignment="Top">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NoteContent}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding NoteContent}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <RichTextBox Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13" Padding="0" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" PreviewKeyDown="NoteContent_PreviewKeyDown" Loaded="NoteContent_Loaded" LostFocus="NoteContent_LostFocus" GotFocus="EditableField_GotFocus"/>
                            </Grid>

                            <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="4" Padding="4,2" Margin="0,8,0,0" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="B" ToolTip="Bold (**text**)" Click="FormatBold_Click" Tag="{Binding}" FontWeight="Bold" FontSize="11" Padding="6,2" Margin="1" Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="I" ToolTip="Italic (*text*)" Click="FormatItalic_Click" Tag="{Binding}" FontStyle="Italic" FontSize="11" Padding="6,2" Margin="1" Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="U" ToolTip="Underline (__text__)" Click="FormatUnderline_Click" Tag="{Binding}" FontSize="11" Padding="6,2" Margin="1" Style="{DynamicResource GhostButtonStyle}">
                                        <Button.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="U" TextDecorations="Underline"/>
                                            </DataTemplate>
                                        </Button.ContentTemplate>
                                    </Button>
                                    <Rectangle Width="1" Fill="{DynamicResource BorderBrush}" Margin="4,2"/>
                                    <Button Content="â€¢" ToolTip="Insert bullet point" Click="InsertBullet_Click" Tag="{Binding}" FontSize="14" Padding="6,2" Margin="1" Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="â˜" ToolTip="Insert checkbox" Click="InsertCheckbox_Click" Tag="{Binding}" FontSize="12" Padding="6,2" Margin="1" Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="ðŸ•" ToolTip="Insert timestamp" Click="InsertTimestamp_Click" Tag="{Binding}" FontSize="11" Padding="6,2" Margin="1" Style="{DynamicResource GhostButtonStyle}"/>
                                    <Button Content="â€•" ToolTip="Insert divider" Click="InsertDivider_Click" Tag="{Binding}" FontSize="11" Padding="6,2" Margin="1" Style="{DynamicResource GhostButtonStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Actions -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="12,8">
                        <Button Content="Delete" Click="DeleteNote_Click" Visibility="Collapsed" Style="{DynamicResource GhostButtonStyle}" Padding="10,6" FontSize="12" HorizontalAlignment="Right" Foreground="{DynamicResource DangerBrush}"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for merged order cards (shows all members side-by-side with unified status) -->
        <DataTemplate x:Key="OrderItemGroupMergedTemplate" DataType="{x:Type vm:OrderItemGroup}">
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,16,16"
                    Background="{Binding First.Status, Converter={StaticResource StatusToCardBrushConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="{StaticResource CardColorBarHeight}"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Unified Color Bar -->
                    <Border Grid.Row="0" Height="{StaticResource CardColorBarHeight}" Margin="-16,-12,-16,0" CornerRadius="8,8,0,0"
                            Background="{Binding First.Status, Converter={StaticResource StatusToColorConverter}}"/>

                    <!-- Unified Header Section -->
                        <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}"
                            Padding="16,10" Margin="-16,0,-16,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ”—" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Merged Order Group"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource AccentBrush}"
                                        CornerRadius="10"
                                        Padding="6,2"
                                        Margin="8,0,0,0">
                                    <TextBlock Text="{Binding Count, StringFormat='{}{0} orders'}"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <!-- Unified Status ComboBox -->
                            <ComboBox HorizontalAlignment="Right"
                                      SelectedValue="{Binding First.Status, Mode=TwoWay}"
                                      SelectionChanged="UnifiedStatusComboBox_SelectionChanged"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Padding="8,6"
                                      MinHeight="28"
                                      MinWidth="100"
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Not Ready" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}" Foreground="{DynamicResource DangerBrush}"/>
                                <ComboBoxItem Content="On Deck" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}" Foreground="{DynamicResource WarningBrush}"/>
                                <ComboBoxItem Content="In Progress" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}" Foreground="{DynamicResource SuccessBrush}"/>
                                <ComboBoxItem Content="Done" Tag="{x:Static models:OrderItem+OrderStatus.Done}" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Order Sections (Side-by-Side) -->
                    <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Members}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" MaxWidth="680"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                        <Border>
                                            <Border.Style>
                                                <Style TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
                                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                                    <Style.Triggers>
                                                        <!-- Remove right border on last section -->
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                        <StackPanel>
                                            <!-- Section Header with Drag Handle -->
                                            <Grid Margin="0,0,0,8">
                                                <TextBlock Text="{Binding VendorName, TargetNullValue='Order'}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"/>

                                                <!-- Drag Handle -->
                                                <Border Background="{DynamicResource SurfaceHoverBrush}"
                                                        CornerRadius="4"
                                                        Padding="4,2"
                                                        HorizontalAlignment="Right"
                                                        Cursor="Hand"
                                                        ToolTip="Drag to move this order separately"
                                                        PreviewMouseLeftButtonDown="SectionDragHandle_PreviewMouseLeftButtonDown"
                                                        MouseMove="SectionDragHandle_MouseMove">
                                                    <TextBlock Text="â‹®â‹®"
                                                               FontSize="10"
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               FontWeight="Bold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Editable VendorName -->
                                            <Grid>
                                                <TextBlock Text="Vendor name..."
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding VendorName}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBox Text="{Binding VendorName, UpdateSourceTrigger=LostFocus}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         FontSize="15"
                                                         FontWeight="SemiBold"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         Padding="0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>

                                            <!-- Editable Transfer Numbers -->
                                            <Grid Margin="0,6,0,0">
                                                <TextBlock Text="Transfer #s..."
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBox Text="{Binding TransferNumbers, UpdateSourceTrigger=LostFocus}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                         FontSize="13"
                                                         Padding="0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>

                                            <!-- Editable WHS Shipment Numbers -->
                                            <Grid Margin="0,4,0,0">
                                                <TextBlock Text="WHS #s..."
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBox Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=LostFocus}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                         FontSize="13"
                                                         Padding="0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>

                                            <!-- TimeInProgress Display -->
                                            <TextBlock Text="{Binding TimeInProgressDisplay}"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       FontSize="12"
                                                       FontFamily="Consolas"
                                                       Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Actions Footer -->
                    <Border Grid.Row="3"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="12,8">
                        <Button Content="Unlink Group"
                                Click="Unlink_Click"
                                Style="{DynamicResource GhostButtonStyle}"
                                Padding="10,6"
                                FontSize="12"
                                HorizontalAlignment="Right"
                                Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
        
        <!-- Style for phantom placeholder text -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Sidebar Navigation RadioButton Style -->
        <Style x:Key="SidebarNavButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bg" Background="Transparent" CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#3b1d5e"/>
                                <Setter Property="Foreground" Value="#a855f7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Sidebar Action Button Style -->
        <Style x:Key="SidebarActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- App Header -->
                <Border Grid.Row="0" Padding="20,24,20,20" BorderBrush="{DynamicResource SurfaceHoverBrush}" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <Border Width="56" Height="56" CornerRadius="16" HorizontalAlignment="Left" Margin="0,0,0,16">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#a855f7" Offset="0"/>
                                    <GradientStop Color="#7c3aed" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="ðŸ“‹" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Order Log" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Order &amp; Notes Tracking" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Navigation -->
                <StackPanel Grid.Row="1" Margin="12,16,12,0">
                    <TextBlock Text="VIEWS" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource TextDisabledBrush}" 
                               Margin="14,0,0,10" />
                    
                    <RadioButton x:Name="ActiveTabRadio" GroupName="NavTabs" IsChecked="True" 
                                 Style="{StaticResource SidebarNavButton}"
                                 Checked="ActiveTab_Checked">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Active Orders" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton x:Name="ArchivedTabRadio" GroupName="NavTabs" 
                                 Style="{StaticResource SidebarNavButton}"
                                 Checked="ArchivedTab_Checked">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¦" FontSize="16" Margin="0,0,12,0"/>
                            <TextBlock Text="Archived" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <Border Height="1" Background="{DynamicResource SurfaceHoverBrush}" Margin="0,16,0,16"/>
                    
                    <TextBlock Text="ACTIONS" FontSize="10" FontWeight="SemiBold" Foreground="{DynamicResource TextDisabledBrush}" 
                               Margin="14,0,0,10"/>
                    
                    <Button x:Name="AddOrderButton" Click="AddBlankOrder_Click" Style="{StaticResource SidebarActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" FontSize="16" Margin="0,0,12,0" Foreground="{DynamicResource SuccessBrush}"/>
                            <TextBlock Text="Add Order" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="AddNoteButton" Click="AddBlankNote_Click" Style="{StaticResource SidebarActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,12,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock Text="Add Note" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ExportToCsvCommand}" Style="{StaticResource SidebarActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¤" FontSize="16" Margin="0,0,12,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBlock Text="Export CSV" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Bottom Section - Status -->
                <StackPanel Grid.Row="2" Margin="12,0,12,16">
                    <Border Height="1" Background="{DynamicResource SurfaceHoverBrush}" Margin="0,0,0,12"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               FontSize="11"
                               Margin="14,0,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Notes List -->
            <ScrollViewer Grid.Row="0" Padding="20,20">
                <Grid>
                    <!-- Active Notes Panel -->
                    <StackPanel x:Name="ActiveItemsPanel">
                        <ItemsControl ItemsSource="{Binding DisplayItems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"
                                               Background="Transparent">
                                        <!-- Drag behaviors removed to disable drag-and-drop in main view -->
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <!-- Default: Use single item template for non-grouped items -->
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <ContentControl Content="{Binding First}" ContentTemplate="{StaticResource OrderItemTemplate}"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <!-- When IsGroup is true, use merged template -->
                                                    <DataTrigger Binding="{Binding IsGroup}" Value="True">
                                                        <Setter Property="ContentTemplate" Value="{StaticResource OrderItemGroupMergedTemplate}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                </StackPanel>
            
                <!-- Archived Notes Panel (separate tab) -->
                <StackPanel x:Name="ArchivedItemsPanel" Visibility="Collapsed">
                    <ItemsControl ItemsSource="{Binding ArchivedItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                    Width="320"
                                        Margin="0,0,16,16"
                                    Background="{Binding Status, Converter={StaticResource StatusToCardBrushConverter}}"
                                    AllowDrop="True"
                                    PreviewMouseLeftButtonDown="Item_PreviewMouseLeftButtonDown"
                                    MouseMove="Item_MouseMove"
                                    DragOver="Item_DragOver"
                                    Drop="Item_Drop">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                    <Setter Property="Background" Value="{DynamicResource OrderLogCardNoteBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                                            <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="{StaticResource CardColorBarHeight}"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                                            <!-- Color Bar -->
                                                            <Border Height="{StaticResource CardColorBarHeight}" Margin="-16,-12,-16,0" Background="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}"
                                                                    CornerRadius="8,8,0,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Row="1" Margin="16,12">
                                            <!-- Vendor Name (for orders) or Note Title (for sticky notes) -->
                                            <TextBlock FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding VendorName}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Text" Value="{Binding NoteTitle}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Order fields (hidden for sticky notes) -->
                                            <StackPanel Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                                                
                                                <TextBlock Text="{Binding TransferNumbers}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="13"
                                                           Margin="0,6,0,0"/>

                                                <TextBlock Text="{Binding WhsShipmentNumbers}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="13"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                            
                                            <!-- Sticky note content -->
                                            <TextBlock Text="{Binding NoteContent}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontSize="13"
                                                       Margin="0,6,0,0"
                                                       TextWrapping="Wrap"
                                                       Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Empty state for archived -->
                    <TextBlock Text="No archived items"
                               FontSize="14"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ArchivedItems.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Undo Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10"
                Visibility="{Binding UndoAvailable, Converter={StaticResource BoolToVis}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="{Binding UndoMessage}"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           FontSize="12"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <Button Content="Undo"
                        Command="{Binding UndoStatusChangeAsyncCommand}"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Padding="10,4"
                        FontSize="11"/>
            </StackPanel>
        </Border>
        </Grid>
    </Grid>
</UserControl>
