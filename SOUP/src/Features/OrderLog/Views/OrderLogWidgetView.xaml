<UserControl x:Class="SOUP.Features.OrderLog.Views.OrderLogWidgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Style for phantom placeholder text -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource SurfaceBrush}" Padding="14,10">
            <TextBlock Text="Order Log"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource AccentBrush}"/>
        </Border>

        <!-- Add Note Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Content="âž• Add Order"
                        Click="AddBlankOrder_Click"
                        Height="40"
                        Padding="12,8"
                        FontSize="13"
                        Style="{DynamicResource SuccessButtonStyle}"/>
                
                <Button Grid.Column="2"
                        Content="ðŸ“ Add Note"
                        Click="AddBlankNote_Click"
                        Height="40"
                        Padding="12,8"
                        FontSize="13"
                        Style="{DynamicResource SecondaryButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Notes List -->
        <ScrollViewer Grid.Row="2" Padding="10">
            <StackPanel>
                <!-- Active Notes -->
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SurfaceBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,0,0,14">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <!-- Set Status - only for orders -->
                                        <MenuItem Header="Set Status">
                                            <MenuItem.Style>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </MenuItem.Style>
                                            <MenuItem Header="Not Ready" Click="SetStatus_NotReady"/>
                                            <MenuItem Header="On Deck" Click="SetStatus_OnDeck"/>
                                            <MenuItem Header="In Progress" Click="SetStatus_InProgress"/>
                                            <MenuItem Header="Done" Click="SetStatus_Done"/>
                                        </MenuItem>
                                        <!-- Change Color - only for sticky notes -->
                                        <MenuItem Header="Change Color..." Click="ChangeColor_Click">
                                            <MenuItem.Style>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </MenuItem.Style>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Archive" Click="ArchiveNote_Click"/>
                                        <MenuItem Header="Delete" Click="DeleteNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Color Bar - Status color for Orders, Custom color for Notes -->
                                    <Border CornerRadius="8,8,0,0"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorBar_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <!-- Default: use status color for orders -->
                                                <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.OnDeck}">
                                                        <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.InProgress}">
                                                        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.Done}">
                                                        <Setter Property="Background" Value="{DynamicResource TextTertiaryBrush}"/>
                                                    </DataTrigger>
                                                    <!-- Sticky notes use custom color -->
                                                    <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                        <Setter Property="Background" Value="{Binding ColorHex}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Content -->
                                    <StackPanel Grid.Row="1" Margin="16,14">
                                        <Grid>
                                            <!-- Editable VendorName for Orders (hidden for sticky notes) -->
                                            <TextBox Text="{Binding VendorName, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     FontSize="15"
                                                     FontWeight="SemiBold"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     Padding="0"
                                                     Margin="0,0,70,0"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            
                                            <!-- Title for Sticky Notes (editable with placeholder) -->
                                            <Grid>
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <TextBox x:Name="NoteTitleBox"
                                                         Text="{Binding NoteTitle, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         FontSize="15" 
                                                         FontWeight="SemiBold" 
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         Padding="0"
                                                         Margin="0,0,70,0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                                <TextBlock Text="Note title..." 
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,70,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding NoteTitle}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding NoteTitle}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                            
                                            <!-- Status badge (hidden for sticky notes) -->
                                            <Border HorizontalAlignment="Right"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Cursor="Hand"
                                                    MouseLeftButtonDown="StatusToggle_Click">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.OnDeck}">
                                                                <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.InProgress}">
                                                                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.Done}">
                                                                <Setter Property="Background" Value="{DynamicResource TextTertiaryBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource TextOnPrimaryBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Not Ready"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.OnDeck}">
                                                                    <Setter Property="Text" Value="On Deck"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.InProgress}">
                                                                    <Setter Property="Text" Value="In Progress"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:OrderItem+OrderStatus.Done}">
                                                                    <Setter Property="Text" Value="Done"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>

                                        <!-- ORDER FIELDS (hidden for sticky notes) -->
                                        <StackPanel>
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            
                                            <!-- Editable Transfer Numbers -->
                                            <TextBox Text="{Binding TransferNumbers, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     FontSize="13"
                                                     Margin="0,6,0,0"
                                                     Padding="0"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus"/>

                                            <!-- Editable WHS Shipment Numbers -->
                                            <TextBox Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     FontSize="13"
                                                     Margin="0,3,0,0"
                                                     Padding="0"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus"/>

                                            <TextBlock Text="{Binding TimeInProgressDisplay}"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       FontSize="12"
                                                       FontFamily="Consolas"
                                                       Margin="0,6,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- STICKY NOTE CONTENT (visible only for sticky notes, with placeholder) -->
                                        <Grid Margin="0,6,0,0">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <TextBox Text="{Binding NoteContent, UpdateSourceTrigger=PropertyChanged}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     FontSize="13"
                                                     Padding="0"
                                                     TextWrapping="Wrap"
                                                     AcceptsReturn="True"
                                                     MaxHeight="60"
                                                     VerticalScrollBarVisibility="Auto"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus"/>
                                            <TextBlock Text="Write your note here..." 
                                                       FontSize="13"
                                                       Foreground="{DynamicResource TextDisabledBrush}"
                                                       FontStyle="Italic"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Top">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteContent}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding NoteContent}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            
                <!-- Archived Notes Section -->
                <StackPanel Visibility="{Binding ShowArchived, Converter={StaticResource BoolToVis}}"
                            Margin="0,20,0,0">
                    <TextBlock Text="ðŸ“¦ Archived"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding ArchivedItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,0,0,10"
                                        Opacity="0.7">
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                                            <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Color Bar -->
                                        <Border Background="{Binding ColorHex}"
                                                CornerRadius="8,8,0,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Row="1" Margin="12,8">
                                            <TextBlock Text="{Binding VendorName}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Text="{Binding TransferNumbers}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontSize="12"
                                                       Margin="0,4,0,0"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="14,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ToggleArchivedCommand}"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Toggle archived">
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="ðŸ“¦"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowArchived}" Value="True">
                                            <Setter Property="Text" Value="ðŸ“¦âœ“"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>
                    <Button Command="{Binding ExportToCsvCommand}"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Export to CSV">
                        <TextBlock Text="ðŸ“¤"/>
                    </Button>
                    <Button Click="OpenFullView_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Open full view">
                        <TextBlock Text="â†—"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
