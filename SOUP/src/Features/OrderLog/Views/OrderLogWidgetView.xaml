<UserControl x:Class="SOUP.Features.OrderLog.Views.OrderLogWidgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models"
             xmlns:services="clr-namespace:SOUP.Services"
             xmlns:converters="clr-namespace:SOUP.Features.OrderLog.Converters"
             xmlns:vm="clr-namespace:SOUP.Features.OrderLog.ViewModels">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToCardBrushConverter x:Key="StatusToCardBrushConverter"/>
        <converters:ShowForOrdersConverter x:Key="ShowForOrdersConverter"/>
        <converters:ShowForNotesConverter x:Key="ShowForNotesConverter"/>
        <converters:LinkedGroupToVisibilityConverter x:Key="LinkedGroupToVisibilityConverter"/>
        
        <!-- Style for phantom placeholder text -->
        <Style x:Key="PlaceholderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Template for merged order cards in widget view (vertical stacking) -->
        <DataTemplate x:Key="OrderItemGroupMergedTemplate" DataType="{x:Type vm:OrderItemGroup}">
            <Border BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,0,0,14"
                    Background="{Binding First.Status, Converter={StaticResource StatusToCardBrushConverter}}"
                    AllowDrop="True"
                    PreviewMouseLeftButtonDown="MergedCard_PreviewMouseLeftButtonDown"
                    MouseMove="MergedCard_MouseMove"
                    DragOver="MergedCard_DragOver"
                    DragLeave="MergedCard_DragLeave"
                    Drop="MergedCard_Drop">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Unified Color Bar -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0"
                            Background="{Binding First.Status, Converter={StaticResource StatusToColorConverter}}"/>

                    <!-- Unified Header Section -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}"
                            Padding="14,10" Margin="0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ”—" FontSize="12" Margin="0,0,6,0"/>
                                <TextBlock Text="Merged"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource AccentBrush}"
                                        CornerRadius="10"
                                        Padding="5,2"
                                        Margin="6,0,0,0">
                                    <TextBlock Text="{Binding Count, StringFormat='{}{0} orders'}"
                                               FontSize="9"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <!-- Unified Status ComboBox -->
                            <ComboBox HorizontalAlignment="Right"
                                      SelectedValue="{Binding First.Status, Mode=TwoWay}"
                                      SelectionChanged="UnifiedStatusComboBox_SelectionChanged"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Padding="8,6"
                                      MinHeight="28"
                                      MinWidth="100"
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Not Ready" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}" Foreground="{DynamicResource DangerBrush}"/>
                                <ComboBoxItem Content="On Deck" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}" Foreground="{DynamicResource WarningBrush}"/>
                                <ComboBoxItem Content="In Progress" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}" Foreground="{DynamicResource SuccessBrush}"/>
                                <ComboBoxItem Content="Done" Tag="{x:Static models:OrderItem+OrderStatus.Done}" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Order Sections (Vertical Stack) -->
                    <ItemsControl Grid.Row="2" ItemsSource="{Binding Members}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        Padding="16,12">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Style.Triggers>
                                                <!-- Remove bottom border on last section -->
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <!-- Section Header with Drag Handle -->
                                        <Grid Margin="0,0,0,8">
                                            <TextBlock Text="{Binding VendorName, TargetNullValue='Order'}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"/>

                                            <!-- Drag Handle -->
                                            <Border Background="{DynamicResource SurfaceHoverBrush}"
                                                    CornerRadius="4"
                                                    Padding="4,2"
                                                    HorizontalAlignment="Right"
                                                    Cursor="Hand"
                                                    ToolTip="Drag to move this order separately"
                                                    PreviewMouseLeftButtonDown="SectionDragHandle_PreviewMouseLeftButtonDown"
                                                    MouseMove="SectionDragHandle_MouseMove">
                                                <TextBlock Text="â‹®â‹®"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                           FontWeight="Bold"/>
                                            </Border>
                                        </Grid>

                                        <!-- Editable VendorName -->
                                        <Grid>
                                            <TextBlock Text="Vendor name..."
                                                       FontSize="15"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextDisabledBrush}"
                                                       FontStyle="Italic"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding VendorName}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBox Text="{Binding VendorName, UpdateSourceTrigger=LostFocus}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     FontSize="15"
                                                     FontWeight="SemiBold"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     Padding="0"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus"/>
                                        </Grid>

                                        <!-- Editable Transfer Numbers -->
                                        <Grid Margin="0,6,0,0">
                                            <TextBlock Text="Transfer #s..."
                                                       FontSize="13"
                                                       Foreground="{DynamicResource TextDisabledBrush}"
                                                       FontStyle="Italic"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TransferNumbers}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TransferNumbers}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBox Text="{Binding TransferNumbers, UpdateSourceTrigger=LostFocus}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     FontSize="13"
                                                     Padding="0"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus"/>
                                        </Grid>

                                        <!-- Editable WHS Shipment Numbers -->
                                        <Grid Margin="0,3,0,0">
                                            <TextBlock Text="WHS #s..."
                                                       FontSize="13"
                                                       Foreground="{DynamicResource TextDisabledBrush}"
                                                       FontStyle="Italic"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBox Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=LostFocus}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                     FontSize="13"
                                                     Padding="0"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus"/>
                                        </Grid>

                                        <!-- TimeInProgress Display -->
                                        <TextBlock Text="{Binding TimeInProgressDisplay}"
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   FontSize="12"
                                                   FontFamily="Consolas"
                                                   Margin="0,6,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Actions Footer -->
                    <Border Grid.Row="3"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="12,8">
                        <Button Content="Unlink"
                                Click="Unlink_Click"
                                Style="{DynamicResource GhostButtonStyle}"
                                Padding="8,4"
                                FontSize="11"
                                HorizontalAlignment="Right"
                                Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource SurfaceBrush}" 
                Padding="16,14"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="Order Log"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Tab Bar + Add Buttons -->
        <Border Grid.Row="1"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Tabs -->
                <Border Background="{DynamicResource BackgroundBrush}" 
                        CornerRadius="8" 
                        Margin="12,10,12,0"
                        Padding="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="ActiveTabButton"
                                Content="Active"
                                Click="ActiveTab_Click"
                                Height="30"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Background="{DynamicResource SurfaceBrush}"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                BorderThickness="0"
                                Margin="0,0,2,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="TabBorder" Background="{TemplateBinding Background}" CornerRadius="6" Padding="12,6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="ArchivedTabButton"
                                Grid.Column="1"
                                Content="ðŸ“¦ Archived"
                                Click="ArchivedTab_Click"
                                Height="30"
                                FontSize="12"
                                Background="Transparent"
                                Foreground="{DynamicResource TextSecondaryBrush}"
                                BorderThickness="0"
                                Margin="2,0,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="TabBorder" Background="{TemplateBinding Background}" CornerRadius="6" Padding="12,6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Add Buttons (only show on Active tab) -->
                <Grid Grid.Row="1" Margin="12,10,12,12" x:Name="AddButtonsPanel">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Content="âž• Add Order"
                            Click="AddBlankOrder_Click"
                            Height="34"
                            Padding="12,8"
                            FontSize="12"
                            Style="{DynamicResource SuccessButtonStyle}"/>
                    
                    <Button Grid.Column="2"
                            Content="ðŸ“ Add Note"
                            Click="AddBlankNote_Click"
                            Height="34"
                            Padding="12,8"
                            FontSize="12"
                            Style="{DynamicResource SecondaryButtonStyle}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Notes List -->
        <ScrollViewer Grid.Row="2" Padding="12">
            <Grid>
                <!-- Active Notes Panel -->
                <StackPanel x:Name="ActiveItemsPanel">
                    <ItemsControl ItemsSource="{Binding DisplayItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <!-- Default: Display single item -->
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <ContentControl Content="{Binding First}">
                                                        <ContentControl.ContentTemplate>
                                                            <DataTemplate>
                                                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Margin="0,0,0,14"
                                    Background="{Binding Status, Converter={StaticResource StatusToCardBrushConverter}}"
                                    AllowDrop="True"
                                    PreviewMouseLeftButtonDown="Item_PreviewMouseLeftButtonDown"
                                    MouseMove="Item_MouseMove"
                                    DragOver="Item_DragOver"
                                    DragLeave="Item_DragLeave"
                                    Drop="Item_Drop">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                <Setter Property="Background" Value="{DynamicResource OrderLogCardNoteBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <!-- Set Status - only for orders -->
                                        <MenuItem Header="Set Status"
                                                  Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                                            <MenuItem Header="Not Ready" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}"/>
                                            <MenuItem Header="On Deck" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}"/>
                                            <MenuItem Header="In Progress" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}"/>
                                            <MenuItem Header="Done" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.Done}"/>
                                        </MenuItem>
                                        <MenuItem Header="Move Up" Click="MoveUp_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                                        <MenuItem Header="Move Down" Click="MoveDown_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                                        <!-- Change Color - only for sticky notes -->
                                        <MenuItem Header="Change Color..." Click="ChangeColor_Click"
                                                  Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}"/>
                                        <MenuItem Header="Link with..." Click="LinkWith_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                                        <MenuItem Header="Unlink" Click="Unlink_Click" Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"/>
                                        <Separator/>
                                        <MenuItem Header="Archive" Click="ArchiveNote_Click"/>
                                        <MenuItem Header="Delete" Click="DeleteNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Color Bar - Status color for Orders, Custom color for Notes -->
                                    <Border CornerRadius="8,8,0,0"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ColorBar_Click"
                                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <!-- Sticky notes use custom color -->
                                                    <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                        <Setter Property="Background" Value="{Binding ColorHex}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Content -->
                                    <StackPanel Grid.Row="1" Margin="16,14">
                                        <TextBlock Text="ðŸ”—" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Visibility="{Binding LinkedGroupId, Converter={StaticResource LinkedGroupToVisibilityConverter}}"/>
                                        <Grid>
                                            <!-- Editable VendorName for Orders (hidden for sticky notes) -->
                                            <Grid Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                                                <TextBlock Text="Vendor name..." 
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,70,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding VendorName}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBox Text="{Binding VendorName, UpdateSourceTrigger=LostFocus}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         FontSize="15"
                                                         FontWeight="SemiBold"
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         Padding="0"
                                                         Margin="0,0,70,0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>
                                            
                                            <!-- Title for Sticky Notes (editable with placeholder) -->
                                            <Grid Visibility="{Binding NoteType, Converter={StaticResource ShowForNotesConverter}}">
                                                <TextBlock Text="Note title..." 
                                                           FontSize="15"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,70,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding NoteTitle}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding NoteTitle}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBox x:Name="NoteTitleBox"
                                                         Text="{Binding NoteTitle, UpdateSourceTrigger=LostFocus}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         FontSize="15" 
                                                         FontWeight="SemiBold" 
                                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                                         Padding="0"
                                                         Margin="0,0,70,0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>
                                            
                                            <!-- Status ComboBox (hidden for sticky notes) -->
                                            <ComboBox HorizontalAlignment="Right"
                                                      SelectedValue="{Binding Status, Mode=TwoWay}"
                                                      SelectionChanged="StatusComboBox_SelectionChanged"
                                                      FontSize="11"
                                                      FontWeight="SemiBold"
                                                      Padding="8,6"
                                                      MinHeight="28"
                                                      MinWidth="100"
                                                      Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}"
                                                      Style="{StaticResource ModernComboBoxStyle}">
                                                <ComboBoxItem Content="Not Ready" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}" Foreground="{DynamicResource DangerBrush}"/>
                                                <ComboBoxItem Content="On Deck" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}" Foreground="{DynamicResource WarningBrush}"/>
                                                <ComboBoxItem Content="In Progress" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}" Foreground="{DynamicResource SuccessBrush}"/>
                                                <ComboBoxItem Content="Done" Tag="{x:Static models:OrderItem+OrderStatus.Done}" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                            </ComboBox>
                                        </Grid>

                                        <!-- ORDER FIELDS (hidden for sticky notes) -->
                                        <StackPanel Visibility="{Binding NoteType, Converter={StaticResource ShowForOrdersConverter}}">
                                            
                                            <!-- Editable Transfer Numbers -->
                                            <Grid Margin="0,6,0,0">
                                                <TextBlock Text="Transfer #s..." 
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TransferNumbers}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBox Text="{Binding TransferNumbers, UpdateSourceTrigger=LostFocus}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                         FontSize="13"
                                                         Padding="0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>

                                            <!-- Editable WHS Shipment Numbers -->
                                            <Grid Margin="0,3,0,0">
                                                <TextBlock Text="WHS #s..." 
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBox Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=LostFocus}"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                         FontSize="13"
                                                         Padding="0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>

                                            <TextBlock Text="{Binding TimeInProgressDisplay}"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       FontSize="12"
                                                       FontFamily="Consolas"
                                                       Margin="0,6,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- STICKY NOTE CONTENT (visible only for sticky notes, with placeholder) -->
                                        <StackPanel Margin="0,6,0,0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>

                                            <!-- Note content -->
                                            <Grid>
                                                <TextBlock Text="Write your note here..."
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Top">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding NoteContent}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding NoteContent}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <RichTextBox Background="Transparent"
                                                             BorderThickness="0"
                                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                                             FontSize="13"
                                                             Padding="0"
                                                             AcceptsReturn="True"
                                                             VerticalScrollBarVisibility="Auto"
                                                             PreviewKeyDown="NoteContent_PreviewKeyDown"
                                                             Loaded="NoteContent_Loaded"
                                                             LostFocus="NoteContent_LostFocus"
                                                             GotFocus="EditableField_GotFocus"/>
                                            </Grid>

                                            <!-- Text Formatting Toolbar -->
                                            <Border Background="{DynamicResource SurfaceBrush}"
                                                    CornerRadius="4"
                                                    Padding="4,2"
                                                    Margin="0,8,0,0"
                                                    HorizontalAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Formatting buttons -->
                                                    <Button Content="B" ToolTip="Bold (**text**)"
                                                            Click="FormatBold_Click" Tag="{Binding}"
                                                            FontWeight="Bold" FontSize="11" Padding="6,2" Margin="1"
                                                            Style="{DynamicResource GhostButtonStyle}"/>
                                                    <Button Content="I" ToolTip="Italic (*text*)"
                                                            Click="FormatItalic_Click" Tag="{Binding}"
                                                            FontStyle="Italic" FontSize="11" Padding="6,2" Margin="1"
                                                            Style="{DynamicResource GhostButtonStyle}"/>
                                                    <Button Content="U" ToolTip="Underline (__text__)"
                                                            Click="FormatUnderline_Click" Tag="{Binding}"
                                                            FontSize="11" Padding="6,2" Margin="1"
                                                            Style="{DynamicResource GhostButtonStyle}">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="U" TextDecorations="Underline"/>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>

                                                    <Rectangle Width="1" Fill="{DynamicResource BorderBrush}" Margin="4,2"/>

                                                    <!-- Insert buttons -->
                                                    <Button Content="â€¢" ToolTip="Insert bullet point"
                                                            Click="InsertBullet_Click" Tag="{Binding}"
                                                            FontSize="14" Padding="6,2" Margin="1"
                                                            Style="{DynamicResource GhostButtonStyle}"/>
                                                    <Button Content="â˜" ToolTip="Insert checkbox"
                                                            Click="InsertCheckbox_Click" Tag="{Binding}"
                                                            FontSize="12" Padding="6,2" Margin="1"
                                                            Style="{DynamicResource GhostButtonStyle}"/>
                                                    <Button Content="ðŸ•" ToolTip="Insert timestamp"
                                                            Click="InsertTimestamp_Click" Tag="{Binding}"
                                                            FontSize="11" Padding="6,2" Margin="1"
                                                            Style="{DynamicResource GhostButtonStyle}"/>
                                                    <Button Content="â€•" ToolTip="Insert divider"
                                                            Click="InsertDivider_Click" Tag="{Binding}"
                                                            FontSize="11" Padding="6,2" Margin="1"
                                                            Style="{DynamicResource GhostButtonStyle}"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ContentControl.ContentTemplate>
                                                    </ContentControl>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <!-- When IsGroup is true, use merged template -->
                                            <DataTrigger Binding="{Binding IsGroup}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource OrderItemGroupMergedTemplate}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </StackPanel>
            
                <!-- Archived Notes Panel (separate tab) -->
                <StackPanel x:Name="ArchivedItemsPanel" Visibility="Collapsed">
                    <ItemsControl ItemsSource="{Binding ArchivedItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Margin="0,0,0,12"
                                        Background="{Binding Status, Converter={StaticResource StatusToCardBrushConverter}}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                    <Setter Property="Background" Value="{DynamicResource OrderLogCardNoteBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                                            <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                                        </ContextMenu>
                                    </Border.ContextMenu>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Color Bar -->
                                        <Border Background="{Binding ColorHex}"
                                                CornerRadius="10,10,0,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Row="1" Margin="14,10">
                                            <!-- Vendor Name (for orders) or Note Title (for sticky notes) -->
                                            <TextBlock FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding VendorName}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Text" Value="{Binding NoteTitle}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Order fields (hidden for sticky notes) -->
                                            <StackPanel>
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                
                                                <TextBlock Text="{Binding TransferNumbers}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="12"
                                                           Margin="0,4,0,0"
                                                           TextTrimming="CharacterEllipsis"/>
                                                           
                                                <TextBlock Text="{Binding WhsShipmentNumbers}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="12"
                                                           Margin="0,2,0,0"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            
                                            <!-- Sticky note content -->
                                            <TextBlock Text="{Binding NoteContent}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       FontSize="12"
                                                       Margin="0,4,0,0"
                                                       TextWrapping="Wrap"
                                                       MaxHeight="40"
                                                       TextTrimming="CharacterEllipsis">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Empty state for archived -->
                    <TextBlock Text="No archived items"
                               FontSize="13"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ArchivedItems.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Now Playing Mini-Player (Collapsible - rises from bottom) -->
        <Border x:Name="NowPlayingSection" Grid.Row="3"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0">
            <StackPanel>
                <!-- Full Album Art Player (collapsible - rises from bottom) -->
                <Border x:Name="NowPlayingContent" 
                        Visibility="Collapsed"
                        MouseEnter="NowPlayingContent_MouseEnter"
                        MouseLeave="NowPlayingContent_MouseLeave">
                    <Grid>
                        <!-- Album Art Background - uses width binding for square aspect -->
                        <Border CornerRadius="0" 
                                Background="#1a1a1a"
                                MinHeight="180"
                                MaxHeight="280">
                            <Grid>
                                <!-- Album Art (fills entire area) -->
                                <Image x:Name="AlbumArtImage" 
                                       Stretch="UniformToFill"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                
                                <!-- Hidden blurred background reference (for code-behind compatibility) -->
                                <Image x:Name="AlbumArtBlurredBg" 
                                       Visibility="Collapsed"/>
                                
                                <!-- Placeholder when no art -->
                                <TextBlock x:Name="AlbumArtPlaceholder"
                                           Text="ðŸŽµ" 
                                           FontSize="64" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           Opacity="0.3"/>
                                
                                <!-- Gradient overlay for text readability -->
                                <Border>
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00000000" Offset="0"/>
                                            <GradientStop Color="#55000000" Offset="0.6"/>
                                            <GradientStop Color="#DD000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                
                                <!-- Track Info + Controls overlaid at bottom -->
                                <StackPanel VerticalAlignment="Bottom" Margin="12,0,12,10">
                                    <!-- Track Title -->
                                    <TextBlock x:Name="TrackTitleText"
                                               Text="Not Playing"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    
                                    <!-- Artist Name -->
                                    <TextBlock x:Name="ArtistNameText"
                                               Text=""
                                               FontSize="12"
                                               Foreground="#CCFFFFFF"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.4"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-- Playback Control Bar - Fades in on hover -->
                                <Border x:Name="ControlBar"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Background="#99000000"
                                        CornerRadius="25"
                                        Padding="8,4"
                                        Opacity="0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Previous Button -->
                                        <Button x:Name="PrevButton"
                                                Content="â®"
                                                Click="PrevTrack_Click"
                                                Background="Transparent"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="20"
                                                Width="44"
                                                Height="44"
                                                Cursor="Hand"
                                                ToolTip="Previous">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="Transparent" CornerRadius="22">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#33FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#55FFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Play/Pause Button -->
                                        <Button x:Name="PlayPauseButton"
                                                Content="â–¶"
                                                Click="PlayPause_Click"
                                                Background="White"
                                                Foreground="#1a1a1a"
                                                BorderThickness="0"
                                                FontSize="22"
                                                Width="50"
                                                Height="50"
                                                Margin="6,0"
                                                Cursor="Hand"
                                                ToolTip="Play/Pause">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" CornerRadius="25">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#EEFFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#CCFFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Next Button -->
                                        <Button x:Name="NextButton"
                                                Content="â­"
                                                Click="NextTrack_Click"
                                                Background="Transparent"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="20"
                                                Width="44"
                                                Height="44"
                                                Cursor="Hand"
                                                ToolTip="Next">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="Transparent" CornerRadius="22">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#33FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#55FFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Toggle Header (at bottom) -->
                <Border Background="Transparent" 
                        Padding="10,8"
                        Cursor="Hand"
                        MouseLeftButtonDown="NowPlayingHeader_Click"
                        ToolTip="Click to expand â€¢ Double-click to open Spotify">
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Animated Equalizer Bars -->
                            <Canvas x:Name="EqualizerPanel" Width="14" Height="12" Margin="0,0,6,0" Visibility="Collapsed">
                                <Rectangle x:Name="EqBar1" Canvas.Left="0" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="1"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="EqBar2" Canvas.Left="5" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="0.6"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="EqBar3" Canvas.Left="10" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="0.8"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Canvas>
                            <!-- Static music icon when not playing -->
                            <TextBlock x:Name="MusicIcon" Text="ðŸŽµ" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock x:Name="NowPlayingHeaderText" 
                                       Text="Now Playing" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <TextBlock x:Name="NowPlayingToggleIcon" 
                                   Text="â–²" 
                                   FontSize="10" 
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextTertiaryBrush}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="14,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ExportToCsvCommand}"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Export to CSV">
                        <TextBlock Text="ðŸ“¤"/>
                    </Button>
                    <Button Click="OpenFullView_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            Padding="10,4"
                            FontSize="14"
                            ToolTip="Open full view">
                        <TextBlock Text="â†—"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
