<UserControl x:Class="SOUP.Features.OrderLog.Views.OrderLogWidgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models"
             xmlns:services="clr-namespace:SOUP.Services"
             xmlns:converters="clr-namespace:SOUP.Features.OrderLog.Converters"
             xmlns:commonConverters="clr-namespace:SOUP.Converters"
             xmlns:vm="clr-namespace:SOUP.Features.OrderLog.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:SOUP.Features.OrderLog.Behaviors"
             xmlns:commonBehaviors="clr-namespace:SOUP.Behaviors">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Merge themes: base styles first, then colors, then widget-specific -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ModernStyles.xaml"/>
                <ResourceDictionary Source="/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="../Themes/OrderLogWidgetTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <commonConverters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToCardBrushConverter x:Key="StatusToCardBrushConverter"/>
        <converters:ShowForOrdersConverter x:Key="ShowForOrdersConverter"/>
        <converters:ShowForNotesConverter x:Key="ShowForNotesConverter"/>
        <converters:LinkedGroupToVisibilityConverter x:Key="LinkedGroupToVisibilityConverter"/>
        <converters:HexToBrushConverter x:Key="HexToBrushConverter"/>
        <converters:HexToColorConverter x:Key="HexToColorConverter"/>
        <converters:VendorNameGroupComparerConverter x:Key="VendorNameGroupComparer"/>
        
        <!-- Small Copy Button Style -->
        <Style x:Key="FieldCopyButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Copy to clipboard"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{DynamicResource SurfaceBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4" Padding="3">
                            <Path x:Name="Icon" Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1z M19,5H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7C21,5.9,20.1,5,19,5z M19,21H8V7h11V21z" 
                                  Fill="{DynamicResource TextSecondaryBrush}" 
                                  Stretch="Uniform" Width="12" Height="12"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Icon" Property="Fill" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

                <DataTemplate x:Key="OrderItemTemplate" DataType="{x:Type models:OrderItem}">
                    <Border Style="{StaticResource OrderLogWidgetElevatedCardStyle}" Margin="6" ClipToBounds="True">
                        <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Height="{StaticResource CardColorBarHeight}" CornerRadius="8,8,0,0"
                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}" MouseLeftButtonDown="ColorBar_Click"/>

                    <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}" Padding="14,10" Margin="0" MinHeight="36" Panel.ZIndex="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Multi-select checkbox (visible when multi-select mode is active) -->
                            <CheckBox Grid.Column="0"
                                      Tag="{Binding}"
                                      Margin="0,0,12,0"
                                      VerticalAlignment="Center"
                                      Visibility="Collapsed"/>

                            <!-- Link Count Badge -->
                            <Border Grid.Column="1"
                                    Background="{DynamicResource PrimaryBrush}"
                                    CornerRadius="10"
                                    Padding="8,4"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    ToolTip="This order is linked with other orders"
                                    Visibility="{Binding LinkedGroupId, Converter={StaticResource LinkedGroupToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”—" FontSize="11" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding LinkedItemCount}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Vendor Name Display -->
                            <Grid Grid.Column="2">
                                <TextBlock Text="Vendor name..."
                                           FontSize="{DynamicResource CardFontSize}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextDisabledBrush}"
                                           FontStyle="Italic"
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding VendorName}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Text="{Binding VendorName, UpdateSourceTrigger=LostFocus}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="{DynamicResource CardFontSize}"
                                         FontWeight="SemiBold"
                                         Foreground="{DynamicResource TextPrimaryBrush}"
                                         CaretBrush="#00D4FF"
                                         SelectionBrush="{DynamicResource AccentBrush}"
                                         Padding="0"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Stretch"
                                         MinWidth="0"
                                         TabIndex="0"
                                         GotFocus="EditableField_GotFocus"
                                         LostFocus="EditableField_LostFocus"/>
                            </Grid>

                            <!-- Status ComboBox -->
                            <ComboBox Grid.Column="3"
                                      HorizontalAlignment="Right"
                                      SelectedValue="{Binding Status, Mode=TwoWay}"
                                      SelectedValuePath="Tag"
                                      SelectionChanged="StatusComboBox_SelectionChanged"
                                      TabIndex="1"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Padding="8,6"
                                      MinHeight="28"
                                      MinWidth="120"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Not Ready" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}" Foreground="{DynamicResource DangerBrush}"/>
                                <ComboBoxItem Content="On Deck" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}" Foreground="{DynamicResource WarningBrush}"/>
                                <ComboBoxItem Content="In Progress" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}" Foreground="{DynamicResource SuccessBrush}"/>
                                <ComboBoxItem Content="Done" Tag="{x:Static models:OrderItem+OrderStatus.Done}" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </ComboBox>

                            <Button Grid.Column="4" Style="{StaticResource WidgetDragHandleStyle}" Tag="DragHandle" IsTabStop="False"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" Margin="16,12">
                        <!-- Editable Transfer Numbers -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Style="{StaticResource FieldCopyButtonStyle}"
                                    Click="CopyTransferNumbers_Click" Tag="{Binding TransferNumbers}" IsTabStop="False"/>
                            <TextBlock Grid.Column="1" Text="Transfer #s..."
                                       FontSize="{DynamicResource CardFontSize}"
                                       Foreground="{DynamicResource TextDisabledBrush}"
                                       FontStyle="Italic"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TransferNumbers}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TransferNumbers}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBox Grid.Column="1" Text="{Binding TransferNumbers, UpdateSourceTrigger=LostFocus}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     FontSize="{DynamicResource CardFontSize}"
                                     CaretBrush="#00D4FF"
                                     SelectionBrush="{DynamicResource AccentBrush}"
                                     Padding="0"
                                     HorizontalAlignment="Stretch"
                                     MinWidth="0"
                                     TabIndex="2"
                                     GotFocus="EditableField_GotFocus"
                                     LostFocus="EditableField_LostFocus"/>
                        </Grid>

                        <!-- Editable WHS Shipment Numbers -->
                        <Grid Margin="0,3,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Style="{StaticResource FieldCopyButtonStyle}"
                                    Click="CopyWhsNumbers_Click" Tag="{Binding WhsShipmentNumbers}" IsTabStop="False"/>
                            <TextBlock Grid.Column="1" Text="WHS #s..."
                                       FontSize="{DynamicResource CardFontSize}"
                                       Foreground="{DynamicResource TextDisabledBrush}"
                                       FontStyle="Italic"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis" TextWrapping="NoWrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding WhsShipmentNumbers}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBox Grid.Column="1" Text="{Binding WhsShipmentNumbers, UpdateSourceTrigger=LostFocus}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     FontSize="{DynamicResource CardFontSize}"
                                     CaretBrush="#00D4FF"
                                     SelectionBrush="{DynamicResource AccentBrush}"
                                     Padding="0"
                                     HorizontalAlignment="Stretch"
                                     MinWidth="0"
                                     TabIndex="3"
                                     GotFocus="EditableField_GotFocus"
                                     LostFocus="EditableField_LostFocus"/>
                        </Grid>

                        <!-- TimeInProgress Display -->
                        <TextBlock Text="{Binding TimeInProgressDisplay}"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   FontSize="{DynamicResource CardFontSize}"
                                   FontFamily="Consolas"
                                   Margin="0,6,0,0"/>

                        <!-- Created timestamp -->
                        <TextBlock Text="{Binding CreatedAtDisplay}"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextDisabledBrush}"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for a single Sticky Note card - Windows sticky note style -->
        <DataTemplate x:Key="StickyNoteTemplate" DataType="{x:Type models:OrderItem}">
            <Border Margin="6" CornerRadius="8" Padding="12">
                <Border.Background>
                    <SolidColorBrush Color="{Binding ColorHex, Converter={StaticResource HexToColorConverter}}" Opacity="0.15"/>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="{Binding ColorHex, Converter={StaticResource HexToColorConverter}}" Opacity="0.3"/>
                </Border.BorderBrush>
                <Border.BorderThickness>1</Border.BorderThickness>
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Change Color..." Click="ChangeColor_Click" CommandParameter="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="Archive" Click="ArchiveNote_Click"/>
                        <MenuItem Header="Delete" Click="DeleteNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Note content -->
                    <Grid Grid.Row="0">
                        <TextBlock Text="Write your note..."
                                   FontSize="{DynamicResource CardFontSize}"
                                   Foreground="{DynamicResource TextDisabledBrush}"
                                   FontStyle="Italic"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Top"
                                   TextWrapping="Wrap"
                                   Margin="0,0,60,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding NoteContent}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding NoteContent}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <RichTextBox x:Name="NoteRichTextBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     CaretBrush="#00D4FF"
                                     FontSize="{DynamicResource CardFontSize}"
                                     Padding="0,0,60,24"
                                     MinHeight="80"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     IsDocumentEnabled="True"
                                     VerticalScrollBarVisibility="Auto"
                                     SpellCheck.IsEnabled="True"
                                     PreviewKeyDown="NoteContent_PreviewKeyDown"
                                     Loaded="NoteContent_Loaded"
                                     LostFocus="NoteContent_LostFocus"
                                     GotFocus="EditableField_GotFocus"
                                     Cursor="IBeam">
                            
                            <RichTextBox.InputBindings>
                                <KeyBinding Key="B" Modifiers="Control" Command="EditingCommands.ToggleBold"/>
                                <KeyBinding Key="I" Modifiers="Control" Command="EditingCommands.ToggleItalic"/>
                                <KeyBinding Key="U" Modifiers="Control" Command="EditingCommands.ToggleUnderline"/>
                                <KeyBinding Key="Z" Modifiers="Control" Command="ApplicationCommands.Undo"/>
                                <KeyBinding Key="Y" Modifiers="Control" Command="ApplicationCommands.Redo"/>
                            </RichTextBox.InputBindings>
                        </RichTextBox>
                    </Grid>

                    <!-- Formatting toolbar -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource SurfaceBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="0,6,0,0"
                            Margin="-12,6,-12,-12">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- Bold -->
                                <ToggleButton x:Name="BoldToggle" Click="FormatBold_Click" Tag="{Binding}"
                                    ToolTip="Bold (Ctrl+B)"
                                    Margin="2,0"
                                    Focusable="False" IsTabStop="False">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="B" FontWeight="Bold" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                                <!-- Italic -->
                                <ToggleButton x:Name="ItalicToggle" Click="FormatItalic_Click" Tag="{Binding}"
                                    ToolTip="Italic (Ctrl+I)"
                                    Margin="2,0"
                                    Focusable="False" IsTabStop="False">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="I" FontStyle="Italic" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                                <!-- Underline -->
                                <ToggleButton x:Name="UnderlineToggle" Click="FormatUnderline_Click" Tag="{Binding}"
                                    ToolTip="Underline (Ctrl+U)"
                                    Margin="2,0"
                                    Focusable="False" IsTabStop="False">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="U" TextDecorations="Underline" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                            <!-- Separator -->
                            <Border Width="1" Height="16" Background="{DynamicResource BorderBrush}" Margin="4,0"/>

                                <!-- Bullet List -->
                                <ToggleButton x:Name="BulletToggle" Click="InsertBullet_Click" Tag="{Binding}"
                                    ToolTip="Bullet List"
                                    Margin="2,0"
                                    Focusable="False" IsTabStop="False">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="6,4"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="â€¢" FontSize="14"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </StackPanel>
                    </Border>

                    <!-- Floating action buttons (top right) -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,-4,0">
                        <Button Click="QuickArchive_Click" ToolTip="Archive" Cursor="Hand" Margin="0,0,2,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="âœ“" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1"/>
                                            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Tag="DragHandle" Opacity="0.5">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource WidgetDragHandleStyle}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for archived Order cards -->
        <DataTemplate x:Key="ArchivedOrderItemTemplate" DataType="{x:Type models:OrderItem}">
            <Border Background="#18181b" BorderBrush="#27272a" BorderThickness="1" CornerRadius="8" Margin="6" Padding="0">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                        <Separator/>
                        <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}" InputGestureText="Ctrl+Del"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Color Bar (Done status = muted gray) -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Height="{StaticResource CardColorBarHeight}"
                            Background="{DynamicResource TextTertiaryBrush}"/>

                    <!-- Header -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}" Padding="14,10" Margin="0" MinHeight="36" Panel.ZIndex="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical" Grid.Column="0">
                                <TextBox Text="{Binding VendorName}" FontSize="{DynamicResource CardFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"
                                         Background="Transparent" BorderThickness="0" IsReadOnly="True" IsReadOnlyCaretVisible="False" Cursor="IBeam"
                                         Padding="0" Margin="0"/>
                            </StackPanel>

                            <!-- Restore Button -->
                            <Button Grid.Column="1" Click="QuickArchive_Click" ToolTip="Restore" Cursor="Hand" Margin="4,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="â†©ï¸ Restore" FontSize="{DynamicResource CardFontSize}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <StackPanel Grid.Row="2" Margin="16,14">
                        <TextBox Text="{Binding TransferNumbers}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{DynamicResource CardFontSize}" Margin="0,0,0,4"
                                 Background="Transparent" BorderThickness="0" IsReadOnly="True" IsReadOnlyCaretVisible="False" Cursor="IBeam" Padding="0"/>
                        <TextBox Text="{Binding WhsShipmentNumbers}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{DynamicResource CardFontSize}" Margin="0,0,0,4"
