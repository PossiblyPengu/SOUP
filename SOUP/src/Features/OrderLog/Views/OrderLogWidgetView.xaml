                            BorderThickness="1"
                            CornerRadius="12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ArchivedItems.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“¦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <TextBlock Text="No Archived Orders"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Archived orders will appear here"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
            
            <!-- Top fade/shadow overlay -->
            <Border VerticalAlignment="Top" Height="24" IsHitTestVisible="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#AA000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            
            <!-- Bottom fade/shadow overlay (subtle shadow under NowPlaying) -->
            <Border VerticalAlignment="Bottom" Height="18" IsHitTestVisible="False" Panel.ZIndex="49">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000000" Offset="0"/>
                        <GradientStop Color="#66000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <!-- Now Playing Mini-Player (Collapsible - rises from bottom) -->
        <Border x:Name="NowPlayingSection" Grid.Row="4"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
            Margin="0,-20,0,0"
            Panel.ZIndex="50"
                Visibility="{Binding ShowNowPlaying, Converter={StaticResource BoolToVis}, FallbackValue=Visible}">
            <Grid>
                <!-- (shadow moved outside NowPlaying; kept empty here) -->
                <StackPanel>
                <!-- Full Album Art Player (collapsible - rises from bottom) -->
                <Border x:Name="NowPlayingContent" 
                        Visibility="Collapsed"
                        MouseEnter="NowPlayingContent_MouseEnter"
                        MouseLeave="NowPlayingContent_MouseLeave">
                    <Grid>
                        <!-- Album Art Background - uses width binding for square aspect -->
                        <Border CornerRadius="0" 
                                Background="#18181b"
                                MinHeight="180"
                                MaxHeight="280">
                            <Grid>
                                <!-- Album Art (fills entire area) -->
                                <Image x:Name="AlbumArtImage" 
                                       Stretch="UniformToFill"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                
                                <!-- Hidden blurred background reference (for code-behind compatibility) -->
                                <Image x:Name="AlbumArtBlurredBg" 
                                       Visibility="Collapsed"/>
                                
                                <!-- Placeholder when no art -->
                                <TextBlock x:Name="AlbumArtPlaceholder"
                                           Text="ðŸŽµ" 
                                           FontSize="64" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           Opacity="0.3"/>
                                
                                <!-- Gradient overlay for text readability -->
                                <Border>
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00000000" Offset="0"/>
                                            <GradientStop Color="#55000000" Offset="0.6"/>
                                            <GradientStop Color="#DD000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                
                                <!-- Track Info + Controls overlaid at bottom -->
                                <StackPanel VerticalAlignment="Bottom" Margin="12,0,12,10">
                                    <!-- Track Title -->
                                    <TextBlock x:Name="TrackTitleText"
                                               Text="Not Playing"
                                               FontSize="{DynamicResource CardFontSize}"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    
                                    <!-- Artist Name -->
                                    <TextBlock x:Name="ArtistNameText"
                                               Text=""
                                               FontSize="{DynamicResource CardFontSize}"
                                               Foreground="{DynamicResource TextOnOverlayBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.4"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-- Playback Control Bar - Fades in on hover -->
                                <Border x:Name="ControlBar"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Background="{DynamicResource OverlayMediumBrush}"
                                        CornerRadius="25"
                                        Padding="8,4"
                                        Opacity="0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Previous Button -->
                                        <Button x:Name="PrevButton"
                                                Content="â®"
                                                Click="PrevTrack_Click"
                                                Background="Transparent"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="20"
                                                Width="44"
                                                Height="44"
                                                Cursor="Hand"
                                                ToolTip="Previous">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="Transparent" CornerRadius="22">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#33FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#55FFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Play/Pause Button -->
                                        <Button x:Name="PlayPauseButton"
                                                Content="â–¶"
                                                Click="PlayPause_Click"
                                                Background="White"
                                                Foreground="#18181b"
                                                BorderThickness="0"
                                                FontSize="22"
                                                Width="50"
                                                Height="50"
                                                Margin="6,0"
                                                Cursor="Hand"
                                                ToolTip="Play/Pause">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" CornerRadius="25">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#EEFFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#CCFFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Next Button -->
                                        <Button x:Name="NextButton"
                                                Content="â­"
                                                Click="NextTrack_Click"
                                                Background="Transparent"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="20"
                                                Width="44"
                                                Height="44"
                                                Cursor="Hand"
                                                ToolTip="Next">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="Transparent" CornerRadius="22">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#33FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#55FFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Toggle Header (at bottom) -->
                <Border Background="Transparent" 
                        Padding="10,8"
                        Cursor="Hand"
                        MouseLeftButtonDown="NowPlayingHeader_Click"
                        ToolTip="Click to expand â€¢ Double-click to open Spotify">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left side: Equalizer/Icon -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Animated Equalizer Bars -->
                            <Canvas x:Name="EqualizerPanel" Width="14" Height="12" Margin="0,0,6,0" Visibility="Collapsed">
                                <Rectangle x:Name="EqBar1" Canvas.Left="0" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="1"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="EqBar2" Canvas.Left="5" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="0.6"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="EqBar3" Canvas.Left="10" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="0.8"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Canvas>
                            <!-- Static music icon when not playing -->
                            <TextBlock x:Name="MusicIcon" Text="ðŸŽµ" FontSize="{DynamicResource CardFontSize}" Margin="0,0,6,0"/>
                        </StackPanel>
                        
                        <!-- Center: Track Info - header on left, scrolling track/artist on the right when collapsed -->
                        <Grid Grid.Column="1" Margin="0,0,8,0" ClipToBounds="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Static label (always visible as a small header) -->
                            <TextBlock x:Name="NowPlayingHeaderText"
                                       Grid.Column="0"
                                       Text="Now Playing"
                                       FontSize="{DynamicResource CardFontSize}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>

                            <!-- Scrolling track info (shows when collapsed and track exists) -->
                            <Canvas x:Name="MarqueeContainer" Grid.Column="1" Height="20" Visibility="Collapsed" ClipToBounds="True">
                                <StackPanel x:Name="MarqueeContent" Orientation="Horizontal" Canvas.Top="0">
                                    <StackPanel.RenderTransform>
                                        <TranslateTransform x:Name="MarqueeTransform" X="0"/>
                                    </StackPanel.RenderTransform>
                                    <TextBlock x:Name="CollapsedTrackTitle"
                                               FontSize="{DynamicResource CardFontSize}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text=" â€¢ "
                                               FontSize="{DynamicResource CardFontSize}"
                                               Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock x:Name="CollapsedArtistName"
                                               FontSize="{DynamicResource CardFontSize}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <!-- Spacer for seamless loop -->
                                    <TextBlock x:Name="MarqueeSpacer" Text="          " FontSize="{DynamicResource CardFontSize}"/>
                                </StackPanel>
                            </Canvas>
                        </Grid>
                        
                        <!-- Right side: Toggle icon -->
                        <TextBlock x:Name="NowPlayingToggleIcon" 
                                   Grid.Column="2"
                                   Text="â–²" 
                                   FontSize="10" 
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextTertiaryBrush}"/>
                    </Grid>
                </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Undo Bar (shows when undo is available) -->
        <Border Grid.Row="5"
                Background="{DynamicResource AccentBrush}"
                Padding="12,8"
                Visibility="{Binding UndoAvailable, Converter={StaticResource BoolToVis}}">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding UndoMessage}"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                               FontSize="11"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Content="Undo"
                            Command="{Binding UndoAsyncCommand}"
                            Padding="12,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Background="White"
                            Foreground="{DynamicResource AccentBrush}"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                
                <!-- Countdown indicator -->
                <TextBlock Text="{Binding UndoSecondsRemaining, StringFormat='({0}s)'}"
                           Foreground="{DynamicResource TextOnOverlayDimBrush}"
                           FontSize="10"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="6"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,10">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Click="OpenLauncher_Click"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Open S.O.U.P Launcher"
                            Margin="0,0,4,0">
                        <TextBlock Text="ðŸ " FontSize="{DynamicResource CardFontSize}"/>
                    </Button>
                    <Button Click="OpenSettings_Click"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Settings"
                            Margin="0,0,4,0">
                        <TextBlock Text="âš™ï¸" FontSize="{DynamicResource CardFontSize}"/>
                    </Button>
                    <Button x:Name="ThemeToggleButton"
                            Click="ThemeToggle_Click"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Toggle Light/Dark Mode"
                            Margin="0,0,4,0">
                        <TextBlock x:Name="ThemeToggleIcon" Text="ðŸŒ™" FontSize="{DynamicResource CardFontSize}"/>
                    </Button>
                    <Button x:Name="ExportImportMenuButton"
                            Click="ExportImportMenu_Click"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Export/Import Options"
                            Margin="0,0,0,0">
                        <TextBlock Text="ðŸ“¤" FontSize="{DynamicResource CardFontSize}"/>
                        <Button.ContextMenu>
                            <ContextMenu x:Name="ExportImportMenu">
                                <MenuItem Header="ðŸ“„ Export to CSV"
                                          Command="{Binding ExportToCsvCommand}"
                                          InputGestureText="Ctrl+Shift+E"
                                          ToolTip="Export items to CSV format"/>
                                <MenuItem Header="ðŸ“‹ Export to JSON"
                                          Command="{Binding ExportToJsonCommand}"
                                          InputGestureText="Ctrl+Shift+J"
                                          ToolTip="Export items to JSON format"/>
                                <Separator/>
                                <MenuItem Header="ðŸ“¥ Import from CSV"
                                          Command="{Binding ImportFromCsvCommand}"
                                          InputGestureText="Ctrl+Shift+I"
                                          ToolTip="Import items from CSV file"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
