<UserControl x:Class="SOUP.Features.OrderLog.Views.OrderLogWidgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models"
             xmlns:services="clr-namespace:SOUP.Services"
             xmlns:converters="clr-namespace:SOUP.Features.OrderLog.Converters"
             xmlns:commonConverters="clr-namespace:SOUP.Converters"
             xmlns:vm="clr-namespace:SOUP.Features.OrderLog.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:SOUP.Features.OrderLog.Behaviors"
             xmlns:commonBehaviors="clr-namespace:SOUP.Behaviors">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Merge themes: base styles first, then colors, then widget-specific -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/ModernStyles.xaml"/>
                <ResourceDictionary Source="/Themes/DarkTheme.xaml"/>
                <ResourceDictionary Source="../Themes/OrderLogWidgetTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <commonConverters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToCardBrushConverter x:Key="StatusToCardBrushConverter"/>
        <converters:ShowForOrdersConverter x:Key="ShowForOrdersConverter"/>
        <converters:ShowForNotesConverter x:Key="ShowForNotesConverter"/>
        <converters:LinkedGroupToVisibilityConverter x:Key="LinkedGroupToVisibilityConverter"/>
        <converters:HexToBrushConverter x:Key="HexToBrushConverter"/>
        
        <!-- Small Copy Button Style -->
        <Style x:Key="FieldCopyButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Copy to clipboard"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{DynamicResource SurfaceBrush}" 
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                                CornerRadius="4" Padding="3">
                            <Path x:Name="Icon" Data="M16,1H4C2.9,1,2,1.9,2,3v14h2V3h12V1z M19,5H8C6.9,5,6,5.9,6,7v14c0,1.1,0.9,2,2,2h11c1.1,0,2-0.9,2-2V7C21,5.9,20.1,5,19,5z M19,21H8V7h11V21z" 
                                  Fill="{DynamicResource TextSecondaryBrush}" 
                                  Stretch="Uniform" Width="12" Height="12"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Icon" Property="Fill" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card styles centralized in Themes/ModernStyles.xaml -->

        <!-- Template for a single Order card (active) -->
        <DataTemplate x:Key="OrderItemTemplate" DataType="{x:Type models:OrderItem}">
            <Border Background="#18181b" BorderBrush="#27272a" BorderThickness="1" CornerRadius="8" Width="280" Margin="6" Padding="16,12">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Set Status">
                            <MenuItem Header="Not Ready" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}"/>
                            <MenuItem Header="On Deck" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}"/>
                            <MenuItem Header="In Progress" Click="SetStatus_Click" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}"/>
                        </MenuItem>
                        <MenuItem Header="Move Up" Click="MoveUp_Click"/>
                        <MenuItem Header="Move Down" Click="MoveDown_Click"/>
                        <Separator/>
                        <MenuItem Header="Link with..." Click="LinkWith_Click"/>
                        <MenuItem Header="Unlink" Click="Unlink_Click"/>
                        <Separator/>
                        <MenuItem Header="Done (Archive)" Click="ArchiveNote_Click" FontWeight="SemiBold"/>
                        <MenuItem Header="Delete" Click="DeleteNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Cursor="Hand" MouseLeftButtonDown="ColorBar_Click" Height="{StaticResource CardColorBarHeight}" Margin="-16,-12,-16,0"
                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>

                    <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}" Padding="14,10" Margin="-16,0,-16,0" MinHeight="36" Panel.ZIndex="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <Grid>
                                    <TextBlock Text="Vendor name..." FontSize="{DynamicResource CardFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDisabledBrush}" FontStyle="Italic" IsHitTestVisible="False" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding VendorName}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding VendorName}" FontSize="{DynamicResource CardFontSize}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                                <TextBlock Text="{Binding TimeInProgressDisplay}" Foreground="{DynamicResource TextTertiaryBrush}" FontSize="{DynamicResource CardFontSize}" FontFamily="Consolas" Margin="0,6,0,0"/>
                            </StackPanel>

                            <!-- Quick Archive Button (shows on hover) -->
                            <Button Grid.Column="1" Click="QuickArchive_Click" ToolTip="Archive" Cursor="Hand" Margin="4,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="6"/>
                                        <Setter Property="Opacity" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="ðŸ“¦" FontSize="{DynamicResource CardFontSize}" Opacity="0.7"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=IsMouseOver}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Grid.Column="2" Style="{StaticResource WidgetDragHandleStyle}" Tag="DragHandle"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" Margin="14,10">
                        <TextBlock Text="{Binding TransferNumbers}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{DynamicResource CardFontSize}" Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding WhsShipmentNumbers}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{DynamicResource CardFontSize}" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for a single Sticky Note card (active) - fluid body-only design -->
        <DataTemplate x:Key="StickyNoteTemplate" DataType="{x:Type models:OrderItem}">
            <Border Style="{StaticResource CardBorderStyle}" Padding="0">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Change Color..." Click="ChangeColor_Click" CommandParameter="{Binding}"/>
                        <Separator/>
                        <MenuItem Header="Archive" Click="ArchiveNote_Click"/>
                        <MenuItem Header="Delete" Click="DeleteNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Thin color accent bar -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Cursor="Hand" MouseLeftButtonDown="ColorBar_Click" Height="6" Margin="-16,-12,-16,0"
                            Background="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}"/>

                    <!-- Note content area -->
                    <Grid Grid.Row="1" Margin="14,12,14,10">
                        <!-- Placeholder text -->
                        <TextBlock Text="Write your note..."
                                   FontSize="{DynamicResource CardFontSize}"
                                   Foreground="{DynamicResource TextDisabledBrush}"
                                   FontStyle="Italic"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Top"
                                   Margin="4,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding NoteContent}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding NoteContent}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Editable content -->
                        <RichTextBox Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     CaretBrush="#00D4FF"
                                     FontSize="{DynamicResource CardFontSize}"
                                     Padding="4"
                                     MinHeight="40"
                                     MinWidth="200"
                                     MaxWidth="300"
                                     HorizontalAlignment="Stretch"
                                     AcceptsReturn="True"
                                     IsDocumentEnabled="True"
                                     VerticalScrollBarVisibility="Auto"
                                     PreviewKeyDown="NoteContent_PreviewKeyDown"
                                     Loaded="NoteContent_Loaded"
                                     LostFocus="NoteContent_LostFocus"
                                     GotFocus="EditableField_GotFocus"
                                     Cursor="IBeam"/>
                        
                        <!-- Floating action buttons (always visible with good contrast) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,-4,0">
                            <Button Click="QuickArchive_Click" ToolTip="Archive" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="6"/>
                                        <Setter Property="Opacity" Value="0.7"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="âœ“" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Tag="DragHandle" Margin="4,0,0,0">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource WidgetDragHandleStyle}">
                                        <Setter Property="Opacity" Value="0.5"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for archived Order cards -->
        <DataTemplate x:Key="ArchivedOrderItemTemplate" DataType="{x:Type models:OrderItem}">
            <Border Background="#18181b" BorderBrush="#27272a" BorderThickness="1" CornerRadius="8" Margin="6" Padding="0">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                        <Separator/>
                        <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Color Bar (Done status = muted gray) -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Height="{StaticResource CardColorBarHeight}"
                            Background="{DynamicResource TextTertiaryBrush}"/>

                    <!-- Header -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}" Padding="14,10" Margin="0" MinHeight="36" Panel.ZIndex="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical" Grid.Column="0">
                                <TextBlock Text="{Binding VendorName}" FontSize="{DynamicResource CardFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Restore Button -->
                            <Button Grid.Column="1" Click="QuickArchive_Click" ToolTip="Restore" Cursor="Hand" Margin="4,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="â†©ï¸ Restore" FontSize="{DynamicResource CardFontSize}" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <StackPanel Grid.Row="2" Margin="16,14">
                        <TextBlock Text="{Binding TransferNumbers}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{DynamicResource CardFontSize}" Margin="0,0,0,4" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding WhsShipmentNumbers}" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="{DynamicResource CardFontSize}" Margin="0,0,0,4" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding TimeInProgressDisplay}" Foreground="{DynamicResource TextTertiaryBrush}" FontSize="{DynamicResource CardFontSize}" FontFamily="Consolas"/>
                    </StackPanel>
                    
                    <!-- Footer with timestamp -->
                    <TextBlock Grid.Row="3" 
                               Text="{Binding CreatedAtDisplay}" 
                               FontSize="10" 
                               Foreground="{DynamicResource TextDisabledBrush}" 
                               HorizontalAlignment="Right" 
                               Margin="0,4,16,8"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for archived Sticky Note cards -->
        <!-- Template for archived Sticky Note - fluid body-only design -->
        <DataTemplate x:Key="ArchivedStickyNoteTemplate" DataType="{x:Type models:OrderItem}">
            <Border Background="#18181b" BorderBrush="#27272a" BorderThickness="1" CornerRadius="8" Margin="6" Padding="0" Opacity="0.7">
                <Border.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Restore" Click="UnarchiveNote_Click"/>
                        <Separator/>
                        <MenuItem Header="Delete" Click="DeleteArchivedNote_Click" Foreground="{DynamicResource DangerBrush}"/>
                    </ContextMenu>
                </Border.ContextMenu>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Thin color accent bar -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Height="6" Margin="-16,-12,-16,0"
                            Background="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}"/>

                    <!-- Note content area (read-only for archived) -->
                    <Grid Grid.Row="1" Margin="14,12,14,10">
                        <TextBlock Text="{Binding NoteContent}" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   FontSize="{DynamicResource CardFontSize}" 
                                   TextWrapping="Wrap" 
                                   MaxHeight="80"/>
                        
                        <!-- Restore button (show on hover) -->
                        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,-4,0"
                                Click="QuickArchive_Click" ToolTip="Restore" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="Opacity" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="â†©ï¸" FontSize="11" Opacity="0.8"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border, AncestorLevel=2}, Path=IsMouseOver}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Template for merged order cards in widget view (vertical stacking) -->
        <DataTemplate x:Key="OrderItemGroupMergedTemplate" DataType="{x:Type vm:OrderItemGroup}">
            <Border Style="{DynamicResource WidgetElevatedCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Unified Color Bar -->
                    <Border Grid.Row="0" Height="{StaticResource CardColorBarHeight}" CornerRadius="8,8,0,0"
                            Background="{Binding First.Status, Converter={StaticResource StatusToColorConverter}}"/>

                    <!-- Unified Header Section -->
                    <Border Grid.Row="1" Background="{DynamicResource SurfaceHoverBrush}"
                            Padding="14,10" Margin="0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ”—" FontSize="{DynamicResource CardFontSize}" Margin="0,0,6,0"/>
                                <TextBlock Text="Merged"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource AccentBrush}"
                                        CornerRadius="10"
                                        Padding="5,2"
                                        Margin="6,0,0,0">
                                    <TextBlock Text="{Binding Count, StringFormat='{}{0} orders'}"
                                               FontSize="9"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                                </Border>
                            </StackPanel>

                            <!-- Unified Status ComboBox -->
                            <ComboBox HorizontalAlignment="Right"
                                      SelectedValue="{Binding First.Status, Mode=TwoWay}"
                                      SelectedValuePath="Tag"
                                      SelectionChanged="UnifiedStatusComboBox_SelectionChanged"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Padding="8,6"
                                      MinHeight="28"
                                      MinWidth="120"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Style="{DynamicResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="Not Ready" Tag="{x:Static models:OrderItem+OrderStatus.NotReady}" Foreground="{DynamicResource DangerBrush}"/>
                                <ComboBoxItem Content="On Deck" Tag="{x:Static models:OrderItem+OrderStatus.OnDeck}" Foreground="{DynamicResource WarningBrush}"/>
                                <ComboBoxItem Content="In Progress" Tag="{x:Static models:OrderItem+OrderStatus.InProgress}" Foreground="{DynamicResource SuccessBrush}"/>
                                <ComboBoxItem Content="Done" Tag="{x:Static models:OrderItem+OrderStatus.Done}" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Order Sections (Vertical Stack) -->
                    <ItemsControl Grid.Row="2" ItemsSource="{Binding Members}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource BorderBrush}"
                                        Padding="16,12">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Style.Triggers>
                                                <!-- Remove bottom border on last section -->
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <StackPanel>
                                        <!-- Section Header with Drag Handle (text left, handle right) -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="{Binding VendorName, TargetNullValue='Order'}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"/>

                                            <!-- Drag Handle (unified style) -->
                                            <Button Grid.Column="1" Tag="DragHandle" Style="{StaticResource WidgetDragHandleStyle}" HorizontalAlignment="Right"/>
                                        </Grid>

                                        <!-- Editable VendorName -->
                                        <Grid>
                                            <TextBlock Text="Vendor name..."
                                                       FontSize="{DynamicResource CardFontSize}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextDisabledBrush}"
                                                       FontStyle="Italic"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding VendorName}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding VendorName}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBox Text="{Binding VendorName, UpdateSourceTrigger=LostFocus}"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     FontSize="{DynamicResource CardFontSize}"
                                                     FontWeight="SemiBold"
                                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                                     CaretBrush="#00D4FF"
                                                     SelectionBrush="{DynamicResource AccentBrush}"
                                                     Padding="0"
                                                     GotFocus="EditableField_GotFocus"
                                                     LostFocus="EditableField_LostFocus"/>
                                        </Grid>

                                        <!-- Editable Transfer Numbers -->
                                        <Grid Margin="0,6,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0" Style="{StaticResource FieldCopyButtonStyle}" 
                                                    Click="CopyTransferNumbers_Click" Tag="{Binding TransferNumbers}"/>
