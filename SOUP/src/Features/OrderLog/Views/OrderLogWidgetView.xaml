                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                         FontSize="{DynamicResource CardFontSize}"
                                                         CaretBrush="#00D4FF"
                                                         SelectionBrush="{DynamicResource AccentBrush}"
                                                         Padding="0"
                                                         GotFocus="EditableField_GotFocus"
                                                         LostFocus="EditableField_LostFocus"/>
                                            </Grid>

                                            <TextBlock Text="{Binding TimeInProgressDisplay}"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       FontSize="{DynamicResource CardFontSize}"
                                                       FontFamily="Consolas"
                                                       Margin="0,6,0,0"/>
                                        </StackPanel>
                                        
                                        <!-- STICKY NOTE CONTENT (visible only for sticky notes, with placeholder) -->
                                        <Grid Margin="0,-6,0,0">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <!-- Note content -->
                                            <Grid MinHeight="60">
                                                <TextBlock Text="Write your note..."
                                                           FontSize="{DynamicResource CardFontSize}"
                                                           Foreground="{DynamicResource TextDisabledBrush}"
                                                           FontStyle="Italic"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Top"
                                                           Margin="4,4,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding NoteContent}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding NoteContent}" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <RichTextBox Background="Transparent"
                                                             BorderThickness="0"
                                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                                             CaretBrush="#00D4FF"
                                                             FontSize="{DynamicResource CardFontSize}"
                                                             Padding="4"
                                                             MinHeight="40"
                                                             MinWidth="200"
                                                             HorizontalAlignment="Stretch"
                                                             AcceptsReturn="True"
                                                             IsDocumentEnabled="True"
                                                             VerticalScrollBarVisibility="Auto"
                                                             PreviewKeyDown="NoteContent_PreviewKeyDown"
                                                             Loaded="NoteContent_Loaded"
                                                             LostFocus="NoteContent_LostFocus"
                                                             GotFocus="EditableField_GotFocus"
                                                             Cursor="IBeam"/>
                                                
                                                <!-- Floating action buttons (always visible with good contrast) -->
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,-4,0">
                                                    <Button Click="QuickArchive_Click" ToolTip="Archive" Cursor="Hand">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                                <Setter Property="BorderThickness" Value="0"/>
                                                                <Setter Property="Padding" Value="6"/>
                                                                <Setter Property="Opacity" Value="0.7"/>
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                                <TextBlock Text="âœ“" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Opacity" Value="1"/>
                                                                        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                    <Button Tag="DragHandle" Margin="4,0,0,0">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource WidgetDragHandleStyle}">
                                                                <Setter Property="Opacity" Value="0.5"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Opacity" Value="1"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <!-- Footer with timestamp -->
                                    <TextBlock Grid.Row="3" 
                                               Text="{Binding CreatedAtDisplay}" 
                                               FontSize="10" 
                                               Foreground="{DynamicResource TextDisabledBrush}" 
                                               HorizontalAlignment="Right" 
                                               Margin="0,4,16,8"/>
                                </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ContentControl.ContentTemplate>
                                                    </ContentControl>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <!-- When IsGroup is true, use merged template -->
                                            <DataTrigger Binding="{Binding IsGroup}" Value="True">
                                                <Setter Property="ContentTemplate" Value="{StaticResource OrderItemGroupMergedTemplate}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                </StackPanel>
            
                <!-- Archived Notes Panel (separate tab) -->
                <StackPanel x:Name="ArchivedItemsPanel" Visibility="Collapsed">
                    <ListBox x:Name="ArchivedListBox"
                             ItemsSource="{Binding DisplayArchivedItems}"
                             BorderThickness="0"
                             Background="Transparent"
                             VirtualizingStackPanel.IsVirtualizing="False"
                             VirtualizingStackPanel.VirtualizationMode="Standard"
                             ScrollViewer.CanContentScroll="False"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,14"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding}">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <!-- Default: single order item -->
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <ContentControl Content="{Binding First}">
                                                            <ContentControl.Style>
                                                                <Style TargetType="ContentControl">
                                                                    <!-- Default: Order template -->
                                                                    <Setter Property="ContentTemplate" Value="{StaticResource ArchivedOrderItemTemplate}"/>
                                                                    <Style.Triggers>
                                                                        <!-- Switch to Note template for sticky notes -->
                                                                        <DataTrigger Binding="{Binding NoteType}" Value="{x:Static models:NoteType.StickyNote}">
                                                                            <Setter Property="ContentTemplate" Value="{StaticResource ArchivedStickyNoteTemplate}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ContentControl.Style>
                                                        </ContentControl>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsGroup}" Value="True">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource ArchivedOrderItemGroupMergedTemplate}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Empty state for archived -->
                    <TextBlock Text="No archived items"
                               FontSize="{DynamicResource CardFontSize}"
                               Foreground="{DynamicResource TextTertiaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ArchivedItems.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ScrollViewer>
            
            <!-- Top fade/shadow overlay -->
            <Border VerticalAlignment="Top" Height="24" IsHitTestVisible="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#AA000000" Offset="0"/>
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            
            <!-- Bottom fade/shadow overlay -->
            <Border VerticalAlignment="Bottom" Height="24" IsHitTestVisible="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000000" Offset="0"/>
                        <GradientStop Color="#AA000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <!-- Now Playing Mini-Player (Collapsible - rises from bottom) -->
        <Border x:Name="NowPlayingSection" Grid.Row="3"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Visibility="{Binding ShowNowPlaying, Converter={StaticResource BoolToVis}, FallbackValue=Visible}">
            <StackPanel>
                <!-- Full Album Art Player (collapsible - rises from bottom) -->
                <Border x:Name="NowPlayingContent" 
                        Visibility="Collapsed"
                        MouseEnter="NowPlayingContent_MouseEnter"
                        MouseLeave="NowPlayingContent_MouseLeave">
                    <Grid>
                        <!-- Album Art Background - uses width binding for square aspect -->
                        <Border CornerRadius="0" 
                                Background="#18181b"
                                MinHeight="180"
                                MaxHeight="280">
                            <Grid>
                                <!-- Album Art (fills entire area) -->
                                <Image x:Name="AlbumArtImage" 
                                       Stretch="UniformToFill"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                
                                <!-- Hidden blurred background reference (for code-behind compatibility) -->
                                <Image x:Name="AlbumArtBlurredBg" 
                                       Visibility="Collapsed"/>
                                
                                <!-- Placeholder when no art -->
                                <TextBlock x:Name="AlbumArtPlaceholder"
                                           Text="ðŸŽµ" 
                                           FontSize="64" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           Opacity="0.3"/>
                                
                                <!-- Gradient overlay for text readability -->
                                <Border>
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00000000" Offset="0"/>
                                            <GradientStop Color="#55000000" Offset="0.6"/>
                                            <GradientStop Color="#DD000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                
                                <!-- Track Info + Controls overlaid at bottom -->
                                <StackPanel VerticalAlignment="Bottom" Margin="12,0,12,10">
                                    <!-- Track Title -->
                                    <TextBlock x:Name="TrackTitleText"
                                               Text="Not Playing"
                                               FontSize="{DynamicResource CardFontSize}"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    
                                    <!-- Artist Name -->
                                    <TextBlock x:Name="ArtistNameText"
                                               Text=""
                                               FontSize="{DynamicResource CardFontSize}"
                                               Foreground="{DynamicResource TextOnOverlayBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0">
                                        <TextBlock.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.4"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-- Playback Control Bar - Fades in on hover -->
                                <Border x:Name="ControlBar"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Background="{DynamicResource OverlayMediumBrush}"
                                        CornerRadius="25"
                                        Padding="8,4"
                                        Opacity="0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Previous Button -->
                                        <Button x:Name="PrevButton"
                                                Content="â®"
                                                Click="PrevTrack_Click"
                                                Background="Transparent"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="20"
                                                Width="44"
                                                Height="44"
                                                Cursor="Hand"
                                                ToolTip="Previous">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="Transparent" CornerRadius="22">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#33FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#55FFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Play/Pause Button -->
                                        <Button x:Name="PlayPauseButton"
                                                Content="â–¶"
                                                Click="PlayPause_Click"
                                                Background="White"
                                                Foreground="#18181b"
                                                BorderThickness="0"
                                                FontSize="22"
                                                Width="50"
                                                Height="50"
                                                Margin="6,0"
                                                Cursor="Hand"
                                                ToolTip="Play/Pause">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" CornerRadius="25">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#EEFFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#CCFFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        
                                        <!-- Next Button -->
                                        <Button x:Name="NextButton"
                                                Content="â­"
                                                Click="NextTrack_Click"
                                                Background="Transparent"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="20"
                                                Width="44"
                                                Height="44"
                                                Cursor="Hand"
                                                ToolTip="Next">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="ButtonBorder" Background="Transparent" CornerRadius="22">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#33FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#55FFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Toggle Header (at bottom) -->
                <Border Background="Transparent" 
                        Padding="10,8"
                        Cursor="Hand"
                        MouseLeftButtonDown="NowPlayingHeader_Click"
                        ToolTip="Click to expand â€¢ Double-click to open Spotify">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Left side: Equalizer/Icon -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Animated Equalizer Bars -->
                            <Canvas x:Name="EqualizerPanel" Width="14" Height="12" Margin="0,0,6,0" Visibility="Collapsed">
                                <Rectangle x:Name="EqBar1" Canvas.Left="0" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="1"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="EqBar2" Canvas.Left="5" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="0.6"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Rectangle x:Name="EqBar3" Canvas.Left="10" Canvas.Bottom="0" Width="3" Height="12" 
                                           Fill="{DynamicResource AccentBrush}" RadiusX="1" RadiusY="1"
                                           RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform ScaleY="0.8"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Canvas>
                            <!-- Static music icon when not playing -->
                            <TextBlock x:Name="MusicIcon" Text="ðŸŽµ" FontSize="{DynamicResource CardFontSize}" Margin="0,0,6,0"/>
                        </StackPanel>
                        
                        <!-- Center: Track Info - shows "Now Playing" when expanded, scrolling track/artist when collapsed -->
                        <Grid Grid.Column="1" Margin="0,0,8,0" ClipToBounds="True">
                            <!-- Expanded state: just shows "Now Playing" -->
                            <TextBlock x:Name="NowPlayingHeaderText" 
                                       Text="Now Playing" 
                                       FontSize="{DynamicResource CardFontSize}" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                            
                            <!-- Collapsed state: scrolling track info spanning full width -->
                            <Canvas x:Name="MarqueeContainer" Height="20" Visibility="Collapsed" ClipToBounds="True">
                                <StackPanel x:Name="MarqueeContent" Orientation="Horizontal" Canvas.Top="0">
                                    <StackPanel.RenderTransform>
                                        <TranslateTransform x:Name="MarqueeTransform" X="0"/>
                                    </StackPanel.RenderTransform>
                                    <TextBlock x:Name="CollapsedTrackTitle"
                                               FontSize="{DynamicResource CardFontSize}"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text=" â€¢ "
                                               FontSize="{DynamicResource CardFontSize}"
                                               Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock x:Name="CollapsedArtistName"
                                               FontSize="{DynamicResource CardFontSize}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <!-- Spacer for seamless loop -->
                                    <TextBlock x:Name="MarqueeSpacer" Text="          " FontSize="{DynamicResource CardFontSize}"/>
                                </StackPanel>
                            </Canvas>
                        </Grid>
                        
                        <!-- Right side: Toggle icon -->
                        <TextBlock x:Name="NowPlayingToggleIcon" 
                                   Grid.Column="2"
                                   Text="â–²" 
                                   FontSize="10" 
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextTertiaryBrush}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- Undo Bar (shows when undo is available) -->
        <Border Grid.Row="4"
                Background="{DynamicResource AccentBrush}"
                Padding="12,8"
                Visibility="{Binding UndoAvailable, Converter={StaticResource BoolToVis}}">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding UndoMessage}"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                               FontSize="11"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Button Content="Undo"
                            Command="{Binding UndoAsyncCommand}"
                            Padding="12,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Background="White"
                            Foreground="{DynamicResource AccentBrush}"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                
                <!-- Countdown indicator -->
                <TextBlock Text="(5s)"
                           Foreground="{DynamicResource TextOnOverlayDimBrush}"
                           FontSize="10"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="5"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,10">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource TextTertiaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Click="OpenLauncher_Click"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Open S.O.U.P Launcher"
                            Margin="0,0,4,0">
                        <TextBlock Text="ðŸ " FontSize="{DynamicResource CardFontSize}"/>
                    </Button>
                    <Button Click="OpenSettings_Click"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Settings"
                            Margin="0,0,4,0">
                        <TextBlock Text="âš™ï¸" FontSize="{DynamicResource CardFontSize}"/>
                    </Button>
                    <Button x:Name="ThemeToggleButton"
                            Click="ThemeToggle_Click"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Toggle Light/Dark Mode"
                            Margin="0,0,4,0">
                        <TextBlock x:Name="ThemeToggleIcon" Text="ðŸŒ™" FontSize="{DynamicResource CardFontSize}"/>
                    </Button>
                    <Button Command="{Binding ExportToCsvCommand}"
                            Style="{StaticResource WidgetIconButtonStyle}"
                            ToolTip="Export to CSV">
                        <TextBlock Text="ðŸ“¤" FontSize="{DynamicResource CardFontSize}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
