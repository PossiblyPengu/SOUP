<Window x:Class="SOUP.Features.OrderLog.Views.OrderTemplateEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:SOUP.Features.OrderLog.Models"
        Title="Template Editor"
        Height="550"
        Width="460"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Background="{DynamicResource BackgroundBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20,14"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock x:Name="TitleText"
                               Text="Create Template"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>

                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Click="Cancel_Click"
                            Style="{DynamicResource GhostButtonStyle}"
                            FontSize="16"
                            Width="32"
                            Height="32"
                            Padding="0"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Template Name -->
                    <TextBlock Text="Template Name *"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="TemplateNameTextBox"
                             FontSize="13"
                             Padding="12,10"
                             Background="{DynamicResource SurfaceBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             Margin="0,0,0,16"/>

                    <!-- Vendor Name -->
                    <TextBlock Text="Vendor Name"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="VendorNameTextBox"
                             FontSize="13"
                             Padding="12,10"
                             Background="{DynamicResource SurfaceBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             Margin="0,0,0,16"/>

                    <!-- Transfer Numbers -->
                    <TextBlock Text="Transfer Numbers"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="TransferNumbersTextBox"
                             FontSize="13"
                             Padding="12,10"
                             Background="{DynamicResource SurfaceBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             Margin="0,0,0,16"/>

                    <!-- WHS Shipment Numbers -->
                    <TextBlock Text="WHS Shipment Numbers"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <TextBox x:Name="WhsShipmentNumbersTextBox"
                             FontSize="13"
                             Padding="12,10"
                             Background="{DynamicResource SurfaceBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             BorderThickness="1"
                             Margin="0,0,0,16"/>

                    <!-- Default Status -->
                    <TextBlock Text="Default Status"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <ComboBox x:Name="DefaultStatusComboBox"
                              FontSize="13"
                              Padding="12,10"
                              Background="{DynamicResource SurfaceBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"
                              BorderThickness="1"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="ðŸ”´ Not Ready" Tag="NotReady"/>
                        <ComboBoxItem Content="ðŸŸ¡ On Deck" Tag="OnDeck"/>
                        <ComboBoxItem Content="ðŸŸ¢ In Progress" Tag="InProgress"/>
                    </ComboBox>

                    <!-- Color -->
                    <TextBlock Text="Color"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>

                    <Border x:Name="ColorPreviewBorder"
                            Height="40"
                            Background="#B56576"
                            CornerRadius="6"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            Cursor="Hand"
                            MouseDown="ColorPreview_MouseDown"
                            Margin="0,0,0,8">
                        <TextBlock Text="Click to change color"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextOnPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Color Presets -->
                    <WrapPanel Margin="0,0,0,20">
                        <Border Width="32" Height="32" Background="#B56576" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#B56576"/>
                        <Border Width="32" Height="32" Background="#E63946" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#E63946"/>
                        <Border Width="32" Height="32" Background="#F77F00" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#F77F00"/>
                        <Border Width="32" Height="32" Background="#FCBF49" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#FCBF49"/>
                        <Border Width="32" Height="32" Background="#06A77D" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#06A77D"/>
                        <Border Width="32" Height="32" Background="#277DA1" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#277DA1"/>
                        <Border Width="32" Height="32" Background="#5A189A" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#5A189A"/>
                        <Border Width="32" Height="32" Background="#D62828" CornerRadius="4" Margin="0,0,8,0" Cursor="Hand" MouseDown="ColorPreset_MouseDown" Tag="#D62828"/>
                    </WrapPanel>

                    <!-- Buttons -->
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="Cancel"
                                Click="Cancel_Click"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Padding="0,12"
                                IsCancel="True"/>

                        <Button Grid.Column="2"
                                Content="Save Template"
                                Click="Save_Click"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Padding="0,12"
                                IsDefault="True"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
