<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ============================= -->
    <!-- LIGHT THEME - Windows Native  -->
    <!-- ============================= -->
    <!-- Uses system colors for native Windows look -->
    
    <!-- Module Icons -->
    <sys:String x:Key="AppLogoIcon">‚ö°</sys:String>
    <sys:String x:Key="ExpireWiseIcon">üì¶</sys:String>
    <sys:String x:Key="ExpireWiseSplashIcon">üì¶</sys:String>
    <sys:String x:Key="AllocationBuddyIcon">üìä</sys:String>
    <sys:String x:Key="AllocationBuddySplashIcon">üìä</sys:String>
    <sys:String x:Key="EssentialsBuddyIcon">üìã</sys:String>
    <sys:String x:Key="EssentialsBuddySplashIcon">üìã</sys:String>
    <sys:String x:Key="SwiftLabelIcon">üè∑Ô∏è</sys:String>
    <sys:String x:Key="SwiftLabelSplashIcon">üè∑Ô∏è</sys:String>
    <sys:String x:Key="OrderLogIcon">üóíÔ∏è</sys:String>
    <sys:String x:Key="OrderLogSplashIcon">üìì</sys:String>
    
    <!-- OrderLog Settings -->
    <sys:Boolean x:Key="OrderLogCardUseFullColor">False</sys:Boolean>
    
    <!-- Base Colors (for DynamicResource bindings) -->
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F0F0F0</Color>
    <Color x:Key="SurfaceHoverColor">#E5E5E5</Color>
    <Color x:Key="SurfaceActiveColor">#D9D9D9</Color>
    <Color x:Key="TextPrimaryColor">#1A1A1A</Color>
    <Color x:Key="TextSecondaryColor">#6B7280</Color>
    
    <!-- Background & Surface Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHoverColor}"/>
    <SolidColorBrush x:Key="SurfaceActiveBrush" Color="{StaticResource SurfaceActiveColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SurfaceColor}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="TextLinkBrush" Color="#0078D7"/>
    
    <!-- Border & Accent -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D7"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D7"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#28a745"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#d4edda"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#ffc107"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#fff3cd"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#dc3545"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="#f8d7da"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{x:Static SystemColors.InfoColor}"/>
    
    <!-- OrderLog Card Colors -->
    <SolidColorBrush x:Key="OrderLogCardNotReadyBrush" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="OrderLogCardOnDeckBrush" Color="#FEF3C7"/>
    <SolidColorBrush x:Key="OrderLogCardInProgressBrush" Color="#D1FAE5"/>
    <SolidColorBrush x:Key="OrderLogCardDoneBrush" Color="{x:Static SystemColors.ControlColor}"/>
    <SolidColorBrush x:Key="OrderLogCardNoteBrush" Color="#FEF9C3"/>

    <!-- Widget Status Background Colors (light tints for light theme) -->
    <Color x:Key="WidgetStatusNotReadyBgColor">#FEE2E2</Color>
    <Color x:Key="WidgetStatusOnDeckBgColor">#FEF3C7</Color>
    <Color x:Key="WidgetStatusInProgressBgColor">#D1FAE5</Color>
    <Color x:Key="WidgetStatusDoneBgColor">#F3F4F6</Color>

    <!-- Widget Status Text Colors (darker for contrast on light backgrounds) -->
    <Color x:Key="WidgetStatusNotReadyColor">#DC2626</Color>
    <Color x:Key="WidgetStatusOnDeckColor">#D97706</Color>
    <Color x:Key="WidgetStatusInProgressColor">#059669</Color>
    <Color x:Key="WidgetStatusDoneColor">#6B7280</Color>

    <!-- Note Colors (softer for light theme) -->
    <Color x:Key="WidgetNoteYellowColor">#FCD34D</Color>
    <Color x:Key="WidgetNotePinkColor">#F9A8D4</Color>
    <Color x:Key="WidgetNoteBlueColor">#93C5FD</Color>
    <Color x:Key="WidgetNoteGreenColor">#86EFAC</Color>
    <Color x:Key="WidgetNotePurpleColor">#C4B5FD</Color>

    <!-- Success/Accent Color for widget -->
    <Color x:Key="SuccessColor">#22C55E</Color>
    <Color x:Key="AccentColor">#0078D7</Color>
    <Color x:Key="BorderColor">#D1D5DB</Color>
    
    <!-- Title Bar - Use light gray for Windows native look -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{x:Static SystemColors.ControlColor}"/>
    <SolidColorBrush x:Key="TitleBarTextBrush" Color="{x:Static SystemColors.ControlTextColor}"/>
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="#e81123"/>
    <SolidColorBrush x:Key="CloseButtonHoverTextBrush" Color="White"/>
    
    <!-- Sidebar -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{x:Static SystemColors.ControlColor}"/>
    
    <!-- Module Colors -->
    <SolidColorBrush x:Key="ExpireWiseLightBrush" Color="#fff3cd"/>
    <SolidColorBrush x:Key="AllocationBuddyLightBrush" Color="#e8daff"/>
    <SolidColorBrush x:Key="EssentialsBuddyLightBrush" Color="#d4edda"/>
    <SolidColorBrush x:Key="SwiftLabelLightBrush" Color="#f8d7da"/>
    
    <!-- Corner Radius - Set to 0 for classic Windows look -->
    <CornerRadius x:Key="XSmallCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="MediumCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="BadgeCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="TitleBarCornerRadius">0,0,0,0</CornerRadius>
    <CornerRadius x:Key="SidebarCornerRadius">0</CornerRadius>
    
    <!-- Additional common tokens used across the app -->
    <sys:Double x:Key="CardFontSize">12</sys:Double>
    <sys:Double x:Key="SmallFontSize">11</sys:Double>

    <!-- Overlay / popup brushes -->
    <SolidColorBrush x:Key="OverlayMediumBrush" Color="#AA000000"/>
    <SolidColorBrush x:Key="TextOnOverlayBrush" Color="White"/>
    <SolidColorBrush x:Key="TextOnOverlayDimBrush" Color="#CCFFFFFF"/>

    <!-- Border variants -->
    <SolidColorBrush x:Key="BorderLightBrush" Color="{x:Static SystemColors.ControlLightColor}"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{x:Static SystemColors.ControlDarkColor}"/>

    <!-- Dialog / Title gradients and shadows -->
    <LinearGradientBrush x:Key="DialogTitleBarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{Binding Source={StaticResource TitleBarBackgroundBrush}, Path=Color}" Offset="0"/>
        <GradientStop Color="{x:Static SystemColors.ActiveCaptionColor}" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="DialogTitleBarShadowColor">#40000000</Color>

    <!-- Section / heading brushes -->
    <SolidColorBrush x:Key="SectionTitleTextBrush" Color="{x:Static SystemColors.ControlTextColor}"/>

    <!-- Window corner radius fallback -->
    <CornerRadius x:Key="WindowCornerRadius">0</CornerRadius>

    <!-- Danger / Warning dark variants -->
    <SolidColorBrush x:Key="DangerDarkBrush" Color="#b02a37"/>
    <SolidColorBrush x:Key="WarningDarkBrush" Color="#e0a800"/>
    <SolidColorBrush x:Key="DangerBackgroundBrush" Color="#f8d7da"/>

    <!-- Elevated widget/card style used by widgets ‚Äî basic fallback -->
    <Style x:Key="WidgetElevatedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <!-- Ghost / subtle button style -->
    <Style x:Key="GhostButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>
    
    <!-- Basic Styles - Use default Windows styles -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>
    
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
    </Style>
    
    <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>
    
    <Style x:Key="ModernListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
    </Style>

</ResourceDictionary>
