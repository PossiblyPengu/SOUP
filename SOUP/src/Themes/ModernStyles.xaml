    <SolidColorBrush x:Key="SectionTitleTextBrush" Color="#FFFFFF"/>

    <!-- List Header Style -->
    <Style x:Key="ListHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
