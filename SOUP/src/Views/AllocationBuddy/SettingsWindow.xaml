<Window x:Class="SOUP.Views.AllocationBuddy.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AllocationBuddy Settings"
        Height="200"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="AllocationBuddy Settings moved to Unified Settings" 
                       FontSize="16" FontWeight="SemiBold" TextAlignment="Center" 
                       Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,10"/>
            <TextBlock Text="Open the main Settings and select the AllocationBuddy tab to edit these settings." 
                       Foreground="{DynamicResource TextSecondaryBrush}" TextAlignment="Center"/>
            <Button Content="Open Unified Settings" Margin="0,15,0,0" Padding="12,8" Width="180" 
                    Click="OpenUnifiedSettings_Click" Style="{DynamicResource PrimaryButtonStyle}"/>
            <Button Content="Close" IsCancel="True" Margin="0,10,0,0" Padding="12,8" Width="100"
                    Style="{DynamicResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>





