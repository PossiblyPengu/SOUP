<UserControl x:Class="SOUP.Views.DictionaryManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             xmlns:converters="clr-namespace:SOUP.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:DictionaryManagementViewModel}">

    <UserControl.Resources>
        <converters:ListToCommaStringConverter x:Key="ListToCommaStringConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{DynamicResource SmallCornerRadius}"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="Border">
            <Setter Property="CornerRadius" Value="8,8,0,0"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>
        
        <!-- Modern Input Style -->
        <Style x:Key="ModernInput" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- Compact Button Style -->
        <Style x:Key="CompactButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource PrimaryLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceActiveBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource PrimaryDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource CompactButton}">
            <Setter Property="Foreground" Value="{DynamicResource DangerBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource DangerLightBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{DynamicResource DangerBackgroundBrush}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource DangerLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ListView Item Style -->
        <Style x:Key="ModernListViewItem" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Bd" 
                                Background="Transparent" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <Grid Background="{DynamicResource BackgroundBrush}" Margin="0,0,8,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ—„ï¸" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Item Database" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Manage items and stores used across AllocationBuddy, ExpireWise, and EssentialsBuddy for accurate imports and lookups."
                               FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" 
                               Foreground="{DynamicResource PrimaryBrush}" FontWeight="Medium" Margin="0,8,0,0"
                               Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding LoadDictionaryCommand}"
                            Style="{StaticResource CompactButton}" Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding SaveDictionaryCommand}"
                            Style="{StaticResource PrimaryButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Save Changes"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- External Sync Section -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,16"
                Visibility="{Binding CanSyncFromExternal, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="â˜ï¸" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="External Data Sync" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding LastSyncDisplay}" FontSize="12" 
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    <!-- Sync Progress -->
                    <StackPanel Visibility="{Binding IsSyncing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="0,8,0,0">
                        <TextBlock Text="{Binding SyncProgressMessage}" FontSize="11" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <ProgressBar Value="{Binding SyncProgress}" Height="4" Maximum="100"
                                     Background="{DynamicResource SurfaceHoverBrush}"
                                     Foreground="{DynamicResource PrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding SyncFromMySqlCommand}" Style="{StaticResource CompactButton}" 
                            Margin="0,0,6,0" ToolTip="Sync items and stores from MySQL database"
                            IsEnabled="{Binding IsSyncing, Converter={StaticResource InverseBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—„ï¸" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="MySQL"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding SyncFromBcCommand}" Style="{StaticResource CompactButton}" 
                            Margin="0,0,6,0" ToolTip="Sync items and locations from Business Central"
                            IsEnabled="{Binding IsSyncing, Converter={StaticResource InverseBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â˜ï¸" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="BC"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding SyncFromBothCommand}" Style="{StaticResource PrimaryButton}"
                            ToolTip="Sync from both MySQL and Business Central"
                            IsEnabled="{Binding IsSyncing, Converter={StaticResource InverseBoolConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš¡" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="Sync All"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content - Side by Side -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Items Section -->
            <Border Grid.Column="0" Style="{StaticResource ModernCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="200"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Items Header -->
                    <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Style="{StaticResource SectionHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="ðŸ“¦" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Items" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextOnPrimaryBrush}" VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource OverlayLightBrush}" CornerRadius="10" Padding="8,2" Margin="12,0,0,0">
                                    <TextBlock Text="{Binding TotalItemCount}" FontSize="11" Foreground="{DynamicResource TextOnPrimaryBrush}" FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                            <ToggleButton x:Name="ItemFormToggle" Grid.Column="1" IsChecked="False"
                                          ToolTip="Toggle Add/Edit Panel">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{DynamicResource OverlayLightBrush}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock x:Name="Arrow" Text="â–¼" FontSize="10" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                            <TextBlock x:Name="Label" Text="Add/Edit" FontSize="11" FontWeight="Medium" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="Arrow" Property="Text" Value="â–²"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Grid>
                    </Border>
                    
                    <!-- Collapsible Add/Edit Form -->
                    <Border Grid.Row="1" Margin="12,8,12,0"
                            Visibility="{Binding IsChecked, ElementName=ItemFormToggle, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Left Column: Item # and Description -->
                                <StackPanel Grid.Column="0" Grid.Row="0">
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Item #" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                            <TextBox Text="{Binding NewItemNumber, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource ModernInput}" Padding="8,6"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Description" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                            <TextBox Text="{Binding NewItemDescription, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource ModernInput}" Padding="8,6"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel>
                                        <TextBlock Text="SKUs (comma-separated)" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding NewItemSkus, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource ModernInput}" Padding="8,6"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Right Column: Tags (checkboxes) -->
                                <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Center">
                                    <TextBlock Text="Tags" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Content="Essential" 
                                                  IsChecked="{Binding NewItemIsEssential}" 
                                                  Foreground="{DynamicResource TextPrimaryBrush}" 
                                                  Margin="0,0,20,0" FontSize="13"/>
                                        <CheckBox Content="Private Label" 
                                                  IsChecked="{Binding NewItemIsPrivateLabel}" 
                                                  Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Buttons Row spanning both columns -->
                                <WrapPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,8,0,0">
                                    <Button Content="+ Add" Command="{Binding AddItemCommand}" Style="{StaticResource CompactButton}" Margin="0,0,6,0"/>
                                    <Button Content="Update" Command="{Binding UpdateItemCommand}" Style="{StaticResource CompactButton}" Margin="0,0,6,0"/>
                                    <Button Content="Delete" Command="{Binding DeleteItemCommand}" Style="{StaticResource DangerButton}" Margin="0,0,6,0"/>
                                    <Button Content="Clear" Command="{Binding ClearItemFormCommand}" Style="{StaticResource CompactButton}" Margin="0,0,6,0"/>
                                    <Button Content="Import" Command="{Binding ImportItemsFromExcelCommand}" 
                                            Style="{StaticResource CompactButton}" ToolTip="Import items from Excel"/>
                                </WrapPanel>
                            </Grid>
                        </Border>
                    </Border>
                    
                    <!-- Items List -->
                    <Border Grid.Row="2" Margin="12,8,12,12" Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Search, Filter, Sort Bar -->
                            <Border Grid.Row="0" Background="{DynamicResource SurfaceHoverBrush}" 
                                    CornerRadius="8,8,0,0" Padding="12">
                                <StackPanel>
                                    <!-- Search Row -->
                                    <Grid Margin="0,0,0,10">
                                        <TextBox Text="{Binding ItemSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernInput}" Padding="32,8,12,8"
                                                 ToolTip="Search by number, description, SKU, or tag"/>
                                        <TextBlock Text="ðŸ”" FontSize="12" Margin="10,0,0,0" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Left"
                                                   Foreground="{DynamicResource TextTertiaryBrush}" IsHitTestVisible="False"/>
                                    </Grid>
                                    
                                    <!-- Filters and Sort Row -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Filters -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                            <CheckBox Content="Essential" 
                                                      IsChecked="{Binding FilterEssentialOnly}" 
                                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                                      Margin="0,0,16,0" FontSize="12"
                                                      ToolTip="Show only essential items"/>
                                            <CheckBox Content="Private Label" 
                                                      IsChecked="{Binding FilterPrivateLabelOnly}" 
                                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                                      FontSize="12"
                                                      ToolTip="Show only private label items"/>
                                        </StackPanel>
                                        
                                        <!-- Sort Controls -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <ComboBox ItemsSource="{Binding ItemSortOptions}" 
                                                      SelectedItem="{Binding ItemSortBy}"
                                                      Style="{StaticResource ModernComboBox}"
                                                      Width="100" Margin="0,0,6,0"
                                                      ToolTip="Sort by"/>
                                            <Button Command="{Binding ToggleSortDirectionCommand}" 
                                                    Style="{StaticResource CompactButton}"
                                                    Width="30" Height="30" Padding="0"
                                                    ToolTip="{Binding SortDescription}"
                                                    Content="{Binding ItemSortDescending, Converter={StaticResource BoolToSortArrowConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- List Header -->
                            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Padding="12,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="TAGS" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" ToolTip="Essential / Private Label"/>
                                    <TextBlock Grid.Column="1" Text="NUMBER" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock Grid.Column="2" Text="DESCRIPTION" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" Margin="8,0"/>
                                    <TextBlock Grid.Column="3" Text="SKUS" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                </Grid>
                            </Border>
                            
                            <!-- List -->
                            <ListView Grid.Row="2" ItemsSource="{Binding FilteredItems}"
                                      SelectedItem="{Binding SelectedItem}"
                                      BorderThickness="0" Background="Transparent"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ItemContainerStyle="{StaticResource ModernListViewItem}">
                                <ListView.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding EditItemCommand}"/>
                                </ListView.InputBindings>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Border Background="{DynamicResource WarningBrush}" CornerRadius="3" Padding="4,1" Margin="0,0,3,0"
                                                        Visibility="{Binding IsEssential, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        ToolTip="Essential item">
                                                    <TextBlock Text="E" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                </Border>
                                                <Border Background="{DynamicResource PrimaryBrush}" CornerRadius="3" Padding="4,1"
                                                        Visibility="{Binding IsPrivateLabel, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        ToolTip="Private Label">
                                                    <TextBlock Text="PL" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding Number}" FontWeight="Medium" 
                                                       Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Description}" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" 
                                                       TextTrimming="CharacterEllipsis" Margin="8,0"/>
                                            <TextBlock Grid.Column="3" Text="{Binding Skus, Converter={StaticResource ListToCommaStringConverter}}" 
                                                       Foreground="{DynamicResource TextTertiaryBrush}" FontSize="11" 
                                                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                    
                    <!-- Pagination -->
                    <Border Grid.Row="3" Background="{DynamicResource SurfaceHoverBrush}" Padding="12,10"
                            CornerRadius="0,0,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button Content="â®" Command="{Binding FirstPageCommand}" Style="{StaticResource CompactButton}" 
                                        Padding="8,6" Margin="0,0,4,0"/>
                                <Button Content="â—€" Command="{Binding PreviousPageCommand}" Style="{StaticResource CompactButton}" 
                                        Padding="10,6"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}">
                                <Run Text="Page "/>
                                <Run Text="{Binding CurrentPage, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <Run Text=" of "/>
                                <Run Text="{Binding TotalPages, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </TextBlock>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="â–¶" Command="{Binding NextPageCommand}" Style="{StaticResource CompactButton}" 
                                        Padding="10,6" Margin="0,0,4,0"/>
                                <Button Content="â­" Command="{Binding LastPageCommand}" Style="{StaticResource CompactButton}" 
                                        Padding="8,6"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Stores Section -->
            <Border Grid.Column="2" Style="{StaticResource ModernCard}" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="200"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Stores Header -->
                    <Border Grid.Row="0" Background="{DynamicResource SuccessBrush}" Style="{StaticResource SectionHeader}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="ðŸª" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Stores" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextOnPrimaryBrush}" VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource OverlayLightBrush}" CornerRadius="10" Padding="8,2" Margin="12,0,0,0">
                                    <TextBlock Text="{Binding FilteredStores.Count}" FontSize="11" Foreground="{DynamicResource TextOnPrimaryBrush}" FontWeight="Medium"/>
                                </Border>
                            </StackPanel>
                            <ToggleButton x:Name="StoreFormToggle" Grid.Column="1" IsChecked="False"
                                          ToolTip="Toggle Add/Edit Panel">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{DynamicResource OverlayLightBrush}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock x:Name="Arrow" Text="â–¼" FontSize="10" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                            <TextBlock x:Name="Label" Text="Add/Edit" FontSize="11" FontWeight="Medium" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="Arrow" Property="Text" Value="â–²"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Grid>
                    </Border>
                    
                    <!-- Collapsible Add/Edit Form -->
                    <Border Grid.Row="1" Margin="12,8,12,0"
                            Visibility="{Binding IsChecked, ElementName=StoreFormToggle, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" Padding="12">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Store ID" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding NewStoreId, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource ModernInput}" Padding="8,6"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Store Name" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                        <TextBox Text="{Binding NewStoreName, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource ModernInput}" Padding="8,6"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="Rank" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,3"/>
                                        <ComboBox ItemsSource="{Binding StoreRanks}" 
                                                  SelectedItem="{Binding NewStoreRank}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <WrapPanel Margin="0,4,0,0">
                                    <Button Content="+ Add" Command="{Binding AddStoreCommand}" Style="{StaticResource CompactButton}" Margin="0,0,6,0"/>
                                    <Button Content="Update" Command="{Binding UpdateStoreCommand}" Style="{StaticResource CompactButton}" Margin="0,0,6,0"/>
                                    <Button Content="Delete" Command="{Binding DeleteStoreCommand}" Style="{StaticResource DangerButton}" Margin="0,0,6,0"/>
                                    <Button Content="Clear" Command="{Binding ClearStoreFormCommand}" Style="{StaticResource CompactButton}" Margin="0,0,6,0"/>
                                    <Button Content="Import" Command="{Binding ImportStoresFromExcelCommand}" 
                                            Style="{StaticResource CompactButton}" ToolTip="Import stores from Excel"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </Border>
                    
                    <!-- Stores List -->
                    <Border Grid.Row="2" Margin="12,8,12,12" Background="{DynamicResource SurfaceBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Search Bar -->
                            <Border Grid.Row="0" Background="{DynamicResource SurfaceHoverBrush}" 
                                    CornerRadius="8,8,0,0" Padding="12,10">
                                <Grid>
                                    <TextBox Text="{Binding StoreSearchText, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernInput}" Padding="32,8,12,8"
                                             ToolTip="Search by store ID or name"/>
                                    <TextBlock Text="ðŸ”" FontSize="12" Margin="10,0,0,0" 
                                               VerticalAlignment="Center" HorizontalAlignment="Left"
                                               Foreground="{DynamicResource TextTertiaryBrush}" IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                            
                            <!-- List Header -->
                            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Padding="12,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    <TextBlock Grid.Column="1" Text="NAME" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" Margin="8,0"/>
                                    <TextBlock Grid.Column="2" Text="RANK" FontWeight="Bold" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                            
                            <!-- List -->
                            <ListView Grid.Row="2" ItemsSource="{Binding FilteredStores}"
                                      SelectedItem="{Binding SelectedStore}"
                                      BorderThickness="0" Background="Transparent"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ItemContainerStyle="{StaticResource ModernListViewItem}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Code}" FontWeight="Medium" 
                                                       Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" 
                                                       TextTrimming="CharacterEllipsis" Margin="8,0"/>
                                            <Border Grid.Column="2" Background="{DynamicResource SuccessBackgroundBrush}" 
                                                    CornerRadius="4" Padding="8,3" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Rank}" Foreground="{DynamicResource SuccessBrush}" 
                                                           FontWeight="SemiBold" FontSize="11"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                    
                    <!-- Footer -->
                    <Border Grid.Row="3" Background="{DynamicResource SurfaceHoverBrush}" Padding="12,10"
                            CornerRadius="0,0,8,8">
                        <TextBlock Text="{Binding FilteredStores.Count, StringFormat='Showing {0} stores'}"
                                   FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    </ScrollViewer>
</UserControl>





