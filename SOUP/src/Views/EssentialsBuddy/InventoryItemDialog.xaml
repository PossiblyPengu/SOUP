<UserControl x:Class="SOUP.Views.EssentialsBuddy.InventoryItemDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             mc:Ignorable="d"
             MinWidth="500" MinHeight="550"
             d:DesignHeight="650" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance Type=vm:InventoryItemDialogViewModel}">

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="14"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.25" Color="#000000"/>
        </Border.Effect>
        <Grid Margin="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border Width="44" Height="44" CornerRadius="12" Margin="0,0,14,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#10b981" Offset="0"/>
                                <GradientStop Color="#34d399" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#10b981"/>
                        </Border.Effect>
                        <TextBlock Text="ðŸ“¦" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Inventory Item"
                                   FontSize="22" FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Add or edit inventory item details"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
                <Separator Background="{DynamicResource BorderBrush}" Height="1"/>
            </StackPanel>

            <!-- Form Fields -->
            <Grid Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                    <!-- Item Number -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Item Number" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding ItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Description" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Two Column Layout for Numbers -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Bin Code -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Bin Code" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding BinCode, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Quantity On Hand -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Qty On Hand" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding QuantityOnHand, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Two Column Layout for Thresholds -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Minimum Threshold -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Min Threshold" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding MinimumThreshold, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Maximum Threshold -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Max Threshold" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding MaximumThreshold, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Category -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Category" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Last Updated -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Last Updated" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <DatePicker SelectedDate="{Binding LastUpdated}"
                                    Style="{StaticResource ModernDatePicker}"/>
                    </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                <!-- Top shadow -->
                <Border VerticalAlignment="Top" Height="10" IsHitTestVisible="False">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#10000000" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>

            <!-- Buttons -->
            <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0" Padding="0,24,0,0" Margin="0,20,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1" Content="Cancel"
                            Click="Cancel_Click"
                            Style="{StaticResource SecondaryButton}"
                            Padding="28,12" Margin="0,0,12,0" FontSize="14" FontWeight="SemiBold"/>
                    <Button Grid.Column="2" Click="Save_Click" Padding="28,12" FontSize="14" FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#10b981" Offset="0"/>
                                            <GradientStop Color="#34d399" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Save Changes" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>





