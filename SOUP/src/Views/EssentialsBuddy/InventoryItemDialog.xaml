<UserControl x:Class="SOUP.Views.EssentialsBuddy.InventoryItemDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             mc:Ignorable="d"
             MinWidth="500" MinHeight="550"
             d:DesignHeight="650" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance Type=vm:InventoryItemDialogViewModel}">

    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¦" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Inventory Item" 
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Add or edit inventory item details"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Form Fields -->
            <Grid Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                    <!-- Item Number -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Item Number" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding ItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Description" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Two Column Layout for Numbers -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Bin Code -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Bin Code" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding BinCode, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Quantity On Hand -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Qty On Hand" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding QuantityOnHand, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Two Column Layout for Thresholds -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Minimum Threshold -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Min Threshold" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding MinimumThreshold, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Maximum Threshold -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Max Threshold" FontWeight="SemiBold" FontSize="13"
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                            <TextBox Text="{Binding MaximumThreshold, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Category -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Category" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Last Updated -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Last Updated" FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                        <DatePicker SelectedDate="{Binding LastUpdated}"
                                    Style="{StaticResource ModernDatePicker}"/>
                    </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                <!-- Top shadow -->
                <Border VerticalAlignment="Top" Height="10" IsHitTestVisible="False">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#10000000" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>

            <!-- Buttons -->
            <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,1,0,0" Padding="0,20,0,0" Margin="0,16,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1" Content="Cancel" 
                            Click="Cancel_Click" 
                            Style="{StaticResource SecondaryButton}"
                            Padding="24,10" Margin="0,0,12,0"/>
                    <Button Grid.Column="2" Content="ðŸ’¾ Save" 
                            Click="Save_Click" 
                            Style="{StaticResource PrimaryButton}"
                            Padding="24,10"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>





