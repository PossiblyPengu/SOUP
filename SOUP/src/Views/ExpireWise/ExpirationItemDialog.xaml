<UserControl x:Class="SOUP.Views.ExpireWise.ExpirationItemDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="600"
             d:DataContext="{d:DesignInstance Type=vm:ExpirationItemDialogViewModel}">

    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" 
                    CornerRadius="12,0,0,12" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="8,12,8,20">
                        <TextBlock Text="ðŸ“…" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Add Item" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Navigation Items -->
                    <StackPanel Grid.Row="1">
                        <RadioButton x:Name="SingleItemMode" GroupName="InputMode" 
                                     IsChecked="{Binding IsSingleItemMode, Mode=OneWay}"
                                     Checked="SingleItemMode_Checked"
                                     Cursor="Hand" Margin="0,0,0,4">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="Bd" Background="Transparent" CornerRadius="8" Padding="12,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock x:Name="Title" Text="Single Item" FontSize="13" FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text="Add one item" FontSize="10" 
                                                           Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                            <Setter TargetName="Title" Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsChecked" Value="True"/>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                        
                        <RadioButton x:Name="BulkInputMode" GroupName="InputMode"
                                     IsChecked="{Binding IsBulkMode, Mode=OneWay}"
                                     Checked="BulkInputMode_Checked"
                                     Cursor="Hand">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="Bd" Background="Transparent" CornerRadius="8" Padding="12,10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock x:Name="Title" Text="Bulk Input" FontSize="13" FontWeight="SemiBold" 
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                <TextBlock Text="Paste multiple SKUs" FontSize="10" 
                                                           Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                            <Setter TargetName="Title" Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsChecked" Value="True"/>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Content Header -->
                <TextBlock Grid.Row="0" Text="{Binding DialogTitle}" 
                           FontSize="18" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,16"/>

                <!-- Content Panels -->
                <Grid Grid.Row="1">
                    <!-- Single Item Panel -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  Visibility="{Binding IsSingleItemMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <!-- Item Lookup Section -->
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ” Item Lookup" FontWeight="SemiBold" FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Item Number -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Item Number *" FontWeight="Medium" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding ItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource ModernTextBox}"
                                                     x:Name="ItemNumberTextBox"/>
                                        </StackPanel>
                                        
                                        <!-- Description -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Description *" FontWeight="Medium" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource ModernTextBox}"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <!-- Autocomplete Suggestions -->
                                    <Border Visibility="{Binding ShowSuggestions, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Background="{DynamicResource SurfaceBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1" CornerRadius="6"
                                            MaxHeight="150" Margin="0,8,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                                        </Border.Effect>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding Suggestions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border x:Name="SuggestionBorder" 
                                                                Padding="12,10" Cursor="Hand"
                                                                Background="Transparent"
                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                BorderThickness="0,0,0,1">
                                                            <Border.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick" 
                                                                              Command="{Binding DataContext.SelectSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                              CommandParameter="{Binding}"/>
                                                            </Border.InputBindings>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="{Binding Number}" 
                                                                           FontWeight="SemiBold" FontSize="13"
                                                                           Foreground="{DynamicResource PrimaryBrush}"
                                                                           Margin="0,0,12,0"/>
                                                                <TextBlock Grid.Column="1" Text="{Binding Description}" 
                                                                           FontSize="12" TextTrimming="CharacterEllipsis"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                            </Grid>
                                                        </Border>
                                                        <DataTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="SuggestionBorder" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                            </Trigger>
                                                        </DataTemplate.Triggers>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                    
                                    <!-- Lookup Status -->
                                    <TextBlock Text="{Binding LookupStatus}" 
                                               FontSize="11" Margin="0,8,0,0"
                                               Visibility="{Binding LookupStatus, Converter={StaticResource StringToVisibilityConverter}}"
                                               Foreground="{Binding ItemFoundInDictionary, Converter={StaticResource BoolToSuccessColorConverter}}"/>
                                </StackPanel>
                            </Border>

                            <!-- Details Section -->
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“‹ Details" FontWeight="SemiBold" FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Location -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Location" FontWeight="Medium" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <ComboBox ItemsSource="{Binding AvailableStores}"
                                                      SelectedItem="{Binding SelectedStore}"
                                                      DisplayMemberPath="Display"
                                                      Style="{StaticResource ModernComboBox}"/>
                                        </StackPanel>
                                        
                                        <!-- Expiry Date -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Expiry Month *" FontWeight="Medium" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <StackPanel Orientation="Horizontal">
                                                <ComboBox ItemsSource="{Binding AvailableMonths}"
                                                          SelectedValue="{Binding ExpiryMonth}"
                                                          SelectedValuePath="Value"
                                                          DisplayMemberPath="Name"
                                                          Style="{StaticResource ModernComboBox}"
                                                          Width="120"/>
                                                <ComboBox ItemsSource="{Binding AvailableYears}"
                                                          SelectedItem="{Binding ExpiryYear}"
                                                          Style="{StaticResource ModernComboBox}"
                                                          Width="75" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Units -->
                                        <StackPanel Grid.Column="4">
                                            <TextBlock Text="Units" FontWeight="Medium" FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding Units, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource ModernTextBox}" 
                                                     Width="70" HorizontalContentAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Notes Section -->
                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“ Notes" FontWeight="SemiBold" FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                             VerticalContentAlignment="Top"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                <!-- Bulk Input Panel -->
                <Grid Visibility="{Binding IsBulkMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Settings Card -->
                    <Border Grid.Row="0" Background="{DynamicResource BackgroundBrush}" 
                            CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="âš™ï¸ Bulk Settings" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Location -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Location" FontWeight="Medium" FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding AvailableStores}"
                                              SelectedItem="{Binding BulkSelectedStore}"
                                              DisplayMemberPath="Display"
                                              Style="{StaticResource ModernComboBox}"/>
                                </StackPanel>

                                <!-- Expiry -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Expiry" FontWeight="Medium" FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <StackPanel Orientation="Horizontal">
                                        <ComboBox ItemsSource="{Binding AvailableMonths}"
                                                  SelectedValue="{Binding BulkExpiryMonth}"
                                                  SelectedValuePath="Value"
                                                  DisplayMemberPath="Name"
                                                  Style="{StaticResource ModernComboBox}"
                                                  Width="110"/>
                                        <ComboBox ItemsSource="{Binding AvailableYears}"
                                                  SelectedItem="{Binding BulkExpiryYear}"
                                                  Style="{StaticResource ModernComboBox}"
                                                  Width="70" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Units -->
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Units Each" FontWeight="Medium" FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding BulkUnits, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}" Width="60" HorizontalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Input & Results Section -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- SKU Input Card -->
                        <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" 
                                CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‹ SKU List" FontWeight="SemiBold" FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding BulkItemCount, StringFormat=' ({0} items)'}" FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"
                                               Margin="4,0,0,0"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="2"
                                         Text="{Binding BulkSkuInput, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         AcceptsReturn="True" TextWrapping="Wrap"
                                         VerticalContentAlignment="Top"
                                         VerticalScrollBarVisibility="Auto"
                                         FontFamily="Consolas"
                                         FontSize="13"/>
                                
                                <Button Grid.Row="4" Content="ðŸ” Verify SKUs" 
                                        Command="{Binding VerifyBulkSkusCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        HorizontalAlignment="Stretch"
                                        Padding="16,10"/>
                            </Grid>
                        </Border>

                        <!-- Verification Results Card -->
                        <Border Grid.Column="2" Background="{DynamicResource BackgroundBrush}"
                                CornerRadius="8" Padding="16"
                                Visibility="{Binding ShowVerificationResults, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Results Header -->
                                <TextBlock Grid.Row="0" Text="âœ“ Results" FontWeight="SemiBold" FontSize="14"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <Border Background="{DynamicResource SuccessBrush}" CornerRadius="4" 
                                            Padding="8,4" Margin="0,0,8,0" Opacity="0.15"/>
                                    <TextBlock FontSize="12" VerticalAlignment="Center">
                                        <Run Text="âœ“" Foreground="{DynamicResource SuccessBrush}"/>
                                        <Run Text="{Binding BulkFoundCount, Mode=OneWay}" FontWeight="SemiBold"/>
                                        <Run Text=" found" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="12" Margin="16,0,0,0" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding BulkNotFoundCount}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="âš " Foreground="{DynamicResource WarningBrush}"/>
                                        <Run Text="{Binding BulkNotFoundCount, Mode=OneWay}" FontWeight="SemiBold"/>
                                        <Run Text=" missing" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Results List -->
                                <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding BulkVerificationResults}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="8,6" 
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="0,0,0,1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" FontSize="12" Width="16" TextAlignment="Center"
                                                                   VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="âœ“"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Found}" Value="False">
                                                                            <Setter Property="Text" Value="âš "/>
                                                                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Sku}" FontSize="12" FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                <TextBlock FontSize="10" Margin="6,0,0,0"
                                                                           Foreground="{DynamicResource PrimaryBrush}"
                                                                           VerticalAlignment="Center"
                                                                           Visibility="{Binding Found, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                    <Run Text="â†’"/>
                                                                    <Run Text="{Binding ItemNumber, Mode=OneWay}"/>
                                                                </TextBlock>
                                                                <TextBlock Text=" âœ“ saved" FontSize="9" 
                                                                           Foreground="{DynamicResource SuccessBrush}"
                                                                           Visibility="{Binding SkuWasAdded, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                           Margin="6,0,0,0" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Text="{Binding Description}" FontSize="10" 
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                            <Button Content="ðŸ“Ž" 
                                                                    ToolTip="Add this SKU to the item"
                                                                    Command="{Binding DataContext.AddSkuToExistingItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource SecondaryButton}"
                                                                    Padding="6,4" FontSize="10" MinWidth="28"
                                                                    Margin="0,0,4,0"
                                                                    Visibility="{Binding SkuCanBeAdded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                            <Button Content="âž•" 
                                                                    ToolTip="Add new item to dictionary"
                                                                    Command="{Binding DataContext.StartAddToDictionaryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    Style="{StaticResource SecondaryButton}"
                                                                    Padding="6,4" FontSize="10" MinWidth="28"
                                                                    Visibility="{Binding Found, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                        
                        <!-- Empty State when no results -->
                        <Border Grid.Column="2" Background="{DynamicResource BackgroundBrush}"
                                CornerRadius="8" Padding="24"
                                Visibility="{Binding ShowVerificationResults, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“‹" FontSize="32" HorizontalAlignment="Center" Opacity="0.5"/>
                                <TextBlock Text="Enter SKUs and click Verify" FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Add to Dictionary Panel -->
                    <Border Grid.Row="2" Background="{DynamicResource PrimaryBrush}" 
                            CornerRadius="8" Padding="16" Margin="0,12,0,0"
                            Visibility="{Binding ShowAddItemPanel, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="âž• Add New Item to Dictionary" FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource TextOnPrimaryBrush}" Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Item #" FontSize="11" 
                                               Foreground="{DynamicResource TextOnPrimaryBrush}" Opacity="0.8" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}" FontSize="12"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="SKU" FontSize="11" 
                                               Foreground="{DynamicResource TextOnPrimaryBrush}" Opacity="0.8" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewItemSku, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}" FontSize="12"
                                             IsReadOnly="True" Background="{DynamicResource OverlayMediumBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Description" FontSize="11" 
                                               Foreground="{DynamicResource TextOnPrimaryBrush}" Opacity="0.8" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewItemDescription, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Autocomplete Suggestions -->
                            <Border Visibility="{Binding ShowAddItemSuggestions, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Background="{DynamicResource SurfaceBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1" CornerRadius="6"
                                    MaxHeight="100" Margin="0,8,0,0">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding AddItemSuggestions}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border x:Name="SuggestionBorder" 
                                                        Padding="10,8" Cursor="Hand"
                                                        Background="Transparent"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="0,0,0,1">
                                                    <Border.InputBindings>
                                                        <MouseBinding MouseAction="LeftClick" 
                                                                      Command="{Binding DataContext.SelectAddItemSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                      CommandParameter="{Binding}"/>
                                                    </Border.InputBindings>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Number}" 
                                                                   FontWeight="SemiBold" FontSize="12"
                                                                   Foreground="{DynamicResource PrimaryBrush}"
                                                                   Margin="0,0,12,0"/>
                                                        <TextBlock Grid.Column="1" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}">
                                                            <Run Text="{Binding Description, Mode=OneWay}"/>
