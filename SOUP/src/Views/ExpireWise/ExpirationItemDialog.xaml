<UserControl x:Class="SOUP.Views.ExpireWise.ExpirationItemDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             xmlns:converters="clr-namespace:SOUP.Converters"
             mc:Ignorable="d"
             MinWidth="520" MinHeight="480"
             d:DesignHeight="500" d:DesignWidth="520"
             d:DataContext="{d:DesignInstance Type=vm:ExpirationItemDialogViewModel}">

    <UserControl.Resources>
        <Color x:Key="ExpireWiseAccentColor">#f59e0b</Color>
        <SolidColorBrush x:Key="ExpireWiseAccentBrush" Color="{StaticResource ExpireWiseAccentColor}"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource BackgroundBrush}" 
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
        </Border.Effect>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="{Binding DialogTitle}" FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Enter SKUs one per line, or paste from Excel with quantities"
                           FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Location & Month Row -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Store -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Location" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding AvailableStores}"
                              SelectedItem="{Binding SelectedStore}"
                              DisplayMemberPath="Display"
                              Style="{StaticResource ModernComboBox}"/>
                </StackPanel>

                <!-- Expiry Month -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Expiry" Style="{StaticResource FormLabel}"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox ItemsSource="{Binding AvailableMonths}"
                                  SelectedValue="{Binding ExpiryMonth}"
                                  SelectedValuePath="Value"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ModernComboBox}" Width="110"/>
                        <ComboBox ItemsSource="{Binding AvailableYears}"
                                  SelectedItem="{Binding ExpiryYear}"
                                  Style="{StaticResource ModernComboBox}" Width="80" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- SKU Input & Results -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SKU Input -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="SKUs" Style="{StaticResource FormLabel}" Margin="0"/>
                        <TextBlock Text="{Binding TotalItemCount, StringFormat='{}{0} items'}" 
                                   FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"
                                   HorizontalAlignment="Right"
                                   Visibility="{Binding TotalItemCount, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}"/>
                    </Grid>

                    <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                            CornerRadius="8" Background="{DynamicResource BackgroundBrush}">
                        <TextBox Text="{Binding SkuInput, UpdateSourceTrigger=PropertyChanged}"
                                 BorderThickness="0" Background="Transparent"
                                 AcceptsReturn="True" AcceptsTab="True" TextWrapping="NoWrap"
                                 VerticalContentAlignment="Top" Padding="12,10"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" FontSize="13"
                                 Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </Border>

                    <Button Grid.Row="3" Command="{Binding ParseAndVerifyCommand}"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch" Padding="0,10">
                        <TextBlock Text="Verify" FontWeight="SemiBold"/>
                    </Button>
                </Grid>

                <!-- Verification Results -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Results" Style="{StaticResource FormLabel}"/>

                    <!-- Results List -->
                    <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                            CornerRadius="8" Background="{DynamicResource BackgroundBrush}"
                            Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ParsedItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="ItemBorder" Padding="10,8" 
                                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                                                Background="Transparent">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Status -->
                                                <TextBlock Grid.Column="0" FontSize="12" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="âœ“"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Found}" Value="False">
                                                                    <Setter Property="Text" Value="?"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <!-- Item -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ItemNumber}" FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="10"
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="130"/>
                                                </StackPanel>

                                                <!-- Qty & Actions -->
                                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBox Width="40" 
                                                             Text="{Binding Units, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource ModernTextBox}"
                                                             HorizontalContentAlignment="Center"
                                                             FontSize="11" Padding="4,3"/>
                                                    
                                                    <Button Content="+" ToolTip="Add to dictionary"
                                                            Command="{Binding DataContext.StartAddToDictCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Visibility="{Binding Found, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                            Style="{StaticResource IconButton}"
                                                            Width="22" Height="22" FontSize="12" Margin="6,0,0,0"/>
                                                    
                                                    <Button Content="ðŸ”—" ToolTip="Link SKU"
                                                            Command="{Binding DataContext.AddSkuToItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Visibility="{Binding CanAddSkuToItem, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            Style="{StaticResource IconButton}"
                                                            Width="22" Height="22" FontSize="10" Margin="4,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <DataTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Empty State -->
                    <Border Grid.Row="1" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" 
                            CornerRadius="8" Background="{DynamicResource BackgroundBrush}"
                            Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                        <TextBlock Text="Enter SKUs and verify" FontSize="12"
                                   Foreground="{DynamicResource TextTertiaryBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="Cancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Padding="20,10" Margin="0,0,10,0"/>
                <Button Content="Add" Click="Submit_Click"
                        IsEnabled="{Binding CanSubmit}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,10"/>
            </StackPanel>

            <!-- Add to Dictionary Overlay -->
            <Border Grid.RowSpan="7" Visibility="{Binding ShowAddToDictionaryPanel, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="#80000000" CornerRadius="12">
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="10" 
                        Padding="20" MaxWidth="360" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Add to Dictionary" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                        <TextBlock FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,0,0,16">
                            <Run Text="SKU: "/><Run Text="{Binding ItemToAddToDict.InputSku, Mode=OneWay}" 
                                 Foreground="{StaticResource ExpireWiseAccentBrush}"/>
                        </TextBlock>

                        <TextBlock Text="Item Number" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding NewDictItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>

                        <TextBlock Text="Description" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding NewDictDescription, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}" Margin="0,0,0,16"/>

                        <!-- Suggestions -->
                        <Border Visibility="{Binding ShowDictSuggestions, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="{DynamicResource BackgroundBrush}" CornerRadius="6"
                                MaxHeight="100" Margin="0,0,0,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding DictSuggestions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="SugBorder" Padding="10,8" Cursor="Hand" Background="Transparent"
                                                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick"
                                                                  Command="{Binding DataContext.SelectDictSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Number}" FontWeight="SemiBold" FontSize="12"
                                                               Foreground="{StaticResource ExpireWiseAccentBrush}"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="10"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SugBorder" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" Command="{Binding CancelAddToDictCommand}"
                                    Style="{StaticResource SecondaryButton}" Padding="16,8" Margin="0,0,8,0"/>
                            <Button Content="Save" Command="{Binding SaveNewDictItemCommand}"
                                    Style="{StaticResource PrimaryButton}" Padding="16,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </Border>
</UserControl>
