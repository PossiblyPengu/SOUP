<UserControl x:Class="SOUP.Views.ExpireWise.ExpirationItemDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             xmlns:converters="clr-namespace:SOUP.Converters"
             mc:Ignorable="d"
             d:DesignHeight="560" d:DesignWidth="750"
             d:DataContext="{d:DesignInstance Type=vm:ExpirationItemDialogViewModel}">

    <UserControl.Resources>
        <Color x:Key="ExpireWiseAccentColor">#f59e0b</Color>
        <SolidColorBrush x:Key="ExpireWiseAccentBrush" Color="{StaticResource ExpireWiseAccentColor}"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
        
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12">
        <Grid Margin="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="{StaticResource ExpireWiseAccentBrush}" 
                        CornerRadius="10" Width="44" Height="44" Margin="0,0,16,0">
                    <TextBlock Text="ðŸ“¦" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding DialogTitle}" FontSize="22" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Paste SKUs from Excel (with optional quantity column) or type one per line"
                               FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Settings Row -->
            <Border Grid.Row="2" Background="{DynamicResource BackgroundBrush}" CornerRadius="10" Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="160"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Store -->
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Store Location" Style="{StaticResource FormLabel}" Margin="0"/>
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding AvailableStores}"
                                  SelectedItem="{Binding SelectedStore}"
                                  DisplayMemberPath="Display"
                                  Style="{StaticResource ModernComboBox}"/>
                    </StackPanel>

                    <!-- Expiry Date -->
                    <StackPanel Grid.Column="2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="ðŸ“…" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Expiry Date" Style="{StaticResource FormLabel}" Margin="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox ItemsSource="{Binding AvailableMonths}"
                                      SelectedValue="{Binding ExpiryMonth}"
                                      SelectedValuePath="Value"
                                      DisplayMemberPath="Name"
                                      Style="{StaticResource ModernComboBox}" Width="115"/>
                            <ComboBox ItemsSource="{Binding AvailableYears}"
                                      SelectedItem="{Binding ExpiryYear}"
                                      Style="{StaticResource ModernComboBox}" Width="75" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Default Units -->
                    <StackPanel Grid.Column="4">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="#" FontSize="12" FontWeight="Bold" Margin="0,0,6,0" 
                                       Foreground="{DynamicResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="Default Qty" Style="{StaticResource FormLabel}" Margin="0"/>
                        </StackPanel>
                        <TextBox Text="{Binding DefaultUnits, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}" Width="70" 
                                 HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1.1*"/>
                </Grid.ColumnDefinitions>

                <!-- Input Panel -->
                <Border Grid.Column="0" Background="{DynamicResource BackgroundBrush}" CornerRadius="10" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="14"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="SKU Input" Style="{StaticResource SectionHeader}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border Background="{StaticResource ExpireWiseAccentBrush}" CornerRadius="10" 
                                    Padding="8,3" HorizontalAlignment="Right" VerticalAlignment="Center"
                                    Visibility="{Binding TotalItemCount, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Invert}">
                                <TextBlock Text="{Binding TotalItemCount}" FontSize="11" FontWeight="SemiBold"
                                           Foreground="White"/>
                            </Border>
                        </Grid>

                        <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
                            <TextBox Text="{Binding SkuInput, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" Background="Transparent"
                                     AcceptsReturn="True" AcceptsTab="True" TextWrapping="NoWrap"
                                     VerticalContentAlignment="Top" Padding="12,10"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     FontFamily="Consolas" FontSize="13"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Border>

                        <Button Grid.Row="4" Command="{Binding ParseAndVerifyCommand}"
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Stretch" Padding="16,12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Verify SKUs" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Results Panel -->
                <Border Grid.Column="2" Background="{DynamicResource BackgroundBrush}" CornerRadius="10" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="14"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Verification Results" Style="{StaticResource SectionHeader}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>

                        <!-- Results List -->
                        <Border Grid.Row="4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8"
                                Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ParsedItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="ItemBorder" Padding="12,10" 
                                                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                                                    Background="Transparent">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="10"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Status Icon -->
                                                    <Border Grid.Column="0" Width="24" Height="24" CornerRadius="12" VerticalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#1422c55e"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Found}" Value="False">
                                                                        <Setter Property="Background" Value="#14f59e0b"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="âœ“"/>
                                                                    <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Found}" Value="False">
                                                                            <Setter Property="Text" Value="?"/>
                                                                            <Setter Property="Foreground" Value="{DynamicResource WarningBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>

                                                    <!-- Item Info -->
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock FontSize="13" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextPrimaryBrush}">
                                                            <Run Text="{Binding ItemNumber, Mode=OneWay}"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding Description}" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                                    </StackPanel>

                                                    <!-- Edit Units -->
                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                                                        <TextBlock Text="Ã—" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                                                        <TextBox Width="50" 
                                                                 Text="{Binding Units, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource ModernTextBox}"
                                                                 HorizontalContentAlignment="Center"
                                                                 FontSize="12" Padding="6,4"
                                                                 VerticalAlignment="Center"/>
                                                    </StackPanel>

                                                    <!-- Actions -->
                                                    <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <!-- Add to Dict button (not found) -->
                                                        <Button Content="+" ToolTip="Add to dictionary"
                                                                Command="{Binding DataContext.StartAddToDictCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Visibility="{Binding Found, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                                Style="{StaticResource IconButton}"
                                                                Width="26" Height="26" FontSize="14"/>
                                                        
                                                        <!-- Link SKU button (found but SKU different) -->
                                                        <Button Content="ðŸ”—" ToolTip="Link this SKU to item"
                                                                Command="{Binding DataContext.AddSkuToItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Visibility="{Binding CanAddSkuToItem, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                Style="{StaticResource IconButton}"
                                                                Width="26" Height="26" FontSize="12"/>
                                                        
                                                        <!-- Added checkmark -->
                                                        <Border Background="#1422c55e" CornerRadius="10" Padding="6,2"
                                                                Visibility="{Binding SkuWasAdded, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                VerticalAlignment="Center" Margin="4,0,0,0">
                                                            <TextBlock Text="âœ“" Foreground="{DynamicResource SuccessBrush}" FontSize="10"/>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <!-- Empty State -->
                        <Border Grid.Row="4" VerticalAlignment="Stretch" 
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8"
                                Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="24" 
                                        Width="48" Height="48" HorizontalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock Text="ðŸ“‹" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="No items verified" FontSize="13" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Enter SKUs and click Verify" FontSize="12"
                                           Foreground="{DynamicResource TextTertiaryBrush}" 
                                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="6">
                <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="8" Padding="12,10"
                        HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¡" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Tip: Copy SKU + Qty columns from Excel" 
                                   FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Cancel" Click="Cancel_Click"
                            Style="{StaticResource SecondaryButton}"
                            Padding="24,12" Margin="0,0,10,0"/>
                    <Button Click="Submit_Click"
                            IsEnabled="{Binding CanSubmit}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="24,12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ“" FontSize="12" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Items" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Add to Dictionary Overlay -->
            <Border Grid.RowSpan="7" Visibility="{Binding ShowAddToDictionaryPanel, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="#80000000" CornerRadius="12">
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" 
                        Padding="24" MaxWidth="420" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="40">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="24" ShadowDepth="4" Opacity="0.3" Direction="270"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Header -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Background="{StaticResource ExpireWiseAccentBrush}" 
                                    CornerRadius="10" Width="40" Height="40" Margin="0,0,14,0">
                                <TextBlock Text="ðŸ“–" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Add to Dictionary" FontSize="18" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0">
                                    <Run Text="SKU: "/><Run Text="{Binding ItemToAddToDict.InputSku, Mode=OneWay}" FontWeight="SemiBold" 
                                         Foreground="{StaticResource ExpireWiseAccentBrush}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <!-- Form Fields -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Item Number" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding NewDictItemNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Description" Style="{StaticResource FormLabel}"/>
                            <TextBox Text="{Binding NewDictDescription, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Suggestions -->
                        <Border Visibility="{Binding ShowDictSuggestions, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="{DynamicResource BackgroundBrush}" CornerRadius="8"
                                MaxHeight="140" Margin="0,0,0,16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding DictSuggestions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="SugBorder" Padding="12,10" Cursor="Hand" Background="Transparent"
                                                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                                                <Border.InputBindings>
                                                    <MouseBinding MouseAction="LeftClick"
                                                                  Command="{Binding DataContext.SelectDictSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  CommandParameter="{Binding}"/>
                                                </Border.InputBindings>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Number}" FontWeight="SemiBold" FontSize="13"
                                                                   Foreground="{StaticResource ExpireWiseAccentBrush}"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="11"
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" Text="â†’" FontSize="14" 
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                </Grid>
                                            </Border>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SugBorder" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <!-- Actions -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="1" Content="Cancel" Command="{Binding CancelAddToDictCommand}"
                                    Style="{StaticResource SecondaryButton}" Padding="20,10" Margin="0,0,10,0"/>
                            <Button Grid.Column="2" Command="{Binding SaveNewDictItemCommand}"
                                    Style="{StaticResource PrimaryButton}" Padding="20,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ’¾" FontSize="12" Margin="0,0,8,0"/>
                                    <TextBlock Text="Save" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </Border>
</UserControl>
