<UserControl x:Class="SOUP.Views.ExpireWise.ExpireWiseAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             xmlns:views="clr-namespace:SOUP.Features.ExpireWise.Views"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:ExpireWiseAnalyticsViewModel}">

    <UserControl.Resources>
        <!-- ExpireWise Amber Colors -->
        <Color x:Key="ExpireWiseAccentColor">#f59e0b</Color>
        <Color x:Key="ExpireWiseAccentDarkColor">#d97706</Color>
        <Color x:Key="ExpireWiseAccentLightColor">#fbbf24</Color>
        <SolidColorBrush x:Key="ExpireWiseAccentBrush" Color="{StaticResource ExpireWiseAccentColor}"/>

        <!-- Analytics Tab Style -->
        <Style x:Key="AnalyticsTabStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                BorderThickness="0" Padding="20,12" CornerRadius="8"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header"
                                            VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="{StaticResource ExpireWiseAccentDarkColor}" Offset="0"/>
                                            <GradientStop Color="{StaticResource ExpireWiseAccentColor}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="{StaticResource ExpireWiseAccentDarkColor}" Offset="0"/>
                                            <GradientStop Color="{StaticResource ExpireWiseAccentColor}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- StatCard Style - Compact -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ChartCard Style - Compact -->
        <Style x:Key="ChartCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.08" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Margin="8,8,8,0" CornerRadius="8" Padding="16,12">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="{StaticResource ExpireWiseAccentDarkColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource ExpireWiseAccentColor}" Offset="0.5"/>
                        <GradientStop Color="{StaticResource ExpireWiseAccentLightColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.25" Color="{StaticResource ExpireWiseAccentColor}"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="48" Height="48" CornerRadius="24" Background="{DynamicResource OverlayWhiteSubtleBrush}" Margin="0,0,16,0">
                        <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Analytics Dashboard" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource SectionTitleTextBrush}"/>
                        <TextBlock Text="Overview of expiration data and trends" FontSize="13" 
                                   Foreground="{DynamicResource TextOnPrimaryBrush}" Opacity="0.8" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

        <!-- TabControl -->
        <TabControl Grid.Row="1" Margin="8,16,8,8" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Tab Headers -->
                                    <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}"
                                            CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TabPanel IsItemsHost="True"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Tab Content -->
                                    <Border Grid.Row="1" Background="Transparent">
                                        <ContentPresenter ContentSource="SelectedContent"/>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Overview Tab -->
            <TabItem Style="{StaticResource AnalyticsTabStyle}" IsSelected="True">
                <TabItem.Header>
                    <TextBlock FontSize="14" FontWeight="SemiBold">
                        <Run Text="ðŸ“Š"/>
                        <Run Text="Overview"/>
                    </TextBlock>
                </TabItem.Header>

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

            <!-- Key Metrics Row -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Items -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Opacity="0"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TranslateTransform Y="20"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   From="0" To="1" Duration="0:0:0.4" BeginTime="0:0:0"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                   From="20" To="0" Duration="0:0:0.5" BeginTime="0:0:0">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource PrimaryBackgroundBrush}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="ðŸ“¦" FontSize="20"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Total Items" FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding TotalItems}" FontSize="28" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="{Binding TotalUnits, StringFormat='{}{0:N0} total units'}" 
                                   FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Critical Items -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Opacity="0"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TranslateTransform Y="20"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   From="0" To="1" Duration="0:0:0.4" BeginTime="0:0:0.1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                   From="20" To="0" Duration="0:0:0.5" BeginTime="0:0:0.1">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource DangerBackgroundBrush}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="ðŸš¨" FontSize="20"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Critical" FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding CriticalItems}" FontSize="28" FontWeight="Bold" 
                                           Foreground="{DynamicResource DangerBrush}"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="{Binding ExpiredItems, StringFormat='{}{0} already expired'}" 
                                   FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Average Shelf Life -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}" Opacity="0"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TranslateTransform Y="20"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   From="0" To="1" Duration="0:0:0.4" BeginTime="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                   From="20" To="0" Duration="0:0:0.5" BeginTime="0:0:0.2">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource WarningBackgroundBrush}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="ðŸ“…" FontSize="20"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Avg. Shelf Life" FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding AverageShelfLife, StringFormat='{}{0:F0}'}" 
                                               FontSize="28" FontWeight="Bold" 
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text=" days" FontSize="14" VerticalAlignment="Bottom" 
                                               Margin="0,0,0,5" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="until expiration" FontSize="11" 
                                   Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Most Common Location -->
                <Border Grid.Column="3" Style="{StaticResource StatCard}" Opacity="0"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TranslateTransform Y="20"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                   From="0" To="1" Duration="0:0:0.4" BeginTime="0:0:0.3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                   From="20" To="0" Duration="0:0:0.5" BeginTime="0:0:0.3">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{DynamicResource SuccessBackgroundBrush}" CornerRadius="8" Padding="8" Margin="0,0,12,0">
                                <TextBlock Text="ðŸ“" FontSize="20"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Top Location" FontSize="12" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="{Binding MostCommonLocation}" FontSize="20" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextPrimaryBrush}" 
                                           TextTrimming="CharacterEllipsis" MaxWidth="120"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="most items stored" FontSize="11" 
                                   Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts Row -->
            <Grid Grid.Row="1" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Monthly Expiration Chart -->
                <Border Grid.Column="0" Style="{StaticResource ChartCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ðŸ“ˆ Monthly Expiration Forecast" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding MonthlyData}" Height="200">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0"
                                            ToolTip="Click to filter inventory by this month">
                                        <Grid Margin="4,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Bar -->
                                            <Grid Grid.Row="0" VerticalAlignment="Bottom">
                                            <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="6,6,0,0" 
                                                    Height="160" VerticalAlignment="Bottom"/>
                                            <Border CornerRadius="6,6,0,0" VerticalAlignment="Bottom"
                                                    Height="{Binding ItemPercentage, Converter={StaticResource PercentageToHeightConverter}}"
                                                    RenderTransformOrigin="0.5,1">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleY="0"/>
                                                </Border.RenderTransform>
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                    <GradientStop Color="#fbbf24" Offset="0"/>
                                                                    <GradientStop Color="#f59e0b" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <EventTrigger RoutedEvent="Loaded">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                       From="0" To="1" Duration="0:0:0.6" BeginTime="0:0:0.1">
                                                                            <DoubleAnimation.EasingFunction>
                                                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                                            </DoubleAnimation.EasingFunction>
                                                                        </DoubleAnimation>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                            <!-- Critical indicator -->
                                            <Border Background="{DynamicResource DangerBrush}" CornerRadius="6,6,0,0" VerticalAlignment="Bottom"
                                                    Visibility="{Binding CriticalCount, Converter={StaticResource CountToVisibility}}"
                                                    Height="{Binding CriticalCount, Converter={StaticResource CriticalToHeightConverter}}"/>
                                        </Grid>

                                        <!-- Count Label -->
                                        <TextBlock Grid.Row="1" Text="{Binding ItemCount}" 
                                                   HorizontalAlignment="Center" FontWeight="Bold"
                                                   FontSize="14" Foreground="{DynamicResource TextPrimaryBrush}"
                                                   Margin="0,8,0,0"/>

                                            <!-- Month Label -->
                                            <TextBlock Grid.Row="2" Text="{Binding ShortMonth}"
                                                       HorizontalAlignment="Center" FontSize="11"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       Margin="0,2,0,0"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Status Distribution -->
                <Border Grid.Column="1" Style="{StaticResource ChartCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ðŸŽ¯ Status Distribution" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding StatusDistribution}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0"
                                            HorizontalContentAlignment="Stretch"
                                            ToolTip="Click to filter inventory by this status">
                                        <Grid Margin="0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Status Label -->
                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{Binding Color, Converter={StaticResource StringToColorConverter}}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="{Binding Status}" FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Progress Bar -->
                                        <Grid Grid.Column="1" Margin="8,0">
                                            <Border Background="{DynamicResource SurfaceActiveBrush}" CornerRadius="4" Height="8"/>
                                            <Border CornerRadius="4" Height="8" HorizontalAlignment="Left"
                                                    Width="{Binding Percentage, Converter={StaticResource PercentageToWidthConverter}}"
                                                    RenderTransformOrigin="0,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0"/>
                                                </Border.RenderTransform>
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Color, Converter={StaticResource StringToColorConverter}}"/>
                                                </Border.Background>
                                                <Border.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                               From="0" To="1" Duration="0:0:0.8" BeginTime="0:0:0.2">
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Border.Triggers>
                                            </Border>
                                        </Grid>

                                            <!-- Count -->
                                            <TextBlock Grid.Column="2" Text="{Binding Count}"
                                                       FontWeight="SemiBold" FontSize="13"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>

            <!-- Bottom Row -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Location Distribution -->
                <Border Grid.Column="0" Style="{StaticResource ChartCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ðŸ“ Top Locations" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding LocationDistribution}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0"
                                            HorizontalContentAlignment="Stretch"
                                            ToolTip="Click to filter inventory by this location">
                                        <Grid Margin="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Location Name -->
                                            <TextBlock Grid.Column="0" Text="{Binding Location}" FontSize="13" 
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>

                                        <!-- Progress Bar -->
                                        <Grid Grid.Column="1" Margin="12,0">
                                            <Border Background="{DynamicResource SurfaceActiveBrush}" CornerRadius="4" Height="12"/>
                                            <Border CornerRadius="4" Height="12" HorizontalAlignment="Left"
                                                    Width="{Binding Percentage, Converter={StaticResource PercentageToWidthConverter}}"
                                                    RenderTransformOrigin="0,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="0"/>
                                                </Border.RenderTransform>
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Color, Converter={StaticResource StringToColorConverter}}"/>
                                                </Border.Background>
                                                <Border.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                               From="0" To="1" Duration="0:0:0.8" BeginTime="0:0:0.3">
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <QuadraticEase EasingMode="EaseOut"/>
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Border.Triggers>
                                            </Border>
                                        </Grid>

                                            <!-- Stats -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Count}" FontWeight="Bold" FontSize="13"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <TextBlock Text=" items" FontSize="11"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Next Expiring Alert -->
                <Border Grid.Column="1" Style="{StaticResource ChartCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="â° Next Expiring" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,16"/>

                        <Border Grid.Row="1" Background="{DynamicResource WarningBackgroundBrush}" CornerRadius="10" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Days Badge -->
                                <Border Grid.Column="0" Background="{DynamicResource WarningBrush}" CornerRadius="10" 
                                        Padding="16,12" VerticalAlignment="Center" Margin="0,0,16,0">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding NextExpiringDays}" FontSize="28" FontWeight="Bold" 
