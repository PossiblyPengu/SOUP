<UserControl x:Class="SOUP.Views.ExpireWise.ExpireWiseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             xmlns:local="clr-namespace:SOUP.Views.ExpireWise"
             xmlns:views="clr-namespace:SOUP.Features.ExpireWise.Views"
             xmlns:converters="clr-namespace:SOUP.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400"
             d:DataContext="{d:DesignInstance Type=vm:ExpireWiseViewModel}"
             Focusable="True">

    <!-- Keyboard Shortcuts -->
    <UserControl.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding ToggleQuickAddCommand}"/>
        <KeyBinding Key="I" Modifiers="Ctrl" Command="{Binding ImportFromExcelCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ExportToCsvCommand}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FocusSearchCommand}"/>
        <KeyBinding Key="Return" Modifiers="Ctrl" Command="{Binding EditItemCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteSelectedCommand}"/>
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding LoadItemsCommand}"/>
        <!-- Store navigation -->
        <KeyBinding Key="Left" Modifiers="Ctrl" Command="{Binding PreviousStoreCommand}"/>
        <KeyBinding Key="Right" Modifiers="Ctrl" Command="{Binding NextStoreCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <local:StoreDisplayConverter x:Key="StoreDisplayConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        
        <!-- Urgency Colors -->
        <Color x:Key="UrgencyOverdueColor">#ef4444</Color>
        <Color x:Key="UrgencyThisWeekColor">#f97316</Color>
        <Color x:Key="UrgencyThisMonthColor">#eab308</Color>
        <Color x:Key="UrgencyNextMonthColor">#22c55e</Color>
        <Color x:Key="UrgencyLaterColor">#6b7280</Color>
        
        <SolidColorBrush x:Key="UrgencyOverdueBrush" Color="{StaticResource UrgencyOverdueColor}"/>
        <SolidColorBrush x:Key="UrgencyThisWeekBrush" Color="{StaticResource UrgencyThisWeekColor}"/>
        <SolidColorBrush x:Key="UrgencyThisMonthBrush" Color="{StaticResource UrgencyThisMonthColor}"/>
        <SolidColorBrush x:Key="UrgencyNextMonthBrush" Color="{StaticResource UrgencyNextMonthColor}"/>
        <SolidColorBrush x:Key="UrgencyLaterBrush" Color="{StaticResource UrgencyLaterColor}"/>
        
        <!-- ExpireWise Accent (Amber) -->
        <Color x:Key="ExpireWiseAccentColor">#f59e0b</Color>
        <Color x:Key="ExpireWiseAccentLightColor">#fbbf24</Color>
        <SolidColorBrush x:Key="ExpireWiseAccentBrush" Color="{StaticResource ExpireWiseAccentColor}"/>
        <SolidColorBrush x:Key="ExpireWiseAccentLightBrush" Color="{StaticResource ExpireWiseAccentLightColor}"/>

        <!-- Store Tab Style -->
        <Style x:Key="StoreTab" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bg" Background="Transparent" CornerRadius="8,8,0,0"
                                Padding="{TemplateBinding Padding}" BorderThickness="0,0,0,2" BorderBrush="Transparent">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bg" Property="BorderBrush" Value="{StaticResource ExpireWiseAccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource ExpireWiseAccentLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quick Action Button - improved with better hover and visibility -->
        <Style x:Key="QuickActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Item Card Style -->
        <Style x:Key="ItemCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Kanban Column Header -->
        <Style x:Key="ColumnHeader" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Toolbar Button -->
        <Style x:Key="ToolbarButton" TargetType="Button" BasedOn="{StaticResource IconButton}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header Bar -->
            <RowDefinition Height="Auto"/> <!-- Store Selector -->
            <RowDefinition Height="Auto"/> <!-- Page Tabs (Timeline/Archive) -->
            <RowDefinition Height="*"/>    <!-- Content Area -->
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- HEADER BAR -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="24,18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Logo & Title -->
                    <ColumnDefinition Width="*"/>    <!-- Search -->
                    <ColumnDefinition Width="Auto"/> <!-- Actions -->
                </Grid.ColumnDefinitions>

                <!-- Logo & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="44" Height="44" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource ExpireWiseAccentColor}" Offset="0"/>
                                <GradientStop Color="{StaticResource ExpireWiseAccentLightColor}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="ðŸ“…" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ExpireWise" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Expiration Date Tracker" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,3,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Search Bar -->
                <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}" CornerRadius="10" 
                        Margin="40,0" MaxWidth="520" HorizontalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="15" VerticalAlignment="Center" 
                                   Margin="14,0,10,0" Foreground="{DynamicResource TextTertiaryBrush}"/>
                        <TextBox x:Name="SearchBox" Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 VerticalAlignment="Center" Padding="0,12"
                                 FontSize="14"/>
                        <TextBlock Grid.Column="1" Text="Search products or SKU..." FontSize="14"
                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                   VerticalAlignment="Center" IsHitTestVisible="False"
                                   Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Invert}"/>
                        <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="4" 
                                Padding="6,3" Margin="8,0,14,0" VerticalAlignment="Center">
                            <TextBlock Text="Ctrl+F" FontSize="10" 
                                       Foreground="{DynamicResource TextTertiaryBrush}"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding ToggleQuickAddCommand}"
                            Style="{StaticResource ToolbarButton}"
                            FontWeight="SemiBold" FontSize="13"
                            Padding="14,10" Margin="0,0,8,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bg" CornerRadius="8" Padding="{TemplateBinding Padding}" Cursor="Hand">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="{StaticResource ExpireWiseAccentColor}" Offset="0"/>
                                            <GradientStop Color="{StaticResource ExpireWiseAccentLightColor}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ï¼‹" FontSize="14" FontWeight="Bold" Foreground="#1a1a1a" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock Text="Add Item" FontSize="13" FontWeight="SemiBold" Foreground="#1a1a1a" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bg" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="ðŸ“¥" Command="{Binding ImportFromExcelCommand}"
                            Style="{StaticResource ToolbarButton}" ToolTip="Import from Excel (Ctrl+I)" FontSize="15"/>
                    <Button Content="ðŸ“¤" Command="{Binding ExportToCsvCommand}"
                            Style="{StaticResource ToolbarButton}" ToolTip="Export to CSV (Ctrl+E)" FontSize="15"/>
                    <Button Content="âŸ³" Command="{Binding LoadItemsCommand}"
                            Style="{StaticResource ToolbarButton}" ToolTip="Refresh (Ctrl+R)" FontSize="15"/>
                    <Button Content="âš™" Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource ToolbarButton}" ToolTip="Settings" FontSize="15"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- STORE SELECTOR BAR -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Store selector -->
                    <ColumnDefinition Width="*"/>    <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/> <!-- Stats & Sort -->
                </Grid.ColumnDefinitions>

                <!-- Store Dropdown Selector -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸª" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Store:" FontSize="13" FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <!-- Previous Store Button -->
                    <Button Command="{Binding PreviousStoreCommand}" 
                            ToolTip="Previous store (Ctrl+â†)" VerticalAlignment="Center"
                            Margin="0,0,4,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Width" Value="28"/>
                                <Setter Property="Height" Value="28"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bg" Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                <TextBlock Text="â—€" FontSize="10" 
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ExpireWiseAccentBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Store Dropdown -->
                    <ComboBox x:Name="StoreSelector"
                              ItemsSource="{Binding StoreDropdownItems}"
                              SelectedItem="{Binding SelectedStoreDropdownItem}"
                              Style="{StaticResource ModernComboBox}"
                              Width="280" FontSize="13"
                              VerticalAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding DisplayName}" 
                                               VerticalAlignment="Center"/>
                                    <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}" 
                                            CornerRadius="10" Padding="8,2" Margin="10,0,0,0"
                                            Visibility="{Binding ItemCount, Converter={StaticResource IntToVisibilityConverter}}">
                                        <TextBlock Text="{Binding ItemCount}" FontSize="11" 
                                                   Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Next Store Button -->
                    <Button Command="{Binding NextStoreCommand}" 
                            ToolTip="Next store (Ctrl+â†’)" VerticalAlignment="Center"
                            Margin="4,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Width" Value="28"/>
                                <Setter Property="Height" Value="28"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Bg" Background="{TemplateBinding Background}" 
                                                    CornerRadius="6" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                                                <TextBlock Text="â–¶" FontSize="10" 
                                                           Foreground="{TemplateBinding Foreground}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                    <Setter Property="Foreground" Value="{StaticResource ExpireWiseAccentBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Summary Stats & Sort -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#2aef4444" CornerRadius="8" Padding="12,7" Margin="0,0,16,0"
                            Visibility="{Binding OverdueCount, Converter={StaticResource IntToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding OverdueCount}" FontWeight="Bold" FontSize="13"
                                       Foreground="{StaticResource UrgencyOverdueBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="overdue" FontSize="12" Foreground="{StaticResource UrgencyOverdueBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Sort Dropdown -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Sort by:" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding TimelineSortOptions}" 
                                  SelectedItem="{Binding TimelineSortBy}"
                                  Style="{StaticResource ModernComboBox}"
                                  Width="110" FontSize="12"/>
                    </StackPanel>
                    
                    <!-- Collapse/Expand All - Only in "All Stores" view -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0"
                                Visibility="{Binding SelectedStore, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                        <Button Command="{Binding CollapseAllCommand}" ToolTip="Collapse All" Padding="8,6" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Bg" Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="â–²" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                        <TextBlock Text="â–²" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                   VerticalAlignment="Center" Margin="-6,0,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Command="{Binding ExpandAllCommand}" ToolTip="Expand All" Padding="8,6" Margin="4,0,0,0" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="Bg" Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="â–¼" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                        <TextBlock Text="â–¼" FontSize="10" Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                   VerticalAlignment="Center" Margin="-6,0,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- PAGE TABS (Timeline / Archive) -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="24,0">
            <StackPanel Orientation="Horizontal">
                <!-- Timeline Tab -->
                <Button Command="{Binding GoToTimelineCommand}" Margin="0,0,4,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bg" Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}"
                                                BorderThickness="0,0,0,2" BorderBrush="Transparent">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="Timeline" FontSize="13" FontWeight="Medium"
                                                           Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentPage}" Value="Timeline">
                                    <Setter Property="Foreground" Value="{StaticResource ExpireWiseAccentLightBrush}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="Transparent" Padding="16,12"
                                                        BorderThickness="0,0,0,2" BorderBrush="{StaticResource ExpireWiseAccentBrush}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="ðŸ“…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                        <TextBlock Text="Timeline" FontSize="13" FontWeight="SemiBold"
                                                                   Foreground="{StaticResource ExpireWiseAccentLightBrush}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
