                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Archive Header/Toolbar -->
                <RowDefinition Height="*"/>    <!-- Archive Content -->
