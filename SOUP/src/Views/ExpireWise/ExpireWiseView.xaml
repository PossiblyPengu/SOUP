                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} items â€¢ {1} total units">
                                        <Binding Path="ArchiveItemCount"/>
                                        <Binding Path="ArchiveTotalUnits"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Archive Search -->
                    <Border Grid.Column="1" Background="{DynamicResource BackgroundBrush}" CornerRadius="10" 
                            Margin="30,0" MaxWidth="400" HorizontalAlignment="Center">
