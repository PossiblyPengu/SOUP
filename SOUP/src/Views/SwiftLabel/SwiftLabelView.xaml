<UserControl x:Class="SOUP.Views.SwiftLabel.SwiftLabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SOUP.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SwiftLabelViewModel}"
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Card Style - Dark -->
        <Style x:Key="SwiftLabelCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceHoverBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Modern Input Label - Dark -->
        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Input Hint Text - Dark -->
        <Style x:Key="HintTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
            <Setter Property="Margin" Value="4,6,0,0"/>
        </Style>

        <!-- Modern TextBox - Dark -->
        <Style x:Key="ModernInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SurfaceActiveBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#8B5CF6"/>
                                <Setter TargetName="Border" Property="Background" Value="#1f1f23"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource TextDisabledBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox - Dark - Inherits proper dropdown styling -->
        <Style x:Key="ModernComboStyle" TargetType="ComboBox" BasedOn="{StaticResource ModernComboBoxStyle}">
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <!-- Stepper Button - Dark -->
        <Style x:Key="StepperButton" TargetType="Button">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="12" BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SurfaceActiveBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TextDisabledBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Generate Button -->
        <Style x:Key="GenerateButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="32,16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" CornerRadius="14" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#8B5CF6" Offset="0"/>
                                    <GradientStop Color="#7C3AED" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.3" Color="#8B5CF6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7C3AED" Offset="0"/>
                                            <GradientStop Color="#6D28D9" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="#8B5CF6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SurfaceActiveBrush}"/>
                                <Setter TargetName="Border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Quick Box Count Button - Dark -->
        <Style x:Key="QuickCountButton" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="8" BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2e1065"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#7c3aed"/>
                                <Setter Property="Foreground" Value="#a78bfa"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3b0764"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Main Background - Dark -->
    <Border Background="{DynamicResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="32,28">
                <Grid>
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Width="56" Height="56" CornerRadius="16" Margin="0,0,16,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#ec4899" Offset="0"/>
                                        <GradientStop Color="#f472b6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#ec4899"/>
                                </Border.Effect>
                                <TextBlock Text="ðŸ·ï¸" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Swift Label" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock Text="Generate professional transfer labels instantly" 
                                           FontSize="14" Foreground="{DynamicResource TextTertiaryBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="32,0,32,32">
                <Grid HorizontalAlignment="Center" MaxWidth="900">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="340"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*" MinWidth="340"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Column - Input Form -->
                    <Border Grid.Column="0" Style="{StaticResource SwiftLabelCardStyle}" Padding="28">
                        <StackPanel>
                            <TextBlock Text="LABEL DETAILS" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextTertiaryBrush}" 
                                       Margin="0,0,0,20"/>
                            
                            <!-- Store Selection -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Destination Store" Style="{StaticResource InputLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding Stores}"
                                          SelectedItem="{Binding SelectedStore}"
                                          Style="{StaticResource ModernComboStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding Code}" FontWeight="Bold" FontSize="12" Foreground="{DynamicResource SecondaryLightBrush}"/>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="Select the destination store for this transfer" Style="{StaticResource HintTextStyle}"/>
                            </StackPanel>

                            <!-- Printer Selection -->
                            <StackPanel Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Printer" Style="{StaticResource InputLabelStyle}"/>
                                    <Button Grid.Column="1" Content="ðŸ”„" FontSize="12" Cursor="Hand"
                                            Command="{Binding RefreshPrintersCommand}"
                                            ToolTip="Refresh printer list"
                                            Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextSecondaryBrush}"
                                            Padding="4,0" Margin="0,-4,0,0"/>
                                </Grid>
                                <ComboBox ItemsSource="{Binding AvailablePrinters}"
                                          SelectedItem="{Binding SelectedPrinter}"
                                          Style="{StaticResource ModernComboStyle}"/>
                            </StackPanel>

                            <!-- Paper Size Selection -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Paper Size" Style="{StaticResource InputLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding AvailablePaperSizes}"
                                          SelectedItem="{Binding SelectedPaperSize}"
                                          DisplayMemberPath="DisplayName"
                                          Style="{StaticResource ModernComboStyle}"/>
                                <TextBlock Text="Select label or paper size for printing" Style="{StaticResource HintTextStyle}"/>
                            </StackPanel>

                            <!-- Margins -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Margins" Style="{StaticResource InputLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding AvailableMarginPresets}"
                                          SelectedItem="{Binding SelectedMarginPreset}"
                                          DisplayMemberPath="DisplayName"
                                          Style="{StaticResource ModernComboStyle}"/>
                                <TextBlock Text="Adjust print margins for label alignment" Style="{StaticResource HintTextStyle}"/>
                            </StackPanel>

                            <!-- Transfer Number -->
                            <StackPanel Margin="0,0,0,24">
                                <TextBlock Text="Transfer Order Number" Style="{StaticResource InputLabelStyle}"/>
                                <TextBox Text="{Binding TransferNumber, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernInputStyle}"/>
                                <TextBlock Text="Enter the transfer order reference (e.g., TO-12345)" Style="{StaticResource HintTextStyle}"/>
                            </StackPanel>

                            <!-- Box Count -->
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Number of Boxes" Style="{StaticResource InputLabelStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Content="âˆ’" Style="{StaticResource StepperButton}"
                                            Click="DecrementBoxes_Click"/>

                                    <Border Grid.Column="1" Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="12" Margin="12,0" 
                                            BorderBrush="{DynamicResource SurfaceActiveBrush}" BorderThickness="1.5">
                                        <TextBox Text="{Binding TotalBoxes, UpdateSourceTrigger=PropertyChanged}"
                                                 HorizontalContentAlignment="Center"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="32"
                                                 FontWeight="Bold"
                                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 CaretBrush="{DynamicResource AccentBrush}"/>
                                    </Border>

                                    <Button Grid.Column="2" Content="+" Style="{StaticResource StepperButton}"
                                            Click="IncrementBoxes_Click"/>
                                </Grid>
                                
                                <!-- Quick Count Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                                    <TextBlock Text="Quick:" FontSize="12" Foreground="{DynamicResource TextTertiaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <Button Content="1" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="1"/>
                                    <Button Content="2" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="2"/>
                                    <Button Content="5" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="5"/>
                                    <Button Content="10" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="10"/>
                                    <Button Content="15" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="15"/>
                                    <Button Content="20" Style="{StaticResource QuickCountButton}" Click="SetBoxCount_Click" Tag="20"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Right Column - Live Preview -->
                    <Border Grid.Column="2" Style="{StaticResource SwiftLabelCardStyle}" Padding="28">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="LIVE PREVIEW" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource TextTertiaryBrush}" 
                                       HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            
                            <!-- Scrollable Labels Preview -->
                            <Border Grid.Row="1" 
                                    Background="{DynamicResource BackgroundBrush}" 
                                    CornerRadius="8" 
                                    BorderBrush="{DynamicResource SurfaceActiveBrush}" 
                                    BorderThickness="1"
                                    Margin="0,0,0,16"
                                    MaxHeight="400">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                                    <ItemsControl ItemsSource="{Binding PreviewLabels}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel HorizontalAlignment="Center"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <!-- Single Label Card - sized to paper -->
                                                <Border Background="White" 
                                                        CornerRadius="4" 
                                                        Margin="0,0,0,12"
                                                        Width="{Binding LabelWidth}"
                                                        Height="{Binding LabelHeight}"
                                                        BorderBrush="#ddd"
                                                        BorderThickness="1"
                                                        HorizontalAlignment="Center">
                                                    <Grid VerticalAlignment="Center" Margin="8">
                                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <!-- Store Badge -->
                                                            <Border Background="#1f1f23" 
                                                                    CornerRadius="3" 
                                                                    Padding="6,3"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="{Binding StoreLine}" 
                                                                           FontSize="{Binding StoreFontSize}" 
                                                                           FontWeight="Bold" 
                                                                           Foreground="White"
                                                                           TextTrimming="CharacterEllipsis"/>
                                                            </Border>
                                                            
                                                            <!-- Transfer Number -->
                                                            <TextBlock Text="{Binding TransferLine}" 
                                                                       FontSize="{Binding TransferFontSize}" 
                                                                       Foreground="#555"
                                                                       Margin="0,4,0,0"
                                                                       HorizontalAlignment="Center"/>
                                                        
                                                            <!-- Box Number - Large -->
                                                            <TextBlock Text="{Binding BoxLine}" 
                                                                       FontSize="{Binding BoxFontSize}" 
                                                                       FontWeight="Bold" 
                                                                       Foreground="#1f1f23"
                                                                       Margin="0,2,0,0"
                                                                       HorizontalAlignment="Center"/>
                                                            
                                                            <!-- Date Badge -->
                                                            <Border Background="#f5f5f5" 
                                                                    CornerRadius="2" 
                                                                    Padding="4,2"
                                                                    Margin="0,4,0,0"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="{Binding DateLine}" 
                                                                           FontSize="{Binding DateFontSize}" 
                                                                           Foreground="#666"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                            
                            <!-- Print Settings Info -->
                            <Border Grid.Row="2" Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="10" Padding="12" Margin="0,0,0,16">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ“„" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock FontSize="12" Foreground="{DynamicResource SecondaryLightBrush}">
                                            <Run Text="{Binding TotalBoxes, Mode=OneWay}"/>
                                            <Run Text=" labels"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="{Binding PrintFormatInfo}" 
                                               FontSize="10" Foreground="{DynamicResource SecondaryLightBrush}" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Action Buttons -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Save Button -->
                                <Button Grid.Column="0" Content="ðŸ’¾  Save"
                                        Style="{StaticResource GenerateButtonStyle}"
                                        Command="{Binding SaveLabelsCommand}"
                                        HorizontalAlignment="Stretch"/>
                                
                                <!-- Print Button -->
                                <Button Grid.Column="2" Content="ðŸ–¨ï¸  Print"
                                        Style="{StaticResource GenerateButtonStyle}"
                                        Command="{Binding PrintLabelsCommand}"
                                        HorizontalAlignment="Stretch"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>

            <!-- Status Bar -->
            <Border Grid.Row="2" Padding="24,16">
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="16,12" BorderBrush="{DynamicResource SurfaceHoverBrush}" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Status Indicator -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="8" Height="8" Margin="0,0,10,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#10B981"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsGenerating}" Value="True">
                                                <Setter Property="Fill" Value="#F59E0B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding StatusMessage}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                        
                        <!-- Progress Indicator -->
                        <ProgressBar Grid.Column="2" 
                                     IsIndeterminate="{Binding IsGenerating}"
                                     Visibility="{Binding IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Width="100" Height="4"
                                     Background="{DynamicResource SurfaceActiveBrush}" Foreground="{DynamicResource PrimaryBrush}"/>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Border>
</UserControl>





