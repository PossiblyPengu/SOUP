<Window x:Class="SOUP.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:SOUP.Core"
        mc:Ignorable="d"
        Title="About S.O.U.P"
        Width="520" Height="620"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False">

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CloseCommand}"/>
    </Window.InputBindings>

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource BorderLightBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    Background="{DynamicResource DialogTitleBarGradient}">
                <DockPanel LastChildFill="True" Height="40">
                    <Button DockPanel.Dock="Right" Content="âœ•" Width="40" Height="40" Click="CloseButton_Click"
                        Background="Transparent" BorderThickness="0"
                        FontSize="14" FontWeight="Bold" Foreground="{DynamicResource SectionTitleTextBrush}" Cursor="Hand" Opacity="0.8"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <TextBlock Text="â„¹ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="About S.O.U.P" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource SectionTitleTextBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="28,24">
                <StackPanel>
                    <!-- App Icon and Name -->
                    <Border Width="88" Height="88" CornerRadius="20"
                            HorizontalAlignment="Center" Margin="0,0,0,20" Cursor="Hand"
                            MouseLeftButtonDown="AppIcon_MouseLeftButtonDown"
                            Background="{DynamicResource DialogTitleBarGradient}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.4" Color="{DynamicResource DialogTitleBarShadowColor}"/>
                        </Border.Effect>
                        <Image Source="/Assets/soup-logo.png" Width="56" Height="56" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="S.O.U.P" FontSize="32" FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="S.A.M. Operations Utilities Pack" FontSize="13" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center" Margin="0,4,0,8"/>
                    
                    <!-- Version Badge -->
                    <Border HorizontalAlignment="Center" Margin="0,0,0,24" CornerRadius="16" Padding="16,8"
                            Background="{DynamicResource DialogTitleBarGradient}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Static core:AppVersion.DisplayVersion}" 
                                       Foreground="{DynamicResource SectionTitleTextBrush}" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="  â€¢  " Foreground="{DynamicResource TextDisabledBrush}" FontSize="14"/>
                            <TextBlock Text="{x:Static core:AppVersion.Channel}" 
                                       Foreground="{DynamicResource SuccessLightBrush}" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Build Info Cards -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="14,12">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“…" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="BUILD DATE" FontSize="9" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextDisabledBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Static core:AppVersion.BuildDate}" FontSize="11" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="14,12">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="âš¡" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="RUNTIME" FontSize="9" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextDisabledBrush}" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="RuntimeText" Text=".NET 8.0" FontSize="11" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4" Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="14,12">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ’»" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="PLATFORM" FontSize="9" FontWeight="Bold" 
                                           Foreground="{DynamicResource TextDisabledBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Windows x64" FontSize="11" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Installed Modules -->
                    <TextBlock Text="INSTALLED MODULES" FontSize="10" FontWeight="Bold"
                               Foreground="{DynamicResource TextDisabledBrush}" Margin="0,4,0,10"/>
                    
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="8" Margin="0,0,0,16">
                        <StackPanel x:Name="ModulesPanel">
                            <!-- Populated in code-behind -->
                        </StackPanel>
                    </Border>

                    <!-- Latest Changes -->
                    <TextBlock Text="WHAT'S NEW" FontSize="10" FontWeight="Bold"
                               Foreground="{DynamicResource TextDisabledBrush}" Margin="0,4,0,10"/>
                    
                    <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="12" Padding="16">
                        <StackPanel>
                            <Border CornerRadius="8" Padding="10,6" HorizontalAlignment="Left" Margin="0,0,0,12">
                                <Border.Background>
                                    <SolidColorBrush Color="{DynamicResource DialogTitleBarShadowColor}" Opacity="0.15"/>
                                </Border.Background>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="ChangelogVersionText" Text="v4.6.1" FontSize="12" FontWeight="Bold"
                                               Foreground="{DynamicResource PrimaryBrush}"/>
                                    <TextBlock Text="  â€”  " Foreground="{DynamicResource TextDisabledBrush}" FontSize="12"/>
                                    <TextBlock x:Name="ChangelogTitleText" Text="Maintenance Update" FontSize="12" FontWeight="Medium"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                            <ItemsControl x:Name="ChangelogItems">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="12" 
                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                   TextWrapping="Wrap" Margin="4,3"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Copyright -->
                    <TextBlock Text="Â© 2024-2026 PossiblyPengu" FontSize="11" 
                               Foreground="{DynamicResource TextTertiaryBrush}" 
                               HorizontalAlignment="Center" Margin="0,24,0,0"/>
                    <TextBlock Text="Made with ðŸ’œ for inventory management" FontSize="10" 
                               Foreground="{DynamicResource TextDisabledBrush}" 
                               HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="20,14" 
                    CornerRadius="0,0,12,12" BorderBrush="{DynamicResource BorderDarkBrush}" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="CheckUpdateButton" Content="ðŸ”„ Check for Updates" Click="CheckForUpdates_Click"
                        Padding="20,10" FontWeight="SemiBold" FontSize="13" Cursor="Hand" Margin="0,0,12,0"
                        Background="{DynamicResource PrimaryBrush}" 
                        Foreground="{DynamicResource TextOnPrimaryBrush}"
                        BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Close" HorizontalAlignment="Center" Click="CloseButton_Click"
                        Padding="32,10" FontWeight="SemiBold" FontSize="13" Cursor="Hand"
                        Background="{DynamicResource SurfaceHoverBrush}" 
                        BorderBrush="{DynamicResource BorderLightBrush}" BorderThickness="1">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
