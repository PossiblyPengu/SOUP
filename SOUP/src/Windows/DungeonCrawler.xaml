<Window x:Class="SOUP.Windows.DungeonCrawler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ‰ SUPER HAPPY FUN ZONE ðŸŽˆ Everything Is Fine! ðŸŒˆ"
        Height="800" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#ffeef7"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Color Palette - Overly Cheerful Fun Zone! -->
        <Color x:Key="BackgroundColor">#ffeef7</Color>
        <Color x:Key="WallColor">#ffb3d9</Color>
        <Color x:Key="FloorColor">#ffe4f2</Color>
        <Color x:Key="PlayerColor">#22c55e</Color>
        <Color x:Key="EnemyColor">#ff69b4</Color>
        <Color x:Key="TreasureColor">#ffd700</Color>
        <Color x:Key="StairsColor">#da70d6</Color>
        <Color x:Key="TrapColor">#ff1493</Color>
        <Color x:Key="FogColor">#ffe4f8</Color>
        <Color x:Key="ExploredFogColor">#ffd5f0</Color>
        
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="WallBrush" Color="{StaticResource WallColor}"/>
        <SolidColorBrush x:Key="FloorBrush" Color="{StaticResource FloorColor}"/>
        <SolidColorBrush x:Key="PlayerBrush" Color="{StaticResource PlayerColor}"/>
        <SolidColorBrush x:Key="EnemyBrush" Color="{StaticResource EnemyColor}"/>
        <SolidColorBrush x:Key="TreasureBrush" Color="{StaticResource TreasureColor}"/>
        <SolidColorBrush x:Key="StairsBrush" Color="{StaticResource StairsColor}"/>
        <SolidColorBrush x:Key="TrapBrush" Color="{StaticResource TrapColor}"/>
        <SolidColorBrush x:Key="FogBrush" Color="{StaticResource FogColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="#8b008b"/>
        <SolidColorBrush x:Key="TextDimBrush" Color="#ff1493"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#fff0f8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#ffb3d9"/>
        <SolidColorBrush x:Key="HealthBrush" Color="#22c55e"/>
        <SolidColorBrush x:Key="HealthLowBrush" Color="#ef4444"/>
        <SolidColorBrush x:Key="ManaBrush" Color="#3b82f6"/>
        <SolidColorBrush x:Key="GoldBrush" Color="#fbbf24"/>
    </Window.Resources>

    <Grid>
        <!-- Full-screen Game Canvas -->
        <Canvas x:Name="GameCanvas" ClipToBounds="True" Background="{StaticResource BackgroundBrush}"/>

        <!-- HUD Overlay -->
        <Grid>
            <!-- Top-Left: Player Stats -->
            <Border HorizontalAlignment="Left" VerticalAlignment="Top"
                    Background="#DD000000" Padding="16" Margin="16" CornerRadius="8"
                    BorderBrush="#ff99dd" BorderThickness="2" MaxWidth="280">
                <StackPanel>
                    <TextBlock Text="â˜º YOU (You're Doing GREAT!) â˜º" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                    
                    <!-- Health Bar -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="â¤ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Border Grid.Column="1" Background="#27272a" CornerRadius="4" Height="12">
                            <Border x:Name="HealthBar" Background="{StaticResource HealthBrush}" 
                                    CornerRadius="4" HorizontalAlignment="Left" Width="150"/>
                        </Border>
                        <TextBlock x:Name="HealthText" Grid.Column="2" Text="100/100" FontSize="12" 
                                   Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </Grid>

                    <!-- Level & XP -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Level:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="LevelText" Text="1" Foreground="{StaticResource TextBrush}" FontSize="13" FontWeight="SemiBold"/>
                        <TextBlock Text="  |  XP:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="XPText" Text="0/100" Foreground="{StaticResource TextBrush}" FontSize="13"/>
                    </StackPanel>
                    
                    <!-- Stats -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="âš”ï¸ ATK" Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                            <TextBlock x:Name="AttackText" Text="10" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ›¡ï¸ DEF" Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                            <TextBlock x:Name="DefenseText" Text="5" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Top-Right: Dungeon Info & Inventory -->
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="16">
                <!-- Dungeon Info -->
                <Border Background="#DD000000" Padding="12" CornerRadius="8" BorderBrush="#ff99dd" BorderThickness="2" Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="ðŸŽˆ Fun Level:" Foreground="#ffb3d9" FontSize="13" Margin="0,0,6,0"/>
                            <TextBlock x:Name="FloorText" Text="1" Foreground="{StaticResource StairsBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŒŸ Smile Points:" Foreground="#ffb3d9" FontSize="13" Margin="0,0,6,0"/>
                            <TextBlock x:Name="GoldText" Text="0" Foreground="{StaticResource GoldBrush}" FontSize="13" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Inventory -->
                <Border Background="#DD000000" Padding="12" CornerRadius="8" BorderBrush="#ff99dd" BorderThickness="2" MaxWidth="200">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ INVENTORY" FontSize="12" FontWeight="Bold" Foreground="#ffb3d9" Margin="0,0,0,6"/>
                        <ItemsControl x:Name="InventoryList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#33000000" CornerRadius="4" Padding="6,4" Margin="0,0,0,3">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}" FontSize="12" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding Name}" Foreground="#e4e4e7" FontSize="10"/>
                                            <TextBlock Text="{Binding Quantity, StringFormat=' x{0}'}" Foreground="#71717a" FontSize="10"
                                                       Visibility="{Binding ShowQuantity}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="EmptyInventoryText" Text="(empty)" Foreground="#71717a"
                                   FontSize="10" FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Bottom: Message Log -->
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                    Background="#AA000000" Padding="16,12" Margin="16,0,16,16" CornerRadius="8"
                    BorderBrush="#ff99dd" BorderThickness="2" MaxHeight="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="ðŸ’– HAPPY THOUGHTS ðŸ’–" FontSize="12" FontWeight="Bold" Foreground="#ffb3d9" Margin="0,0,0,6"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MessageLog">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#ffd5f0"
                                               FontSize="10" TextWrapping="Wrap" Margin="0,0,0,3"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Bottom-Left: Controls (Toggleable) -->
            <Border HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Background="#CC000000" Padding="12" Margin="16" CornerRadius="8"
                    BorderBrush="#ff99dd" BorderThickness="2" MaxWidth="220">
                <StackPanel>
                    <TextBlock Text="ðŸŽ® CONTROLS" FontSize="10" FontWeight="Bold" Foreground="#ffb3d9" Margin="0,0,0,4"/>
                    <TextBlock Text="WASD - Move/Turn" Foreground="#d4d4d8" FontSize="9"/>
                    <TextBlock Text="Q/E - Strafe" Foreground="#d4d4d8" FontSize="9"/>
                    <TextBlock Text="F - Interact | V - Special" Foreground="#d4d4d8" FontSize="9"/>
                    <TextBlock Text="1-4 - Combat Actions" Foreground="#d4d4d8" FontSize="9"/>
                    <TextBlock Text="K - Skills | R - Restart" Foreground="#d4d4d8" FontSize="9"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Game Over Overlay -->
        <Border x:Name="GameOverOverlay" Background="#CCFFB3D9" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameOverTitle" Text="â˜º NAP TIME! â˜º" FontSize="48" FontWeight="Bold"
                           Foreground="#ff1493" HorizontalAlignment="Center"/>
                <TextBlock x:Name="GameOverStats" Text="You reached Fun Level 3! Wow!" FontSize="18"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,12,0,0"
                           TextAlignment="Center"/>
                <TextBlock Text="Press R to KEEP PLAYING FOREVER â˜º" FontSize="14"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Border>

        <!-- Victory Overlay -->
        <Border x:Name="VictoryOverlay" Background="#CCFFB3D9" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â˜º â˜º â˜º YOU WIN FOREVER â˜º â˜º â˜º" FontSize="48" FontWeight="Bold"
                           Foreground="{StaticResource GoldBrush}" HorizontalAlignment="Center"/>
                <TextBlock x:Name="VictoryStats" Text="Maximum Fun Achieved! You are SO GOOD AT THIS!" FontSize="18"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,12,0,0"
                           TextAlignment="Center"/>
                <TextBlock Text="Press R to PLAY AGAIN AND AGAIN AND AGAIN â˜º" FontSize="14"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
