<Window x:Class="SOUP.Windows.DungeonCrawler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸŽ‰ SUPER HAPPY FUN ZONE ðŸŽˆ Everything Is Fine! ðŸŒˆ"
        Height="800" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#ffeef7"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Color Palette - Overly Cheerful Fun Zone! -->
        <Color x:Key="BackgroundColor">#ffeef7</Color>
        <Color x:Key="WallColor">#ffb3d9</Color>
        <Color x:Key="FloorColor">#ffe4f2</Color>
        <Color x:Key="PlayerColor">#22c55e</Color>
        <Color x:Key="EnemyColor">#ff69b4</Color>
        <Color x:Key="TreasureColor">#ffd700</Color>
        <Color x:Key="StairsColor">#da70d6</Color>
        <Color x:Key="TrapColor">#ff1493</Color>
        <Color x:Key="FogColor">#ffe4f8</Color>
        <Color x:Key="ExploredFogColor">#ffd5f0</Color>
        
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="WallBrush" Color="{StaticResource WallColor}"/>
        <SolidColorBrush x:Key="FloorBrush" Color="{StaticResource FloorColor}"/>
        <SolidColorBrush x:Key="PlayerBrush" Color="{StaticResource PlayerColor}"/>
        <SolidColorBrush x:Key="EnemyBrush" Color="{StaticResource EnemyColor}"/>
        <SolidColorBrush x:Key="TreasureBrush" Color="{StaticResource TreasureColor}"/>
        <SolidColorBrush x:Key="StairsBrush" Color="{StaticResource StairsColor}"/>
        <SolidColorBrush x:Key="TrapBrush" Color="{StaticResource TrapColor}"/>
        <SolidColorBrush x:Key="FogBrush" Color="{StaticResource FogColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="#8b008b"/>
        <SolidColorBrush x:Key="TextDimBrush" Color="#ff1493"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#fff0f8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#ffb3d9"/>
        <SolidColorBrush x:Key="HealthBrush" Color="#22c55e"/>
        <SolidColorBrush x:Key="HealthLowBrush" Color="#ef4444"/>
        <SolidColorBrush x:Key="ManaBrush" Color="#3b82f6"/>
        <SolidColorBrush x:Key="GoldBrush" Color="#fbbf24"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Game Canvas -->
        <Border Grid.Column="0" Background="{StaticResource BackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <Canvas x:Name="GameCanvas" ClipToBounds="True"/>
        </Border>

        <!-- Side Panel -->
        <Grid Grid.Column="1" Background="{StaticResource PanelBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Player Stats -->
            <Border Grid.Row="0" Background="#ffccee" Padding="16" Margin="12,12,12,0" CornerRadius="8" BorderBrush="#ff99dd" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="â˜º YOU (You're Doing GREAT!) â˜º" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                    
                    <!-- Health Bar -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="â¤ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Border Grid.Column="1" Background="#27272a" CornerRadius="4" Height="12">
                            <Border x:Name="HealthBar" Background="{StaticResource HealthBrush}" 
                                    CornerRadius="4" HorizontalAlignment="Left" Width="150"/>
                        </Border>
                        <TextBlock x:Name="HealthText" Grid.Column="2" Text="100/100" FontSize="12" 
                                   Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </Grid>

                    <!-- Level & XP -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Level:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="LevelText" Text="1" Foreground="{StaticResource TextBrush}" FontSize="13" FontWeight="SemiBold"/>
                        <TextBlock Text="  |  XP:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="XPText" Text="0/100" Foreground="{StaticResource TextBrush}" FontSize="13"/>
                    </StackPanel>
                    
                    <!-- Stats -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="âš”ï¸ ATK" Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                            <TextBlock x:Name="AttackText" Text="10" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ›¡ï¸ DEF" Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                            <TextBlock x:Name="DefenseText" Text="5" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Dungeon Info -->
            <Border Grid.Row="1" Background="#ffccee" Padding="16" Margin="12,12,12,0" CornerRadius="8" BorderBrush="#ff99dd" BorderThickness="2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸŽˆ Fun Level:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="FloorText" Text="1" Foreground="{StaticResource StairsBrush}" FontSize="13" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŒŸ Smile Points:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="GoldText" Text="0" Foreground="{StaticResource GoldBrush}" FontSize="13" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Inventory -->
            <Border Grid.Row="2" Background="#ffccee" Padding="16" Margin="12,12,12,0" CornerRadius="8" BorderBrush="#ff99dd" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="ðŸŽ YOUR HAPPY THINGS" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                    <ItemsControl x:Name="InventoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#27272a" CornerRadius="4" Padding="8,6" Margin="0,0,0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" Foreground="#e4e4e7" FontSize="12"/>
                                        <TextBlock Text="{Binding Quantity, StringFormat=' x{0}'}" Foreground="#71717a" FontSize="12"
                                                   Visibility="{Binding ShowQuantity}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock x:Name="EmptyInventoryText" Text="(empty)" Foreground="{StaticResource TextDimBrush}" 
                               FontSize="12" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Message Log -->
            <Border Grid.Row="3" Background="#ffe0f5" Padding="16" Margin="12,12,12,0" CornerRadius="8" BorderBrush="#ff99dd" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="ðŸ’– HAPPY THOUGHTS ðŸ’–" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MessageLog">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="{StaticResource TextBrush}"
                                               FontSize="11" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Controls -->
            <Border Grid.Row="4" Background="#ffe0f5" Padding="12" Margin="12" CornerRadius="8" BorderBrush="#ff99dd" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="ðŸŽ® FRIENDLY REMINDERS ðŸŽ®" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6"/>
                    <TextBlock Text="W/â†‘ - Walk to Joy" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="S/â†“ - Return to Joy" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="A/â† - Spin Left (Wheee!)" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="D/â†’ - Spin Right (Wheee!)" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="SPACE - Smile Break (+1 HP)" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="E - Make Friends" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="F - Weapon Special! (Fun Power!)" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="Q - Party Lift | T - Happy Jump" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                    <TextBlock Text="1-5 - Share Item | R - New Fun!" Foreground="{StaticResource TextBrush}" FontSize="10"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Game Over Overlay -->
        <Border x:Name="GameOverOverlay" Grid.ColumnSpan="2" Background="#CCFFB3D9" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameOverTitle" Text="â˜º NAP TIME! â˜º" FontSize="48" FontWeight="Bold"
                           Foreground="#ff1493" HorizontalAlignment="Center"/>
                <TextBlock x:Name="GameOverStats" Text="You reached Fun Level 3! Wow!" FontSize="18"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,12,0,0"
                           TextAlignment="Center"/>
                <TextBlock Text="Press R to KEEP PLAYING FOREVER â˜º" FontSize="14"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Border>

        <!-- Victory Overlay -->
        <Border x:Name="VictoryOverlay" Grid.ColumnSpan="2" Background="#CCFFB3D9" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â˜º â˜º â˜º YOU WIN FOREVER â˜º â˜º â˜º" FontSize="48" FontWeight="Bold"
                           Foreground="{StaticResource GoldBrush}" HorizontalAlignment="Center"/>
                <TextBlock x:Name="VictoryStats" Text="Maximum Fun Achieved! You are SO GOOD AT THIS!" FontSize="18"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,12,0,0"
                           TextAlignment="Center"/>
                <TextBlock Text="Press R to PLAY AGAIN AND AGAIN AND AGAIN â˜º" FontSize="14"
                           Foreground="#8b008b" HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
