<Window x:Class="SOUP.Windows.DungeonCrawler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="â˜º A Nice Place" 
        Height="800" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#0a0a0f"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Color Palette -->
        <Color x:Key="BackgroundColor">#0a0a0f</Color>
        <Color x:Key="WallColor">#2d2d3a</Color>
        <Color x:Key="FloorColor">#1a1a24</Color>
        <Color x:Key="PlayerColor">#22c55e</Color>
        <Color x:Key="EnemyColor">#ef4444</Color>
        <Color x:Key="TreasureColor">#fbbf24</Color>
        <Color x:Key="StairsColor">#8b5cf6</Color>
        <Color x:Key="TrapColor">#f97316</Color>
        <Color x:Key="FogColor">#050508</Color>
        <Color x:Key="ExploredFogColor">#0d0d14</Color>
        
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="WallBrush" Color="{StaticResource WallColor}"/>
        <SolidColorBrush x:Key="FloorBrush" Color="{StaticResource FloorColor}"/>
        <SolidColorBrush x:Key="PlayerBrush" Color="{StaticResource PlayerColor}"/>
        <SolidColorBrush x:Key="EnemyBrush" Color="{StaticResource EnemyColor}"/>
        <SolidColorBrush x:Key="TreasureBrush" Color="{StaticResource TreasureColor}"/>
        <SolidColorBrush x:Key="StairsBrush" Color="{StaticResource StairsColor}"/>
        <SolidColorBrush x:Key="TrapBrush" Color="{StaticResource TrapColor}"/>
        <SolidColorBrush x:Key="FogBrush" Color="{StaticResource FogColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="#e4e4e7"/>
        <SolidColorBrush x:Key="TextDimBrush" Color="#71717a"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#18181b"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#27272a"/>
        <SolidColorBrush x:Key="HealthBrush" Color="#22c55e"/>
        <SolidColorBrush x:Key="HealthLowBrush" Color="#ef4444"/>
        <SolidColorBrush x:Key="ManaBrush" Color="#3b82f6"/>
        <SolidColorBrush x:Key="GoldBrush" Color="#fbbf24"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Game Canvas -->
        <Border Grid.Column="0" Background="{StaticResource BackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <Canvas x:Name="GameCanvas" ClipToBounds="True"/>
        </Border>

        <!-- Side Panel -->
        <Grid Grid.Column="1" Background="{StaticResource PanelBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Player Stats -->
            <Border Grid.Row="0" Background="#1f1f23" Padding="16" Margin="12,12,12,0" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="â˜º YOU" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                    
                    <!-- Health Bar -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="â¤ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Border Grid.Column="1" Background="#27272a" CornerRadius="4" Height="12">
                            <Border x:Name="HealthBar" Background="{StaticResource HealthBrush}" 
                                    CornerRadius="4" HorizontalAlignment="Left" Width="150"/>
                        </Border>
                        <TextBlock x:Name="HealthText" Grid.Column="2" Text="100/100" FontSize="12" 
                                   Foreground="{StaticResource TextDimBrush}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </Grid>

                    <!-- Level & XP -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Level:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="LevelText" Text="1" Foreground="{StaticResource TextBrush}" FontSize="13" FontWeight="SemiBold"/>
                        <TextBlock Text="  |  XP:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="XPText" Text="0/100" Foreground="{StaticResource TextBrush}" FontSize="13"/>
                    </StackPanel>
                    
                    <!-- Stats -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="âš”ï¸ ATK" Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                            <TextBlock x:Name="AttackText" Text="10" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ›¡ï¸ DEF" Foreground="{StaticResource TextDimBrush}" FontSize="11"/>
                            <TextBlock x:Name="DefenseText" Text="5" Foreground="{StaticResource TextBrush}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Dungeon Info -->
            <Border Grid.Row="1" Background="#1f1f23" Padding="16" Margin="12,12,12,0" CornerRadius="8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ° Floor:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="FloorText" Text="1" Foreground="{StaticResource StairsBrush}" FontSize="13" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’° Gold:" Foreground="{StaticResource TextDimBrush}" FontSize="13" Margin="0,0,6,0"/>
                        <TextBlock x:Name="GoldText" Text="0" Foreground="{StaticResource GoldBrush}" FontSize="13" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Inventory -->
            <Border Grid.Row="2" Background="#1f1f23" Padding="16" Margin="12,12,12,0" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="ðŸŽ’ INVENTORY" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                    <ItemsControl x:Name="InventoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#27272a" CornerRadius="4" Padding="8,6" Margin="0,0,0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" Foreground="#e4e4e7" FontSize="12"/>
                                        <TextBlock Text="{Binding Quantity, StringFormat=' x{0}'}" Foreground="#71717a" FontSize="12"
                                                   Visibility="{Binding ShowQuantity}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock x:Name="EmptyInventoryText" Text="(empty)" Foreground="{StaticResource TextDimBrush}" 
                               FontSize="12" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Message Log -->
            <Border Grid.Row="3" Background="#1f1f23" Padding="16" Margin="12,12,12,0" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="ðŸ“œ WHISPERS" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MessageLog">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="{StaticResource TextDimBrush}" 
                                               FontSize="11" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Controls -->
            <Border Grid.Row="4" Background="#1f1f23" Padding="12" Margin="12" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="HOW TO PLAY" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextDimBrush}" Margin="0,0,0,6"/>
                    <TextBlock Text="â†‘â†“â†â†’ / WASD - Wander" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
                    <TextBlock Text="SPACE - Rest (+1 HP)" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
                    <TextBlock Text="E - Interact" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
                    <TextBlock Text="Q - Elevator" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
                    <TextBlock Text="T - Teleport" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
                    <TextBlock Text="1-5 - Use Item" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
                    <TextBlock Text="R - Restart" Foreground="{StaticResource TextDimBrush}" FontSize="10"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Game Over Overlay -->
        <Border x:Name="GameOverOverlay" Grid.ColumnSpan="2" Background="#CC000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameOverTitle" Text="â˜º REST NOW" FontSize="48" FontWeight="Bold" 
                           Foreground="#ef4444" HorizontalAlignment="Center"/>
                <TextBlock x:Name="GameOverStats" Text="You reached Floor 3" FontSize="18" 
                           Foreground="{StaticResource TextDimBrush}" HorizontalAlignment="Center" Margin="0,12,0,0"
                           TextAlignment="Center"/>
                <TextBlock Text="Press R to try again (or don't)" FontSize="14" 
                           Foreground="{StaticResource TextDimBrush}" HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Border>

        <!-- Victory Overlay -->
        <Border x:Name="VictoryOverlay" Grid.ColumnSpan="2" Background="#CC000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="â˜º YOU MADE IT" FontSize="48" FontWeight="Bold" 
                           Foreground="{StaticResource GoldBrush}" HorizontalAlignment="Center"/>
                <TextBlock x:Name="VictoryStats" Text="You conquered the dungeon!" FontSize="18" 
                           Foreground="{StaticResource TextDimBrush}" HorizontalAlignment="Center" Margin="0,12,0,0"
                           TextAlignment="Center"/>
                <TextBlock Text="Press R to return (you will return)" FontSize="14" 
                           Foreground="{StaticResource TextDimBrush}" HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
