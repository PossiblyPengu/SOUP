<Window x:Class="SOUP.Windows.DungeonCrawler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âœ¿ FRIENDSHIP DUNGEON âœ¿"
        Height="720" Width="1024"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#0a0a0a"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Window.Resources>
        <SolidColorBrush x:Key="DarkBg" Color="#0a0a0a"/>
        <SolidColorBrush x:Key="PanelBg" Color="#1a1a1a"/>
        <SolidColorBrush x:Key="BorderColor" Color="#333"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextDim" Color="#888"/>
        <SolidColorBrush x:Key="HealthColor" Color="#c0392b"/>
        <SolidColorBrush x:Key="ManaColor" Color="#2980b9"/>
        <SolidColorBrush x:Key="GoldColor" Color="#f1c40f"/>
        <SolidColorBrush x:Key="AccentColor" Color="#8e44ad"/>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3a3a3a"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#666"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1a1a1a"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        
        <!-- Main View Area -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- First Person Dungeon View -->
            <Border Grid.Row="0" Background="#000" Margin="8" CornerRadius="4" ClipToBounds="True">
                <Grid>
                    <!-- Sky/Ceiling gradient - darker, more oppressive -->
                    <Rectangle VerticalAlignment="Top" Height="220">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#0a0812" Offset="0"/>
                                <GradientStop Color="#151018" Offset="0.5"/>
                                <GradientStop Color="#1a1520" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    
                    <!-- Ceiling texture overlay -->
                    <Rectangle VerticalAlignment="Top" Height="180" Opacity="0.3">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#20181520" Offset="0"/>
                                <GradientStop Color="#10100a15" Offset="0.5"/>
                                <GradientStop Color="#20181520" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    
                    <!-- Floor gradient - worn stone -->
                    <Rectangle VerticalAlignment="Bottom" Height="220">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#1a1510" Offset="0"/>
                                <GradientStop Color="#12100a" Offset="0.4"/>
                                <GradientStop Color="#0d0a08" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    
                    <!-- Dungeon View Canvas - walls rendered here -->
                    <Canvas x:Name="DungeonViewCanvas" ClipToBounds="True"/>
                    
                    <!-- Atmospheric fog overlay -->
                    <Rectangle IsHitTestVisible="False" Opacity="0.15">
                        <Rectangle.Fill>
                            <RadialGradientBrush Center="0.5,0.6" RadiusX="0.8" RadiusY="0.6">
                                <GradientStop Color="#00000000" Offset="0"/>
                                <GradientStop Color="#30101520" Offset="0.6"/>
                                <GradientStop Color="#60050810" Offset="1"/>
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    
                    <!-- Vignette effect -->
                    <Rectangle IsHitTestVisible="False">
                        <Rectangle.Fill>
                            <RadialGradientBrush Center="0.5,0.5" RadiusX="0.7" RadiusY="0.7">
                                <GradientStop Color="#00000000" Offset="0.3"/>
                                <GradientStop Color="#40000000" Offset="0.85"/>
                                <GradientStop Color="#90000000" Offset="1"/>
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    
                    <!-- Combat Overlay -->
                    <Border x:Name="CombatOverlay" Visibility="Collapsed" Background="#CC000000">
                        <Grid>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <!-- Enemy Display -->
                                <Border Background="#1a1a1a" CornerRadius="8" Padding="24" Margin="0,0,0,16">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="EnemyNameText" Text="Skeleton Warrior" 
                                                   FontSize="20" FontWeight="Bold" Foreground="#e0e0e0"
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Canvas x:Name="EnemySpriteCanvas" Width="128" Height="128" 
                                                HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                        <Grid Width="200">
                                            <Border Background="#333" CornerRadius="4" Height="16"/>
                                            <Border x:Name="EnemyHealthBar" Background="#c0392b" 
                                                    CornerRadius="4" Height="16" HorizontalAlignment="Left"/>
                                        </Grid>
                                        <TextBlock x:Name="EnemyHealthText" Text="50/50" 
                                                   FontSize="12" Foreground="#888" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Combat Actions -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="ðŸ”« Shoot" Style="{StaticResource ActionButton}" 
                                            Click="CombatAttack_Click" Margin="4" Width="100"/>
                                    <Button Content="ðŸ™ˆ Cower" Style="{StaticResource ActionButton}" 
                                            Click="CombatDefend_Click" Margin="4" Width="100"/>
                                    <Button Content="ðŸ’€ Pray" Style="{StaticResource ActionButton}" 
                                            Click="CombatSpell_Click" Margin="4" Width="100"/>
                                    <Button Content="ðŸ˜± Flee" Style="{StaticResource ActionButton}" 
                                            Click="CombatFlee_Click" Margin="4" Width="100"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Interaction Prompt -->
                    <Border x:Name="InteractionPrompt" Visibility="Collapsed"
                            VerticalAlignment="Bottom" HorizontalAlignment="Center"
                            Background="#CC1a1a1a" CornerRadius="4" Padding="16,8" Margin="0,0,0,16">
                        <TextBlock x:Name="InteractionText" Text="Press SPACE to interact" 
                                   FontSize="14" Foreground="#e0e0e0"/>
                    </Border>
                    
                    <!-- Compass -->
                    <Border VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,8,0,0"
                            Background="#AA000000" CornerRadius="4" Padding="12,6">
                        <TextBlock x:Name="CompassText" Text="NORTH" FontSize="14" 
                                   FontWeight="Bold" Foreground="#c0a060"/>
                    </Border>
                    
                    <!-- Floor indicator -->
                    <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8"
                            Background="#AA000000" CornerRadius="4" Padding="12,6">
                        <TextBlock x:Name="FloorText" Text="Floor 1" FontSize="14" Foreground="#888"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Movement Controls -->
            <Border Grid.Row="1" Background="{StaticResource PanelBg}" Margin="8,0,8,8" 
                    CornerRadius="4" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Turn buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="â†¶ Turn Left (Q)" Style="{StaticResource ActionButton}" 
                                Click="TurnLeft_Click" Width="120"/>
                    </StackPanel>
                    
                    <!-- Movement buttons -->
                    <Grid Grid.Column="1" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Row="0" Grid.Column="1" Content="â–² Forward (W)" 
                                Style="{StaticResource ActionButton}" Click="MoveForward_Click"
                                Width="110" Margin="4"/>
                        <Button Grid.Row="1" Grid.Column="0" Content="â—€ (A)" 
                                Style="{StaticResource ActionButton}" Click="StrafeLeft_Click"
                                Width="60" Margin="4"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="â–¼ Back (S)" 
                                Style="{StaticResource ActionButton}" Click="MoveBackward_Click"
                                Width="110" Margin="4"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="(D) â–¶" 
                                Style="{StaticResource ActionButton}" Click="StrafeRight_Click"
                                Width="60" Margin="4"/>
                    </Grid>
                    
                    <!-- Turn buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Turn Right (E) â†·" Style="{StaticResource ActionButton}" 
                                Click="TurnRight_Click" Width="120"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Right Panel - Character & Log -->
        <Grid Grid.Column="1" Background="{StaticResource PanelBg}" Margin="0,8,8,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Character Stats -->
            <Border Grid.Row="0" BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="0,0,0,1" Padding="16">
                <StackPanel>
                    <TextBlock Text="FRIEND :)" FontSize="16" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>
                    
                    <!-- Health -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="HP" Foreground="{StaticResource HealthColor}" FontWeight="Bold"/>
                        <Border Grid.Column="1" Background="#333" CornerRadius="2" Height="12">
                            <Border x:Name="HealthBar" Background="{StaticResource HealthColor}" 
                                    CornerRadius="2" HorizontalAlignment="Left"/>
                        </Border>
                        <TextBlock x:Name="HealthText" Grid.Column="2" Text="100/100" 
                                   Foreground="{StaticResource TextDim}" FontSize="11" Margin="8,0,0,0"/>
                    </Grid>
                    
                    <!-- Mana -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="MP" Foreground="{StaticResource ManaColor}" FontWeight="Bold"/>
                        <Border Grid.Column="1" Background="#333" CornerRadius="2" Height="12">
                            <Border x:Name="ManaBar" Background="{StaticResource ManaColor}" 
                                    CornerRadius="2" HorizontalAlignment="Left"/>
                        </Border>
                        <TextBlock x:Name="ManaText" Grid.Column="2" Text="50/50" 
                                   Foreground="{StaticResource TextDim}" FontSize="11" Margin="8,0,0,0"/>
                    </Grid>
                    
                    <!-- Stats Grid -->
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ATK" Foreground="{StaticResource TextDim}" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="AttackText" Text="12" Foreground="{StaticResource TextPrimary}" 
                                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="DEF" Foreground="{StaticResource TextDim}" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="DefenseText" Text="8" Foreground="{StaticResource TextPrimary}" 
                                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="LVL" Foreground="{StaticResource TextDim}" FontSize="10" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LevelText" Text="1" Foreground="{StaticResource GoldColor}" 
                                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- XP Bar -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="XP" Foreground="{StaticResource GoldColor}" FontWeight="Bold"/>
                        <Border Grid.Column="1" Background="#333" CornerRadius="2" Height="8">
                            <Border x:Name="XPBar" Background="{StaticResource GoldColor}" 
                                    CornerRadius="2" HorizontalAlignment="Left" Width="0"/>
                        </Border>
                    </Grid>
                    
                    <!-- Gold (Teeth) -->
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <TextBlock Text="ðŸ¦·" FontSize="14"/>
                        <TextBlock x:Name="GoldText" Text="0" Foreground="{StaticResource GoldColor}" 
                                   FontSize="14" FontWeight="Bold" Margin="6,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Inventory -->
            <Border Grid.Row="1" BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="0,0,0,1" Padding="16" MaxHeight="180">
                <StackPanel>
                    <TextBlock Text="INVENTORY" FontSize="12" FontWeight="Bold" 
                               Foreground="{StaticResource TextDim}" Margin="0,0,0,8"/>
                    <ItemsControl x:Name="InventoryList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252525" CornerRadius="3" Padding="8,4" Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                   Foreground="#e0e0e0" FontSize="12"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Quantity}" 
                                                   Foreground="#888" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Message Log -->
            <Border Grid.Row="2" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="LOG" FontSize="12" FontWeight="Bold" 
                               Foreground="{StaticResource TextDim}" Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="MessageLog">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" 
                                               Foreground="#999" FontSize="11" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Game Over Overlay -->
        <Border x:Name="GameOverOverlay" Visibility="Collapsed" Background="#EE000000" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="GameOverTitle" Text="YOU DIED" FontSize="48" FontWeight="Bold" 
                           Foreground="#c0392b" HorizontalAlignment="Center"/>
                <TextBlock x:Name="GameOverSubtitle" Text="The dungeon claims another soul..." 
                           FontSize="16" Foreground="#888" HorizontalAlignment="Center" Margin="0,8,0,24"/>
                <Button Content="Come Back :)" Style="{StaticResource ActionButton}" 
                        Click="RestartGame_Click" Width="150" FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
