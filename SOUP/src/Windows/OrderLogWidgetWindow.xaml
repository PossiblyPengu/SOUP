<Window x:Class="SOUP.Windows.OrderLogWidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SOUP.Features.OrderLog.Views"
        Title="Orders" 
        Width="380" Height="700"
        MinWidth="340" MinHeight="400"
        MaxWidth="600"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme will be applied via code-behind based on ThemeService -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Custom Window Chrome -->
    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource TitleBarBackgroundBrush}"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock Text="Orders" FontSize="14" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TitleBarTextBrush}" VerticalAlignment="Center"/>
                        
                        <!-- Update Available Indicator -->
                        <Border x:Name="UpdateBadge" Background="{DynamicResource SuccessBrush}" CornerRadius="3" Padding="6,2" Margin="8,0,0,0"
                                VerticalAlignment="Center" Cursor="Hand" Visibility="Collapsed"
                                MouseLeftButtonDown="UpdateBadge_Click" ToolTip="Update available - click to update">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”„" FontSize="10" Margin="0,0,4,0" VerticalAlignment="Center" FontFamily="Segoe UI Emoji"/>
                                <TextBlock x:Name="UpdateVersionText" Text="Update" Foreground="{DynamicResource TextOnPrimaryBrush}" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,4,0">
                        <!-- Dock buttons -->
                        <Button x:Name="DockLeftButton" Click="DockLeft_Click" ToolTip="Dock left"
                                Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,2,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                                        <TextBlock Text="â—€" FontSize="14" Foreground="{DynamicResource TitleBarTextBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button x:Name="DockRightButton" Click="DockRight_Click" ToolTip="Dock right"
                                Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,2,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                                        <TextBlock Text="â–¶" FontSize="14" Foreground="{DynamicResource TitleBarTextBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <!-- Minimize -->
                        <Button Click="MinimizeButton_Click" ToolTip="Minimize"
                                Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,2,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                                        <TextBlock Text="â”€" FontSize="14" Foreground="{DynamicResource TitleBarTextBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-2,0,0"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Close -->
                        <Button Click="CloseButton_Click" ToolTip="Close widget"
                                Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4">
                                        <TextBlock Text="âœ•" FontSize="14" Foreground="{DynamicResource TitleBarTextBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource CloseButtonHoverBrush}"/>
                                            <Setter TargetName="Bd" Property="TextBlock.Foreground" Value="{DynamicResource CloseButtonHoverTextBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content -->
            <views:OrderLogWidgetView x:Name="WidgetView" Grid.Row="1"/>
        </Grid>
    </Border>
</Window>
