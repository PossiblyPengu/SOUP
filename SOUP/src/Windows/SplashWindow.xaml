<Window x:Class="SOUP.Windows.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="400"
        Height="500"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Fade in animation for splash screen -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1"
                           Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Fade out animation for splash screen -->
        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0"
                           Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Logo scale animation -->
        <Storyboard x:Key="LogoScaleAnimation">
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="0.8" To="1.0"
                           Duration="0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <ElasticEase Oscillations="1" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LogoScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="0.8" To="1.0"
                           Duration="0:0:1.2">
                <DoubleAnimation.EasingFunction>
                    <ElasticEase Oscillations="1" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Progress animation -->
        <Storyboard x:Key="ProgressAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ProgressBar"
                           Storyboard.TargetProperty="Value"
                           From="0" To="100"
                           Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,12,0,0"/>
                </Style>
            </StackPanel.Resources>
            <!-- Logo -->
            <TextBlock Text="âš¡" 
                      FontSize="80"
                      HorizontalAlignment="Center"
                      Foreground="{DynamicResource AccentBrush}"
                      Margin="0"
                      RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <ScaleTransform x:Name="LogoScale" ScaleX="0.8" ScaleY="0.8"/>
                </TextBlock.RenderTransform>
            </TextBlock>
            
            <!-- App Name -->
            <TextBlock Text="S.O.U.P"
                      FontSize="32"
                      FontWeight="Bold"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      HorizontalAlignment="Center"/>
            
            <!-- Tagline -->
            <TextBlock Text="S.A.M. Operations Utilities Pack"
                      FontSize="12"
                      Foreground="{DynamicResource TextSecondaryBrush}"
                      HorizontalAlignment="Center"
                      Opacity="0.8"/>
            
            <!-- Separator -->
            <Border Height="1" 
                   Background="{DynamicResource BorderBrush}"
                   Opacity="0.3"
                   Margin="0,10"/>
            
            <!-- Status Text -->
            <TextBlock x:Name="StatusText"
                      Text="Starting up..."
                      FontSize="11"
                      Foreground="{DynamicResource TextTertiaryBrush}"
                      HorizontalAlignment="Center"/>
            
            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar"
                        Height="3"
                        Background="{DynamicResource SurfaceHoverBrush}"
                        Foreground="{DynamicResource AccentBrush}"
                        Value="0"
                        Maximum="100"
                        Width="200"/>
            
            <!-- Version -->
            <TextBlock x:Name="VersionText"
                      FontSize="9"
                      Foreground="{DynamicResource TextDisabledBrush}"
                      HorizontalAlignment="Center"
                      Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
