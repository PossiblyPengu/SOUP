{
  "name": "store-allocation-viewer",
  "version": "2.0.0",
  "description": "An Electron app to read and organize store allocations from Excel and CSV files",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron . --dev",
    "lint": "eslint . --config config/.eslintrc.json",
    "format": "prettier --write \"**/*.{js,json,md}\" --config config/.prettierrc",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --watch --config config/jest.config.js",
    "test:coverage": "jest --coverage --config config/jest.config.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build:win": "electron-forge make --platform=win32"
  },
  "keywords": [
    "electron",
    "excel",
    "csv",
    "allocations"
  ],
  "author": "Store Allocation Team",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.2"
  },
  "dependencies": {
    "papaparse": "^5.5.3",
    "xlsx": "^0.18.5"
  },
  "config": {
    "forge": "./forge.config.js"
  }
}
