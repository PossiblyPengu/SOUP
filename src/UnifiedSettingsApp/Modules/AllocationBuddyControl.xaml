<UserControl x:Class="UnifiedSettingsApp.Modules.AllocationBuddyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0">
            <Button x:Name="ImportFileBtn" Content="Import Excel/CSV" Margin="0,0,8,0" />
            <TextBlock x:Name="ImportedFileName" VerticalAlignment="Center" />
        </StackPanel>
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!-- Locations and allocations -->
            <ScrollViewer Grid.Column="0">
                <ItemsControl x:Name="LocationStatsPanel">
                    <ItemsControl.ItemsSource>
                        {Binding LocationAllocations}
                    </ItemsControl.ItemsSource>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="0,0,0,12" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="{Binding Location}" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                                                    <TextBlock Text="{Binding Description}" Width="160"/>
                                                    <TextBlock Text="{Binding ItemNumber}" Width="60" Margin="8,0,0,0"/>
                                                    <TextBlock Text="Qty: {Binding Quantity}" Width="60" Margin="8,0,0,0"/>
                                                    <Button Content="←" Width="32" Margin="8,0,0,0" Command="{Binding DataContext.MoveItemToPoolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                                    <Button Content="→" Width="32" Margin="4,0,0,0" Command="{Binding DataContext.MoveItemFromPoolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <!-- Item pool -->
            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                <TextBlock Text="Item Pool" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                <ListBox x:Name="ItemPoolList" Height="400" />
                        <ListBox x:Name="ItemPoolList" Height="400" ItemsSource="{Binding ItemPool}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Description}" Width="160"/>
                                        <TextBlock Text="{Binding ItemNumber}" Width="60" Margin="8,0,0,0"/>
                                        <TextBlock Text="Qty: {Binding Quantity}" Width="60" Margin="8,0,0,0"/>
                                        <Button Content="→" Width="32" Margin="8,0,0,0" Command="{Binding DataContext.MoveItemFromPoolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
            </StackPanel>
        </Grid>
        <TextBlock Grid.Row="2" Text="Tip: Use arrows to move items between locations and the pool." Margin="8,12,8,8" Foreground="#888" />
    </Grid>
</UserControl>
